\begin{satz}[Lifting orthogonal idempotents]
  Let $I$ be a nilpotent ideal of an $F$"~algebra $A$, and let
  $\epsilon_{1},\dotsc,\epsilon_{n}$ be pairwise orthogonal idempotents in
  $A/_{I}$ such that $\epsilon_{1}+\dotsb+\epsilon_{n}=1$. Then there are
  pairwise orthogonal idempotents $e_{1},\dotsc, e_{n}$ in $A$ such that
  $e_{1}+\dotsb+ e_{n}=1$ and $\epsilon_{i}=\epsilon_{i}+I$ for $i=1,\dotsc,n$.
  \begin{proof}
    By \autoref{satz:15}, there are idempotents $f_{1},\dotsc, f_{n}\in A$
    such that $\epsilon_{i}=f_{i}+I$ for $i=1,\dotsc,n$. Then $f_{1}+\dotsb+
    f_{n}+I= \epsilon_{1}+\dotsb+\epsilon_{n}=1_{A}+I$ and
    $f_{i}f_{j}+I=\epsilon_{i}\epsilon_{j}=0+I$ for alle $i\neq j$. By
    \autoref{satz:16}, we have $u\colon= f_{1}+\dotsb+ f_{n}\in U(A)$, and
    $e_{1}=u^{-1}f_{1},\dotsc, e_{n}\colon= u^{-1}f_{n}$ are pairwise
    orthogonal idempotents in $A$ such that $e_{1}+\dotsb+ e_{n}=1$ and
    $e_{i}+I= f_{i}+I=\epsilon_{i}$.
  \end{proof}
\end{satz}

\chapter{Modules}

Let $F$ algebraic closed field and $A$ an $F$"~algebra.

% def. 2.1
\begin{defini}
  An $A$"~module is a finite"=dimensional $F$"~vector spce $M$, together with
  a multiplication $A\times M\rightarrow M$ satisfying:
  \begin{enumerate}
   \item $(a+b)m=am+bm$
   \item $a(m+n)=am+an$
   \item $(ab)m=a(bm)$
   \item $(\alpha 1_{A})m=\alpha m$
  \end{enumerate}
  for $a,b\in A, m,n\in M, \alpha\in F$.
\end{defini}

\begin{bsp}
  \begin{enumerate}
   \item The \highl{zero module} 0.
   \item The \highl{regular module} $A$.
   \item The \highl{direct product} $M_{1}\times\dotso \times M_{n}$ of
    $A$"~modules $M_{1},\dotsc, M_{n}$, via $a(m_{1},\dotsc, m_{n})\colon=
    (am_{1},\dotsc, am_{n})$ for $a\in A, m_{1}\in M_{1},\dotsc, m_{n}\in
    M_{n}$.
  \end{enumerate}
\end{bsp}

% def 2.2
\begin{defini}
  An $F$"~linear map $f\colon M\rightarrow N$ between $A$"~modules $M,N$ such
  that $f(am)=af(m)$ for $a\in A, m\in M$ ist called an
  $A$"~\highl{homomorphism}. Then $A$"~\highl{monomorphisms}, \dots{},
  $A$"~\highl{automorphisms} are defined as usual.
\end{defini}

\begin{bemerkON}
  \begin{enumerate}
   \item Let $f,g\colon M\rightarrow N$ be $A$"~homomorpisms and $\alpha\in
    F$. Then $f+g\colon M\rightarrow N, m\mapsto f(m)+g(m)$, and $\alpha
    f\colon M\rightarrow N, m\mapsto\alpha f(m)$ are $A$"~homomorpisms. Also,
    the zero map $M\rightarrow N, m\mapsto0$ is an $A$"~homomorpism. Thus
    $\Hom_{A}(M,N)\colon= \{f\colon M\rightarrow N| f \text{ is }
    A\text{-homomorpism}\}$ is a $F$"~subspace of $\Hom_{F}(M,N)$.
   \item Let $L,M,N$ be $A$"~modules and $f\in\Hom_{A}(L,M),
    g\in\Hom_{A}(M,N)$. Then $g\circ f\in\Hom_{A}(L,N)$. Moreover,
    $g\circ(f_{1}+f_{2})= (g\circ f_{1})+g\circ f_{2})$ and
    $(g_{1}+g_{2})\circ f= (g_{1}\circ f)+(g_{2}\circ f)$ and $\alpha(g\circ
    f)= (\alpha g)\circ f=g\circ(\alpha f)$ for $f, f_{1},
    f_{2}\in\Hom_{A}(L,M), g,g_{1}, g_{2}\in\Hom_{A}(M,N), \alpha \in F$.
    Also $f\colon M\rightarrow M, m\mapsto m$ is an $A$"~automorphism. Thus
    $E\colon=\End_{A}(M)\colon= \Hom_{A}(M,M)$ is an $F$"~algebra, the
    \highl{endomorphism algebra} of $M$. Finally, $M$ becomes an $E$"~module
    via $f\cdot m\colon=f(m)$ for $f\in E, m\in M$.
   \item $\Aut_{A}(M)\colon=U(\End_{A}(M))$ is called the \highl{automorphism
    group} of $M$.
   \item We call $A$"~modules $M,N$ \highl{isomorphic} and write $M~_{A}N$
    \todo{verbessern} or $M~N$ if there exists an $A$"~isomorphism $g\colon
    M\rightarrow N$. Then $~_{A}$ is an equivalnce relation.
  \end{enumerate}
\end{bemerkON}

% def 2.3
\begin{defini}
  A \highl{submodule} of an $A$"~module $M$ is a subspace $N\subseteq M$ such
  that $an\in N$ for $a\in A, n\in N$. We write $N\geq M$.
\end{defini}


\begin{bsp}
  \begin{enumerate}
   \item 0 and $M$ are always submodules of $M$.
   \item If $N, N'\leq M$, then $N\cap N', N+N'\leq M$.
   \item Let $M,M'$ be $A$"~modules, let $f\in\Hom_{A}(M,M')$ and let $N\geq
    M, N'\geq M'$. Then $f(N)\geq M', f^{-1}(N')\geq M$, in particular,
    $\ker(f)=f^{-1}(0)=\{m\in M\colon f(m)=0\}\leq M$ and
    $\Im(f)=f(M)=\{f(m)\colon m\in M\}\leq M'$.
    %Vorlesung vom 2007-10-29
   \item Submodules of the regular $A$"~module $A$ are called \highl{left
    ideals} of $A$. In particular, $Aa$ is a left ideal of $A$ for $a\in A$.
   \item Let $e,f$ be idempotents in $A$. Then the map
    \begin{gather*}
      \Phi\colon\Hom_{A}(Ae,Af)\rightarrow eAf, \phi\mapsto\phi(e)
    \end{gather*}
    is a linear bijection; in fact, $\phi(e)=\phi(e^{2})=e\phi(e)=\phi(e)\in
    eAf$ for $\phi\in\Hom(Ae, Af)$ and $\phi(e)=0$ implies
    $\phi(Ae)=A\phi(e)=A0=0$ so $\phi=0$. Finally for $x\in eAf$, then the map
    $\phi_{x}\colon Ae\rightarrow Af, a\mapsto ax$, is an $A$"~homomorpism,
    such that $\Phi(\phi_{x})= \phi_{x}(e)=ex=x$.

    Now let $e=f$ and $\phi,\psi\in\Hom_{A}(Ae,Ae)=\End_{A}(Ae)$. Then
    \begin{gather*}
      \Phi(\phi \circ\psi)= (\psi\circ\psi)(e)=\phi(\psi(e))= \phi(\psi(e)e) =
	 \psi(e)\phi(e)=\Phi(\psi)\Phi(\phi)
    \end{gather*}
    Thus
    \begin{gather*}
      \Phi\colon\End_{A}(Ae)\rightarrow (eAe)^{0}, \phi\mapsto\phi(e)
    \end{gather*}
    is an isomorphism of algebras. For $e=1$ we obtain: $\End_{A}(A)\simeq
    A^{0}$.
  \end{enumerate}
\end{bsp}

\begin{bemerkON}
  \begin{enumerate}
   \item Let $m$ be an $A$"~module  and $N\leq M$. Then $M/_{N}=\{m+N\colon
    m\in M\}$ is an $A$"~module via $a(m+N)=(am)+N$ for $a\in A, m\in M$.
    Moreover $M/_{N}$ is called the \highl{factor module} of $M$.
   \item The Homomorphism Theorem for $A$"~modules holds:
    Let $M,M'$ be $A$"~modules and let $f\in \Hom_{A}(M,M')$. Then
    $\overline{f}M/_{\ker(f)}\rightarrow\Im(f), m+\ker(f)\mapsto f(m)$, is an
    $A$"~isomorphism, in particular,
    \begin{gather*}
      M/_{\ker(f)\simeq_{A}\Im(f)}
    \end{gather*}
   \item As usual, the Homomorphism Theorem implies the First Isomorphism
    Theorem:
    Let $N$ be an $A$"~module and $L,M\leq N$. Then we have an isomorphism
    $L/_{L\cap M}\simeq_{A}L+M/_{M}$.
   \item Similarly the Second Isomorphism Theorem holds:
    Let $N$ be an $A$"~module and $L\leq N$. Then the map $M\mapsto M/_{L}$ is
    a bijection betwen the set of submodules of $N$ containing $L$ and the set
    of submodules of $N/_{L}$. Moreover, $(N/_{L})/_{(M/_{L})}\simeq_{A}
    N/_{M}$ whenever $L\leq M\leq N$.
   \item A sequence of submodules of an $A$"~module $M$
    \begin{gather}
      \label{eq:21}
	 M=M_{0}\supseteq M_{1}\supseteq\dotso \supseteq M_{k}=0
    \end{gather}
    is called a \highl{submodule series} of $M$ of \emph{length} $k$ with
    \highl{factors} $M_{0}/_{M_{1}}, M_{1}/_{M_{2}},\dotsc, M_{k-1}/_{M_{k}}$.
    If $M_{i-1}\neq M_{i}$ for all, then \autoref{eq:21} is called a submodule
    series \emph{without repetitions}.

    A submodule series
    \begin{gather}
      \label{eq:22}M=N_{0}\supseteq N_{1}\supseteq\dotso \supseteq N_{l}=0
    \end{gather}
    is called a \highl{refinement} of \autoref{eq:21}, if there exists an
    injection $f\colon\{1,\dotsc,k\}\rightarrow\{1,\dotsc,l\}$, such that
    $M_{i}=N_{f(i)}$ for all $i$.

    If $l>k$, then \autoref{eq:22} is called a \highl{proper refinement}. The
    submodule series \autoref{eq:21} is called a \highl{composition series} of
    $M$, if \autoref{eq:21} has no repetitions, but every proper refinement has.

    Two submodule series \autoref{eq:21}, \autoref{eq:22} of $M$ are called
    \highl{equivalent} (\highl{isomorphic}), if there is a bijection
    $g\colon\{1,\dotsc,k\}\rightarrow\{1,\dotsc,l\}$ such that
    $M_{i}/_{M_{i-1}}\simeq_{A} N_{g(i)}/_{N_{g(i)-1}}$ for all $i$. As usual,
    the Isomorphism Theorems imply that any two submodule series of an
    $A$"~module $M$ have equivalent refinements. (\textsc{Schreier} refinement theorem)

    Consequently any two composition series of an $A$"~module $M$ are
    equivalent (\textsc{Jordan}"~\textsc{Hölder}). Then the length of a
    composition series \autoref{eq:21} of $M$ is called the \highl{length} of
    $M$, and the factors of \autoref{eq:21} are called the \highl{composition
    factors} of $M$. 
  \end{enumerate}
\end{bemerkON}

%2.4 def
\begin{defini}
  An $A$"~module $S\neq=$ is called \highl{simple}, if 0 and $S$ are the only
  submodules of $S$.
\end{defini}

\begin{bsp}
  $F^{n\times1}$ is a simple $F^{n\times n}$"~module for $n\in\N$; in fact,
  let $0\neq U\leq F^{n\times1}$, and let $0\neq u\in U$. Then $u$ can be
  extended to an $F$"~basis $u_{1}=0, u_{2},\dotsc, u_{n}$ of $F^{n\times1}$.
  Thus for $v\in F^{n\times1}$, there is a $F$"~linear map $f\colon
  F^{n\times1}\rightarrow F^{n\times1} such that
  $f($u_{1})=\dotsb=f(u_{n})=v$. Hence, there is $a\in F^{n\times n}$ such
  that $au_{1}=\dotsb= au_{n=v}$. In particular, $v=au\in U$. This shosw
  $U=F^{n\times1}$.
\end{bsp}

\begin{bemerkON}
  A submodule series (*) of an $A$"~module $M$ is a composition series if and
  only if all factors of this series are simple.
\end{bemerkON}

\begin{satz}[\textsc{Schur}s Lemma]
  Let $S$ be a simple $A$"~module. Then $\End_{A}(S)=F \id_{S}$.
  \begin{proof}
    Let $f\in\End_{A}(S)\subseteq\End_{F}(S)$. Since $F$ is algebraically
    closed, $f$ has an eigenvalue $\lambda\in F$. Then $f-\lambda\id_{S}$ is
    not a bijection. Thus $\Im(f-\lambda\id_{S})\neq S$. Since $S$ is simple,
    we conclude: $\Im(f-\lambda\id_{S})=0$. Thus $f=\lambda\id_{S}\in F\id_{S}$.
  \end{proof}
\end{satz}


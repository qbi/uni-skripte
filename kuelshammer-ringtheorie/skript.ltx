\chapter{Das Tensorprodukt}\label{cha:13}

Sei $R$ ein Ring.

%def 13.1
\begin{defini}[Ausgeglichene Abbildung]
  Seien $M\in\kat{Mod}_{R}$ und $N\in\vorunten{R}\kat{Mod}$ sowie
  $A\in\vorunten{\Z}\kat{Mod}$. Eine Abbildung $f\colon M\times N\rightarrow
  A$ heißt \highl[Abbildung!ausgeglichene]{ausgeglichen}\index{ausgeglichen},
  falls gilt:
  \begin{enumerate}
   \item $f(m+m',n)= f(m,n)+f(m',n)$
   \item $f(m,n+n')= f(m,n)+f(m,n')$
   \item $f(mr,n)=f(m,rn)$
  \end{enumerate}
\end{defini}

\begin{bemerk}
  Daraus folgt leicht, $f(m,0)=0=f(0,n)$ und $f(-m,n)= -f(m,n)=f(m,-n)$.
\end{bemerk}

%Vorlesung vom 24.6.2011
%bem 13.2
\begin{bemerk}
  Sei $R$ ein Ring, $M\in\kat{Mod}_{R}$, $N\in\vorunten{R}\kat{Mod}$,
  $A\coloneqq\coprod_{(m,n)\in M\times N} \Z\in\kat{Ab}$ mit Standardbasis
  $\Set{e_{(m,n)} | m\in M, n\in N}$. Die Teilmenge $X\subseteq A$ bestehe aus
  den Elementen $e_{(m+m',n)}-e_{(m,n)-e_{(m',n)}}$, $e_{(m,n+n')}-e_{(m,n)}-
  e_{(m,n')}$, $e_{(mr,n)}- e_{(m,rn)}$ mit $m,m'\in M$, $n,n'\in R$ und $r\in
  R$. Die Teilmenge $B\subseteq A$ sei die von $X$ erzeugte Untergruppe und
  \begin{gather*}
    M\otimes_{R}N\coloneqq A/B\in\kat{Ab}
  \end{gather*}
  mit $m\otimes n\coloneqq e_{(m,n)}+B\in A/B=M\otimes_{R}N$ mit $m\in M$ und
  $n\in N$.
\end{bemerk}

\begin{satz}\label{satz:13.2}
  \begin{enumerate}
   \item $(m+m')\otimes n= m\otimes n+m'\otimes n$, $m\otimes(n+n')= m\otimes
    n+m\otimes n'$, $mr\otimes n= m\otimes rn$ für $m,m'\in M$, $n,n'\in N$
    und $r\in R$.
   \item Jedes Element in $M\otimes_{R}N$ kann man in der Form $\sum_{i=1}^{k}
    m_{i}\otimes n_{i}$ mit endlich vielen $m_{1},\dotsc, m_{k}\in M$ und
    $n_{1},\dotsc, n_{k}\in N$ schreiben.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}
     \item $(m+m')\otimes n- m\otimes n- m'\otimes n= e_{(m+m',n)}-e_{(m,n)}
      -e_{(m',n)}+B=0$. Die anderen Gleichungen zeigt man analog.
     \item Jedes $a\in A$ kann man in der Form $a=\sum_{i=1}^{k}
      z_{i}e_{(m_{i}, n_{i})}$ mit endlich vielen $m_{i}\in M$, $n_{i}\in N$
      und $z_{i}\in\Z$ schreiben. Daher: $a+B= \sum_{i=1}^{k} z_{i}
      e_{(m_{i},n_{i})}+B= \sum_{i=1}^{k} z_{i} (m_{i}\otimes n_{i})=
      \sum_{i=1}^{k} (z_{i}m_{i}\otimes n_{i})$.
    \end{enumerate}
  \end{proof}
\end{satz}

%bem 13.3
\begin{bemerk}
  Die Schreibweise $\sum_{i=1}^{k} m_{i}\otimes n_{i}$ ist im Allgemeinen
  nicht eindeutig. Ferner ist $M\otimes_{R}N\neq \Set{m\otimes n | m\in M,
  n\in N}$.
\end{bemerk}

\begin{satz}[Universelle Eigenschaft des Tensorprodukts]
  Seien $M\in\kat{Mod}_{R}$, $N\in\vorunten{R}\kat{Mod}$, $L\in\kat{Ab}$ und
  $f\colon M\times N\rightarrow L$ ausgeglichen. Dann existiert genau ein
  $f'\in\Hom_{\Z}(M\otimes_{R}N,L)$ mit $f'(m\otimes n)= f(m,n)$ für alle
  $m\in M$ und $n\in N$.
  \begin{proof}
    Mit den obigen Bezeichnungen ist
    \begin{gather*}
      F\colon A\rightarrow L,\qquad (z_{(m,n)})_{(m,n)\in M\times
	 N}\mapsto\sum_{(m,n)\in M\times N} z_{(m,n)} f(m,n)
    \end{gather*}
     eine $\Z$"~lineare Abbildung. Dabei gilt fülle $m,m'\in
    M$, $n,n'\in N$ und $r\in R$:
    \begin{align*}
      F(e_{(m+m',n)}-e_{(m,n)}-e_{(m',n)})&= f(m+m',n)-f(m,n)-f(m',n)=0\\
      F(e_{(m,n+n')}-e_{(m,n)}- e_{(m,n')}) &=\dotsb= 0\\
      F(e_{(mr,n)}-e_{(m,rn)}) &=\dotsb= 0
    \end{align*}
    Folglich ist $F(B)=0$. Daher ist die neue Abbildung $f'\colon
    M\otimes_{R}N=A/B\rightarrow L$ mit $a+B\mapsto F(a)$ wohldefiniert und
    $\Z$"~linear mit $f'(m\otimes n)= f'(e_{(m,n)}+B)= F(e_{(m,n)})= f(m,n)$
    für alle $m\in M$ und $n\in N$.

    Sei auch $f''\in\Hom_{\Z}(M\otimes_{R}N,L)$ eine $\Z$"~lineare Abbildung
    mit $f''(m\otimes n)=f(m,n)=f'(m\otimes n)$ für alle $m\in M$ und $n\in
    N$. Aus dem \autoref{satz:13.2} (ii) folgt, dass $f''=f'$.
  \end{proof}
\end{satz}

%satz 13.4
\begin{satz}
  Seien $M,M'\in\kat{Mod}_{R}$, $N,N'\in\vorunten{R}\kat{Mod}$ und
  $f\in\Hom_{R}(M,M')$ sowie $g\in\Hom_{R}(N,N')$. Dann existiert genau ein
  $h\in\Hom_{\Z}(M\otimes_{R}N, M'\otimes_{R}N')$ mit $h(m\otimes
  n)=f(m)\otimes g(n)$ für alle $m\in M$ und $n\in N$.
  \begin{proof}
    Die Abbildung $H\colon M\times N\rightarrow M'\otimes_{R}N'$ mit
    $(m,n)\mapsto f(m)\otimes g(n)$ ist ausgeglichen. Denn für $m,m'\in M$,
    $n,n'\in N$ und $r\in R$ gilt:
    \begin{align*}
      H(m+m',n) &= f(m+m')\otimes g(n) = (f(m)+f(m'))\otimes g(n)\\
	 &= f(m)\otimes g(n)+ f(m')\otimes g(n)= H(m,n)+H(m',n)\\
      H(m,n+n') &= \dotsb=H(m,n)+H(m,n')\\
      H(mr,n) &= \dotsb=H(m,rn)
    \end{align*}
    Daher existiert genau ein $h\in\Hom_{\Z}(M\otimes_{R}N, M'\otimes_{R}N')$
    mit $h(m\otimes n)= H(m,n)= f(m)\otimes g(n)$ für alle $m\in M$ und $n\in N$.
  \end{proof}
\end{satz}


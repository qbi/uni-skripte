\chapter{Kategorien und Funktoren}
%def 1.1
\begin{defini}[Kategorie]
  Eine \highl{Kategorie} besteht aus
  \begin{enumerate}
   \item einer \highl{Klasse}~$\CC$ und die Elemente einer Klasse heißen
    \highl{Objekt}e,
   \item einer Menge $\CC(A,B)$ und die Elemente der Menge heißen
    \highl[Morphismus]{Morphismen} von $A$ nach $B$.\footnote{Nach
    \cite{adhest} sind Objekte immer Mengen.} Wir schreiben
    $A\xrightarrow{f} B$ oder $f\colon A\rightarrow B$ zu jedem Paar~$(A,B)$
    von Objekten in $\CC$,
   \item einer Abbildung $\CC(B,C)\times\CC(A,B)\rightarrow\CC(A,C)$ mit
    $(g,f)\mapsto g\circ f$. Diese Abbildung heißt \highl{Komposition}. Dabei
    verlangt man:
    \begin{enumerate}
     \item $\CC(A,B)\cap\CC(C,D)=\emptyset$, falls $(A,B)\neq(C,D)$.
     \item $h\circ(g\circ f)=(h\circ g)\circ f$ für alle $A\xrightarrow{f}
      B\xrightarrow{g} C\xrightarrow{h}D$ in $\CC$.
     \item Für alle $A\in\CC$ existiert ein $\id_{A}\in\CC(A,A)$ mit
      $f\circ\id_{A}=f$ und $\id_{A}\circ g=g$ für alle
      $A\rightleftarrows^{f}_{g} B$ in $\CC$.
    \end{enumerate}
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Sind Morphismen und Kompositionen klar, so sagt man auch, $\CC$ ist
    eine Kategorie.
   \item Bekanntlich ist die "`Gesamtheit"' aller Mengen keine Menge. Um
    solche Widersprüche zu vermeiden, spricht man von "`Klassen"'. Wir werden
    Klassen nicht genau definieren. Aber z.\,B. ist die Gesamtheit aller Mengen
    eine Klasse.
   \item Für $A\in\CC$ ist die \highl{Identität}~$\id_{A}$ eindeutig bestimmt.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Mengen und Abbildungen bilden eine Kategorie~$\kat{Set}$. Für
    $A,B\in\kat{Set}$ ist $\kat{Set}(A,B)=\Abb(A,B)$ die Menge aller
    Abbildungen von $A$ nach $B$.
   \item Gruppen und Gruppenhomomorphismen bilden eine Kategorie~$\kat{Gr}$.
   \item Für jeden Körper~$K$ bilden die $K$"~Vektorräume und $K$"~linearen
    Abbildungen eine Kategorie~$\vorunten{K}\kat{Vec}$.
  \end{enumerate}
\end{bsp}

%def 1.2
\begin{defini}[Teilkategorie]
  Eine Kategorie~$\CD$ heißt \highl{Teilkategorie} einer Kategorie~$\CC$,
  falls gilt:
  \begin{enumerate}
   \item $A\in\CD\Rightarrow A\in\CC$
   \item $A,B\in\CD\Rightarrow\CD(A,B)\subseteq\CC(A,B)$
   \item Die Komposition in $\CD$ ist eine Einschränkung der Komposition in
    $\CC$. Identitäten sind eindeutig bestimmt.
  \end{enumerate}
  Gilt im zweiten Punkt oben die Gleichheit, so heißt $\CD$
  \highl[Teilkategorie!volle]{volle Teilkategorie} von $\CC$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Die endlichen Mengen bilden eine volle Teilkategorie~$\kat{set}$ von
    $\kat{Set}$.
   \item Die endlichen Gruppen bilden eine volle Teilkategorie~$\kat{gr}$ von
    $\kat{Gr}$.
   \item Die endlich"=dimensionalen $K$"~Vektorräume bilden eine volle
    Teilkategorie~$\vorunten{K}\kat{vec}$ von $\vorunten{K}\kat{Vec}$.
   \item Die abelschen Gruppen bilden eine volle
    Teilkategorie~$\kat{Ab}$ von  $\kat{Gr}$.
   \item Die endlichen abelschen Gruppen bilden eine volle
    Teilkategorie~$\kat{ab}$ von  $\kat{Ab}$.
   \item Mengen und injektive Abbildungen bilden eine nicht volle
    Teilkategorie von $\kat{Set}$.
   \item $\kat{Gr}$ ist \emph{keine} Teilkategorie von $\kat{Set}$.
  \end{enumerate}
\end{bsp}

%def 1.3
\begin{defini}[Funktor]
  Seien $\CC$ und $\CD$ Kategorien. Ein \highl{Funktor} von $\CC$ nach $\CD$
  besteht aus:
  \begin{enumerate}[(1)]
   \item einer "`Abbildung"' $\Phi\colon\CC\rightarrow\CD$ mit $A\mapsto\Phi A$
   \item einer Abbildung $\CC(A,B)\rightarrow\CD(\Phi A,\Phi B)$ mit
    $f\mapsto\Phi f$ zu jedem Paar $(A,B)$ von Objekten in $\CC$.
  \end{enumerate}
  Dabei verlangt man:
  \begin{enumerate}
   \item $\Phi(g\circ f)=\Phi(g)\circ\Phi(g)$ für alle
    $A\xrightarrow{f}B\xrightarrow{g}C$ in $\CC$.
   \item $\Phi(\id_{A})= \id_{\Phi(A)}$ für $A\in\CC$.
  \end{enumerate}
  Wir schreiben: $\Phi\colon\CC\rightarrow\CD$ oder $\CC\xrightarrow{\Phi}\CD$.
\end{defini}

\begin{bsp}\label{bsp:1.3}
  \begin{enumerate}[(a)]
   \item Der \highl{Vergissfunktor} $\kat{Gr}\rightarrow\kat{Set}$, der jeder
    Gruppe die zugrundeliegende Menge zuordnet. Analog hat man
    Vergissfunktoren $\vorunten{K}\kat{Vec}\rightarrow\kat{Set}$,
    $\vorunten{K}\kat{Vec}\rightarrow\kat{Ab}$ usw.
   \item Für jede Kategorie~$\CC$ hat man den
    \highl{Identitätsfunktor}~$\Id_{\CC}\colon\CC\rightarrow\CC$ mit
    $\Id_{\CC}A=A$ und $\Id_{\CC}(f)=f$ für alle $A\xrightarrow{f}B$ in $\CC$.
   \item Für jedes Objekt~$X$ in einer Kategorie~$\CC$ existiert der
    Funktor~$\CC(X,?)\colon\CC\rightarrow\kat{Set}$ mit
    $\CC(X,?)(A)\coloneqq\CC(X,A)$ und $\CC(X,?)(f)\coloneqq\CC(X,f)$, wobei
    $\CC(X,f)\colon\CC(X,A)\rightarrow\CC(X,B)$ mit $g\mapsto f\circ g$ für
    alle $A\xrightarrow{f}B$ gilt.\todo{nachrechnen}
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  Ein Funktor~$\CC\xrightarrow{\Phi}\CD$ heißt \highl{treu} oder \highl{voll},
  falls für alle $A,B\in\CC$ die Abbildung $\CC(A,B)\rightarrow\CD(\Phi A,\Phi
  B)$ mit $f\mapsto\Phi f$ injektiv oder surjektiv ist.
\end{bemerk}

%bem 1.4
\begin{bemerk}
  Für Funktoren $\CC\xrightarrow{\Phi}\CD\xrightarrow{\Psi}\CE$ definiert man
  in naheliegender Weise einen Funktor $\Psi\circ\Phi\colon\CC\rightarrow\CE$.
  Für die so definierte \highl{Komposition} von Funktoren gilt:
  \begin{enumerate}
   \item $(\Omega\circ\Psi)\circ\Phi= \Omega\circ(\Psi\circ\Phi)$ für
    Funktoren
    $\CC\xrightarrow{\Phi}\CD\xrightarrow{\Psi}\CE\xrightarrow{\Omega}\CF$.
   \item $\Phi\circ\Id_{\CC}=\Phi=\Id_{\CD}\circ\Phi$ für Funktoren
    $\Phi\colon\CC\rightarrow\CD$.
  \end{enumerate}
\end{bemerk}

%def 1.5
\begin{defini}[Isomorphismus]
  Ein Morphismus $f\colon A\rightarrow B$ in einer Kategorie heißt
  \highl{Isomorphismus} (iso), falls ein $g\in\CC(B,A)$ mit $g\circ f=\id_{A}$
  und $f\circ g=\id_{B}$ existiert.
\end{defini}

\begin{bemerk}
  Gegebenenfalls ist $g$ durch $f$ eindeutig bestimmt. Man bezeichnet $g$ als
  \highl{Inverses} von $f$ und schreibt $g=f^{-1}$. Dann ist auch $f^{-1}$ ein
  Isomorphismus in $\CC$ und $(f^{-1})^{-1}=f$.
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Stets ist $\id_{A}$ ein Isomorphismus in $\CC$ und
    $\id_{A}^{-1}=\id_{A}$.
   \item Hat man Isomorphismen $A\xrightarrow{f}B\xrightarrow{g}C$ in $\CC$,
    so ist $g\circ f\colon A\rightarrow C$ ein Isomorphismus in $\CC$ und
    $(g\circ f)^{-1}=f^{-1}\circ g^{-1}$.
   \item Die Isomorphismen in $\kat{Set}$ sind genau die Bijektionen und die
    Isomorphismen in $\kat{Gr}$ sind genau die Gruppenisomorphismen.
  \end{enumerate}
\end{bsp}

\begin{satz}\label{satz:1.5}
  Für jeden Funktor $\Phi\colon\CC\rightarrow\CD$ und jeden Isomorphismus
  $f\colon A\rightarrow B$ in $\CC$ ist $\Phi f\colon\Phi A\rightarrow\Phi B$
  ein Isomorphismus in $\CD$ mit $(\Phi f)^{-1}=\Phi(f^{-1})$.
  \begin{proof}
    $\Phi(f^{-1})\circ\Phi f= \Phi(f^{-1}\circ f)= \Phi(\id_{A})=
    \id_{\Phi(A)}$ und $\Phi f\circ\Phi(f^{-1})=\dotsb=\id_{\Phi(B)}$.
  \end{proof}
\end{satz}

%def 1.6
\begin{defini}[Isomorphe Objekte]
  Objekte $A$ und $B$ in einer Kategorie $\CC$ heißen
  \highl[Objekt!isomorphe]{isomorph}\index{isomorph}, falls ein Isomorphismus
  $f\in\CC(A,B)$ existiert. Wir schreiben, $A\cong_{\CC}B$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Man zeigt leicht, dass $\cong_{\CC}$ ein Äquivalenzrelation ist.
   \item Aus dem \autoref{satz:1.5} folgt, dass für Funktoren
    $\CC\xrightarrow{\Phi}\CD$ und Objekten $A,B\in\CC$ gilt,
    A$\cong_{\CC}B\Rightarrow\Phi A\cong_{\CD} \Phi B$.
  \end{enumerate}
\end{bemerk}

%def 1.7
\begin{defini}[mono, epi]
  Ein Morphismus $f\colon A\rightarrow B$ in einer Kategorie $\CC$ heißt:
  \begin{enumerate}
   \item \highl[Morphismus!mono]{mono}\index{mono}, falls für alle $g,h\colon
    C\rightarrow A$ in $\CC$ mit $f\circ g=f\circ h$ gilt, $g=h$.
   \item \highl[Morphismus!epi]{epi}\index{epi}, falls für alle $g,h\colon
    B\rightarrow C$ in $\CC$ mit $g\circ f=h\circ f$ gilt, $g=h$.
  \end{enumerate}
\end{defini}

\begin{satz}
  Für alle Mengen und Abbildungen $f\colon A\rightarrow B$ gilt:
  \begin{enumerate}
   \item $f$ mono in $\kat{Set}\Leftrightarrow f$ injektiv.
   \item $f$ epi in $\kat{Set}\Leftrightarrow f$ surjektiv.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}
     \item
      \begin{itemize}
       \item["`$\Rightarrow$"'] Seien $x,y\in A$ mit $f(x)=f(y)$. Dann sind
	$g\colon\{x\}\rightarrow A$ mit $x\mapsto x$ und
	$h\colon\{x\}\rightarrow A$ mit $x\mapsto y$ Abbildungen mit $f\circ
	g=f\circ h$. Ist $f$ mono, so folgt, $g=h$, d.\,h. $x=y$.
       \item["`$\Leftarrow$"'] Seien $g,h\colon C\rightarrow A$ Abbildungen
	mit $f\circ g=f\circ h$. Für $x\in C$ ist dann $f(g(x))=f(h(x))$. Ist
	$f$ injektiv, so folgt, $g(x)=h(x)$. Also $g=h$.
      \end{itemize}
     \item
      \begin{itemize}
       \item["`$\Rightarrow$"'] Sei $f$ epi und $y=B$. Wir definieren $g\colon
	B\rightarrow\{0,1\}$ durch $g(y)\coloneqq1$ und $g(x)\coloneqq0$
	sonst. Weiterhin definieren wir $h\colon B\rightarrow\{0,1\}$ durch
	$h(x)\coloneqq0$ für alle $x\in B$. Wäre $y\notin\Bld(f)$, so wäre
	$g\circ f=h\circ f$, also $g=h$ \lightning{} Also: $y\in\Bld(f)$.
	Daher ist $f$ surjektiv.
       \item["`$\Leftarrow$"'] Seien $g,h\colon B\rightarrow C$ Abbildungen
	mit $g\circ f=h\circ f$, d.\,h. $g(f(a))= h(f(a))$ für alle $a\in A$.
	Ist $f$ surjektiv, so folgt, $g(b)= h(b)$ für alle $b\in B$, d.\,h.
	$g=h$.
      \end{itemize}
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{bemerk}
  \begin{enumerate}
   \item Der Satz gilt \emph{nicht} in allen Kategorien, deren Objekte Mengen
    sind.
   \item Im Allgemeinen existieren Morphismen, die mono und epi, aber keine
    Isomorphismen sind.
  \end{enumerate}
\end{bemerk}


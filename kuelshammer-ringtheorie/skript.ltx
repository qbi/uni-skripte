\end{defini}

\begin{satz}
  Die Relation $\approx$ ist eine Äquivalenzrelation.
  \begin{proof}
    Der Beweis ist Routine.
  \end{proof}
\end{satz}

\begin{bsp}
  $R\cong S\Rightarrow R\approx S$.
\end{bsp}

\begin{bemerk}
  $R\approx S\Rightarrow R^{o}\approx S^{o}$
\end{bemerk}

%satz 14.8

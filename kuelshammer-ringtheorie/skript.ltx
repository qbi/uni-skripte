%satz 13.7
\begin{satz}\label{satz:13.7}
  Für jede Familie von Moduln $(M_{i})_{i\in I}$ in $\kat{Mod}_{R}$ und
  $N\in\vorunten{R}\kat{Mod}$ gilt:
  \begin{gather*}
    \left(\coprod_{i\in I} M_{i}\right)\otimes_{R}N\simeq_{\Z} \coprod_{i\in
       I} (M_{i}\otimes_{R}N
  \end{gather*}
  \begin{proof}
    Sei $M\coloneqq\coprod_{i\in I} M_{i}$ mit Projektoren $p_{j}$ und
    Injektoren $q_{j}$ für $j\in I$. Dann haben wir $\Z$"~Homomorphismen:
    \begin{align*}
      p_{j}\otimes\id_{N}\colon M\otimes_{R}N&\rightarrow M_{j}\otimes_{R}N\\
      q_{j}\otimes\id_{N}\colon M_{j}\otimes_{R}N&\rightarrow M\otimes_{R}N\\
      f\colon\coprod_{j\in I} (M_{j}\otimes_{R}N)&\rightarrow
	 M\otimes_{R}N\qquad (x_{j})_{j\in I}\mapsto\sum_{j\in I}
	 (q_{j}\otimes\id_{N})(x_{j})\\
      g\colon M\otimes_{R}N&\rightarrow\coprod_{j\in I}
	 (M_{j}\otimes_{R}N)\qquad x\mapsto((p_{j}\otimes\id_{N})(x))_{j\in I}
    \end{align*}
    Dabei gilt für x$\in M\otimes_{R}N$: $\abs{\Set{j\in I |
    (p_{j}\otimes\id_{N})(x)\neq0}}<\infty$. Denn dies gilt für jedes Element
    der Form $(m_{i})_{i\in I}\otimes n$, denn
    $(p_{j}\otimes\id_{N})(m_{i})_{i\in I}\otimes n)=m_{j}\otimes n$. Also
    gilt es auch für endliche Summen solcher Elemente. Für $m=(m_{i})_{i\in
    I}\in M$ und $n\in N$ gilt:
    \begin{align*}
      f(g(m\otimes n)) &= f(((p_{j}\otimes\id_{N})(m\otimes n))_{j\in I})=
	 f((m_{j}\otimes n)_{j\in I})\\
      &= \sum_{j\in I}(q_{j}\otimes\id_{N})(m_{j}\otimes n)= \sum_{j\in I}
	 q_{j}(m_{j})\otimes n= \left(\sum_{j\in I} 
	 q_{j}(m_{j})\right)\otimes n= m\otimes n
    \end{align*}
    Analog gilt für ein Element $x=(x_{j})_{j\in I}\in\coprod_{j\in
    I}(M_{j}\otimes_{R}N)$:
    \begin{align*}
      g(f(x)) &= g\left(\sum_{j\in I} (q_{j}\otimes\id_{N})(x_{j})\right)=
	 \sum_{j\in I} (((p_{i}\otimes\id_{N})(q_{j}\otimes\id_{N}))(x_{j}))_{i\in I}\\
      &= \sum_{j\in I} (((p_{i}\circ q_{j})\otimes\id_{N})(x_{j}))_{i\in I}=
	 \sum_{j\in I} (\delta_{ij}x_{j})_{i\in I}= (x_{j})_{j\in I}=x
    \end{align*}
    Daher $f\circ g=\id$ und $g\circ f=\id$.
  \end{proof}
\end{satz}

\begin{defini}[Kanonischer Isomorphismus]
  Die obige Abbildung heißt \highl[Isomorphismus!kanonischer]{kanonischer
  Isomorphismus} zwischen $(\coprod_{i\in I} M_{i})\otimes_{R}N$ und
  $\coprod_{i\in I} (M_{i}\otimes_{R}N)$.
\end{defini}

\begin{bemerk}
  Analog hat man für $M\in\kat{Mod}_{R}$ und jede Familie $(N_{i})_{i\in I}$
  in $\vorunten{R}\kat{Mod}$ einen kanonischen $\Z$"~Isomorphismus
  $M\otimes_{R}(\coprod_{i\in I} N_{i})\rightarrow\coprod_{i\in
  I}(M\otimes_{R} N_{i})$.
\end{bemerk}

%satz 13.8
\begin{satz}
  Für $M\in\kat{Mod}_{R}$ und jede kurze exakte Sequenz
  \begin{gather}
    \label{eq:13.8}0\rightarrow N\xrightarrow{g}
       N'\xrightarrow{g'}N''\rightarrow0
  \end{gather}
  in $\vorunten{R}\kat{Mod}$ ist die folgende Sequenz in
  $\vorunten{\Z}\kat{Mod}$ exakt:
  \begin{gather}
    \label{eq:13.8-2}
       M\otimes_{R}N\xrightarrow{\id_{M}\otimes g}
       M\otimes_{R}N'\xrightarrow{\id_{M}\otimes g'}M\otimes_{R}N''\rightarrow0
  \end{gather}
  Zerfällt die \autoref{eq:13.8}, so ist
  \begin{gather*}\label{eq:13.8-3}
    0\rightarrow M\otimes_{R}N\xrightarrow{\id_{M}\otimes g} M\otimes_{R}N'
       \xrightarrow{\id_{M}\otimes g'} M\otimes_{R}N''\rightarrow0
  \end{gather*}
  exakt und zerfallend.
  \begin{proof}
    Seien $m\in M$ und $n''\in N''$. Da $g'$ surjektiv ist, existiert ein
    $n'\in N'$ mit $n''=g'(n')$. Daher: $m\otimes n''=(\id_{M}\otimes
    g')(m\otimes n')$. Dies zeigt, dass $\id_{M}\otimes g'$ surjektiv ist.
    Offenbar: $(\id_{M}\otimes g')\circ(\id_{M}\otimes g)=
    \id_{M}\otimes(g'\circ g)=0$, d.\,h. $B\coloneqq\Bld(\id_{M}\otimes
    g)\trianglelefteq\ker(\id_{M}\otimes g')=\colon K$. Andererseits ist
    $f\colon M\times N''\rightarrow (M\otimes_{R}N')/B$ mit $(m,g'(n'))\mapsto
    m\otimes n+B$ wohldefiniert, denn sind $n_{1}', n_{2}'\in N'$ mit
    $g'(n_{1}')= g'(n_{2}')$, so ist $n_{1}'-n_{2}'\in\ker(g')=\Bld(g)$,
    d.\,h. $n_{1}'-n_{2}'=g(n)$ für ein $n\in N$. Daher ist $m\otimes n_{1}'-
    m\otimes n_{2}'= m\otimes(n_{1}'-n_{2}')= m\otimes g(n)= (\id_{M}\otimes
    g)(m\otimes n)\in B$. Man zeigt leicht, dass $f$ ausgeglichen ist. Daher
    existiert ein $f'\in\Hom_{\Z}(M\otimes_{R}N'', (M\otimes_{R}N'/B))$ mit
    $f'(m\otimes n')= f(m,n'')$ für alle $m\in M$ und $n''\in N''$.
    Insbesondere $(f'\circ(\id_{M}\otimes g'))(m\otimes n')= f'(m\otimes
    g'(n'))= f(m,g'(n'))= m\otimes n'+B$. Also ist $(f'\circ(\id_{M}\otimes
    g'))(x)= x+B$ für alle $x\in M\otimes_{R}N'$. Insbesondere gilt für alle
    $x\in K$: $0=(f'\circ(\id_{M}\otimes g'))(x)= x+B\Rightarrow x\in B$.
    Daher ist $B=K$. Zerfällt die \autoref{eq:13.8}, so existiert ein
    $h\in\Hom_{R}(N',N)$ mit $h\circ g=\id_{N}$. Daher: $\id_{M}\otimes
    h\in\Hom_{\Z}(M\otimes_{R}N', M\otimes_{R}N)$ und $(\id_{M}\otimes
    h)\circ(\id_{M}\otimes g)= \id_{M}\otimes(h\circ g)=\id_{M}\otimes\id_{N}=
    \id_{M\otimes_{R}N}$. Daher: $\id_{M}\otimes g$ injektiv und
    \autoref{eq:13.8-3} ist exakt und zerfallend.
  \end{proof}
\end{satz}

\begin{bemerk}
  Eine analoge Aussage hat man für jede kurze exakte Sequenz $0\rightarrow
  M\rightarrow M'\rightarrow M''\rightarrow0$ in $\kat{Mod}_{R}$ und alle
  $N\in\vorunten{R}\kat{Mod}$.
\end{bemerk}

\begin{bsp}
  Für $k\in\N$ haben wir eine kurze exakte Sequenz in $\vorunten{\Z}\kat{Mod}$:
  \begin{gather*}
    0\rightarrow\Z\xrightarrow{f}\Z\rightarrow\Z/k\Z\rightarrow0
  \end{gather*}
  Für $l\in\Z$ ist also auch:
  \begin{gather*}
    \Z\otimes_{\Z}(\Z/l\Z)\xrightarrow{f\otimes\id} \Z\otimes_{\Z}(\Z/l\Z)
       \rightarrow(\Z/k\Z)\otimes_{\Z}(\Z/l\Z)\rightarrow0
  \end{gather*}
  exakt in $\vorunten{\Z}\kat{Mod}$. Nach dem Homomorphiesatz gilt:
  \begin{gather*}
    (\Z/k\Z)\otimes_{\Z}(\Z/l\Z)\simeq
       (\Z\otimes_{\Z}(\Z/l\Z))/\Bld(f\otimes\id)
  \end{gather*}
  Daher ist $f\otimes\id$ die Multiplikation mit $k$. Folglich:
  \begin{align*}
    (\Z/k\Z)\otimes_{\Z}(\Z/l\Z) &\simeq \Z\otimes_{\Z}
       (\Z/l\Z)/k(\Z\otimes_{\Z} (\Z/l\Z))\simeq \Z/l\Z/k(\Z/l\Z)\\
    &= \Z/l\Z/k\Z+l\Z/l\Z\simeq \Z/k\Z+l\Z\\
    &\simeq \Z/\ggt(k,l)\Z
  \end{align*}
  Daher $(\Z/k\Z)\otimes_{\Z} (\Z/l\Z)= \Z/\ggt(k,l)\Z$ für $k,l\in\N$. Im
  Fall $k=l$ ist $k(x\otimes y)= x\otimes(ky)= x\otimes0=0$ für $x\in\Z$ und
  $y\in\Z/l\Z$, d.\,h. $f\otimes\id=0$.

  Für $k\geq2$ ist also $f\otimes\id$ nicht injektiv, d.\,h. aus der Exaktheit
  von \autoref{eq:13.8} folgt i.\,A. nicht die von \autoref{eq:13.8-3}. Für
  einen Untermodul $M$ eines $R$"~Moduls $M'$ kann man also $M\otimes_{R}N$
  i.\,A. nicht als $\Z$"~Untermodul von $M'\otimes_{R}N$ auffassen.
\end{bsp}

%def 13.9
\begin{defini}[Flacher Modul]
  $N\in\vorunten{R}\kat{Mod}$ heißt \highl[Modul!flacher]{flach}\index{flach},
  falls für jede  kurze exakte Sequenz $0\rightarrow M\xrightarrow{f}
  M'\xrightarrow{f'} M''\rightarrow0$ in $\kat{Mod}_{R}$ die Sequenz
  $0\rightarrow M\otimes_{R}N\xrightarrow{f\otimes\id_{N}}
  M'\otimes_{R}N\xrightarrow{f''\otimes\id_{N}}M''\otimes_{R}N\rightarrow0$
  exakt in $\vorunten{\Z}\kat{Mod}$ ist. Analog definiert man flache
  $R$"~Rechtsmoduln.
\end{defini}

\begin{satz}
  \begin{enumerate}
   \item Für jede Familie $(N_{i})_{i\in I}$ in $\vorunten{R}\kat{Mod}$ gilt,
    $\coprod N_{i}$ ist genau dann flach, wenn für alle $i\in I$ die $N_{i}$
    flach sind.
   \item $P\in\vorunten{R}\kat{Mod}$ projektiv $\Rightarrow P$ flach.
  \end{enumerate}
  \begin{proof}
    Sei $0\rightarrow M\xrightarrow{f} M'\xrightarrow{f'} M''\rightarrow0$
    exakt in $\kat{Mod}_{R}$.
    \begin{enumerate}
     \item Sei $N\coloneqq\coprod N_{i}$ mit Projektoren $p_{j}$ und
      Injektoren $q_{j}$ für $j\in I$. Wir betrachten das folgende Diagramm in
      $\vorunten{R}\kat{Mod}$:

      \begin{tikzpicture}
	\node (mn) {$M\otimes_{R}N$};
	\node [right=2cm of mn] (msn) {$M'\otimes_{R}N$};
	\node [below=1.5cm of mn] (comn) {$\coprod(M\otimes_{R}N_{i})$};
	\node [below=1.5cm of msn] (comsn) {$\coprod(M'\otimes_{R}N_{i})$};
	\draw[->]
	(mn) edge node (fi) [above]{$f\otimes\id_{N}$} (msn)
	(mn) edge node (h) [right]{$h$} (comn)
	(msn) edge node (hs) [right]{$h'$} (comsn)
	(comn) edge node (g) [above]{$g$} (comsn);
      \end{tikzpicture}
      Dabei sind $h$ und $h'$ die kanonischen Isomorphismen aus dem
      \autoref{satz:13.7} und $g((x_{i})_{i\in
	I})\coloneqq((f\otimes\id_{N_{i}})(x_{i}))_{i\in I}$ für
      $(x_{i})_{i\in I}\in \coprod(M\otimes_{R}N_{i})$.

      Das Diagramm kommutiert, denn für $m\in M$ und $n\in(n_{i})_{i\in I}\in
      N$ gilt:
      \begin{align*}
	(h'\circ(f\otimes\id_{N}))(m\otimes n) &= h'(f(m)\otimes n)=
	   ((\id_{M}\otimes p_{i})(f(m)\otimes n))_{i\in I}\\
	&= (f(m)\otimes n_{i})_{i\in I}=((f\otimes\id_{N_{i}})(m\otimes n_{i}))_{i\in I}\\
	&= g((m\otimes n_{i})_{i\in I})= g(h(m\otimes n))= (g\circ h)(m\otimes n)
      \end{align*}
      Also ist $f\otimes\id_{N}$ genau dann injektiv, wenn $g$ injektiv ist
      und dies ist genau dann der Fall, wenn $f\otimes\id_{N_{i}}$ für alle
      $i\in I$ injektiv ist.
     \item Wir zeigen zunächst, dass $\vorunten{R}R$ flach ist. Dazu
      betrachten wir das folgende Diagramm in $\vorunten{\Z}\kat{Mod}$:

      \begin{tikzpicture}
	\node (mn) {$M\otimes_{R} R$};
	\node [right=2cm of mn] (msn) {$M'\otimes_{R} R$};
	\node [below=1.5cm of mn] (comn) {$M$};
	\node [below=1.5cm of msn] (comsn) {$M'$};
	\draw[->]
	(mn) edge node (fi) [above]{$f\otimes\id_{N}$} (msn)
	(mn) edge node (h) [right]{$\mu$} (comn)
	(msn) edge node (hs) [right]{$\mu'$} (comsn)
	(comn) edge node (g) [above]{$f$} (comsn);
      \end{tikzpicture}
      Dabei sind $\mu$ und $\mu'$ die kanonischen Isomorphismen aus
      \autoref{satz:13.7} und für $m\in M$ sowie $r\in R$ gilt:
      \begin{align*}
	(\mu'\circ(f\otimes\id_{R}))(m\otimes r) &= \mu'(f(m)\otimes r)=
	   f(m)r= f(mr)= f(\mu(m\otimes r))\\
	&= (f\circ\mu)(m\otimes r)
      \end{align*}
      Also kommutiert das Diagramm. Mit $f$ ist aber auch $f\otimes\id_{R}$
      injektiv. Damit ist die Behauptung gezeigt.

      Nach dem ersten Punkt ist also auch jeder freie $R$"~Modul flach. Somit
      sind auch projektive $R$"~Linksmoduln flach.
    \end{enumerate}
  \end{proof}
\end{satz}

\chapter{Bimoduln}

Im folgenden seien $R,S,T$ immer Ringe.

%def 14.1
\begin{defini}[Bimodul]
  Ein \highl[Bimodul]{R-S"~Bimodul} ist eine Menge $M$ mit den
  Verknüpfungen:
  \begin{align*}
    M\times M &\rightarrow M & (x,y) &\mapsto(x+y)\\
    R\times M &\rightarrow M & (r,x) &\mapsto(rx)\\
    M\times S &\rightarrow M & (x,s) &\mapsto(xs)
  \end{align*}
  Für diese gilt:
  \begin{enumerate}
   \item $M\in\vorunten{R}\kat{Mod}$ und $M\in\kat{Mod}_{S}$
   \item $r\in R$, $s\in S$, $m\in M\Rightarrow(rm)s=r(ms)$
  \end{enumerate}
\end{defini}

\begin{bemerk}
  Die $R$-$S$"~Bimoduln bilden eine Kategorie $\vorunten{R}\kat{Mod}_{S}$.
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[a)]
   \item $R$ selbst ist ein $R$-$R$"~Bimodul. Man schreibt $\vorunten{R}R_{R}$.
   \item $M\in\kat{Mod}_{R}\Rightarrow M\in\vorunten{\End_{R}(M)}M_{R}$.
    Analog ist $M\in\vorunten{R}\kat{Mod}\Rightarrow
    M\in\vorunten{R}\kat{Mod}_{\End_{R}(M)^{o}}$.
  \end{enumerate}
\end{bsp}

%bem 14.2
\begin{bemerk}\label{bem:14.2}
  \begin{enumerate}
   \item Für $M\in\vorunten{R}\kat{Mod}_{S}$ und
    $N\in\vorunten{R}\kat{Mod}_{T}$ ist
    $\Hom_{R}(M,N)\in\vorunten{S}\kat{Mod}_{T}$, wobei $(sft)(m)= f(ms)\cdot
    t$ für alle $s\in S$, $t\in T$, $f\in\Hom_{R}(M,N)$ und $m\in M$ ist.
   \item Für $M\in\vorunten{R}\kat{Mod}_{S}$ und
    $N\in\vorunten{T}\kat{Mod}_{S}$ ist analog
    $\Hom_{S}(M,N)\in\vorunten{T}\kat{Mod}_{R}$, wobei $(tfr)(m)= t\cdot f(rm)$.
  \end{enumerate}
\end{bemerk}

\begin{satz}
  Für $M\in\vorunten{R}\kat{Mod}_{S}$ und $N\in\vorunten{S}\kat{Mod}_{T}$ ist
  $M\otimes_{S} N\in\vorunten{R}\kat{Mod}_{T}$, wobei $r(m\otimes n)t=
  (rm)\otimes(nt)$ für $r\in R$, $m\in M$, $n\in N$ und $t\in T$ gilt.
  \begin{proof}
    %Vorlesung vom 1.7.2011
    Für $r\in R$ ist $f_{r}\colon M\times N\rightarrow M\otimes_{S}N$ mit
    $(m,n)\mapsto(rm)\otimes n$ $S$"~ausgeglichen. Daher existiert ein
    $f_{r}'\in\End_{\Z}(M\otimes_{S}N)$ mit $f_{r}'(m\otimes n)= f_{r}(m,n)=
    (rm)\otimes n$ mit $m\in M$ und $n\in N$. Dann gilt für $r,r'\in R$, $m\in
    M$ und $n\in N$:
    \begin{align*}
      (f_{r}'\circ f_{r'}')(m\otimes n) &= f_{r}'((r'm)\otimes n)= (r\cdot
	 r'm)\otimes n= (rr'\cdot m)\otimes n=f_{rr'}'(m\otimes n)\\
      (f_{r}'+f_{r'}')(m\otimes n) &= \dotsb=f_{r+r'}'(m\otimes n)\\
      f_{1}'(m\otimes n) &= m\otimes n
    \end{align*}
    Mir $rx\coloneqq f_{r}'(x)$ für $r\in R$ und $x\in M\otimes_{R}N$ ist dann
    $M\otimes_{S}N\in\vorunten{R}\kat{Mod}$, denn für $r,r'\in R$ sowie
    $x,y\in M\otimes_{S}N$ gilt:
    \begin{align*}
      r(r'x) &= f_{r}(f_{r'}'(x))= f_{rr'}'(x)= (rr')x\\
      r(x+y) &= \dotsb=rx+ry\\
      1x &= x
    \end{align*}
    Für $r\in R$, $m\in M$ und $n\in N$ ist dabei $r(m\otimes n)=
    f_{r}'(m\otimes n)= (rm)\otimes n$. Analog ist
    $M\otimes_{S}N\in\kat{Mod}_{T}$ mit $(m\otimes n)t= m\otimes(nt)$ für
    $m\in M$, $n\in N$ und $t\in T$.

    Wegen $(r(m\otimes n))t= ((rm)\otimes n)t=
    (rm)\otimes(nt)=r(m\otimes(nt))= r((m\otimes n)t)$ ist
    $M\otimes_{S}N\in\vorunten{R}\kat{Mod}_{T}$.
  \end{proof}
\end{satz}

%satz 14.3
\begin{satz}
  Für $L\in\kat{Mod}_{R}$, $M\in\vorunten{R}\kat{Mod}_{S}$ und
  $N\in\vorunten{S}\kat{Mod}$ existiert genau ein $\Z$"~Isomorphismus
  $f\colon(L\otimes_{R} M)\otimes_{S}N\rightarrow L\otimes_{R}(M\otimes_{S}N)$
  mit $f((x\otimes y)\otimes z)= x\otimes(y\otimes z)$.
  \begin{proof}
    Für $z\in N$ ist $\beta_{z}\colon L\times M\rightarrow
    L\otimes_{R}(M\otimes_{S}N)$ mit $(x,y)\mapsto x\otimes(y\otimes z)$
    $R$"~ausgeglichen. Daher existiert ein
    $\beta_{z}'\in\Hom_{\Z}(L\otimes_{R} M, L\otimes_{R}(M\otimes_{S}N))$ mit
    $\beta_{z}'(x\otimes y)= \beta_{z}(x,y)= x\otimes(y\otimes z)$ für $x\in
    L$ und $y\in M$. Man zeigt leicht: $\beta_{z+z'}'= \beta_{z}'+\beta_{z'}'$
    und $\beta_{sz}'(u)= \beta_{z}'(us)$ für $z,z'\in N$, $s\in S$ und $u\in
    L\otimes_{R} M$. Daher ist $\gamma\colon(L\otimes_{R}M)\times N\rightarrow
    L\otimes_{R}(M\otimes_{S}N)$ mit $(u,z)\mapsto\beta_{z}'(u)$
    $S$"~ausgeglichen. Es existieren also ein $f\in\Hom_{\Z}(((L\otimes_{R}
    M)\otimes_{S}N), L\otimes_{R}(M\otimes_{S}N))$ mit $f(u\otimes z)=
    \gamma(u,z)= \beta_{z}'(u)$ für $u\in L\otimes_{R}M$ und $z\in N$.
    Insbesondere: $f((x\otimes y)\otimes z)= \beta_{z}'(x\otimes y)=
    x\otimes(y\otimes z)$. Analog existiert ein
    $g\in\Hom_{\Z}(L\otimes_{R}(M\otimes_{S}N), (L\otimes_{R}M)\otimes_{S}N)$
    mit $g(x\otimes(y\otimes z))= (x\otimes y)\otimes z$. Man zeigt leicht,
    $g\circ f=\id$ und $f\circ g=\id$. Die Eindeutigkeit von $f$ ist klar.
  \end{proof}
\end{satz}

\begin{bemerk}
  \begin{enumerate}
   \item Die Abbildung $f$ heißt \highl[Isomorphismus!kanonischer]{kanonischer
    Isomorphismus} zwischen $(L\otimes_{R}M)\otimes_{S}N$ und
    $L\otimes_{R}(M\otimes_{S}N)$. Man identifiziert beide $\Z$"~Moduln durch
    $f$.
   \item Sind $Q$ und $T$ weitere Ringe, $L\in\vorunten{Q}\kat{Mod}_{R}$ und
    $N\in\vorunten{S}\kat{Mod}_{T}$, so ist $f$ ein Isomorphismus in
    $\vorunten{Q}\kat{Mod}_{T}$.
   \item Analog sind viele der Isomorphismen in \autoref{cha:13} Isomorphismen
    von Bimoduln, wenn die beteiligten Moduln Bimoduln sind.
  \end{enumerate}
\end{bemerk}

%satz 14.4
\begin{satz}[Frobenius"=Nakayama"=Relation]
  Für $L\in\kat{Mod}_{R}$, $M\in\vorunten{R}\kat{Mod}_{S}$ und
  $N\in\kat{Mod}_{S}$ gilt:
  \begin{gather*}
    \Hom_{S}(L\otimes_{R}M,N)\simeq_{\Z} \Hom_{R}(L, \Hom_{S}(M,N))
  \end{gather*}
  \begin{proof}
    Nach der \autoref{bem:14.2} (ii) ist $\Hom_{S}(M,N)\in\kat{Mod}_{R}$ mit
    $(fr)(m)\coloneqq f(rm)$. Für $\alpha\in\Hom_{S}(L\otimes_{R}M,N)$ und
    $x\in L$  ist $\alpha_{x}\colon M\rightarrow N$ mit
    $y\mapsto\alpha(x\otimes y)$ eine $S$"~lineare Abbildung, d.\,h.
    $\alpha_{x}\in\Hom_{S}(M,N)$. Für $x,x'\in L$ und $r\in R$ gilt,
    $\alpha_{x+x'}=\alpha_{x}+\alpha_{x'}$ sowie $\alpha_{xr}= \alpha_{x}r$.
    Denn: $(\alpha_{x}r)(y)= \alpha_{x}(ry)= \alpha(x\otimes ry)=
    \alpha(xr\otimes y= \alpha_{xr}(y))$. Daher ist die Abbildung
    $\beta_{\alpha}\colon L\rightarrow\Hom_{S}(M,N)$ mit $x\mapsto\alpha_{x}$
    eine $R$"~lineare Abbildung. Wir erhalten so eine Abbildung
    $\beta\colon\Hom_{S}(L\otimes_{R}M,N)\rightarrow\Hom_{R}(L,
    \Hom_{S}(M,N))$ mit $\alpha\mapsto\beta_{\alpha}$. Man zeigt leicht, dass
    $\beta$ eine $\Z$"~lineare Abbildung ist.

    Für $\phi\in\Hom_{R}(L, \Hom_{S}(M,N))$ ist umgekehrt $\omega_{\phi}\colon
    L\times M\rightarrow N$ mit $(x,y)\mapsto(\phi(x)(y))$ $R$"~ausgeglichen,
    induziert also ein $\omega_{\phi}'\in\Hom_{\Z}(L\otimes_{R}M,N)$ mit
    $\omega_{\phi}'(x\otimes y)= \omega_{\phi}(x,y)= (\phi(x)(y))$. Man zeigt
    leicht, $\omega_{\phi}'\in\Hom_{S}(L\otimes_{R}M,N)$. Wir erhalten so eine
    Abbildung
    $\omega\colon\Hom_{R}(L,\Hom_{S}(M,N))\rightarrow\Hom_{S}(L\otimes_{R}M,N)$
    mit $\phi\mapsto\omega_{\phi}'$. Man zeigt leicht: $\omega$ ist
    $\Z$"~linear, $\beta\circ\omega=\id$ und $\omega\circ\beta=\id$.
  \end{proof}
\end{satz}

\begin{bemerk}
  \begin{enumerate}
   \item Der oben definierte $\Z$"~Isomorphismus heißt
    \highl[Isomorphismus!kanonischer]{kanonisch}\index{kanonisch}.
   \item Analog gilt für $L\in\vorunten{R}\kat{Mod}_{S}$,
    $M\in\vorunten{S}\kat{Mod}$ und $N\in\vorunten{R}\kat{Mod}$:
    \begin{gather*}
      \Hom_{R}(L\otimes_{S}M,N)\simeq_{\Z}\Hom_{S}(M,\Hom_{R}(L,N))
    \end{gather*}
    Der Satz ist die ringtheoretische Version der kanonischen Bijektion:
    \begin{gather*}
      \Abb(L\times M,N)\rightarrow\Abb(L,\Abb(M,N))
    \end{gather*}
    Diese schreibt man besser in der Form $N^{L\times M}\rightarrow(N^{M})^{L}$.
  \end{enumerate}
\end{bemerk}

%def 14.5
\begin{defini}[Additiver Funktor]
  Ein Funktor
  $\Phi\colon\vorunten{R}\kat{Mod}\rightarrow\vorunten{S}\kat{Mod}$ mit
  $\Phi(f+g)= \Phi(f)+\Phi(g)$ für alle $M,N\in\vorunten{R}\kat{Mod}$ und
  $f,g\in\Hom_{R}(M,N)$ heißt \highl[Funktor!additiver]{additiv}\index{additiv}.
\end{defini}

\begin{bemerk}\label{bem:14.5}
  $\Phi(0_{M,N})= 0_{\Phi(M),\Phi(N)}$ für die Nullabbildung $0_{M,N}\colon
  M\rightarrow N$.
\end{bemerk}

%satz 14.6
\begin{satz}
  Sei $\Phi\colon\vorunten{R}\kat{Mod}\rightarrow\vorunten{S}\kat{Mod}$ ein
  additiver Funktor. Für den Nullmodul $0\in\vorunten{R}\kat{Mod}$  ist dann
  $\Phi0$ der Nullmodul in $\vorunten{S}\kat{Mod}$.
  \begin{proof}
    Für die Nullabbildung $0_{0,0}\in\Hom_{R}(0,0)$ gilt offenbar $0_{0,0}=
    \id_{0}$. Nach der \autoref{bem:14.5} ist also
    $0_{\Phi0,\Phi0}=\Phi(0_{0,0})=\Phi(\id_{0})= \id_{\Phi0}$. Daher ist
    $\Phi0=0$.
  \end{proof}
\end{satz}

\begin{bsp}
  \begin{enumerate}
   \item Für $X\in\vorunten{R}\kat{Mod}_{S}$ haben wir additive Funktoren
    $\Hom_{R}(X,?)\colon\vorunten{R}\kat{Mod}\rightarrow\vorunten{S}\kat{Mod}$
    und
    $X\otimes_{S}?\colon\vorunten{S}\kat{Mod}\rightarrow\vorunten{R}\kat{Mod}$.
   \item Für additive Funktoren $\vorunten{R}\kat{Mod}\xrightarrow{\Phi}
    \vorunten{S}\kat{Mod}\xrightarrow{\Psi} \vorunten{T}\kat{Mod}$ ist auch
    $\Psi\circ\Phi$ additiv.
  \end{enumerate}
\end{bsp}

%def 14.7
\begin{defini}[Morita-äquivalent]\label{def:14.7}
  $R$ und $S$ heißen \highl{Morita-äquivalent}, falls additive Funktoren
  $\vorunten{R}\kat{Mod}\rightleftarrows^{\Phi}_{\Psi}\vorunten{S}\kat{Mod}$

\chapter{Kategorien und Funktoren}
%def 1.1
\begin{defini}[Kategorie]
  Eine \highl{Kategorie} besteht aus
  \begin{enumerate}
   \item einer \highl{Klasse}~$\FC$ und die Elemente einer Klasse heißen
    \highl{Objekt}e,
   \item einer Menge $\FC(A,B)$ und die Elemente der Menge heißen
    \highl[Morphismus]{Morphismen} von $A$ nach $B$. Wir schreiben
    $A\xrightarrow{f} B$ oder $f\colon A\rightarrow B$ zu jedem Paar~$(A,B)$
    von Objekten in $\FC$,
   \item einer Abbildung $\FC(B,C)\times\FC(A,B)\rightarrow\FC(A,C)$ mit
    $(g,f)\mapsto g\circ f$. Diese Abbildung heißt \highl{Komposition}. Dabei
    verlangt man:
    \begin{enumerate}
     \item $\FC(A,B)\cap\FC(C,D)=\emptyset$, falls $(A,B)\neq(C,D)$.
     \item $h\circ(g\circ f)=(h\circ g)\circ f$ für alle $A\xrightarrow{f}
      B\xrightarrow{g} C\xrightarrow{h}D$ in $\FC$.
     \item Für alle $A\in\FC$ existiert ein $\id_{A}\in\FC(A,A)$ mit
      $f\circ\id_{A}=f$ und $\id_{A}\circ g=g$ für alle
      $A\rightleftarrows^{f}_{g} B$ in $\FC$.
    \end{enumerate}
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Sind Morphismen und Kompositionen klar, so sagt man auch, $\FC$ ist
    eine Kategorie.
   \item Bekanntlich ist die "`Gesamtheit"' aller Mengen keine Menge. Um
    solche WIdersprüche zu vermeiden, spricht man von "`Klassen"'. Wir werden
    Klassen nicht genau definieren. Aer z.\,B. ist die Gesamtheit aller Mengen
    eine Klasse.
   \item Für $A\in\FC$ ist die \highl{Identität}~$\id_{A}$ eindeutig bestimmt.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Mengen und Abbildungen bilden eine Kategorie~$\kat{Set}$. Für
    $A,B\in\kat{Set}$ ist $\kat{Set}(A,B)=\Abb(A,B)$ die Menge aller
    Abbildungen von $A$ nach $B$.
   \item Gruppen und Gruppenhomomorphismen bilden eine Kategorie~$\kat{Gr}$.
   \item Für jeden Körper~$K$ bilden die $K$"~Vektorräume und $K$"~linearen
    Abbildungen eine Kategorie~$\vorunten{K}\kat{Vec}$.
  \end{enumerate}
\end{bsp}

%def 1.2
\begin{defini}[Teilkategorie]
  Eine Kategorie~$\FD$ heißt \highl{Teilkategorie} einer Kategorie~$\FC$,
  falls gilt:
  \begin{enumerate}
   \item $A\in\FD\Rightarrow A\in\FC$
   \item $A,B\in\FD\Rightarrow\FD(A,B)\subseteq\FC(A,B)$
   \item Die Komposition in $\FD$ ist eine Einschränkung der Komposition in
    $\FC$. Identitäten sind eindeutig bestimmt.
  \end{enumerate}
  Gilt im zweiten Punkt oben die Gleichheit, so heißt $\FD$
  \highl[Teilkategorie!volle]{volle Teilkategorie} von $\FC$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Die endlichen Mengen bilden eine volle Teilkategorie~$\kat{set}$ von
    $\kat{Set}$.
   \item Die endlichen Gruppen bilden eine volle Teilkategorie~$\kat{gr}$ von
    $\kat{Gr}$.
   \item Die abelschen Gruppen bilden eine volle
    Teilkategorie~$\kat{Ab}$ von  $\kat{Gr}$.
   \item Die endlichen abelschen Gruppen bilden eine volle
    Teilkategorie~$\kat{ab}$ von  $\kat{Ab}$.
   \item Mengen und injektive Abbildungen bilden eine nicht volle
    Teilkategorie von $\kat{Set}$.
  \end{enumerate}
\end{bsp}

%def 1.3
\begin{defini}[Funktor]
  Seien $\FC$ und $\FD$ Kategorien. Ein \highl{Funktor} von $\FC$ nach $\FD$
  besteht aus:
  \begin{enumerate}[(1)]
   \item einer "`Abbildung"' $\Phi\colon\FC\rightarrow\FD$ mit $A\mapsto\Phi A$
   \item einer Abbildung$\FC(A,B)\rightarrow\FD(\Phi A,\Phi B)$ mit
    $f\mapsto\Phi f$ zu jedem Paar $(A,B)$ von Objekten in $\FC$.
  \end{enumerate}
  Dabei verlangt man:
  \begin{enumerate}
   \item $\Phi(g\circ f)=\Phi(g)\circ\Phi(g)$ für alle
    $A\xrightarrow{f}B\xrightarrow{g}C$ in $\FC$.
   \item $\Phi(\id_{A})= \id_{\Phi(A)}$ für $A\in\FC$.
  \end{enumerate}
  Wir schreiben: $\Phi\colon\FC\rightarrow\FD$ oder $\FC\xrightarrow{\Phi}\FD$.
\end{defini}

\begin{bsp}\label{bsp:1.3}
  \begin{enumerate}[(a)]
   \item Der \highl{Vergissfunktor} $\kat{Gr}\rightarrow\kat{Set}$, der jeder
    Gruppe die zugrundeliegende Menge zuordnet. Analog hat man
    Vergissfunktoren $\vorunten{K}\kat{Set}\rightarrow\kat{Set}$,
    $\vorunten{K}\kat{Vec}\rightarrow\kat{Ab}$ usw.
   \item Für jede Kategorie~$\FC$ hat man den
    \highl{Identitätsfunktor}~$\Id_{\FC}\colon\FC\rightarrow\FC$ mit
    $\Id_{\FC}A=A$ und $\Id_{\FC}(f)=f$ für alle $A\xrightarrow{f}B$ in $\FC$.
   \item Für jedes Objekt~$X$ in einer Kategorie~$\FC$ der
    Funktor~$\FC(X,?)\colon\FC\rightarrow\kat{Set}$ mit
    $\FC(X,?)(A)\coloneqq\FC(X,A)$ und $\FC(X,?)(f)\coloneqq\FC(X,f)$, wobei
    $\FC(X,f)\colon\FC(X,A)\rightarrow\FC(X,B)$ mit $g\mapsto f\circ g$ für
    alle $A\xrightarrow{f}B$ gilt.\todo{nachrechnen}
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  Ein Funktor~$\FC\xrightarrow{\Phi}\FD$ heißt \highl{treu} oder \highl{voll},
  falls für alle $A,B\in\FC$ die Abbildung $\FC(A,B)\rightarrow\FD(\Phi A,\Phi
  B)$ mit $f\mapsto\Phi f$ infektiv oder surjektiv ist.
\end{bemerk}

%bem 1.4
\begin{bemerk}
  Für Funktoren $\FC\xrightarrow{\Phi}\FD\xrightarrow{\Psi}\FE$ definiert man
  in naheliegender Weise einen Funktor $\Psi\circ\Phi\colon\FC\rightarrow\FE$.
  Für die so definierte \highl{Komposition} von Funktoren gilt:
  \begin{enumerate}
   \item $(\Omega\circ\Psi)\circ\Phi= \Omega\circ(\Psi\circ\Phi)$ für
    Funktoren
    $\FC\xrightarrow{\Phi}\FD\xrightarrow{\Psi}\FE\xrightarrow{\Omega}\FF$.
   \item $\Phi\circ\Id_{\FC}=\Phi=\Id_{\FD}\circ\Phi$ für Funktoren
    $\Phi\colon\FC\rightarrow\FD$.
  \end{enumerate}
\end{bemerk}

%def 1.5
\begin{defini}[Isomorphismus]
  Ein Morphismus $f\colon A\rightarrow B$ in einer Kategorie heißt
  \highl{Isomorphismus} (iso), falls ein $g\in\FC(B,A)$ mit $g\circ f=\id_{A}$
  und $f\circ g=\id_{B}$ existiert
\end{defini}

\begin{bemerk}
  Gegebenenfalls ist $g$ durch $f$ eindeutig bestimmt. Man bezeichnet $g$ als
  \highl{Inverses} von $f$ und schreibt $g=f^{-1}$. Dann ist auch $f^{-1}$ ein
  Isomorphismus in $\FC$ und $(f^{-1})^{-1}=f$.
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Stets ist $\id_{A}$ ein Isomorphismus in $\FC$ und
    $\id_{A}^{-1}=\id_{A}$.
   \item Hat man Isomorphismen $A\xrightarrow{f}B\xrightarrow{g}C$ in $\FC$,
    so ist $g\circ f\colon A\rightarrow C$ ein Isomorphismus in $\FC$ und
    $(g\circ f)^{-1}=f^{-1}\circ g^{-1}$.
   \item Die Isomorphismen in $\kat{Set}$ sind genau die Bijektionen und die
    Isomorphismen in $\kat{Gr}$ sind genau die Gruppenhomomorphismen.
  \end{enumerate}
\end{bsp}

\begin{satz}\label{satz:1.5}
  Für jeden Funktor $\Phi\colon\FC\rightarrow\FD$ und jeden Isomorphismus
  $f\colon A\rightarrow B$ in $\FC$ ist $\Phi f\colon\Phi A\rightarrow\Phi B$
  ein Isomorphismus in $\FD$ mit $(\Phi f)^{-1}=\Phi(f^{-1})$.
  \begin{proof}
    $\Phi(f^{-1})\circ\Phi f= \Phi(f^{-1}\circ f)= \Phi(\id_{A})=
    \id_{\Phi(A)}$ und $\Phi f\circ\Phi(f^{-1})=\dotsb=\id_{\Phi(B)}$.
  \end{proof}
\end{satz}

%def 1.6
\begin{defini}[Isomorphe Objekte]
  Objekte $A$ und $B$ in einer Kategorie $\FC$ heißen
  \highl[Objekte!isomorphe]{isomorph}\index{isomorph}, falls ein Isomorphismus
  $f\in\FC(A,B)$ existiert. Wir schreiben, $A\cong_{\FC}B$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Man zeigt leicht, dass $\cong_{\FC}$ ein Äquivalenzrelation ist.
   \item Aus dem \autoref{satz:1.5} folgt, dass für Funktoren
    $\FC\xrightarrow{\Phi}\FD$ und Objekten $A,B\in\FC$ gilt,
    A$\cong_{\FC}B\Rightarrow\Phi A\cong_{\FD} \Phi B$.
  \end{enumerate}
\end{bemerk}

%def 1.7
\begin{defini}[mono, epi]
  Ein Morphismus $f\colon A\rightarrow B$ in einer Kategorie $\FC$ heißt:
  \begin{enumerate}
   \item \highl[Morphismus!mono]{mono}\index{mono}, falls alle $g,h\colon
    C\rightarrow A$ in $\FC$ mit $f\circ g=g\circ h$ gilt, $g=h$.
   \item \highl[Morphismus!epi]{epi}\index{epi}, falls für alle $g,h\colon
    B\rightarrow C$ in $\FC$ mit $g\circ f=h\circ f$ gilt, $g=h$.
  \end{enumerate}
\end{defini}

\begin{satz}
  Für alle Mengen und Abbildungen $f\colon A\rightarrow B$ gilt, $f$ mono
  (epi) in $\kat{Set}\Leftrightarrow f$ injektiv (surjektiv).
  \begin{proof}
    \begin{enumerate}
     \item
      \begin{itemize}
       \item["`$\Rightarrow$"'] Seien $x,y\in A$ mit $f(x)=f(y)$. Dann sind
	$g\colon\{x\}\rightarrow A$ mit $x\mapsto x$ und
	$h\colon\{x\}\rightarrow A$ mit $x\mapsto y$ Abbildungen mit $f\circ
	g=f\circ h$. Ist $f$ mono, so folgt, $g=h$, d.\,h. $x=y$.
       \item["`$\Leftarrow$"'] Seien $g,h\colon C\rightarrow A$ Abbildungen
	mit $f\circ g=f\circ h$. Für $x\in C$ ist dann $f(g(x))=f(h(x))$. Ist
	$f$ injektiv, so folgt, $g(x)=h(x)$. Also $g=h$.
      \end{itemize}
     \item
      \begin{itemize}
       \item["`$\Rightarrow$"'] Sei $f$ epi und $y=B$. Wir definieren $g\colon
	B\rightarrow\{0,1\}$ durch $g(y)\coloneqq1$ und $g(x)\coloneqq0$
	sonst. Weiterhin definieren wir $h\colon B\rightarrow\{0,1\}$ durch
	$h(x)\coloneqq0$ für alle $x\in B$. Wäre $y\notin\Bld(f)$, so wäre
	$g\circ f=h\circ f$, also $g=h$ \lightning{} Also: $y\in\Bld(f)$.
	Daher ist $f$ surjektiv.
       \item["`$\Leftarrow$"'] Seien $g,h\colon B\rightarrow C$ Abbildungen
	mit $g\circ f=h\circ f$, d.\,h. $g(f(a))= h(f(a))$ für alle $a\in A$.
	Ist $f$ surjektiv, so folgt, $g(b)= h(b)$ für alle $b\in B$, d.\,h.
	$g=h$.
      \end{itemize}
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{bemerk}
  \begin{enumerate}
   \item Der Satz gilt \emph{nicht} in allen Kategorien, deren Objekte Mengen
    sind.
   \item Im Allgemeinen existieren Morphismen, die mono und epi, aber keine
    Isomorphismen sind.
  \end{enumerate}
\end{bemerk}

%satz 1.8
\begin{satz}
  Sei $\FC$ eine Kategorie und $A\xrightarrow{f}B\xrightarrow{g}C$ in $\FC$.
  Dann folgt:
  \begin{enumerate}
   \item $f,g$ mono (epi) $\Rightarrow g\circ f$ mono (epi).
   \item $g\circ f$ mono (epi) $\Rightarrow f$ mono ($g$ epi).
  \end{enumerate}
  \begin{proof}
    Der Beweis erfolgt in der Übung.
  \end{proof}
\end{satz}

%def 1.9
\begin{defini}[Sektion, Refraktion]
  Ein Morphismus $f\colon A\rightarrow B$ in einer Kategorie heißt
  \highl{Sektion} oder \highl{Refraktion}, falls ein $g\in\FC(A,B)$ mit
  $g\circ f=\id_{A}$ oder $f\circ g=\id_{B}$ existiert.
\end{defini}

\begin{satz}
  Sei $\FC$ eine Kategorie und $f\colon A\rightarrow B$ in $\FC$. Dann gilt:
  \begin{enumerate}
   \item $f$ Sektion (Refraktion) $\Rightarrow$ $f$ mono (epi).
   \item $f$ Sektion und Refraktion $\Rightarrow f$ Isomorphismus.
  \end{enumerate}
  \begin{proof}
    Der Beweis erfolgt in der Übung.
  \end{proof}
\end{satz}

%def 1.10
\begin{defini}[Initial-, Finalobjekt]
  Ein Objekt $A$ in einer Kategorie $\FC$ heißt \highl{Initialobjekt} oder
  \highl{Finalobjekt}, falls $\abs{\FC(A,B)}=1$ oder $\abs{\FC(B,A)}=1$ für
  alle $B\in\FC$. Ist $A\in\FC$ Initial- und Finalobjekt, so heißt $A$
  \highl{Nullobjekt} in $\FC$.
\end{defini}

\begin{bsp}
  In $\kat{Set}$ ist $\emptyset$ ein Initialobjekt und jede einelementige
  Menge ist ein Finalobjekt. Jedoch enthält $\kat{Set}$ kein Nullobjekt.
\end{bsp}

\begin{satz}
  Sind $A$ und $A'$ Initialobjekte oder Finalobjekte einer Kategorie $\FC$, so
  ist $A\cong A'$.
  \begin{proof}
    Sei $\FC(A,A')=\{f\}$ und $\FC(A,A')=\{g\}$\todo{Stimmt das so?}. Wegen
    $\FC(A,A)=\{\id_{A}\}$ ist $g\circ f=\id_{A}$. Analog ist $f\circ
    g=\id_{A}$, d.\,h. $f$ ist ein Isomorphismus. Also $A\cong A'$.
  \end{proof}
\end{satz}

\chapter{Natürliche Transformationen und Äquivalenzen}

%def 2.1
\begin{defini}[Natürliche Transformation]
  Seien $\Phi, \Psi\colon\FC\rightarrow\FD$ Funktoren. Eine
  \highl[Transformation!natürliche]{natürliche Transformation} von $\Phi$ nach
  $\Psi$ ist eine "`Familie"' $\tau=(\tau_{A})_{A\in\FC}$ von Elementen
  $\tau_{A}\in\FD(\Phi A, \Psi A)$ mit $(\Psi_{f})\circ\tau_{A}=
  \tau_{B}\circ(\Phi f)$ für $A,B\in\FC$ und $f\in\FC(A,B)$. Wir schreiben,
  $\tau\colon\Phi\Rightarrow\Psi$.
  \begin{gather*}
    \xymatrix{
      \Phi A\ar[r]^{\tau_{A}}\ar[d]^{\Phi f} & \Psi A\ar[d]^{\Psi f}\\
      \Phi B\ar[r]^{\tau_{B}} & \Psi B
      }
  \end{gather*}
\end{defini}

\begin{bsp}\label{bsp:2.1}
  Sei $K$ ein Körper und
  $\Phi\colon\vorunten{K}\kat{Vec}\rightarrow\vorunten{K}\kat{Vec}$ mit
  $V\mapsto V^{**}$ der Funktor, der jedem $K$-Vektorraum $V$ seinen
  Bidualraum $V^{**}=\Hom_{K}(\Hom_{K}(V,K), K)$ zuordnet. Ferner sei
  $\epsilon_{V}\colon V\rightarrow V^{**}$ kanonisch für $v\in V$ ist also
  $\epsilon_{V}(v)\colon\Hom_{K}(V,K)\rightarrow K$ mit
  $\lambda\mapsto\lambda(v)$. Dann ist
  $\epsilon\coloneqq(\epsilon_{V})_{V\in\vorunten{K}\kat{Vec}}\colon\Id_{\vorunten{K}\kat{Vec}}\Rightarrow\Phi$
  eine natürliche Transformation:
  \begin{gather*}
    \xymatrix{
      V \ar[r]^{\epsilon_{V}}\ar[d]^{f} & V^{**}\ar[d]^{f^{**}}\\
      W \ar[r]^{\epsilon_{W}} & W^{**}
      }
  \end{gather*}
  Denn für $V,W\in\vorunten{K}\kat{Vec}$ und $f\in\Hom_{K}(V,W)$ ist
  $\epsilon_{W}\circ f=f^{**}\circ\epsilon_{V}$\todo{nachrechnen}.
\end{bsp}

\begin{bemerk}
  \begin{enumerate}
   \item Für Funktoren $\Phi, \Psi,\Omega\colon\FC\rightarrow\FD$ und
    natürliche Transformationen $\sigma\colon\Phi\Rightarrow\Psi$,
    $\tau\colon\Psi\Rightarrow\Omega$ ist auch die \highl{Komposition}
    $\tau\circ\sigma\coloneqq
    (\tau_{A}\circ\sigma_{A})_{A\in\FC}\colon\Phi\Rightarrow\Omega$ eine
    natürliche Transformation:\todo{Erste Matrix korrekt setzen}
    \begin{gather*}
      \xymatrix{
	\FC \ar@/^/[r]^{\Phi} \ar[r]^{\Psi} \ar@/_/[r]^{\Omega} & \FD
	}\\
      \xymatrix{
	\Phi A\ar[r]^{\sigma_{A}}\ar[d]^{\Phi f} & \Psi A\ar[r]^{\tau_{A}}
	\ar[d]^{\Psi f} & \Omega A\ar[d]^{\Omega f}\\
	\Phi B\ar[r]^{\sigma_{B}} & \Psi B\ar[r]^{\tau_{B}} & \Omega B
	}
    \end{gather*}
    Offenbar ist die Komposition von natürlichen Transformationen assoziativ.
   \item Für Funktoren $\Gamma\colon\FB\rightarrow\FC$,
    $\Phi,\Psi\colon\FC\rightarrow\FD$, $\Delta\colon\FD\rightarrow\FE$ und
    jede natürliche Transformation $\tau\colon\Phi\Rightarrow\Psi$ sind auch
    $\tau\circ\Gamma\coloneqq (\tau_{\Gamma_{B}})_{B\in\FB}\colon\Phi\circ
    \Gamma\Rightarrow\Psi\circ\Gamma$, $\Delta\circ\tau\coloneqq
    (\Delta\tau_{C})_{C\in\FC}\colon\Delta\circ\Phi\Rightarrow
    \Delta\circ\Psi$ natürliche Transformationen:
    \begin{gather*}
      \xymatrix{
	\Phi\Gamma A \ar[r]^{\tau_{\Gamma_{A}}} \ar[d]^{\Phi\Gamma f} &
	\Psi\Gamma A \ar[d]^{\Psi\Gamma f}\\
	\Phi\Gamma B \ar[r]_{\tau_{\Gamma_{B}}} & \Psi\Gamma B
	}
    \end{gather*}
  \end{enumerate}
\end{bemerk}

%def 2.2
\begin{defini}[Natürliche Äquivalenz]
  Eine natürliche Transformation $\tau\colon\Phi\Rightarrow\Psi$ zwischen
  Funktoren $\Phi, \Psi\colon\FC\rightarrow\FD$ heißt
  \highl[Äquivalenz!natürliche]{natürliche Äquivalenz}, falls
  $\sigma_{A}\colon\Phi A\rightarrow\Psi A$ für $A\in\FC$ ein Isomorphismus in
  $\FD$ ist.
\end{defini}

\begin{bemerk}\label{bem:2.2}
  Gegebenenfalls ist
  $\sigma^{-1}\coloneqq(\sigma_{A}^{-1})_{A\in\FC}\colon\Psi\Rightarrow\Phi$
  auch eine natürliche Äquivalenz und $(\sigma^{-1})^{-1}=\sigma$. Für jeden
  weiteren Funktor $\Omega\colon\FC\rightarrow\FD$ und jede weitere natürliche
  Äquivalenz $\tau\colon\Psi\Rightarrow\Omega$ ist auch $\tau\circ\sigma\colon
  \Phi\Rightarrow\Omega$ eine natürliche Äquivalenz und
  $(\phi\circ\sigma)^{-1}= \sigma^{-1}\circ\tau^{-1}$.
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item
    $\id_{\Phi}\coloneqq(\id_{\Phi_{A}})_{A\in\FC}\colon\Phi\Rightarrow\Phi$
    ist eine natürliche Äquivalenz.
   \item Seien $K$ ein Körper und
    $\Phi\colon\vorunten{K}\kat{vec}\rightarrow\vorunten{K}\kat{vec}$ mit
    $V\mapsto V^{**}$ und
    $\epsilon\colon\Id\vorunten{K}\kat{vec}\Rightarrow\Phi$ wie in
    \autoref{bsp:2.1} (aber mit $\vorunten{K}\kat{vec}$ statt
    $\vorunten{K}\kat{Vec}$). Dann ist $\epsilon$ eine natürliche Äquivalenz.
  \end{enumerate}
\end{bsp}

%def 2.3
\begin{defini}[Natürlich äquivalente Funktoren]
  Funktoren $\Phi, \Phi'\colon\FC\rightarrow\FD$ heißen \highl{natürlich
  äquivalent}, falls eine natürliche Äquivalenz
  $\tau\colon\Phi\Rightarrow\Phi'$ existiert. Dies stellt eine höhere Stufe
  des Isomorphiebegriffs dar. Wir schreiben $\Phi\sim\Phi'$.
\end{defini}

\begin{bemerk}
  Nach der \autoref{bem:2.2} ist $\sim$ ein Äquivalenzrelation.
\end{bemerk}

\begin{satz}
  Für Funktoren $\Phi, \Phi'\colon\FC\rightarrow\FD$ und $\Psi,
  \Psi'\colon\FD\rightarrow\FE$ mit $\Phi\sim\Phi'$ und $\Psi\sim\Psi'$ gilt,
  $\Psi\circ\Phi\sim\Psi'\circ\Phi'$.
  \begin{proof}
    Ist $\tau\colon\Phi\Rightarrow\Phi'$ eine natürliche Äquivalenz, so auch
    $\Psi\circ\Phi= (\Psi\tau_{A})_{A\in\FC}\colon\Psi\circ\Phi\rightarrow
    \Psi\circ\Phi'$. Vergleiche dazu \autoref{bem:2.2}\todo{oder bem 2.1} und
    \autoref{satz:1.5}. Analog ist $\Psi\circ\Phi'\sim\Psi'\sim\Phi'$. Daraus
    folgt die Behauptung.
  \end{proof}
\end{satz}

% Vorlesung vom 11.4.2001

%satz 2.4
\begin{satz}
  Seien $\FC\rightleftarrows\FD$ mit $\Psi\circ\Phi\sim\Id_{\FC}$
  und $\Psi\circ\Phi\sim\Id_{\FD}$ Funktoren\footnote{Der Fall kommt recht
  häufig vor.}. Für $A,B\in\FC$ ist dann
  $\Phi_{AB}\colon\FC(A,B)\rightarrow\FD(\Phi A, \Phi B)$ mit $f\mapsto\Phi f$
  bijektiv. Für $f\in\FC(A,B)$ gilt dabei, $f$ mono (epi) $\Leftrightarrow\Phi
  f$ mono (epi).
  \begin{proof}
    Sei $\tau\colon\Psi\circ\Phi\rightarrow\Id_{\FC}$ eine natürliche
    Äquivalenz und $f,g\in\FC(A,B)$ mit $\Phi f=\Phi g$, also auch $\Psi\Phi
    f= \Psi\Phi g$. Dann:
    \begin{gather*}
      f= \tau_{B}\circ\Psi\Phi f\circ\tau_{A}^{-1}= \tau_{B}\circ\Psi\Phi
	 g\circ\tau_{A}^{-1}=g\\
      \xymatrix{
	\Psi\Phi A \ar[r]^{\tau_{A}} \ar[d]^{\Psi\Phi g}_{\Psi\Phi f} & A
	\ar[d]^{g}_{f}\\
	\Psi\Phi B \ar[r]^{\tau_{B}} & B
	}
    \end{gather*}
    Dies zeigt, $\Phi_{AB}$ is injektiv. Analog ist $\Psi_{CD}$ für alle
    $C,D\in\FD$ injektiv.

    Zum Beweis der Surjektivität von $\Phi_{AB}$ sei $U\in\FD(\Phi A,\Phi B)$.
    Dann ist $f\coloneqq\tau_{B}\circ\Psi U\circ\tau_{A}^{-1}\in\FC(A,B)$. Nun
    betrachten wir die folgenden kommutativen Diagramme\todo{muss das im ersten
    Diagramm nicht $\tau_{B}$ heißen?}:
    \begin{gather*}
      \xymatrix{
	\Psi\Phi A \ar[r]^{\tau_{A}} \ar[d]^{\Psi U} & A \ar[d]^{f}\\
	\Psi\Phi B \ar[r]^{\tau_{A}} &B
	}\qquad
	 \xymatrix{
	   \Psi\Phi A \ar[r]^{\tau_{A}} \ar[d]^{\Psi\Phi f} & A \ar[d]^{f}\\
	   \Psi\Phi B \ar[r]^{\tau_{B}} & B
	   }
    \end{gather*}
    Man erhält, $\Psi U= \tau_{B}^{-1}\circ f\circ\tau_{A}= \Psi\Phi f$. Da
    $\Psi_{\Phi A,\Phi B}$ injektiv ist, folgt, $U=\Phi f$. Damit ist die
    Surjektivität von $\Phi_{AB}$ bewiesen.

    Sei nun $f\in\FC(A,B)$ mono, $D\in\FD$ und $g,h\in\FD(D, \Phi A)$ mit
    $(\Phi f)\circ g= (\Phi f)\circ h$ (zeigen, das man kürzen kann). Die
    Anwendung des Funktors $\Psi$ liefert dann: $(\Psi\Phi f)\circ\Psi g=
    (\tau_{B}^{-1}\circ f\circ\tau_{A})$ und $(\Psi\Phi f)\circ\Psi h=
    (\tau_{B}^{-1}\circ f\circ\tau_{A})$. Daraus folgt,
    $f\circ\tau_{A}\circ\Psi g=f\circ\tau_{A}\circ\Psi h$, d.\,h.
    $\tau_{A}\circ\Psi g= \tau_{A}\circ\Psi h$, da $f$ mono, und damit $\Psi
    g= \Psi h$, da $\tau_{A}$ Isomorphismus. Weil $\Psi_{D,\Phi A}$ injektiv
    ist, folgt, $g=h$.

    Sei umgekehrt $\Phi f$ mono. Dann ist analog $\Psi\Phi f$ mono. Folglich
    ist $f= \tau_{B}\circ\Psi\Phi f\circ\tau_{A}^{-1}$ wieder mono, da
    $\tau_{A}^{-1}$ und $\tau_{B}$ mono.

    Der Beweis zu epi geht analog.
  \end{proof}
\end{satz}

%def 2.5
\begin{defini}[Äquivalente Kategorien]
  Zwei Kategorien $\FC, \FD$ heißen
  \highl[Kategorien!äquivalente]{äquivalent}, falls Funktoren
  $\FC\rightleftarrows_{\Psi}^{\Phi}\FD$ existieren mit $\Psi\circ\Phi\sim
  \Id_{\FC}$ und $\Phi\circ\Psi\sim\Id_{\FD}$.

  Wir schreiben, $\FC\approx\FD$.
\end{defini}

\begin{bemerk}
  Man zeigt leicht, dass die Äquivalenz $\approx$ eine Äquivalenzrelation ist.
\end{bemerk}

%def 2.6
\begin{defini}[Rechts- und linksadjungierte Funktoren]
  Seien $\FC\rightleftarrows_{\Psi}^{\Phi}\FD$ Funktoren. Man nennt $\Phi$
  \highl{linksadjungiert} zu $\Psi$ und $\Psi$ \highl{rechtsadjungiert} zu
  $\Phi$, falls es Bijektionen $\nu_{AB}\colon\FD(\Phi A,B)\rightarrow
  \FC(A,\Psi B)$ für $A\in\FC$ und $B\in\FD$ existieren derart, dass für alle
  Morphismen $f\colon A\rightarrow A'$ in $\FC$ und $g\colon B\rightarrow B'$
  folgende Diagramme kommutieren:
  \begin{gather*}
    \xymatrix{
      \FD(\Phi A',B) \ar[r]^{\nu_{A'B}} \ar[d]^{\FD(\Phi f,B)} & \FC(A',\Psi
       B) \ar[d]^{\FC(f,\Psi B)}\\
      \FD(\Phi A,B) \ar[r]^{\nu_{AB}} & \FC(A,\Psi B)
      }\qquad
          \xymatrix{
      \FD(\Phi A,B) \ar[r]^{\nu_{AB}} \ar[d]^{\FD(\Phi A,g)} & \FC(A,\Psi
       B) \ar[d]^{\FC(A,\Psi g)}\\
      \FD(\Phi A,B') \ar[r]^{\nu_{A'B}} & \FC(A,\Psi B')
      }
  \end{gather*}
\end{defini}

\begin{bemerk}
  Das bedeutet, dass für $s\in\FD(\Phi A',B)$ und $t\in\FD(\Phi A,B)$ gilt:
  $\nu_{AB}(s\circ\Phi f)=\nu_{A'B}(s)\circ f$ und $\nu_{AB'}(g\circ t)= \Psi
  g\circ\nu_{AB}(t)$.
\end{bemerk}

\begin{bsp}
  Seien $\FC\coloneqq \FD\coloneqq\textset$ und $S\in\textset$. Sei
  $\Phi\colon\FC\rightarrow\FD$ der Funktor mit $\Phi A\coloneqq A\times S$
  für $A\in\textset$ und $\Phi f\coloneqq f\times\id_{S}$ für jeden Morphismus
  $f$ in $\textset$. Außerdem sei
  $\Psi\coloneqq\Abb(S,?)\colon\FD\rightarrow\FC$ wie in \autoref{bsp:1.3}. Es
  ist zu zeigen, dass $\Phi$ linksadjungiert zu
  $\Psi$ ist. Dann brauhen wir für $A,B\in\textset$ eine Bijektion
  $\nu_{AB}\colon\Abb(A\times S,B)\rightarrow \Abb(A,\Abb(S,B))$ mit
  $f\mapsto\nu_{AB}(f)$.

  Für $a\in A$ sei also $(\nu_{AB}(f))(a)\colon S\rightarrow B$ mit $s\mapsto
  f(a,s)$. Man rechnet nach, dass alles funktioniert.
\end{bsp}

\chapter{Ringe, Teilringe und Ideale}

%3.1 def
\begin{defini}[Ring]
  Ein \highl{Ring} $R$ ist ein Tripel $R=(R,+,\cdot)$ mit
  \begin{enumerate}
   \item $(R,+)$ ist eine abelsche Gruppe. mit dem neutralen Element~$0$, das
    \highl{Nullelement}.
   \item $(R,\cdot)$ ist ein \highl{Monoid}, d.\,h. assoziativ mit $1$, das
    \highl{Einselement}.
   \item Die Distributivgesetze gelten: $a(b+c)=ab+ac$ und $(a+b)c=ac+bc$ für
    alle $a,b,c\in R$.
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{itemize}
   \item Das Null- und Einselement sind eindeutig.
   \item Setze $a-b\coloneqq a+(-b)$.
   \item Manche Bücher verlangen die Existenz von $1$ nicht.
   \item Wie üblich: $0x=0=x0$ und $(-x)y=-(xy)=x(-y)$, $(-x)(-y)=xy$.
   \item Ist $ab=ba$ für alle $a,b\in R$, dann heißt der Ring
    \highl[Ring!kommutativer]{kommutativ}\index{kommutativ}.
  \end{itemize}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item $\Z,\Q, \R, \C, \{0\}$ (Letzteres wird als \highl{Nullring}
    bezeichnet).
   \item Sei $M$ eine Menge. Dann ergibt sich der \highl{Potenzmengenring}
    $\FP(M)=\Set{A | A\subseteq M}$ durch $A+B\coloneqq(A\setminus
    B)\cup(B\setminus A)$ und $A\cdot B\coloneqq A\cap B$.
   \item Sei $(R,+,\cdot)$. Dann erhält man einen
    \highl[Ring!entgegengesetzter]{entgegengesetzten Ring} $(R,+,\circ)$ mit
    $a\circ b\coloneqq ba$ mit $a,b\in R$. Man schreibt $R^{\circ}$ für
    "`opposite"'.
   \item Sei $R$ ein Ring und $n\in\N$. Dann ist $R^{n\times n}$ ein voller
    \highl{Matrixring} des Grades~$n$ über $R$. Das Nullelement ist die
    \highl{Nullmatrix} $0_{n}$ und das Einselement $1_{n}$.
   \item Sei $(R_{i})_{i\in I}$ eine nichtleere Familie von Ringen. Dann
    erhält mn das \highl[Produkt!direktes]{direkte Produkt} $\bigtimes_{i\in
    I} R_{i}\coloneqq\prod_{i\in I} R_{i}\coloneqq\Set{(r_{i})_{i\in I} |
    r_{i}\in R_{i}, i\in I}$ mit $(r_{i})_{i\in I}+(s_{i})_{i\in I}\coloneqq
    (r_{i}+s_{i})_{i\in I}$. Speziell: $R_{i}=R$ für alle $i$ ergibt
    $\bigtimes_{i\in I} R_{i}= \Abb(I,R)= \Set{f\colon I\rightarrow R | f
    \text{ Abbildung}}$ mit $(f+g)(x)\coloneqq f(x)+g(x)$ für $x\in I$.

    Speziell: $I=\{1,\dotsc,n\}\colon\bigtimes_{i\in I} R_{i}=
    R_{1}\times\dotso \times R_{n}= \Set{(r_{1},\dotsc, r_{n} | r_{1}\in
    R_{1},\dotsc, r_{n}\in R_{n}})$.)
   \item Sei $R$ ein Ring und $M$ ein Monoid. Dann ergibt sich der
    \highl{Monoidring} von $M$ über $R$ durch $RM\coloneqq\Set{(r_{m})_{m\in
    M} | r_{m}\in R, m\in M, r_{m}=0 \text{ für fast alle } m\in M}$. Die
    Addition ergibt sich durch $(r_{m})_{m\in M}+ (s_{m})_{m\in
    M}\coloneqq(r_{m} +s_{m})$ und die Multiplikation durch $(r_{m})_{m\in
    M}\cdot (s_{m})_{m\in M}\coloneqq(\sum_{p,q\in M, pq=m} r_{p}s_{q})_{m\in
    M}$. Die Summe ist \emph{endlich}.

    Für $m\in M$ sei $\hat{m}\coloneqq(\delta_{mn})_{m\in M}$
    (\highl{\textsc{Kronecker}"~Delta}). Dann ist $\hat{1_{M}}$ das
    Einselement von $RM$ und man hat $\hat{m}\cdot\hat{n}=\hat{mn}$ für
    $m,n\in M$.

    Setze $r(r_{m})_{m\in M}\coloneqq (rr_{m})_{m\in M}$ für $r\in R,
    (r_{m})_{m\in M}\in RM$. Dann ist $(r_{m})_{m\in M}= \sum_{m\in M} r_{m}
    \hat{m}$. Identifiziere jeweils $m$ mit $\hat{m}$. Dann ist $(r_{m})_{m\in
    M}= \sum_{m\in M} r_{m} m$. Dabei:
    \begin{itemize}
     \item $\sum_{m\in M} r_{m}m= \sum_{m\in M}s_{m}m\Leftrightarrow
      r_{m}=s_{m}$ für alle $m\in M$.
     \item $\sum_{m\in M} r_{m} m+\sum_{m\in M}s_{m}m= \sum_{m\in M}
      (r_{m}+s_{m})m$
     \item $(\sum_{m\in M} r_{m}m)(\sum_{m\in M} s_{m}m)= \sum_{m\in
      M}(\sum_{p,q\in M, pq=m} (r_{p}s_{q}))m$.
    \end{itemize}
    Speziell: $M$ Gruppe. Dann ist $RM$ ein \highl{Gruppenring}.
    Speziell: $R[X]$ \highl{Polynomring} in einer oder mehreren Variablen.
  \end{enumerate}
\end{bsp}

%3.2 def
\begin{defini}[Invertierbar, Invers, Einheit]
  Sei $R$ ein Ring und $a\in R$. Das Element $a$ heißt genau dann
  \highl{rechtsinvertierbar}, wenn ein $b\in R$ existiert mit $ab=1$. Das $b$b
  heißt dann \highl{rechtsinvers} zu $a$. Analog definiert man
  \highl{linksinvertierbar} und \highl{linksinvers}. Das Element $a$ heißt
  genau dann \highl{invertierbar} oder \highl{Einheit}, wenn es rechts- und
  linksinvertierbar ist.
\end{defini}

\begin{bemerk}
  $U(R)\coloneqq R^{\times}\times\Set{a\in R | a \text{ invertierbar}}$ ist
  eine Gruppe bezüglich der Multiplikation. Sie heißt die
  \highl{Einheitengruppe}. Für $U(R)=R\setminus\{0\}$ heißt $R$
  \highl{Schiefkörper}. Wenn $R$ ein kommutativer Schiefkörper, so ist $R$ ein
  Körper.
\end{bemerk}

\begin{bsp}
  Sei $R$ ein Ring und $n\in\N$. Dann ist $\GL(n,R)\coloneqq U(R^{n\times n})$
  der Ring der invertierbaren Matizen und heißt \highl[Gruppe!allgemeine
  lineare]{allgemeine lineare Gruppe} des Grades~$n$ über $R$ (general linear
  group).
\end{bsp}

%3.3 def
\begin{defini}[Nullteiler]
  Sei $R$ ein Ring und $a\in R$. Dann heißt $a$ \highl{Linksnullteiler}, wenn
  ein $b\in R\setminus\{0\}$ mit $ab=0$ existiert. Analog definiert man
  \highl{Rechtsnullteiler}. Ein Element $a$ heißt \highl{Nullteiler}, wenn es
  Links- oder Rechtsnullteiler ist.
\end{defini}

\begin{bsp}
  \begin{enumerate}
   \item
    \begin{gather*}
      \begin{pmatrix}
	1 & 0\\
	0 & 0
      \end{pmatrix}
	 \begin{pmatrix}
	   0 & 0 \\
	   0 & 1
	 \end{pmatrix}=
	 \begin{pmatrix}
	   0 & 0\\
	   0 & 0
	 \end{pmatrix}
    \end{gather*}
    in $\Q^{2\times2}$.
   \item $R\neq\{0\}\Rightarrow0$ Nullteiler in $R$.
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  Ein Ring~$R\neq\{0\}$ heißt \highl{nullteilerfrei}, wenn $0$ der einzige
  Nullteiler in $R$ ist. Schiefkörper und $\Z$ sind nullteilerfrei.
  Nullteilerfreie kommutative Ringe heißen \highl{Integritätsbereich}.
  Beispiele sind Körper und $\Z$.
\end{bemerk}

%3.4 def
\begin{defini}[Idempotentes und nilpotentes Element]
  Sei $R$ ein Ring und $a\in R$. Das Element $a$ heißt \highl{idempotent},
  wenn $a^{2}=a$. Das Element $a$ heißt \highl{nilpotent}, wenn ein $n\in \N$
  mit $a^{n}=0$ existiert.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Wenn $a$ idempotent, dann ist auch $1-a$ idempotent:
    $(1-a)^{2}=1-2a+a^{2}=1-2a+a=1-a$.
   \item Wenn $a$ nilpotent, dann $1-a\in U(R)$. Denn aus $a^{n}=0$ folgt,
    $(1-a)(1+a+a^{2}+\dotsb+ a^{n-1})=1-a^{n}=1$ und $(1+a+a^{2}+\dotsb+
    a^{n-1})(1-a)=1$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  $0\mathord{,}1$ sind idempotent und $0$ ist stets nilpotent.
\end{bsp}

%def 3.5
\begin{defini}[Teilring]
  Sei $R$ ein Ring. Dann ist $S\subseteq R$ genau dann ein \highl{Teilring},
  wenn $S$ ein Ring mit den entsprechend eingescränkten Verknüpfungen ist.
\end{defini}

\begin{bemerk}
  Dabei ist zugelassen, dass $1_{R}\neq1_{S}$. In der Literatur wird das nicht
  ganz einheitlich gehandhabt. Im Fall $1_{R}=1_{S}$ hat man einen
  \highl[Teilring!unitärer]{unitären Teilring}. Also $S\subseteq R$ ist ein
  unitärer Teilring:
  \begin{enumerate}
   \item $0\mathord{,}1_{R}\in S$
   \item $a,b\in S\Rightarrow a+b\in S\wedge a\cdot b\in S$
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item $\Z\subseteq\Q\subseteq\C$ sind unitäre Teilringe.
   \item Sei $R$ ein Ring. Dann ist $Z(R)\coloneqq\Set{z\in R | za=az, \forall
    a\in R}$ das \highl{Zentrum} von $R$, also ein kommutativer, unitärer
    Teilring.
   \item Der Ring $\Set{
    \begin{pmatrix}
      a & 0\\
      0& 0
    \end{pmatrix} | a\in\Q}\subseteq\Q^{2\times2}$ ist \emph{kein} unitärer
    Teilring. Denn das Einselement ist $
    \begin{pmatrix}
      1& 0\\
      0& 0
    \end{pmatrix}\neq
    \begin{pmatrix}
      1& 0\\
      0& 1
    \end{pmatrix}$.
   \item Der Ring $\R\times\{0\}\subseteq\R\times\R$ ist \emph{kein} unitärer
    Teilring.
   \item Der Ring der \highl{Quaternionenschiefkörper} $\HH\coloneqq\Set{
    \begin{pmatrix}
      a& b\\
      -\overline{b}& \overline{a}
    \end{pmatrix} | a,b\in\C}\subseteq\C^{2\times2}$ ist ein unitärer
    Teilring. Aus $a,b\neq0$ folgt, $
    \begin{pmatrix}
      a& b\\
      -\overline{b}& \overline{a}
    \end{pmatrix}^{-1}= \frac{1}{a\overline{a}+b\overline{b}}
    \begin{pmatrix}
      \overline{a}& -b\\
      \overline{b}& a
    \end{pmatrix}\in\HH$. Es ist also ein Schiefkörper.
  \end{enumerate}
\end{bsp}

%def 3.6
\begin{defini}[Ideal]
  Sei $R$ ein Ring und $I\subseteq R$. Dann heißt $I$  \highl{Ideal} in $R$,
  wenn gilt:
  \begin{enumerate}
   \item $(I,+)$ ist eine Untergruppe von $(R,+)$.
   \item Für $r\in R$ und $x\in I$ folgt, dass $r\cdot x$ und $x\cdot r$ in
    $I$ liegen.
  \end{enumerate}
  Wir schreiben $I\trianglelefteq R$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Für einen beliebigen Ring $R$ sind $0$ und $R$ Ideale. Ein Ring $R$
    heißt \highl[Ideal!einfaches]{einfach}\index{einfach}, wenn $r\neq0$ und
    $0$ sowie $R$ die einzigen Ideale sind.
   \item $I\cap U(R)\neq\emptyset\Rightarrow I=R$. Denn für $u\in I\cap U(R)$
    folgt, $r=ru^{-1}u\in I$ für $r\in R$. Wenn $R$ ein Schiefkörper ist, ist
    insbesondere $R$ auch ein einfacher Ring. Die Umkehrung gilt nicht.
   \item Sei $(I_{j})_{j\in J}$ eine nichtleere Familie von Idealen
    $I_{S}\trianglelefteq R$. Dann ist $\bigcap_{j\in J} I_{j}\trianglelefteq
    R$. Insbesondere: $A\subseteq R\Rightarrow(A)= \bigcap_{I\trianglelefteq
    R, A\subseteq R} I\trianglelefteq R$ (das von $A$ erzeugte Ideal). Es
    gilt, $(A)= \Set{\sum_{i=1}^{k} r_{i}a_{i}s_{i} | a_{i}\in A, r_{i}\in R,
    s_{i}\in R, k\in\N_{0}}$. Wir schreiben, $(a_{1},\dotsc, a_{n})=
    (\{a_{1},\dotsc, a_{n}\})$ für $a_{1},\dotsc, a_{n}\in R$.
   \item $I\trianglelefteq\Z\Rightarrow I=k\Z$ für genau eine Zahl
    $k\in\N_{0}$. Das entspricht $(k)$.
   \item Sei $R$ ein Ring und $I,J\trianglelefteq R$. Dann heißt
    $I+J\coloneqq\Set{x+y | x\in I, y\in J}\trianglelefteq R$ die
    \highl{Summe}.
   \item Es ist $IJ\coloneqq\Set{\sum_{i=1}^{k} x_{i}y_{i} | x_{i}\in I,
    y_{i}\in J, k\in\N_{0}}$ das \highl{Produkt}.
  \end{enumerate}
\end{bsp}

\begin{bemerk}[Rechenregeln]
  \begin{enumerate}
   \item $I+J= (I\cup J)=J+I$
   \item $IJ=(\Set{xy | x\in I, y\in J})\subseteq I\cap J$. Die Gleichheit
    gilt im Allgemeinen nicht.
   \item $(IJ)K=I(JK)$
   \item $I(J+K)= IJ+IK$, $(I+J)K= IK+JK$
  \end{enumerate}
\end{bemerk}

\begin{bemerk}
  Sei $R$ ein Ring, $I$ ein Ideal in $R$ und  $a\in R$. Dann ist 
  $a+I\coloneqq\Set{a+x | x\in I}$ die \highl{Restklasse} von $a$ modulo~$I$.
  Dabei $a+I=b+I\Leftrightarrow a-b\in I\Leftrightarrow\colon a\equiv
  b\pmod{I}$. Man sagt, $a$ ist \highl{kongruent}\index{Kongruenz} zu $b$
  modulo~$I$. Dann ist $R/I\coloneqq\Set{a+I | a\in R}$ ein Ring mit
  $(a+I)\pm(b+I)=(a\pm b)+I$ und $(a+I)(b+I)=(ab)+I$. Das Nullelement ist
  $0+I=I$ und das Einselement ist $1+I$. Dieser Ring heißt
  \highl{Restklassenring} modulo~$I$.
\end{bemerk}

%def 3.7
\begin{defini}[Maximales Ideal]
  Sei $R$ ein Ring, $M\trianglelefteq R$ und $M\neq R$ (Somit ist
  $R\neq\{0\}$). Dann ist $M$ genau dann ein \highl[Ideal!maximales]{maximales
  Ideal}, wenn kein $I\trianglelefteq R$ mit $M\subsetneq I\subsetneq R$
  existiert.
\end{defini}

\begin{bsp}
  Für $k\in\N_{0}$ gilt: maximales Ideal genau dann, wenn $k\in\PP$.
\end{bsp}

%def 3.8
\begin{defini}[Primideal]
  Sei $R$ ein Ring, $P\trianglelefteq R$ und $P\neq R$. Dann ist $P$ genau
  dann ein \highl{Primideal} in $R$, wenn für alle $I,J\trianglelefteq R$ mit
  $IJ\subseteq P$ folgt, $I\subseteq P$ oder $J\subseteq P$.
\end{defini}

\begin{bemerk}
  Ein Ring heißt \highl[Ring!primer]{prim}\index{prim}, falls $0$ ein
  Primideal in $R$ ist, d.\,h. für alle $I,J\trianglelefteq R$ mit $IJ=0$ ist
  $I=0$ oder $J=0$. Das ist eine Art Nullteilerfreiheit für Ideale.
\end{bemerk}

\begin{satz}\label{satz:3.8}
  Sei $R$ ein Ring und $\emptyset\neq X\subseteq R$ multiplikativ
  abgeschlossen, d.\,h. $x,y\in X\Rightarrow xy\in X$. Dann ist jedes Ideal
  $P\trianglelefteq R$, welches maximal bezüglich $P\cap X\neq\emptyset$ ist,
  ein Primideal in $R$. Insbesondere ist jedes maximale Ideal ein Primideal.
  Daher ist jeder einfache Ring prim.
  \begin{proof}
    Seien $I,J\trianglelefteq R$ mit $I\nsubseteq P$ und $J\nsubseteq P$. Es
    ist zu zeigen, dass $IJ\nsubseteq P$. Wegen $I'\coloneqq I+P\supsetneq P$
    existiert wegen der Maximalität ein $x\in I'\cap X$. Wegen $J'\coloneqq
    J+P \supsetneq P$ existiert analog ein $y\in J'\cap X$. Dann $xy\in
    I'J'\cap X$, also $xy\notin P$ wegen $P\cap X=\emptyset$. Also
    $P\supsetneq I'J' =(I+P)(J+P)= IJ+IP+PJ+p^{2}\subseteq IJ+P$, d.\,h.
    $IJ\nsubseteq P$. Damit ist die erste Aussage bewiesen. Für die zweite
    Aussage setzt man $X\coloneqq\{1\}$ und die dritte Aussage ist klar.
  \end{proof}
\end{satz}

%satz 3.9
\begin{satz}
  Sei $R$ ein Ring, $\emptyset\notin X\subseteq R$ multiplikativ abgeschlossen
  und $0\notin X$. Dann existiert stets ein Ideal $P\trianglelefteq R$, das
  maximal bezüglich $P\cap X=\emptyset$ ist.
  \begin{proof}
    Wir definieren $\FA\coloneqq\Set{I\trianglelefteq R | I\cap
    X=\emptyset}\neq\emptyset$ wegen $\{0\}\in\FA$. Dann  ist $\FA$ durch
    $\subseteq$ geordnet. Jede nichtleere totalgeordnete Teilmenge
    $\CL\subseteq\FA$ ist $S\coloneqq\bigcup_{I\in\CL} I$ eine obere Schranke
    von $\CL$ in $\FA$. Nach \textsc{Zorn}s Lemma  enthält $\FA$ ein maximales
    Element.
  \end{proof}
\end{satz}

\begin{bemerk}\label{bem:3.9}
  \begin{enumerate}
   \item Nach dem \autoref{satz:3.8} ist $P$ ein Primideal in $R$.
   \item Jeder Ring $R\neq\{0\}$ hat also mindestens ein maximales Ideal für
    $X\coloneqq\{1\}$.
  \end{enumerate}
\end{bemerk}

%def 3.10
\begin{defini}[Semiprimideal]
  Sei $R$ ein Ring und $S\trianglelefteq R$. Dann ist $R$ genau dann ein
  \highl{Semiprimideal}, wenn für alle $I\trianglelefteq R$ mit
  $I^{2}\subseteq S$ gilt, $I\subseteq S$.
\end{defini}

\begin{bsp}
  \begin{itemize}
   \item Aus Primideal folgt Semiprimideal.
   \item $R\trianglelefteq R$ Semiprimideal.
   \item Die Durchschnitte von Semiprimidealen sind wieder Semiprimideale.
    Diese Aussage gilt \emph{nicht} für Primideale. Beispielsweise ist
    $2\Z\cap3\Z=6\Z$ nicht prim.
  \end{itemize}
\end{bsp}

\begin{satz}
  Sei $R$ ein Ring und $S\trianglelefteq R$. Dann ist $S\trianglelefteq R$
  genau dann ein Semiprimideal, wenn $S$ ein Durchschnitt von Primidealen ist.
  \begin{proof}
    \begin{itemize}
     \item["`$\Leftarrow$"'] klar
     \item["`$\Rightarrow$"'] Sei $S\trianglelefteq R$ ein Semiprimideal. Dann
      ist zu zeigen, dass $S$ der Durchschnitt \emph{aller} Primideale von $R$
      ist, die $S$ enthalten. Sei $x\in R\setminus S$. Nun ist zu zeigen, dass
      ein Primideal $P\trianglelefteq R$ mit $S\subseteq P$ und $x\notin P$
      existiert. Wegen $R\times R\nsubseteq S$\todo{ist das $\times$ oder $x$?} ist $(R\times R)(R\times
      R)\nsubseteq S$, da $S$ Semiprimideal ist, d.\,h. $xRx\nsubseteq S$.
      Setze $x_{0}\coloneqq x$. Wähle $x_{1}\in x_{0}Rx_{0}\setminus S$. Wähle
      analog $x_{2}\in x_{1}Rx_{1}\setminus S$ usw. Erhalten
      $x_{0},x_{1},x_{2},\dotsc\in R\setminus S$ mit $x_{i+1}\in
      x_{i}Rx_{i}$\todo{fehlt da nicht ein $\setminus S$?} für alle $i$. Nach
      \textsc{Zorn}s Lemma existiert $P\trianglelefteq R$ mit $S\subseteq P$
      maximal bezüglich $x_{0},x_{1},x_{2},\dotsc\notin P$. Nun ist zu zeigen,
      dass $P$ ein Primideal ist.

      Sonst existieren $I,J\trianglelefteq R$ mit $I\nsubseteq P$ und
      $J\nsubseteq P$, aber $IJ\subseteq P$. Dann $I'\coloneqq
      I+P\trianglelefteq R$, $J'\coloneqq J+P\trianglelefteq R$, $P\subsetneq
      I'$ und $P\subsetneq J'$. Nach der Wahl von $P$ existiert $i,j\in\N_{0}$
      mit $x_{i}\in I'$, $x_{j}\in J'$. Sei $m\coloneqq\max\{i,j\}$. Dann
      $x_{m}\in I'\cap J'$ und $x_{m+1}\in x_{m}Rx_{m}\subseteq I'J'=
      (I+P)(J+P)= IJ+IP+PJ+P^{2}\subseteq P$\lightning{}
    \end{itemize}
  \end{proof}
\end{satz}

%def 3.11
\begin{defini}[Semiprimer Ring]
  Ein Ring $R$ heißt \highl[Ring!semiprimer]{semiprim}\index{semiprim}, falls
  $0\trianglelefteq R$ ein Semiprimideal ist, d.\,h. es existiert kein Ideal
  $I\trianglelefteq R$ mit $I^{2}=0\neq I$.
\end{defini}

\begin{bemerk}\label{bem:3.11}
  Ein Ideal $I$ in einem Ring $R$ heißt
  \highl[Ideal!nilpotentes]{nilpotent}\index{nilpotent}, falls $n\in\N$ mit
  $I^{n}=0$ existiert, d.\,h. $x_{1}\cdot\dotso \cdot x_{n}=0$ für alle
  $x_{1},\dotsc, x_{n}\in I$. Gegebenenfalls ist $x^{n}=0$ für alle $x\in I$,
  d.\,h. jedes Element  in $I$ ist nilpotent. Ein Ideal $I\trianglelefteq R$
  heißt \highl{Nilideal}, wenn jedes Element in $I$ nilpotent ist.

  Es ist leicht zu zeigen, dass $R$ genau dann semiprim ist, wenn $0$ das
  einzige nilpotente Ideal in $R$ ist. In einem beliebigen Ring $R$ heißt der
  Durchschnitt $\rad(R)$ aller Primideale in $R$ \highl{Radikal}. Dann ist
  $\rad(R)$ das kleinste Semiprimideal in $R$ und heißt \highl{Primradikal}
  von $R$. Es gilt: $\rad(R)$ enthält jedes nilpotente Ideal in $R$.
\end{bemerk}

\begin{satz}\label{satz:3.11}
  Wenn $R$ ein Ring ist, so ist $\rad(R)$ ein Nilideal.
  \begin{proof}
    Sei $x\in\rad(R)$ nicht nilpotent. Dann $\emptyset\neq X\coloneqq
    \Set{x^{n} | n\in\N}$ multiplikativ abgeschlossen und $0\notin X$. Nach
    der \autoref{bem:3.9} existiert dann ein Primideal $P\trianglelefteq R$
    mit $P\cap X=\emptyset$. Also $x\in\rad(R)\subseteq P$\lightning{} da
    $x\in X$ und $P\cap X=\emptyset$.
  \end{proof}
\end{satz}

%Vorlesung vom 18.4.2011
% satz 3.12
\begin{satz}
  Wenn $R$ ein kommutativer Ring ist, so ist  $\rad(R)=\Set{x\in R | x
  \text{ nilpotent}}$.
  \begin{proof}
    Wir müssen nur $\supseteq$ zeigen. Die andere Beziehung ist klar nach dem
    \autoref{satz:3.11}.
    Sei $x\in R$ nilpotent, d.\,h. $x^{n}=0$ für ein $n\in\N$. Dann $Rx
    R\trianglelefteq R$ und $(Rx R)^{n}=Rx Rx\dotso x R=Rx^{n}=0$. Also:
    $RxR\trianglelefteq R$ nilpotent, d.\,h. $RxR\subseteq\rad(R)$ nach der
    \autoref{bem:3.11}.
  \end{proof}
\end{satz}

\chapter{Ringhomomorphismen}

%def 4.1
\begin{defini}[Ringhomomorphismus]
  Seien $R,S$ Ringe und eine Abbildung $\phi\colon R\rightarrow S$ heißt
  \highl{Homomorphismus} oder \highl{Ringhomomorphismus}, falls gilt,
  $\phi(a+b)=\phi(a)+\phi(b)$ und $\phi(a\cdot b)=\phi(a)\cdot\phi(b)$ für
  alle $a,b\in R$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Wir lassen zu, dass $\phi(1_{R})\neq1_{S}$. Im Fall
    $\phi(1_{R})=1_{s}$ heißt das $\phi$ \highl{unitär}. Stets ist
    $\phi(0)=0$. Ist $\phi$ unitär, so ist $\phi(x)\in U(S)$ und
    $\phi(x)^{-1}= \phi(x^{-1})$ für $x\in U(R)$.
   \item Sind $\phi\colon R\rightarrow S$ und $\psi\colon S\rightarrow T$
    Ringhomomorphismen, so auch $\psi\circ\phi\colon R\rightarrow T$. Daher
    bilden Ringe und Ringhomomorphismen eine Kategorie $\kat{Ri}$. Neutrale
    Elemente in $\kat{Ri}(R,R)$ ist jeweils die Identitätsabbildung
    $\id_{R}$.
   \item Wie üblich definiert man Mono-, Epi-, Iso-, Endo- und Automorphismen
    von Ringen. Für jeden Ringisomorphismus $\phi$ ist die Umkehrabbildung
    $\phi^{-1}$ auch ein Ringisomorphismus. Daher sieht man dass die
    Automorphismen bezüglich der Komposition eine Gruppe bilden:
    $\Aut(R)\coloneqq\Set{\alpha\colon R\rightarrow R | \alpha \text{
    Automorphismus}}$ die \highl{Automorphismengruppe} von $R$.
   \item Wie üblich hat man die  \highl{Isomorphie} von Ringen. Man bezeichnet
    diese mit $\cong$ und es ist eine Äquivalenzrelation.
   \item Seien $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$. Für jeden
    Teilring $T\subseteq R$ ist $\phi(T)\subseteq S$ ein Teilring.
    Insbesondere ist $\Bld(\phi)=\phi(R)\subseteq S$ ein Teilring. Dieser
    heißt \highl{Bild} von $\phi$. Ist $U\subseteq S$ ein Teilring, dann ist
    dagegen $\phi^{-1}(U)\subseteq R$ im Allgemeinen \emph{kein} Teilring.
    Im Allgemeinen enthält $\phi^{-1}(U)$ kein Einselement. Sind aber $U$ und
    $\phi$ unitär, so ist auch $\phi^{-1}(U)\subseteq R$ ein Teilring.
   \item Seien $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$. Für
    $I\trianglelefteq R$ ist dann $\phi(I)\trianglelefteq\phi(R)$, aber i.\,A.
    $\phi(I)\not\trianglelefteq S$. Denn ist etwa $\phi\colon\Z\rightarrow\Q$
    die Inklusionsabbildung und $I=2\Z$, so ist
    $\phi(I)=2\Z\not\trianglelefteq\Q$. Für $J\trianglelefteq S$ ist
    $\phi^{-1}(J)\trianglelefteq R$. Insbesondere ist
    $\ker(\phi)\coloneqq\phi^{-1}(\{0\})= \Set{x\in R |
    \phi(x)=0}\trianglelefteq R$ der \highl{Kern} von $\phi$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item $\C\rightarrow\C$ mit $z\mapsto\overline{z}$ (komplexe Konjugation)
    ist ein Automorphismus.
   \item Für $R\in\kat{Ri}, a\in R$ und $n\in\Z$ definiert man:
    \begin{gather*}
      na\coloneqq
	 \begin{cases}
	   a+\dotsb+a & n>0\\
	   0 & n=0\\
	   -(\abs{n}a) & n<0
	 \end{cases}
    \end{gather*}
    Dann $\phi\colon\Z\rightarrow R$ mit $n\mapsto n1$ ein Homomorphismus.
    Insbesondere ist $\ker(\phi)\trianglelefteq\Z$, also $\ker(\phi)= k\Z$ für
    genau ein $k\in\N_{0}$. Dann heißt $k$ die \highl{Charakteristik} von $R$.
    Man schreibt $k=\chr(R)$. Beispielsweise ist $\chr(\Z)=\chr(\Q)=
    \chr(\R)=0$, $\chr(\Z/n\Z)=n$ für $n\in\N_{0}$, $\chr(\FP(M))=2$ für
    jede nichtleere Menge~$M$.
   \item Für jeden Teilring $T\subseteq R$ ist die Inklusionsabbildung
    $T\rightarrow R$ ein Monomorphismus. Für $I\trianglelefteq R$ ist die
    kanonische Abbildung $R\rightarrow R/I$ mit $a\mapsto a+I$ ein
    Epimorphismus mit dem Kern~$I$. Die Ideale von $R$ sind genau die Kerne
    von Ringhomomorphismen mit Definitionsbereich~$R$.
  \end{enumerate}
\end{bsp}

\begin{satz}[Homomorphiesatz]
  Für $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$ ist $\Phi\colon
  R/\ker(\phi)\rightarrow\Bld(\phi)$ mit $a+\ker(\phi)\mapsto\phi(a)$ ein
  Isomorphismus. Insbesondere ist $R/\ker(\phi)\cong\Bld(\phi)$.
\end{satz}

%satz 4.2
\begin{satz}[1.\,Isomorphiesatz]
  Seien $R\in\kat{Ri}, S\subseteq R$ ein unitärer Teilring und
  $I\trianglelefteq R$. Dann ist $S+I\coloneqq\Set{s+x | s\in S, i\in
  I}\subseteq R$ ein unitärer Teilring, $I\trianglelefteq S+I, S\cap
  I\trianglelefteq S$ und $S/S\cap I\cong S+I/I$.
\end{satz}

%satz 4.3
\begin{satz}[2.\,Isomorphiesatz]
  Für $R\in\kat{Ri}$ und $I\trianglelefteq R$ ist die Abbildung $J\mapsto
  J/I\coloneqq\Set{x+I | x\in J}$ eine Bijektion zwischen der Menge aller
  Ideale~$J\trianglelefteq R$ mit $I\subseteq J$ und der Menge der Ideale in
  dem Restklassenring~$R/I$. Dabei gilt, $(R/I)/(J/I)\cong R/J$.
\end{satz}

\begin{bemerk}
  Für $R\in\kat{Ri}$ und ein Ideal~$M\trianglelefteq R$ gilt also, $M$ ist
  genau dann ein maximales Ideal, wenn $R/M$ ein einfacher Ring ist.
\end{bemerk}

%satz 4.4
\begin{satz}[Chinesischer Restsatz]
  Seien $R\in\kat{Ri}$ und $I_{1},\dotsc, I_{n}\trianglelefteq R$. Dann ist
  $\phi\colon R\rightarrow R/I_{1}\times\dotso \times R/I_{n}$ mit $a\mapsto
  (a+I_{1},\dotsc, a+I_{n})$ ein Homomorphismus und $\ker(\phi)=
  I_{1}\cap\dotsb\cap I_{n}$. Insbesondere ist $R/I_{1}\cap\dotsb\cap I_{n}$
  zu einem Teilring von $R/I_{1}\times\dotso \times R/I_{n}$ isomorph. Gilt
  $I_{i}+I_{j}=R$ für alle $i\neq j$, so ist $\phi$ surjektiv und
  $I_{1}\cap\dotsb\cap I_{n}= \sum_{g\in\Sym(n)} I_{g(1)}\cdot\dotso \cdot
  I_{g(n)}$. Insbesondere gilt, $R/I_{1}\cap\dotsb\cap I_{n}\cong
  R/I_{1}\times\dotso \times R/I_{n}$.
\end{satz}

\begin{bemerk}
  Ist $R$ kommutativ, so ist also $I_{1}\cap\dotsb\cap I_{n}= I_{1}\cdot\dotso
  \cdot I_{n}$ mit den obigen Voraussetzungen.
\end{bemerk}


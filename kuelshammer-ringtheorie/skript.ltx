\section{Übungsblatt 2}

%aufg 9
\begin{exerc}
  Sei $\Phi\colon\kat{Gr}\rightarrow\kat{Ab}$ der Funktor, der jeder Gruppe
  $G$ die Faktorgruppe $G/G'$ zuordnet. Dabei ist $G'\coloneqq\langle
  xyx^{-1}y-1\colon x,y\in G\rangle$ die Kommutatorgruppe von $G$. Zeigen Sie,
  dass, $\Phi$ linksadjungiert zum kanonischen Funktor
  $\Psi\colon\kat{Ab}\rightarrow\kat{Gr}$ ist.
\end{exerc}

%aufg 10
\begin{exerc}
  Gegeben seien Funktoren $\Phi\colon\FC\rightarrow\FD$ und
  $\Psi\colon\FD\rightarrow\FC$. Ferner sei $\Phi$ linksadjungiert zu $\Psi$
  bezüglich $\nu= (\nu_{AB})_{A\in\FC, B\in\FD}$. Zeigen Sie:
  \begin{enumerate}
   \item Setzt man $\eta_{A}\coloneqq\nu_{A,\Phi A}(\id_{\Phi(A)})\in\FC(A,
    \Psi\Phi A)$ für $A\in\FC$, so ist
    $\eta\coloneqq(\eta_{A})_{A\in\FC}\colon \Id_{\FC}\Rightarrow
    \Psi\circ\Phi$ eine natürliche Transformation; $\eta$ heißt
    \highl{Einheit} der Adjunktion $(\Phi,\Psi,\nu)$.
   \item Setzt man $\epsilon_{B}\coloneqq\nu_{\Psi B,B}^{-1}(\id_{\Psi
    B})\in\FD(\Phi\Psi B,B)$ für $B\in\FD$, so ist $\epsilon\coloneqq
    (\epsilon_{B})_{B\in\FD}\colon \Phi\circ\Psi\Rightarrow \Id_{\FD}$ eine
    natürliche Transformation; $\epsilon$ heißt \highl{Koeinheit} von
    $(\Phi,\Psi,\nu)$.
   \item Dabei gilt: $(\Psi\circ\epsilon)\circ(\nu\circ\Psi)=\id_{\Psi}$ und
    $(\epsilon\circ\Phi)\circ(\Phi\circ\eta)=\id_{\Phi}$.
  \end{enumerate}
\end{exerc}

%aufg 12
\begin{exerc}
  Die Funktoren $\Phi, \Phi'\colon\FC\rightarrow\FD$ seien linksadjungiert zum
  Funktor $\Psi\colon\FD\rightarrow\FC$. Zeigen Sie, dass $\Phi$ und $\Phi'$
  natürliche äquivalent sind.
\end{exerc}

\section{Übungsblatt 3}
%aufg 13
\begin{exerc}
  Bestimmen Sie die Zentren der folgenden Ringe:
  \begin{enumerate}
   \item des Gruppenrings $RG$; dabei ist $R$ ein kommutativer Ring und $G$
    eine nicht unbedingt endliche Gruppe.
   \item des Quaternionenschiefkörpers $\HH$.
   \item des Matrixrings $R^{n\times n}$; dabei ist $R$ ein beliebiger Ring
    und $n\in\N$.
  \end{enumerate}
\end{exerc}

%aufg 14
\begin{exerc}
  Seien $n\in\N$ und $R_{1},R_{2},\dotsc, R_{n}$ Ringe.
  \begin{enumerate}
   \item Zeigen Sie, dass jedes Ideal von $R_{1}\times\dotso \times R_{n}$ die
    Form $I=I_{1}\times\dotso \times I_{n}$ hat, wobei $I_{j}\trianglelefteq
    R_{j}$ für $j=1,\dotsc,n$ ist.
   \item Zeigen Sie, dass jedes Ideal in $R^{n\times n}$ die Form $I^{n\times
     n}$ hat, wobei $I$ ein Ideal in $R$ ist.
  \end{enumerate}
\end{exerc}

%aufg 15
\begin{exerc}
  Sei $e$ ein Idempotent in einem Ring $R$.
  \begin{enumerate}
   \item Zeigen Sie, dass $eRe$ ein Teilring von $R$ ist.
   \item Beweisen Sie, dass jedes Ideal von $eRe$ die Form $eIe$ hat, wobei
    $I$ ein Ideal in $R$ ist.
  \end{enumerate}
\end{exerc}

%aufg 16
\begin{exerc}
  Sei $R$ ein Ring und $n\in\N$.
  \begin{enumerate}
   \item Zeigen Sie, dass die oberen Dreiecksmatrizen in $R^{n\times n}$ einen
    Teilring $T$ von $R^{n\times n}$ bilden.
   \item Beweisen Sie, dass die oberen Dreiecksmatrizen mit lauter Nullen auf
    der Hauptdiagonale ein Ideal $I$ von $T$ bilden.
   \item Berechnen Sie $I^{m}$ für $m\in\N$.
   \item Zeigen Sie: $T/I\cong R\times\dotso \times R$.
  \end{enumerate}
\end{exerc}


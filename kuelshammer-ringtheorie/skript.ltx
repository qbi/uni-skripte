%satz 11.9
\begin{satz}\label{satz:11.9}
  Hat ein zyklischer $R$"~Modul $M$ eine projektive Decke, so ist $M\simeq
  Re/Ie$ für ein Idempotent $e\in R$ und für ein Linksideal $I\subseteq R$ mit
  $I\subseteq J(R)$. Ist $M$ einfach, so existiert ein Idempotent $e\in R$,
  sodass $M\simeq Re/J(R)e$ und $eRe$ ein lokaler Ring ist.
  \begin{proof}
    Sei $f\colon P\rightarrow M$ eine projektive Decke. Offenbar ist auch
    $\id_{R}\colon R\rightarrow R$ eine projektive Decke. Da $M$ zyklisch ist,
    existiert ein $R$"~Epimorphismus $g\colon R\rightarrow M$. Nach dem
    \autoref{satz:11.6} existieren $h\in\Hom_{R}(R,P)$ und $k\in\Hom_{R}(P,R)$
    mit $h\circ k=\id_{P}$ und $f\circ h=g$. Es ist $R=\ker(h)\oplus\Bld(k)$
    und $\Bld(k)\simeq P$.
    \begin{center}
      \begin{tikzpicture}
        \node (R1) {$R$};
        \node [below=of R1] (R2) {$R$};
        \node [right=1.5cm of R1] (P) {$P$}; %(!sic)
        \node [below=of P] (M) {$M$};
        \draw[->,dotted] (R1) edge node (h) [above]{$h$} (P);
        \draw[->] (R1) edge node (id) [right]{$\id_{R}$} (R2);
        \draw[->] (P) edge node (f) [right]{$f$} (M);
        \draw[->] (R2) edge node (g) [above] {$g$} (M);
      \end{tikzpicture}
    \end{center}

    Nach der \autoref{exe:39} existiert ein Idempotent $e\in R$ mit
    $\Bld(k)=Re$. Daher sei \OE{} $P=Re$. Wegen $I\coloneqq\ker(f)\ll P$ ist
    $I\subseteq\rad(P)\subseteq\rad(R)=J(R)$, d.\,h. $I=Ie\subseteq J(R)e$.

    Sei jetzt $M$ einfach. Wegen $M\simeq P/I$ ist $I\subseteq P$ ein
    maximaler Untermodul und $I=Ie\subseteq
    J(R)e=J(R)Re\subseteq\rad(Re)\subset Re$ wegen $e\notin\rad(R)$, also auch
    $e\notin\rad(Re)$. Also ist $I=J(R)e=\rad(Re)$. Nach dem
    \autoref{satz:6.6} (iii) ist $(eRe)^{o}\cong\End_{R}(Re)=\colon E$. Daher
    genügt es zu zeigen, dass $E$ ein lokaler Ring ist. Dazu sei $\phi\in
    E\setminus E^{\times}$ (nicht invertierbar). Wir müssen zeigen, dass
    $\phi\in J(E)$.

    Wir nehmen an, $\phi$ sei surjektiv. Dann zerfällt die kurze exakte Folge
    $0\rightarrow\ker(\phi)\hookrightarrow P\xrightarrow{\phi} P\rightarrow0$,
    d.\,h. es existiert ein Untermodul $N\subseteq P$ mit $P=
    N\oplus\ker(\phi)$ und $N\simeq P$. Da $P/\rad(P)$ einfach ist, folgt,
    $\ker(\phi)=0$. Also ist $\phi$ bijektiv.\lightning{}

    Somit ist $\phi$ nicht surjektiv, d.\,h. $\phi(P)\subseteq\rad(P)$. Sei
    $\psi\in E$ beliebig. Nach dem \autoref{satz:7.7} genügt es zu zeigen,
    dass $\omega\coloneqq\id_{P}-\phi\psi$ invertierbar ist. Offenbar ist $P=
    \id_{P}(P)= (\omega+\phi\psi)(P)\subseteq\omega(P)+\phi(\psi(P))\subseteq
    \omega(P)+ \rad(P)$. Wegen $\rad(P)\ll P$ folgt, $P=\omega(P)$, also ist
    $\omega(P)$ surjektiv. Wie oben folgt, dass $\omega$ sogar bijektiv ist.
  \end{proof}
\end{satz}


\chapter{Semiperfekte Ringe und Idempotente}

Sei $R$ ein Ring.

%def 12.1
\begin{defini}[Idempotent heben]
  Sei $I\trianglelefteq R$. Ein Idempotent $\epsilon\in R/I$ lässt sich
  \highl{heben}\index{Idempotent!heben},
  falls ein Idempotent $e\in R$ mit $\epsilon= e+I$ existiert.
\end{defini}

\begin{bsp}
  Das Idempotent $3+6\Z\in\Z/6\Z$ lässt sich nicht heben, da $0$ und $1$ die
  einzigen Idempotente in $\Z$ sind.
\end{bsp}

\begin{satz}\label{satz:12.1}
  Sei $I\trianglelefteq R$ ein Nilideal. Dann lässt sich jedes Idempotent
  $\epsilon\in R/I$ heben.
  \begin{proof}
    Sei $u\in R$ mit $\epsilon=u+I$. Wegen $0= \epsilon(1-\epsilon)= u(1-u)+I$
    ist $u(1-u)\in I$. Daher existiert ein $m\in\N$ mit $u^{m}(1-u)^{m}=0$.
    Folglich:
    \begin{align*}
      1 &= (u+(1-u))^{2m} = \sum_{i=0}^{2m} \binom{2m}{i} u^{2m-i} (1-u)^{i}\\
      &= \underbrace{\sum_{i=0}^{m} \binom{2m}{i} u^{2m-i} (1-u)^{i}}_{=\colon
	 e} + \underbrace{\sum_{i=m+1}^{2m} \binom{2m}{i} u^{2m-i}
	 (1-u)^{i}}_{=1-e=\colon f}
    \end{align*}
    Wegen $u^{m}(1-u)^{m}=0$ ist $ef=0$, d.\,h. $e=e1=e(e+f)= e^{2}$. Wegen
    $u(1-u)\in I$ ist $e+I=u^{2m}+I=\epsilon^{2m}=\epsilon$.
  \end{proof}
\end{satz}

%def 12.2
\begin{defini}[Orthogonale Idempotente]
  Idempotente $e$ und $f$ in $R$ mit $ef=0=fe$ nennt man
  \highl[Idempotente!orthogonale]{orthogonal}\index{orthogonal}.
\end{defini}

\begin{bemerk}
  Für paarweise orthogonale Idempotente $e_{1},\dotsc, e_{n}\in R$ ist auch
  $e_{1}+\dotsb+ e_{n}$ ein Idempotent.
\end{bemerk}

\begin{satz}\label{satz:12.2}
  Sei $I\trianglelefteq R$ mit $I\subseteq J(R)$, sodass sich jedes Idempotent
  in $R/I$ heben lässt. Sind $\epsilon_{1},\dotsc,\epsilon_{n}$ paarweise
  orthogonale Idempotente mit $\epsilon_{1}+\dotsb+\epsilon_{n}=1$, so
  existieren paarweise orthogonale Idempotente $e_{1},\dotsc, e_{n}\in R$ mit
  $e_{1}+\dotsb+ e_{n}=1$ und $e_{i}=e_{i}+I$ für $i=1,\dotsc,n$, d.\,h. man
  kann $\epsilon_{1},\dotsc,\epsilon_{n}$ simultan heben.
  %Vorlesung vom 13.6.2011
  \begin{proof}
    Nach Voraussetzung existiert ein Idempotent $f_{i}\in R$ mit
    $f_{i}+I=\epsilon_{i}$ für $i=1,\dotsc,n$. Dann ist
    $f_{i}f_{j}+I=\epsilon_{i}\epsilon_{j}=0$ für $i\neq j$. Außerdem haben
    wir $u\coloneqq f_{1}+\dotsb+ f_{n}\in R$ und $u+I=
    \epsilon_{1}+\dotsb+\epsilon_{n}=1_{R}+I$. Dabei ist
    $u\in1+I\subseteq1+J(R)\subseteq R^{\times}$ nach dem \autoref{satz:7.7}
    und $1+I=uu^{-1}+I= (u+I)(u^{-1}+I)= u^{-1}+I$.

    Für $i=1,\dotsc,n$ ist also $Rf_{i}= Ru^{-1}f_{i}=Re_{i}$, $e_{i}+I=
    (u^{-1}+I)(f_{i}+I)=f_{i}+I=\epsilon_{i}$ und $e_{1}+\dotsb+ e_{n}=
    u^{-1}(f_{1}+\dotsb+ f_{n})=u^{-1}uu=1$. Wir haben die
    $R$"~Homomorphismen $\alpha\colon P\coloneqq Rf_{1}\times\dotso \times
    Rf_{n}\rightarrow R$ mit $(x_{1},\dotsc, x_{n})\mapsto x_{1}+\dotsb+
    x_{n}$ und $\beta\colon R\rightarrow P$ mit $y\mapsto(ye_{1},\dotsc,
    ye_{n})$. Wir zeigen: $\alpha\circ\beta=\id_{R}$ und
    $\beta\circ\alpha=\id_{P}$. Es gilt für $y\in R$:
    \begin{align*}
      \alpha(\beta(y)) &= \alpha(ye_{1},\dotsc, ye_{n})= ye_{1}+\dotsb+ ye_{n}=y\\
      \beta(\alpha((x_{1},\dotsc, x_{n}))) &= \beta(x_{1}+\dotsb+ x_{n})\\
      &= (x_{1}e_{1}+\dotsb+ x_{n}e_{1},\dotsc, x_{1}e_{n}+\dotsb+ x_{n}e_{n})\\
      &\equiv(x_{1},\dotsc, x_{n})\pmod{J(R)f_{1}\times\dotso \times J(R)f_{n}}
    \end{align*}
    Denn für $i=1,\dotsc,n$ gilt:
    \begin{align*}
      x_{1}e_{i}+\dotsb+ x_{n}e_{i}+I &=
	 (x_{1}+I)(e_{i}+I)+\dotsb+(x_{n}+I)(e_{i}+I)\\
      &= (x_{1}+I)(f_{i}+I)+\dotsb+(x_{n}+I)(f_{i}+I)\\
      &= (x_{i}+I)(f_{i}+I)= x_{i}+I
    \end{align*}
    d.\,h. $x_{1}e_{i}+\dotsb+ x_{n}e_{i}-x_{i}\in I$ und damit
    $x_{1}e_{i}+\dotsb+ x_{n}e_{i}-x_{i}\in If_{i}\subseteq J(R)f_{i}$. Wegen
    $J(R)f_{i}\times\dotso \times J(R)f_{n}=J(R)P\subseteq\rad(P)$ folgt nach
    dem Lemma von \textsc{Nakayama} (\autoref{satz:7.3}):
    \begin{gather*}
      P=\Bld(\beta)+\rad(P)= \Bld(\beta)
    \end{gather*}
    Daher sind $\beta$ und auch $\alpha$ bijektiv. Für $i=1,\dotsc,n$
    gilt also: $\alpha((0,\dotsc,0,e_{i},0,\dotsc,0))=e_{i}=
    \alpha(\beta(e_{i}))=\alpha((e_{i}e_{1},\dotsc, e_{i}e_{n}))$. Folglich
    haben wir:
    \begin{gather*}
      e_{i}e_{j}=
	 \begin{cases}
	   e_{i}& i=j\\
	   0& i\neq j
	 \end{cases}
    \end{gather*}
  \end{proof}
\end{satz}

%satz 12.3
\begin{satz}
  Für jedes Idempotent $0\neq e\in R$ sind äquivalent:
  \begin{enumerate}
   \item $\epsilon$ lässt sich nicht in der Form $e=f+g$ mit orthogonalen
    Idempotenten $f\neq0, g\neq0$ in $R$ schreiben.
   \item Der $R$"~Linksmodul $Re$ ist unzerlegbar.
   \item $0$ und $e$ sind die einzigen Idempotente in $eRe$.
   \item $eR_{R}$ ist unzerlegbar.
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
     \item [(i)$\Rightarrow$(ii)] Sei (i) erfüllt und $Re=L\oplus M$ mit
      Untermoduln $L$ und $M$. Wir schreiben $e=f+g$  mit $f\in L$ und $g\in
      M$. Ist $x\in Re$ und $x=ye$ mit $y\in R$, so ist $xe=ye^{2}=ye=x$.
      Insbesondere $f=fe=f^{2}+fg$ mit $f^{2}\in L$ und $fg\in M$. Folglich:
      $f=f^{2}$ und $0=fg$. Analog ist $g^{2}=g$ und $0=gf$. Wegen (i) ist
      $f=0$ oder $g=0$. Sei \OE{} $g=0$. Dann ist $e=f\in L$ und damit
      $Re\subseteq L$, d.\,h. $M=0$.
     \item [(ii)$\Rightarrow$(iii)] Sei (ii) erfüllt. Nach dem
      \autoref{satz:8.3} sind $0$ und $1$ die einzigen Idempotente in
      $\End_{R}(Re)$ und nach dem \autoref{satz:6.6} (iii) ist
      $\End_{R}(Re)\cong\End_{R}(eRe)^{o}$.
     \item [(iii)$\Rightarrow$(i)] Sei (iii) erfüllt und $e=f+g$ mit
      orthogonalen Idempotenten $f,g \in R$. Dann: $f=(f+g)f(f+g)\in eRe$,
      also $f\in\{0,e\}$. Folglich ist $f=0$ oder $g=0$.
     \item [(iv)$\Rightarrow$(i)] analog
    \end{itemize}
  \end{proof}
\end{satz}

\begin{bemerk}
  Ist $E\in R$ ein Idempotent und $eRe$ ein lokaler Ring, so ist $e$ primitiv
  in $R$. Gegebenenfalls heißt $e$ \highl[Idempotent!streng primitives]{streng
  primitiv}\index{streng primitv} oder
  \highl[Idempotent!lokales]{lokal}\index{lokal}.
\end{bemerk}


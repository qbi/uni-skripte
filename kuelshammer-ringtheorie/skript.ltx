\chapter{Ringe, Teilringe und Ideale}

%3.1 def
\begin{defini}[Ring]
  Ein \highl{Ring} $R$ ist ein Tripel $R=(R,+,\cdot)$ mit
  \begin{enumerate}
   \item $(R,+)$ ist eine abelsche Gruppe mit dem neutralen Element~$0$, dem
    \highl{Nullelement}.
   \item $(R,\cdot)$ ist ein \highl{Monoid}, d.\,h. assoziativ mit $1$, dem
    \highl{Einselement}.
   \item Die Distributivgesetze gelten: $a(b+c)=ab+ac$ und $(a+b)c=ac+bc$ für
    alle $a,b,c\in R$.
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{itemize}
   \item Das Null- und Einselement sind eindeutig.
   \item Setze $a-b\coloneqq a+(-b)$.
   \item Manche Bücher verlangen die Existenz von $1$ nicht.
   \item Wie üblich: $0x=0=x0$ und $(-x)y=-(xy)=x(-y)$, $(-x)(-y)=xy$.
   \item Ist $ab=ba$ für alle $a,b\in R$, dann heißt der Ring
    \highl[Ring!kommutativer]{kommutativ}\index{kommutativ}.
  \end{itemize}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item $\Z,\Q, \R, \C, \{0\}$ (Letzterer wird als \highl{Nullring}
    bezeichnet).
   \item Sei $M$ eine Menge. Dann ergibt sich durch $A+B\coloneqq(A\setminus
    B)\cup(B\setminus A)$ und $A\cdot B\coloneqq A\cap B$ der \highl{Potenzmengenring}
    $\FP(M)=\Set{A | A\subseteq M}$.
   \item Sei $(R,+,\cdot)$. Dann erhält man einen
    \highl[Ring!entgegengesetzter]{entgegengesetzten Ring} $(R,+,\circ)$ mit
    $a\circ b\coloneqq ba$ mit $a,b\in R$. Man schreibt $R^{o}$ für
    "`opposite"'.
   \item Sei $R$ ein Ring und $n\in\N$. Dann ist $R^{n\times n}$ ein voller
    \highl{Matrixring} des Grades~$n$ über $R$. Das Nullelement ist die
    \highl{Nullmatrix} $0_{n}$ und das Einselement $1_{n}$.
   \item Sei $(R_{i})_{i\in I}$ eine nichtleere Familie von Ringen. Dann
    erhält man das \highl[Produkt!direktes]{direkte Produkt}
    \begin{gather*}
      \bigtimes_{i\in I} R_{i}\coloneqq\prod_{i\in I}
	 R_{i}\coloneqq\Set{(r_{i})_{i\in I} | r_{i}\in R_{i}, i\in I}
    \end{gather*}
    mit $(r_{i})_{i\in I}+(s_{i})_{i\in I}\coloneqq
    (r_{i}+s_{i})_{i\in I}$. Der Spezialfall $R_{i}=R$ für alle $i$ ergibt
    \begin{gather*}
      \bigtimes_{i\in I} R_{i}= \Abb(I,R)= \Set{f\colon I\rightarrow R | f
	 \text{ Abbildung}}
    \end{gather*}
    mit $(f+g)(x)\coloneqq f(x)+g(x)$ für $x\in I$ und für
    den Spezialfall $I=\{1,\dotsc,n\}$ ergibt sich das direkte Produkt durch
    \begin{gather*}
      \bigtimes_{i\in I} R_{i}= R_{1}\times\dotso \times R_{n}=
	 \Set{(r_{1},\dotsc, r_{n}) | r_{1}\in R_{1},\dotsc, r_{n}\in R_{n}}
    \end{gather*}
   \item Sei $R$ ein Ring und $M$ ein Monoid. Dann ergibt sich der
    \highl{Monoidring} von $M$ über $R$ durch $RM\coloneqq\Set{(r_{m})_{m\in
    M} | r_{m}\in R, m\in M, r_{m}=0 \text{ für fast alle } m\in M}$. Die
    Addition ergibt sich durch $(r_{m})_{m\in M}+ (s_{m})_{m\in
    M}\coloneqq(r_{m} +s_{m})_{m\in M}$ und die Multiplikation durch $(r_{m})_{m\in
    M}\cdot (s_{m})_{m\in M}\coloneqq(\sum_{p,q\in M, pq=m} r_{p}s_{q})_{m\in
    M}$. Die Summe ist \emph{endlich}.

    Für $m\in M$ sei $\hat{m}\coloneqq(\delta_{mn})_{m\in M}$
    (\highl[Kronecker-Delta]{\textsc{Kronecker}"~Delta}). Dann ist $\hat{1_{M}}$ das
    Einselement von $RM$ und man hat $\hat{m}\cdot\hat{n}=\hat{mn}$ für
    $m,n\in M$.

    Setze $r(r_{m})_{m\in M}\coloneqq (rr_{m})_{m\in M}$ für $r\in R,
    (r_{m})_{m\in M}\in RM$. Dann ist $(r_{m})_{m\in M}= \sum_{m\in M} r_{m}
    \hat{m}$. Identifiziere jeweils $m$ mit $\hat{m}$. Dann ist $(r_{m})_{m\in
    M}= \sum_{m\in M} r_{m} m$. Dabei:
    \begin{itemize}
     \item $\sum_{m\in M} r_{m}m= \sum_{m\in M}s_{m}m\Leftrightarrow
      r_{m}=s_{m}$ für alle $m\in M$.
     \item $\sum_{m\in M} r_{m} m+\sum_{m\in M}s_{m}m= \sum_{m\in M}
      (r_{m}+s_{m})m$
     \item $(\sum_{m\in M} r_{m}m)(\sum_{m\in M} s_{m}m)= \sum_{m\in
      M}(\sum_{p,q\in M, pq=m} (r_{p}s_{q}))m$.
    \end{itemize}
    Speziell: $M$ Gruppe. Dann ist $RM$ ein \highl{Gruppenring}.
    Speziell: $R[X]$ \highl{Polynomring} in einer oder mehreren Variablen.
  \end{enumerate}
\end{bsp}

%3.2 def
\begin{defini}[Invertierbar, Invers, Einheit]
  Sei $R$ ein Ring und $a\in R$. Das Element $a$ heißt genau dann
  \highl{rechtsinvertierbar}, wenn ein $b\in R$ existiert mit $ab=1$. Das $b$
  heißt dann \highl{rechtsinvers} zu $a$. Analog definiert man
  \highl{linksinvertierbar} und \highl{linksinvers}. Das Element $a$ heißt
  genau dann \highl{invertierbar} oder \highl{Einheit}, wenn es rechts- und
  linksinvertierbar ist.
\end{defini}

\begin{bemerk}
  $U(R)\coloneqq R^{\times}=\Set{a\in R | a \text{ invertierbar}}$ ist
  eine Gruppe bezüglich der Multiplikation. Sie heißt die
  \highl{Einheitengruppe}. Für $U(R)=R\setminus\{0\}$ heißt $R$
  \highl{Schiefkörper}. Wenn $R$ ein kommutativer Schiefkörper, so ist $R$ ein
  Körper.
\end{bemerk}

\begin{bsp}
  Sei $R$ ein Ring und $n\in\N$. Dann ist $\GL(n,R)\coloneqq U(R^{n\times n})$
  der Ring der invertierbaren Matrizen und heißt \highl[Gruppe!allgemeine
  lineare]{allgemeine lineare Gruppe} des Grades~$n$ über $R$ (general linear
  group).
\end{bsp}

%3.3 def
\begin{defini}[Nullteiler]
  Sei $R$ ein Ring und $a\in R$. Dann heißt $a$ \highl{Linksnullteiler}, wenn
  ein $b\in R\setminus\{0\}$ mit $ab=0$ existiert. Analog definiert man
  \highl{Rechtsnullteiler}. Ein Element $a$ heißt \highl{Nullteiler}, wenn es
  Links- oder Rechtsnullteiler ist.
\end{defini}

\begin{bsp}
  \begin{enumerate}
   \item
    \begin{gather*}
      \begin{pmatrix}
	1 & 0\\
	0 & 0
      \end{pmatrix}
	 \begin{pmatrix}
	   0 & 0 \\
	   0 & 1
	 \end{pmatrix}=
	 \begin{pmatrix}
	   0 & 0\\
	   0 & 0
	 \end{pmatrix}
    \end{gather*}
    in $\Q^{2\times2}$.
   \item $R\neq\{0\}\Rightarrow0$ Nullteiler in $R$.
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  Ein Ring~$R\neq\{0\}$ heißt \highl{nullteilerfrei}, wenn $0$ der einzige
  Nullteiler in $R$ ist. Schiefkörper und $\Z$ sind nullteilerfrei.
  Nullteilerfreie kommutative Ringe heißen \highl{Integritätsbereich}.
  Beispiele sind Körper und $\Z$.
\end{bemerk}

%3.4 def
\begin{defini}[Idempotentes und nilpotentes Element]
  Sei $R$ ein Ring und $a\in R$. Das Element $a$ heißt \highl{idempotent},
  wenn $a^{2}=a$. Das Element $a$ heißt \highl{nilpotent}, wenn ein $n\in \N$
  mit $a^{n}=0$ existiert.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Wenn $a$ idempotent, dann ist auch $1-a$ idempotent:
    $(1-a)^{2}=1-2a+a^{2}=1-2a+a=1-a$.
   \item Wenn $a$ nilpotent, dann $1-a\in U(R)$. Denn aus $a^{n}=0$ folgt,
    $(1-a)(1+a+a^{2}+\dotsb+ a^{n-1})=1-a^{n}=1$ und $(1+a+a^{2}+\dotsb+
    a^{n-1})(1-a)=1$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  $0\mathord{,}1$ sind idempotent und $0$ ist stets nilpotent.
\end{bsp}

%def 3.5
\begin{defini}[Teilring]
  Sei $R$ ein Ring. Dann ist $S\subseteq R$ genau dann ein \highl{Teilring},
  wenn $S$ ein Ring mit den entsprechend eingeschränkten Verknüpfungen ist.
\end{defini}

\begin{bemerk}
  Dabei ist zugelassen, dass $1_{R}\neq1_{S}$. In der Literatur wird das nicht
  ganz einheitlich gehandhabt. Im Fall $1_{R}=1_{S}$ hat man einen
  \highl[Teilring!unitärer]{unitären Teilring}. Also $S\subseteq R$ ist ein
  unitärer Teilring:
  \begin{enumerate}
   \item $0\mathord{,}1_{R}\in S$
   \item $a,b\in S\Rightarrow a+b\in S\wedge a\cdot b\in S$
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item $\Z\subseteq\Q\subseteq\C$ sind unitäre Teilringe.
   \item Sei $R$ ein Ring. Dann ist $Z(R)\coloneqq\Set{z\in R | za=az, \forall
    a\in R}$ das \highl{Zentrum} von $R$, also ein kommutativer, unitärer
    Teilring.
   \item Der Ring $\Set{
    \begin{pmatrix}
      a & 0\\
      0& 0
    \end{pmatrix} | a\in\Q}\subseteq\Q^{2\times2}$ ist \emph{kein} unitärer
    Teilring. Denn das Einselement ist $
    \begin{pmatrix}
      1& 0\\
      0& 0
    \end{pmatrix}\neq
    \begin{pmatrix}
      1& 0\\
      0& 1
    \end{pmatrix}$.
   \item Der Ring $\R\times\{0\}\subseteq\R\times\R$ ist \emph{kein} unitärer
    Teilring.
   \item Der Ring der \highl{Quaternionen}\index{Ring!Quaternionen} $\HH\coloneqq\Set{
    \begin{pmatrix}
      a& b\\
      -\overline{b}& \overline{a}
    \end{pmatrix} | a,b\in\C}\subseteq\C^{2\times2}$ ist ein unitärer
    Teilring. Aus $a,b\neq0$ folgt, $
    \begin{pmatrix}
      a& b\\
      -\overline{b}& \overline{a}
    \end{pmatrix}^{-1}= \frac{1}{a\overline{a}+b\overline{b}}
    \begin{pmatrix}
      \overline{a}& -b\\
      \overline{b}& a
    \end{pmatrix}\in\HH$. Es ist also ein Schiefkörper.
  \end{enumerate}
\end{bsp}

%def 3.6
\begin{defini}[Ideal]
  Sei $R$ ein Ring und $I\subseteq R$. Dann heißt $I$  \highl{Ideal} in $R$,
  wenn gilt:
  \begin{enumerate}
   \item $(I,+)$ ist eine Untergruppe von $(R,+)$.
   \item Für $r\in R$ und $x\in I$ folgt, dass $r\cdot x$ und $x\cdot r$ in
    $I$ liegen.
  \end{enumerate}
  Wir schreiben $I\trianglelefteq R$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Für einen beliebigen Ring $R$ sind $0$ und $R$ Ideale. Ein Ring $R$
    heißt \highl[Ring!einfacher]{einfach}\index{einfach}, wenn $R\neq0$ und
    $0$ sowie $R$ die einzigen Ideale sind.
   \item $I\cap U(R)\neq\emptyset\Rightarrow I=R$. Denn für $u\in I\cap U(R)$
    folgt, $r=ru^{-1}u\in I$ für $r\in R$. Wenn $R$ ein Schiefkörper ist, ist
    insbesondere $R$ auch ein einfacher Ring. Die Umkehrung gilt nicht.
   \item Sei $(I_{j})_{j\in J}$ eine nichtleere Familie von Idealen
    $I_{S}\trianglelefteq R$. Dann ist $\bigcap_{j\in J} I_{j}\trianglelefteq
    R$. Insbesondere erhält man für $A\subseteq R$ das von $A$
    \highl[Ideal!erzeugtes]{erzeugte Ideal} $(A)= \bigcap_{I\trianglelefteq
    R, A\subseteq R} I\trianglelefteq R$. Es
    gilt:
    \begin{gather*}
      (A)= \Set{\sum_{i=1}^{k} r_{i}a_{i}s_{i} | a_{i}\in A, r_{i}\in R,
	 s_{i}\in R, k\in\N_{0}}
    \end{gather*}
    Wir schreiben, $(a_{1},\dotsc, a_{n})=
    (\{a_{1},\dotsc, a_{n}\})$ für $a_{1},\dotsc, a_{n}\in R$.
   \item $I\trianglelefteq\Z\Rightarrow I=k\Z$ für genau eine Zahl
    $k\in\N_{0}$. Das entspricht $(k)$.
   \item Sei $R$ ein Ring und $I,J\trianglelefteq R$. Dann heißt
    $I+J\coloneqq\Set{x+y | x\in I, y\in J}\trianglelefteq R$ die
    \highl{Summe}.
   \item Es ist $IJ\coloneqq\Set{\sum_{i=1}^{k} x_{i}y_{i} | x_{i}\in I,
    y_{i}\in J, k\in\N_{0}}$ das \highl{Produkt}.
  \end{enumerate}
\end{bsp}

\begin{bemerk}[Rechenregeln]
  \begin{enumerate}
   \item $I+J= (I\cup J)=J+I$
   \item $IJ=(\Set{xy | x\in I, y\in J})\subseteq I\cap J$. Die Gleichheit
    gilt im Allgemeinen nicht.
   \item $(IJ)K=I(JK)$
   \item $I(J+K)= IJ+IK$, $(I+J)K= IK+JK$
  \end{enumerate}
\end{bemerk}

\begin{bemerk}[Restklassenring]
  Sei $R$ ein Ring, $I$ ein Ideal in $R$ und  $a\in R$. Dann ist 
  $a+I\coloneqq\Set{a+x | x\in I}$ die \highl{Restklasse} von $a$ modulo~$I$.
  Dabei $a+I=b+I\Leftrightarrow a-b\in I\Leftrightarrow\colon a\equiv
  b\pmod{I}$. Man sagt, $a$ ist \highl{kongruent}\index{Kongruenz} zu $b$
  modulo~$I$. Dann ist $R/I\coloneqq\Set{a+I | a\in R}$ ein Ring mit
  $(a+I)\pm(b+I)=(a\pm b)+I$ und $(a+I)(b+I)=(ab)+I$. Das Nullelement ist
  $0+I=I$ und das Einselement ist $1+I$. Dieser Ring heißt
  \highl{Restklassenring} modulo~$I$.
\end{bemerk}

%def 3.7
\begin{defini}[Maximales Ideal]
  Sei $R$ ein Ring, $M\trianglelefteq R$ und $M\neq R$ (Somit ist
  $R\neq\{0\}$). Dann ist $M$ genau dann ein \highl[Ideal!maximales]{maximales
  Ideal}, wenn kein $I\trianglelefteq R$ mit $M\subsetneq I\subsetneq R$
  existiert.
\end{defini}

\begin{bsp}
  Für $k\in\N_{0}$ gilt: maximales Ideal genau dann, wenn $k\in\PP$.
\end{bsp}

%def 3.8
\begin{defini}[Primideal]
  Sei $R$ ein Ring, $P\trianglelefteq R$ und $P\neq R$. Dann ist $P$ genau
  dann ein \highl{Primideal} in $R$, wenn für alle $I,J\trianglelefteq R$ mit
  $IJ\subseteq P$ folgt, $I\subseteq P$ oder $J\subseteq P$.
\end{defini}

\begin{bemerk}[Primer Ring]
  Ein Ring heißt \highl[Ring!primer]{prim}\index{prim}, falls $0$ ein
  Primideal in $R$ ist, d.\,h. für alle $I,J\trianglelefteq R$ mit $IJ=0$ ist
  $I=0$ oder $J=0$. Das ist eine Art Nullteilerfreiheit für Ideale.
\end{bemerk}

\begin{satz}\label{satz:3.8}
  Sei $R$ ein Ring und $\emptyset\neq X\subseteq R$ multiplikativ
  abgeschlossen, d.\,h. $x,y\in X\Rightarrow xy\in X$. Dann ist jedes Ideal
  $P\trianglelefteq R$, welches maximal bezüglich $P\cap X\neq\emptyset$ ist,
  ein Primideal in $R$. Insbesondere ist jedes maximale Ideal ein Primideal.
  Daher ist jeder einfache Ring prim.
  \begin{proof}
    Seien $I,J\trianglelefteq R$ mit $I\nsubseteq P$ und $J\nsubseteq P$. Es
    ist zu zeigen, dass $IJ\nsubseteq P$. Wegen $I'\coloneqq
    I+P\supsetneq P$ und der Maximalität 
    existiert ein $x\in I'\cap X$ und wegen $J'\coloneqq
    J+P \supsetneq P$ gibt es analog ein $y\in J'\cap X$. Dann $xy\in
    I'J'\cap X$. Da $P$ und $X$ disjunkt sind, ist also $xy\notin P$. Also
    $P\nsupseteq I'J' =(I+P)(J+P)= IJ+IP+PJ+P^{2}\subseteq IJ+P$, d.\,h.
    $IJ\nsubseteq P$. Damit ist die erste Aussage bewiesen. Für die zweite
    Aussage setzt man $X\coloneqq\{1\}$ und die dritte Aussage ist klar.
  \end{proof}
\end{satz}

%satz 3.9
\begin{satz}\label{satz:3.9}
  Sei $R$ ein Ring, $\emptyset\notin X\subseteq R$ multiplikativ abgeschlossen
  und $0\notin X$. Dann existiert stets ein Ideal $P\trianglelefteq R$, das
  maximal bezüglich $P\cap X=\emptyset$ ist.
  \begin{proof}
    Wir definieren $\CA\coloneqq\Set{I\trianglelefteq R | I\cap
    X=\emptyset}\neq\emptyset$ wegen $\{0\}\in\CA$. Dann  ist $\CA$ durch
    $\subseteq$ geordnet. Jede nichtleere totalgeordnete Teilmenge
    $\CL\subseteq\CA$ ist $S\coloneqq\bigcup_{I\in\CL} I$ eine obere Schranke
    von $\CL$ in $\CA$. Nach \textsc{Zorn}s Lemma  enthält $\CA$ ein maximales
    Element.
  \end{proof}
\end{satz}

\begin{bemerk}\label{bem:3.9}
  \begin{enumerate}
   \item Nach dem \autoref{satz:3.8} ist $P$ ein Primideal in $R$.
   \item Jeder Ring $R\neq\{0\}$ hat also mindestens ein maximales Ideal für
    $X\coloneqq\{1\}$.
  \end{enumerate}
\end{bemerk}

%def 3.10
\begin{defini}[Semiprimideal]
  Sei $R$ ein Ring und $S\trianglelefteq R$. Dann ist $R$ genau dann ein
  \highl{Semiprimideal}, wenn für alle $I\trianglelefteq R$ mit
  $I^{2}\subseteq S$ gilt, $I\subseteq S$.
\end{defini}

\begin{bsp}
  \begin{itemize}
   \item Aus Primideal folgt Semiprimideal.
   \item $R\trianglelefteq R$ Semiprimideal.
   \item Die Durchschnitte von Semiprimidealen sind wieder Semiprimideale.
    Diese Aussage gilt \emph{nicht} für Primideale. Beispielsweise ist
    $2\Z\cap3\Z=6\Z$ nicht prim.
  \end{itemize}
\end{bsp}

\begin{satz}
  Sei $R$ ein Ring und $S\trianglelefteq R$. Dann ist $S\trianglelefteq R$
  genau dann ein Semiprimideal, wenn $S$ ein Durchschnitt von Primidealen ist.
  \begin{proof}
    \begin{itemize}
     \item["`$\Leftarrow$"'] klar
     \item["`$\Rightarrow$"'] Sei $S\trianglelefteq R$ ein Semiprimideal. Dann
      ist zu zeigen, dass $S$ der Durchschnitt \emph{aller} Primideale von $R$
      ist, die $S$ enthalten. Sei $x\in R\setminus S$. Nun ist zu zeigen, dass
      ein Primideal $P\trianglelefteq R$ mit $S\subseteq P$ und $x\notin P$
      existiert. Wegen $Rx R\nsubseteq S$ ist $(Rx R)(Rx
      R)\nsubseteq S$, da $S$ Semiprimideal ist, d.\,h. $xRx\nsubseteq S$.
      Setze $x_{0}\coloneqq x$. Wähle $x_{1}\in x_{0}Rx_{0}\setminus S$. Wähle
      analog $x_{2}\in x_{1}Rx_{1}\setminus S$ usw. Erhalten
      $x_{0},x_{1},x_{2},\dotsc\in R\setminus S$ mit $x_{i+1}\in
      x_{i}Rx_{i}$ für alle $i$. Nach
      \textsc{Zorn}s Lemma existiert $P\trianglelefteq R$ mit $S\subseteq P$
      maximal bezüglich $x_{0},x_{1},x_{2},\dotsc\notin P$. Nun ist zu zeigen,
      dass $P$ ein Primideal ist.

      Sonst existieren $I,J\trianglelefteq R$ mit $I\nsubseteq P$ und
      $J\nsubseteq P$, aber $IJ\subseteq P$. Dann $I'\coloneqq
      I+P\trianglelefteq R$, $J'\coloneqq J+P\trianglelefteq R$, $P\subsetneq
      I'$ und $P\subsetneq J'$. Nach der Wahl von $P$ existiert $i,j\in\N_{0}$
      mit $x_{i}\in I'$, $x_{j}\in J'$. Sei $m\coloneqq\max\{i,j\}$. Dann
      $x_{m}\in I'\cap J'$ und $x_{m+1}\in x_{m}Rx_{m}\subseteq I'J'=
      (I+P)(J+P)= IJ+IP+PJ+P^{2}\subseteq P$\lightning{}
    \end{itemize}
  \end{proof}
\end{satz}

%def 3.11
\begin{defini}[Semiprimer Ring]
  Ein Ring $R$ heißt \highl[Ring!semiprimer]{semiprim}\index{semiprim}, falls
  $0\trianglelefteq R$ ein Semiprimideal ist, d.\,h. es existiert kein Ideal
  $I\trianglelefteq R$ mit $I^{2}=0\neq I$.
\end{defini}

\begin{bemerk}[Nilpotent, Nilideal, Radikal]\label{bem:3.11}
  Ein Ideal $I$ in einem Ring $R$ heißt
  \highl[Ideal!nilpotentes]{nilpotent}\index{nilpotent}, falls $n\in\N$ mit
  $I^{n}=0$ existiert, d.\,h. $x_{1}\cdot\dotso \cdot x_{n}=0$ für alle
  $x_{1},\dotsc, x_{n}\in I$. Gegebenenfalls ist $x^{n}=0$ für alle $x\in I$,
  d.\,h. jedes Element  in $I$ ist nilpotent. Ein Ideal $I\trianglelefteq R$
  heißt \highl{Nilideal}, wenn jedes Element in $I$ nilpotent ist.

  Es ist leicht zu zeigen, dass $R$ genau dann semiprim ist, wenn $0$ das
  einzige nilpotente Ideal in $R$ ist. In einem beliebigen Ring $R$ heißt der
  Durchschnitt $\rad(R)$ aller Primideale in $R$ \highl{Radikal}. Dann ist
  $\rad(R)$ das kleinste Semiprimideal in $R$ und heißt \highl{Primradikal}
  von $R$. Es gilt: $\rad(R)$ enthält jedes nilpotente Ideal in $R$.
\end{bemerk}

\begin{satz}\label{satz:3.11}
  Wenn $R$ ein Ring ist, so ist $\rad(R)$ ein Nilideal.
  \begin{proof}
    Sei $x\in\rad(R)$ nicht nilpotent. Dann $\emptyset\neq X\coloneqq
    \Set{x^{n} | n\in\N}$ multiplikativ abgeschlossen und $0\notin X$. Nach
    der \autoref{bem:3.9} existiert dann ein Primideal $P\trianglelefteq R$
    mit $P\cap X=\emptyset$. Also $x\in\rad(R)\subseteq P$\lightning{} da
    $x\in X$ und $P\cap X=\emptyset$.
  \end{proof}
\end{satz}

%Vorlesung vom 18.4.2011
% satz 3.12
\begin{satz}
  Wenn $R$ ein kommutativer Ring ist, so ist  $\rad(R)=\Set{x\in R | x
  \text{ nilpotent}}$.
  \begin{proof}
    Wir müssen nur $\supseteq$ zeigen. Die andere Beziehung ist klar nach dem
    \autoref{satz:3.11}.
    Sei $x\in R$ nilpotent, d.\,h. $x^{n}=0$ für ein $n\in\N$. Dann $Rx
    R\trianglelefteq R$ und $(Rx R)^{n}=Rx Rx\dotso x R=Rx^{n}=0$. Also:
    $RxR\trianglelefteq R$ nilpotent, d.\,h. $RxR\subseteq\rad(R)$ nach der
    \autoref{bem:3.11}.
  \end{proof}
\end{satz}

\chapter{Ringhomomorphismen}

%def 4.1
\begin{defini}[Ringhomomorphismus]
  Seien $R$ und $S$ Ringe sowie $\phi\colon R\rightarrow S$ eine
  Abbildung. Diese heißt
  \highl{Homomorphismus} oder \highl{Ringhomomorphismus}, falls gilt,
  $\phi(a+b)=\phi(a)+\phi(b)$ und $\phi(a\cdot b)=\phi(a)\cdot\phi(b)$ für
  alle $a,b\in R$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Wir lassen zu, dass $\phi(1_{R})\neq1_{S}$. Im Fall
    $\phi(1_{R})=1_{S}$ heißt das $\phi$ \highl{unitär}\index{Homomorphismus!unitärer}. Stets ist
    $\phi(0)=0$. Ist $\phi$ unitär, so ist $\phi(x)\in U(S)$ und
    $\phi(x)^{-1}= \phi(x^{-1})$ für $x\in U(R)$.
   \item Sind $\phi\colon R\rightarrow S$ und $\psi\colon S\rightarrow T$
    Ringhomomorphismen, so auch $\psi\circ\phi\colon R\rightarrow T$. Daher
    bilden Ringe und Ringhomomorphismen eine Kategorie $\kat{Ri}$. Neutrales
    Element in $\kat{Ri}(R,R)$ ist jeweils die Identitätsabbildung
    $\id_{R}$.
   \item Wie üblich definiert man Mono-, Epi-, Iso-, Endo- und Automorphismen
    von Ringen. Für jeden Ringisomorphismus $\phi$ ist die Umkehrabbildung
    $\phi^{-1}$ auch ein Ringisomorphismus. Daher sieht man, dass die
    Automorphismen bezüglich der Komposition eine Gruppe bilden:
    $\Aut(R)\coloneqq\Set{\alpha\colon R\rightarrow R | \alpha \text{
    Automorphismus}}$ die \highl{Automorphismengruppe} von $R$.
   \item Wie üblich hat man die  \highl{Isomorphie} von Ringen. Man bezeichnet
    diese mit $\cong$ und es ist eine Äquivalenzrelation.
   \item Seien $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$. Für jeden
    Teilring $T\subseteq R$ ist $\phi(T)\subseteq S$ ein Teilring.
    Insbesondere ist $\Bld(\phi)=\phi(R)\subseteq S$ ein Teilring. Dieser
    heißt \highl{Bild} von $\phi$. Ist $U\subseteq S$ ein Teilring, dann ist
    dagegen $\phi^{-1}(U)\subseteq R$ im Allgemeinen \emph{kein} Teilring.
    Im Allgemeinen enthält $\phi^{-1}(U)$ kein Einselement. Sind aber $U$ und
    $\phi$ unitär, so ist auch $\phi^{-1}(U)\subseteq R$ ein Teilring.
   \item Seien $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$. Für
    $I\trianglelefteq R$ ist dann $\phi(I)\trianglelefteq\phi(R)$, aber i.\,A.
    $\phi(I)\not\trianglelefteq S$. Denn ist etwa $\phi\colon\Z\rightarrow\Q$
    die Inklusionsabbildung und $I=2\Z$, so ist
    $\phi(I)=2\Z\not\trianglelefteq\Q$. Für $J\trianglelefteq S$ ist
    $\phi^{-1}(J)\trianglelefteq R$. Insbesondere ist
    $\ker(\phi)\coloneqq\phi^{-1}(\{0\})= \Set{x\in R |
    \phi(x)=0}\trianglelefteq R$ der \highl{Kern} von $\phi$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item $\C\rightarrow\C$ mit $z\mapsto\overline{z}$ (komplexe Konjugation)
    ist ein Automorphismus.
   \item Für $R\in\kat{Ri}, a\in R$ und $n\in\Z$ definiert man:
    \begin{gather*}
      na\coloneqq
	 \begin{cases}
	   a+\dotsb+a & n>0\\
	   0 & n=0\\
	   -(\abs{n}a) & n<0
	 \end{cases}
    \end{gather*}
    Dann $\phi\colon\Z\rightarrow R$ mit $n\mapsto n1$ ein Homomorphismus.
    Insbesondere ist $\ker(\phi)\trianglelefteq\Z$, also $\ker(\phi)= k\Z$ für
    genau ein $k\in\N_{0}$. Dann heißt $k$ die \highl{Charakteristik} von $R$.
    Man schreibt $k=\chr(R)$. Beispielsweise ist $\chr(\Z)=\chr(\Q)=
    \chr(\R)=0$, $\chr(\Z/n\Z)=n$ für $n\in\N_{0}$, $\chr(\FP(M))=2$ für
    jede nichtleere Menge~$M$.
   \item Für jeden Teilring $T\subseteq R$ ist die Inklusionsabbildung
    $T\rightarrow R$ ein Monomorphismus. Für $I\trianglelefteq R$ ist die
    kanonische Abbildung $R\rightarrow R/I$ mit $a\mapsto a+I$ ein
    Epimorphismus mit dem Kern~$I$. Die Ideale von $R$ sind genau die Kerne
    von Ringhomomorphismen mit Definitionsbereich~$R$.
  \end{enumerate}
\end{bsp}

\begin{satz}[Homomorphiesatz]\label{satz:4.1}
  Für $R,S\in\kat{Ri}$ und $\phi\in\kat{Ri}(R,S)$ ist $\Phi\colon
  R/\ker(\phi)\rightarrow\Bld(\phi)$ mit $a+\ker(\phi)\mapsto\phi(a)$ ein
  Isomorphismus. Insbesondere ist $R/\ker(\phi)\cong\Bld(\phi)$.
\end{satz}

%satz 4.2
\begin{satz}[1.\,Isomorphiesatz]\label{satz:4.2}
  Seien $R\in\kat{Ri}, S\subseteq R$ ein unitärer Teilring und
  $I\trianglelefteq R$. Dann ist auch $S+I$ mit $S+I\coloneqq\Set{s+x | s\in S, i\in
  I}\subseteq R$ ein unitärer Teilring, $I\trianglelefteq S+I, S\cap
  I\trianglelefteq S$ und $S/S\cap I\cong S+I/I$.
\end{satz}

%satz 4.3
\begin{satz}[2.\,Isomorphiesatz]\label{satz:4.3}
  Für $R\in\kat{Ri}$ und $I\trianglelefteq R$ ist die Abbildung $J\mapsto
  J/I\coloneqq\Set{x+I | x\in J}$ eine Bijektion zwischen der Menge aller
  Ideale~$J\trianglelefteq R$ mit $I\subseteq J$ und der Menge der Ideale in
  dem Restklassenring~$R/I$. Dabei gilt, $(R/I)/(J/I)\cong R/J$.
\end{satz}

\begin{bemerk}
  Für $R\in\kat{Ri}$ und ein Ideal~$M\trianglelefteq R$ gilt also, $M$ ist
  genau dann ein maximales Ideal, wenn $R/M$ ein einfacher Ring ist.
\end{bemerk}

%satz 4.4
\begin{satz}[Chinesischer Restsatz]
  Seien $R\in\kat{Ri}$ und $I_{1},\dotsc, I_{n}\trianglelefteq R$. Dann ist
  $\phi\colon R\rightarrow R/I_{1}\times\dotso \times R/I_{n}$ mit $a\mapsto
  (a+I_{1},\dotsc, a+I_{n})$ ein Homomorphismus und $\ker(\phi)=
  I_{1}\cap\dotsb\cap I_{n}$. Insbesondere ist $R/I_{1}\cap\dotsb\cap I_{n}$
  zu einem Teilring von $R/I_{1}\times\dotso \times R/I_{n}$ isomorph. Gilt
  $I_{i}+I_{j}=R$ für alle $i\neq j$, so ist $\phi$ surjektiv und
  $I_{1}\cap\dotsb\cap I_{n}= \sum_{g\in\Sym(n)} I_{g(1)}\cdot\dotso \cdot
  I_{g(n)}$. Insbesondere gilt, $R/I_{1}\cap\dotsb\cap I_{n}\cong
  R/I_{1}\times\dotso \times R/I_{n}$.
\end{satz}

\begin{bemerk}
  Ist $R$ kommutativ, so ist also $I_{1}\cap\dotsb\cap I_{n}= I_{1}\cdot\dotso
  \cdot I_{n}$ mit den obigen Voraussetzungen.
\end{bemerk}

\chapter{Moduln}

Sei $R$ ein Ring.
%def 5.1
\begin{defini}[Linksmoduln]
  $R$"~\highl{Linksmodul}: Menge~$M=_{R}M$, Verknüpfungen $+\colon M\times
  M\rightarrow M$ mit $(a,b)\mapsto a+b$ und $\cdot\colon R\times M\rightarrow
  M$ mit $(r,m)\mapsto rm$, Axiome:
  \begin{enumerate}
   \item $(M,+)$ abelsche Gruppe.
   \item $(rs)m=r(sm)$
   \item $(r+s)m=rm+sm$
   \item $r(m+n)=rm+rn$
   \item $1m=m$
  \end{enumerate}
  Analog definiert man den Begriff des \highl{Rechtsmodul}s $M=M_{R}$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item Sei $K$ ein Körper, so sind die $K$"~Linksmoduln die $K$"~Vektorräume.
   \item $m,n\in\N\Rightarrow K^{m\times n}$ ist $K^{m\times m}$"~Linksmodul
    und $K^{n\times n}$"~Rechtsmodul.
   \item Sei $(A,+)$ eine abelsche Gruppe. So wird $A$ ein $\Z$"~Linksmodul
    mit $na\coloneqq a+\dotsb+a$ für $n\in\N$ und $a\in A$. Umgekehrt ist in
    jedem $\Z$"~Linksmodul~$M$ die Multiplikation mit einem Element $n\in\N$
    bereits durch die Addition festgelegt: $na\coloneqq(1+\dotsb+1)a=
    1a+\dotsb+1a= a+\dotsb+a$ für $a\in M$. Also: $\Z$"~Linksmoduln sind
    abelsche Gruppen.
   \item Der Ring $R$ selbst ist ein $R$"~Links- und ein $R$"~Rechtsmodul.
    Dieser Modul heißt \highl[Modul!regulärer]{regulärer R"~Links- bzw.
    R"~Rechtsmodul}.
   \item Sei $M$ ein $R$"~Linksmodul. Dann ist $M$ ein $R^{o}$"~Rechtsmodul
    mit $mr\coloneqq rm$ mit $r\in R$ und $m\in M$. Die Eigenschaften von
    $R$"~Linksmoduln übertragen sich auf $R^{o}$"~Rechtsmoduln. Falls $R$
    kommutativ ist, ist $R=R^{o}$. Also sind das $R$"~Linksmodul gleich dem
    $R$"~Rechts\-mo\-dul.
   \item Sei $\phi\colon R\rightarrow S$ unitärer Ringhomomorphismus und $M$ ein
    $S$"~Linksmodul. Dann wird $M$ zu einem $R$"~Linksmodul mit
    $rm\coloneqq\phi(r)m$ für $r\in R$ und $m\in M$. Spezialfall: $R\subseteq
    S$ unitärer Teilring und $\phi$ die Inklusionsabbildung. Dann spricht man
    von der \highl{Einschränkung} oder \highl{Restriktion} von $M$ auf $R$.
    Die Notation dafür ist $\Res_{R}^{S}(M)$.
   \item Sei $(M_{i})_{i\in I}$ nichtleere Familie von $R$"~Linksmoduln. Dann
    erhält man das \highl[Produkt!direktes]{direkte Produkt} $\bigtimes_{i\in
    I} M_{i}= \prod_{i\in I} M_{i}= \Set{(m_{i})_{i\in I} | m_{i}\in M_{i},
    i\in I}$ als ein $R$"~Linksmodul. Die Verknüpfungen sind komponentenweise
    definiert. Für $I=\{1,\dotsc,n\}$ ergibt sich $M_{1}\times\dotso \times
    M_{n}= \bigtimes_{i=1}^{n} M_{i}= \prod_{i=1}^{n}= \Set{(m_{1},\dotsc,
    m_{n}) | m_{1}\in M_{1},\dotsc, m_{n}\in M_{n}}$.
   \item Sei $I$ eine nichtleere Menge und $M$ ein $R$"~Linksmodul. Dann ist
    $\Abb(I,M)=\bigtimes_{i\in I} M$ ein $R$"~Linksmodul mit
    $(f+g)(i)\coloneqq f(i)+ g(i)$ und $(rf)(i)= rf(i)$ mit $f,g\in\Abb(I,M),
    i\in I$  und $r\in R$. Für $i=\{1,\dotsc,n\}$ ergibt sich
    $\Abb(I,M)=\colon M^{n}$.
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  \begin{enumerate}
   \item   Abkürzung: Ab sofort entspricht \highl{Modul} gleich dem Linksmodul. Rechtsmoduln
  werden explizit erwähnt.
   \item In jedem $R$"~Modul~$M$ gilt, $r0=0$ für $r\in R$, $0m=0$ für
    $m\in M$, $(-1)m=-m$ für $m\in M$. Aber $rm=0\nRightarrow r=0\vee m=0$.
  \end{enumerate}
\end{bemerk}

%def 5.2
\begin{defini}[Untermodul]
  Ein \highl{Untermodul} eines $R$"~Moduls~$M$ ist eine Teilmenge~$N\subseteq
  M$, die mit den entsprechend eingeschränkten Verknüpfungen ein $R$"~Modul
  ist, d.\,h. $0\in N$ und für $r,s\in R, m,n\in N\Rightarrow rm+sn\in N$.
\end{defini}

\begin{bsp}
  \begin{enumerate}[(a)]
   \item   Sei $K$ ein Körper und $V$ ein Vektorraum. Dann sind die
    Untermoduln von $V$ die Untervektorräume von $V$.
   \item Sei $A$ ein $\Z$"~Modul, d.\,h. eine abelsche Gruppe, so sind die
    Untermoduln von $A$ die Untergruppen von $A$.
   \item Sei $M$ ein $R$"~Modul und $(N_{i})_{i\in I}$ eine nichtleere Familie
    von Untermoduln von $M$. Dann ist $\bigcap_{i\in I} n_{i}\subseteq M$ ein
    Untermodul. Speziell: $X\subseteq M\Rightarrow
    D\coloneqq\bigcap_{N\subseteq M, X\subseteq N} N\subseteq M$ ein
    Untermodul. Das heißt von $X$ erzeugter Untermodul. Man schreibt,
    $D=\colon RX$. Die Element von $RX$ sind so genannte
    $R$"~\highl{Linearkombination}en $r_{1}x_{1}+\dotsb+ r_{n}x_{n}$ mit
    $r_{1},\dotsc, r_{n}\in R$ und $x_{1},\dotsc, x_{n}\in X$. Ist $X=\{x\}$
    einelementig, so schreibt man $RX=Rx$.

    Ist $Y\subseteq M$ mit $M=RY$, so heißt $Y$ \highl{Erzeugendensystem} von
    $M$. Hat $M$ ein endliches Erzeugendensystem, so heißt der Modul~$M$
    \highl{endlich erzeugt}. Ist $M=Ry$ für ein $y\in M$, so heißt $M$
    \highl[Modul!zyklisches]{zyklisch}.
    %Vorlesung vom 29.4.2011
   \item Sei $M$ ein $R$"~Modul und $(N_{i})_{I\in I}$ eine Familie von
    Untermoduln von $M$. Dann ist:
    \begin{gather*}
      \sum_{i\in I} M_{i}\coloneqq\Set{\sum_{i\in I} x_{i} | x_{i}\in N_{i},
	 x_{i}=0 \text{ für fast alle } i}\subseteq M
    \end{gather*}
    ein Untermodul und heißt die \highl{Summe} von $(N_{i})_{I\in I}$. Dann
    ist $\sum_{i\in I} N_{i}$ der von $\bigcup_{i\in I} N_{i}$ erzeugte
    Untermodul von $M$.

    Für den Spezialfall $I=\{1,\dotsc,n\}$ folgt, $\sum_{i\in I} N_{i}=
    \sum_{i=1}^{n} N_{i}= N_{1}+\dotsb+ N_{n}$.
   \item Sei $(M_{i})_{I\in I}$ eine Familie von $R$"~Moduln. Dann ist
    \begin{gather*}
      \coprod_{i\in I} M_{i}\coloneqq\Set{(m_{i})\in\prod_{i\in I} M_{i} |
	 m_{i}=0 \text{ für fast alle } i}\subseteq\prod_{i\in I} M_{i}
    \end{gather*}
    das \highl{Koprodukt} von $(M_{i})_{i\in I}$.
   \item \highl{Linksideal}~$L$ von $R$: Untermodul des regulären
    $R$"~Linksmoduls~$R$, d.\,h. $L\subseteq R$, $0\in L$ und $rx+sy\in L$ für
    $r,s\in R$ und $x,y\in L$. Analog definiert man das \highl{Rechtsideal}.
    Für $I\subseteq R$ gilt also, $I\trianglelefteq R\Leftrightarrow I$ Links-
    und Rechtsideal in $R$ ist.
   \item Sei $M$ ein $R$"~Modul. Dann sind $0\coloneqq\{0\}$ und $R$
    Untermoduln. Man bezeichnet $0$ als den
    \highl[Untermodul!trivialer]{trivialen Untermodul} und $N\subseteq M$ mit
    $N\neq M$ als \highl[Untermodul!echter]{echten Untermodul}. Weiter heißt
    $M\neq0$ \highl[Untermodul!einfaches]{einfach} oder
    \highl[Untermodul!irreduzibles]{irreduzibel}, wenn $0$ und $M$ die
    einzigen Untermoduln sind.
  \end{enumerate}
\end{bsp}

\begin{satz}[Dedekind-Identität]
  Sei $M$ ein $R$"~Modul und $U,V,W\subseteq M$ Untermoduln mit $U\subseteq
  W$. Dann folgt, $(U+V)\cap W= U+(V\cap W)$.
\end{satz}

\begin{bemerk}
  Sei $M$ ein $R$"~Modul und $N\subseteq M$ ein Untermodul. Dann heißt
  $M/N\coloneqq\Set{m+N | m\in M}$ der \highl{Faktormodul} von $M$ nach $N$.
  Dabei ist $m+N\coloneqq\Set{m+n | n\in N}$ die \highl{Nebenklasse} oder
  \highl{Restklasse} von $m$ nach $N$. Es gelten die Rechenregeln:
  \begin{align*}
    (m+N)+(m'+N) &\coloneqq (m+m')+N\\
    r(m+N) &\coloneqq rm+N
  \end{align*}
  Wir schreiben: $m\equiv m'\pmod{N}\Leftrightarrow m-m'\in N$.
\end{bemerk}

%def 5.3
\begin{defini}[Lineare Abbildung]
  Seien $M$ und $N$ zwei $R$"~Moduln und $f\in\Abb(M,N)$ mit $f(rx+sy)=
  rf(x)+sf(y)$ für $r,s\in R$ und $x,y\in M$. Dann bezeichnet man die
  Abbildung $f$ als
  \highl[Abbildung!lineare]{R"~linear}\index{linear} oder als
  \highl[Homomorphismus]{R"~Homomorphismus}. Setze
  $\Hom_{R}(M,N)\coloneqq\Set{f\in\Abb(M,N) | f \text{ist $R$"~linear}}$. Dann
  ist $\End_{R}(M)\coloneqq\Hom_{R}(M,M)$ und $\Aut_{R}(M)=
  \Set{f\in\End_{R}(M) | f \text{ bijektiv}}$. Wie üblich definiert man die
  anderen Morphismen.
\end{defini}

\begin{bemerk}\label{bem:5.3}
  \begin{enumerate}
   \item Die $R$"~Moduln und $R$"~Homomorphismen bilden eine Kategorie
    $\vorunten{R}\kat{Mod}$. Analog ergibt sich die Kategorie $\kat{Mod}_{R}$
    für Rechtsmoduln. Die endlich erzeugten $R$"~Moduln bilden eine volle
    Teilkategorie $\vorunten{R}\kat{mod}$ und analog auch $\kat{mod}_{R}$.
   \item $\Hom_{R}(M,N)$ ist eine abelsche Gruppe ($\Z$"~Modul) mit
    $(f+g)(x)\coloneqq f(x)+g(x)$ für $f,g\in\Hom_{R}(M,N)$ und $x\in M$. Das
    Nullelement ist die Nullabbildung.
   \item Sei $r\in R$ und $f\in\Hom_{R}(M,N)$. Dann ist $rf\colon M\rightarrow
    N$ mit $x\mapsto rf(x)$ im Allgemeinen \emph{kein} $R$"~Homomorphismus.
    Wenn $R$ kommutativ ist, so ist $rf\in\Hom_{R}(M,N)$ für $r\in R$ und
    $f\in\Hom_{R}(M,N)$. Somit ist $\Hom_{R}(M,N)$ ein $R$"~Modul.
   \item Seien $L,M,N\in\vorunten{R}\kat{Mod}$, $f\in\Hom_{R}(L,M)$ und
    $g\in\Hom_{R}(M,N)$. Dann ist $g\circ f\in\Hom_{R}(L,N)$. Stets ist
    $\id_{L}$ ein $R$"~Automorphismus. Es gelten die Distributivgesetze:
    \begin{align*}
      (g+g')\circ f &= g\circ f+g'\circ f\\
      g\circ(f+f') &= g\circ f+g\circ f'
    \end{align*}
    Daher bilden die Endomorphismen einen Ring bezüglich $+$ und $\circ$.
    Dieser heißt \highl{Endomorphismenring} $\End_{R}(M)$.

    Wichtig: $M$ ist ein $\End_{R}(M)$"~Modul mit $f\cdot m\coloneqq f(m)$ für
    $f\in\End_{R}(M)$ und $x\in M$. Seien $f\in\Hom_{R}(L,M)$ und
    $g\in\Hom_{R}(M,N)$ zwei Isomorphismen, so sind auch $g\circ f$ und
    $f^{-1}$ Isomorphismen. Daher ist $\Aut_{R}(M)= U(\End_{R}(M))$ bezüglich
    $\circ$ eine Gruppe, die \highl{Automorphismengruppe}.
   \item Seien $M,N\in\vorunten{R}\kat{Mod}$ und $f\colon M\rightarrow N$ ein
    $R$"~Isomorphismus. Dann sind $M$ und $N$ \highl{isomorph}. Wir schreiben,
    $M\simeq N$ oder $M\simeq_{R}N$. Die Relation $\simeq$ ist eine
    Äquivalenzrelation.
   \item Seien $M,N\in \vorunten{R}\kat{Mod}$ und $f\in\Hom_{R}(M,N)$ Es ist
    leicht zu sehen, dass für $U\subseteq M$ Untermodul auch $(U)\subseteq N$
    ein Untermodul ist. Umgekehrt sei $V\subseteq N$ ein Untermodul. Dann ist
    auch $f^{-1}(V)\subseteq M$ ein Untermodul. Speziell ist
    $\ker(f)=f^{-1}(0)= \Set{x\in M | f(x)=0}\subseteq M$ ein Untermodul, der
    so genannte \highl{Kern}.

    Es ist leicht einzusehen, dass $F\colon M/\ker f\rightarrow\Bld(f)$ mit
    $x+\ker f\mapsto f(x)$ ein wohldefinierter $R$"~Isomorphismus. Folglich
    haben wir nach dem Homomorphiesatz (\autoref{satz:4.1}): $M/\ker
    f\simeq\Bld(f)$.

    Sei $U\subseteq M$ Untermodul. So ist $f^{-1}(f(U))= U+\ker f$. Folglich
    sind die Abbildungen $U\mapsto f(U)$ und $V\mapsto f^{-1}(V)$ zueinander
    inverse Bijektionen zwischen der Menge aller Untermoduln $U\subseteq M$
    mit $\ker f\subseteq U$  und der Menge aller Untermoduln
    $V\subseteq\Bld(f)$ (Korrespondenzsatz).

    Seien $K,L\subseteq M$ Untermoduln. Dann ist $K/K\cap L\rightarrow K+L/L$
    mit $x+(K\cap L)\mapsto x+L$ ein $R$"~Isomorphismus. Also folgt nach dem
    1.\,Isomorphiesatz (\autoref{satz:4.2}): $K/K\cap L\simeq K+L/L$. Für
    $K\subseteq L\subseteq M$ Untermoduln folgt nach dem 2.\,Isomorphiesatz
    (\autoref{satz:4.3}): $(M/K)/(L/K)\simeq M/L$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}\label{bsp:5.3}
  \begin{enumerate}[(a)]
   \item Sei $M\in\vorunten{R}\kat{Mod}$ und $N\subseteq M$ ein Untermodul.
    Die \highl{Inklusionsabbildung} $N\rightarrow M$ mit $n\mapsto n$ ist ein
    $R$"~Monomorphismus.
   \item Die kanonische Abbildung $M\rightarrow M/N$ mit $m\mapsto m+N$ ist
    ein $R$"~Epimorphismus mit dem Kern~$N$.
   \item Sei $(M_{i})_{i\in I}$ eine Familie von $R$"~Moduln,
    $M\coloneqq\prod_{i\in I} M_{i}$ und $j\in I$. Dann ist $p_{j}\colon
    M\rightarrow M_{j}$ mit $(m_{i})_{i\in I}\mapsto m_{j}$ ein
    $R$"~Epimorphismus. Er heißt der \highl{Projektor}. Die Abbildung
    $q_{j}\colon M_{j}\rightarrow M$ mit $m_{j}\mapsto(m_{i})_{i\in I}$, wobei
    $m_{i}=0$ für $i\neq j$, ist ein $R$"~Epimorphismus und heißt
    \highl{Injektor}. Es ist leicht zu sehen, dass $p_{j}\circ
    q_{j}=\id_{m_{j}}$ für $j\in I$ und $p_{k}\circ q_{j}=0$ für $j\neq k$
    ist. Daher ist $l_{j}\coloneqq q_{j}\circ p_{j}\in\End_{R}(M)$ idempotent
    wegen $l_{j}^{2}= l_{j}$ für $j\in I$. Außerdem ist $l_{k}\circ l_{j}=0$
    für $j\neq k$. Für $\abs{I}<\infty$ folgt, $\sum_{i\in I} e_{i}=\id M$.
  \end{enumerate}
\end{bsp}

\begin{satz}[3.\,Isomorphiesatz]
  Sei $M$ ein $R$"~Modul, $U_{0},U,V_{0},V\subseteq M$ Untermoduln mit
  $U_{0}\subseteq U$ und $V_{0}\subseteq V$. Dann folgt:
  \begin{gather*}
    \frac{U_{0}+(U\cap V)}{U_{0}+(U\cap V_{0})} \simeq\frac{V_{0}+(V\cap
       U)}{V_{0}+(V\cap U_{0})} \simeq\frac{U\cap V}{(U_{0}\cap V)+(V_{0}\cap U)}
  \end{gather*}
\end{satz}

%def 5.4
\begin{defini}[Untermodulreihe]
  Sei $M\in\vorunten{R}\kat{Mod}$. Dann ist
  \begin{gather}
    \label{eq:5.4}
       M=M_{0}\supseteq M_{1}\supseteq\dotso \supseteq M_{l}=0
  \end{gather}
  die \highl{Untermodulreihe} von $M$. Die $M_{i-1}/M_{i}$ heißen
  \highl[Faktor]{Faktoren} und $l$ ist die \highl{Länge} von \autoref{eq:5.4}.
  Zwei Untermodulreihen von $M$ heißen
  \highl[Untermodulreihe!isomorphe]{isomorph}\index{isomorph} oder
  \highl[Untermodulreihe!äquivalente]{äquivalent}\index{äquivalent}, wenn ihre
  Länge gleich ist und die Faktoren bis auf Reihenfolge isomorph sind. Eine
  \highl{Verfeinerung} von \autoref{eq:5.4} entsteht durch Einfügen neuer
  Untermoduln. Sind alle $M_{i}$ verschieden, so heißt die Untermodulreihe aus
  \autoref{eq:5.4} eine \highl[Untermodulreihe!Wiederholung]{Untermodulreihe
  ohne Wiederholung}.
\end{defini}

%def 5.5
\begin{defini}[Kompositionsreihe]
  Eine Untermodulreihe eines $R$"~Moduls heißt \highl{Kompositionsreihe},
  falls sie selbst keine Wiederholungen enthält, wohl aber jede Verfeinerung.
\end{defini}

\begin{satz}[Satz von Jordan-Hölder]
  Hat ein $R$"~Modul eine Kompositionsreihe, so sind je zwei
  Kompositionsreihen isomorph.
\end{satz}

\begin{bemerk}
  Nach der \autoref{bem:5.3} Punkt~(vi) ist eine Untermodulreihe von $M$ genau
  dann eine Kompositionsreihe, wenn die Faktoren  einfache Moduln sind.
  Gegebenenfalls sind diese durch $M$ bis auf Reihenfolge und Isomorphien
  eindeutig bestimmt. Sie heißen
  \highl[Kompositionsfaktor]{Kompositionsfaktoren} von $M$. Außerdem haben
  alle Kompositionsreihen von $M$ die gleiche Länge. Sie heißt
  \highl{Kompositionslänge} von $M$.
\end{bemerk}

\begin{bsp}
  Sei $K$ ein Körper und $V\in\vorunten{K}\kat{vec}$ endlich"=dimensional.
  Dann ist die Kompositionslänge gleich der Dimension.
\end{bsp}

%satz 5.6
\begin{satz}
  Für $M\in\vorunten{R}\kat{Mod}$ sind äquivalent:
  \begin{enumerate}[(1)]
   \item (Aufsteigende Kettenbedingung) Zu jeder Folge $N_{1}\subseteq
    N_{2}\subseteq N_{3}\subseteq\dotso$ von Untermoduln von $M$ existiert ein
    $k\in\N$ mit $N_{k}=N_{k+1}=N_{k+2}=\dotsb$.
   \item (Maximalbedingung für Untermoduln) Jede nichtleere Menge von
    Untermoduln von $M$ hat ein maximales Element bezüglich $\subseteq$.
   \item Jeder Untermodul von $M$ ist endlich erzeugt.\footnote{Das ist
    \emph{nicht} äquivalent dazu, dass $M$ endlich erzeugt ist!}
  \end{enumerate}
\end{satz}

\begin{defini}[noethersch]
  Gegebenenfalls heißt $M$ \highl{noethersch}.
\end{defini}

%Vorlesung vom 2.5.2011
\begin{bemerk}\label{bem:5.6}
  Für $M\in\vorunten{R}\kat{Mod}$ und jeden Untermodul $N\subseteq M$ gilt,
  dass $M$ genau dann noethersch ist, wenn $N$ und $M/N$ noethersch sind.
\end{bemerk}

%satz 5.7
\begin{satz}
  Für $M\in\vorunten{R}\kat{Mod}$ sind äquivalent:
  \begin{enumerate}[(1)]
   \item (Absteigende Kettenbedingung) Zu jeder Folge $N_{1}\supseteq
    N_{2}\supseteq N_{3}\dotso$ von Untermoduln von $M$ existiert ein $k\in\N$
    mit $N_{k}=N_{k+1}=\dotsb$.
   \item (Minimalbedingung für Untermoduln) Jede nichtleere Menge von
    Untermoduln von $M$ hat ein maximales Element bezüglich $\subseteq$.
  \end{enumerate}
\end{satz}

\begin{defini}[artinsch]
  Gegebenenfalls heißt $M$ \highl{artinsch}.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Analog zu \autoref{bem:5.6} gilt für $M\in\vorunten{R}\kat{Mod}$ und
    jeden Untermodul $N\subseteq M$, $M$ ist genau dann artinsch, wenn $N$,
    $M/N$ artinsch ist.
   \item Ist $M\in\vorunten{R}\kat{Mod}$ und sind $N$ sowie $N'$ artinsche
    bzw. noethersche Untermoduln eines $R$"~Moduls~$M$, so ist auch $N+N'$
    artinsch bzw. noethersch. Denn $N+N'/N'\simeq N/N\cap N'$.
  \end{enumerate}
\end{bemerk}

%def 5.8
\begin{defini}\label{def:5.8}
  $M\in\vorunten{R}\kat{Mod}$ hat genau dann eine Kompositionsreihe, wenn $M$
  sowohl artinsch und noethersch ist.
\end{defini}

%def 5.9
\begin{defini}[Links-, rechtsnoethersch, -artinsch bzw. linksartinsch]
  Der Ring $R$ heißt \highl{linksnoethersch} (\highl{linksartinsch}), wenn
  $\vorunten{R}R$ noethersch (artinsch) ist. Analog hat man
  \highl{rechtsnoethersch} und \highl{rechtsartinsch}. Ist $R$ links- und
  rechtsnoethersch (links- und rechtsartinsch), so heißt der Ring
  \highl[Ring!noethersch]{noethersch}\index{noethersch}
  (\highl[Ring!artinsch]{artinsch}\index{artinsch}).
\end{defini}

\begin{bsp}
  Sei $K$ ein Körper und $n\in\N$. Dann ist $R\coloneqq K^{n\times n}$
  artinsch und noethersch. Denn jedes Links- und auch Rechtsideal ist ein
  $K$"~Untervektorraum.
\end{bsp}

\begin{satz}
  Sei $R$ linksnoethersch (linksartinsch) und $M\in\vorunten{R}\kat{mod}$.
  Dann ist $M$ noethersch (artinsch).
\end{satz}

\chapter{Einfache und halbeinfache Moduln und Ringe}

%bem 6.1
\begin{bemerk}
  Für $M,N\in\vorunten{R}\kat{Mod}$ und $f\in\Hom_{R}(M,N)$ gilt, wie üblich:
  $f$ ist genau dann injektiv, wenn $\ker(f)=\{0\}$.
\end{bemerk}

\begin{satz}[Schurs Lemma]\label{satz:6.1}
  Für $M,N\in\vorunten{R}\kat{Mod}$ gilt:
  \begin{enumerate}
   \item Sei $M$ einfach und $0\neq f\in\Hom_{R}(M,N)$. Dann ist $f$ injektiv.
   \item Sei $N$ einfach und $0\neq f\in\Hom_{R}(M,N)$. Dann ist $f$ surjektiv.
   \item Sei $M,N$ einfach und $M\not\simeq N$. Dann ist $\Hom_{R}(M,N)=0$.
   \item Wenn $M$ einfach ist, so ist $\End_{R}(M)$ ein Schiefkörper.
  \end{enumerate}
\end{satz}

%def 6.2
\begin{defini}[Maximales und minimales Linksideal]
  Ein Linksideal $M\neq R$ heißt
  \highl[Linksideal!maximales]{maximal}\index{maximal}, wenn kein Linksideal
  $L\subsetneq R$ mit $M\subsetneq L$ existiert. Analog kann man ein
  \highl[Linksideal!minimales]{minimales Linksideal}\index{minimal}
  konstruieren.
\end{defini}

\begin{bemerk}\label{bem:6.2}
  \begin{enumerate}
   \item Für jedes Linksideal $M\subseteq R$ gilt, $M$ ist genau dann maximal,
    wenn $R/M$ ein einfacher $R$"~Modul ist und $M$ ist genau dann minimal, wenn
    $M$ ein einfacher $R$"~Modul ist.
   \item Jedes Linksideal $L\subsetneq R$ ist in einem maximalen Linksideal
    $M\subseteq R$ enthalten. Der Beweis geht analog zu \autoref{satz:3.9}.
    Insbesondere enthält jeder Ring $R\neq0$ ein  maximales Linksideal $M$.
    Daher hat jeder Ring $R\neq0$ mindestens einen einfachen $R$"~Modul.
    Nämlich $R/M$.

    Dagegen existieren Ringe, die keine minimalen Linksideale haben.
    Beispielsweise ist $\Z$ solch ein Ring.
  \end{enumerate}
\end{bemerk}

\begin{satz}\label{satz:6.2}
  Sei $S$ ein einfacher $R$"~Modul. Dann existiert ein einfaches Linksideal
  $M\subseteq R$ mit $S\simeq R/M$.
\end{satz}

%satz 6.3
\begin{satz}
  Sei $M\in\vorunten{R}\kat{Mod}$ und $(N_{i})_{i\in I}$ eine nichtleere
  Familie von Untermoduln von $M$. Dann sind äquivalent:
  \begin{enumerate}[(1)]
   \item $f\colon\coprod_{i\in I} N_{i}\rightarrow\sum_{i\in I} N_{i}$ mit
    $(n_{i})_{i\in I}\mapsto\sum_{i\in I} n_{i}$ ist ein $R$"~Isomorphismus.
   \item Aus $(n_{i})_{i\in I}\in\coprod_{i\in I} N_{i}$ mit $\sum_{i\in I}
    n_{i}=0$ folgt $n_{i}=0$ für alle $i\in I$.
   \item $j\in I\Rightarrow N_{j}\cap\sum_{j\neq i\in I} N_{i}=0$.
  \end{enumerate}
\end{satz}

\begin{defini}[Direkte Summe]
  Gegebenenfalls heißt die Summe von $(N_{i})_{I\in I}$ die
  \highl[Summe!direkte]{direkte Summe}. Wir schreiben
  \begin{gather*}
    \sum_{i\in I} N_{i}=\colon \bigoplus_{i\in I} N_{i}.
  \end{gather*}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Im Fall $I=\{1,\dotsc,n\}$ folgt leicht: $\sum_{i\in I} N_{i}=
    \bigoplus_{i\in I} N_{i}\Leftrightarrow N_{j}\cap\sum_{i=1}^{j-1}N_{i}=0$
    für alle $j$. Wir schreiben $\bigoplus_{i=1}^{n} N_{i}= N_{1}\oplus\dotso
    \oplus N_{n}$.
   \item Sei $I$ beliebig und $\sum_{i\in I} N_{i}= \bigoplus_{i\in I}
    N_{i}=\colon N$. Dann ist $p_{j}\colon N\rightarrow N_{j}$ mit
    $\sum_{i\in I} n_{i}\mapsto n_{j}$ ein $R$"~Epimorphismus und heißt
    \highl{Projektor}. Weiter ist $q_{j}\colon N_{j}\rightarrow N$ mit
    $n_{j}\mapsto n_{j}$ ein $R$"~Monomorphismus und heißt \highl{Injektor}.

    Wie in \autoref{bsp:5.3} ist $p_{j}\circ q_{j}=\id_{N_{j}}$ und
    $p_{k}\circ q_{j}=0$ für $j\neq k$. Außerdem ist $e_{j}=q_{j}\circ
    p_{j}\in\End_{R}(M)$ idempotent und es gilt $e_{k}\circ e_{j}=0$ für
    $k\neq j$. Wenn $I$ endlich ist, so ist $\sum_{i\in I} e_{i}=0\id_{N}$.
   \item Ist $M=N\oplus N'$ mit Untermoduln $N,N'\subseteq M$, so heißt $N$
    \highl[Summand!direkter]{direkter Summand} von $M$ und $N'$ heißt
    \highl{Komplement} von $N$ in $M$. Wir schreiben $N\mid M$. Im Allgemeinen
    ist $N'$ durch $N$ und $M$ \emph{nicht} eindeutig bestimmt. 
  \end{enumerate}
\end{bemerk}

%satz 6.4
\begin{satz}\label{satz:6.4}
  Für einen $R$"~Modul $M$ sind die folgenden Aussagen äquivalent:
  \begin{enumerate}[(1)]
   \item $M$ lässt sich als Summe einfacher Untermoduln schreiben.
   \item $M$ lässt sich direkte Summe einfacher Untermoduln schreiben.
   \item Jeder Untermodul $N\subseteq M$ hat ein Komplement in $M$.
  \end{enumerate}
\end{satz}

\begin{defini}[Halbeinfacher, vollständig reduzibler Modul]
  Gegebenenfalls heißt der Modul $M$
  \highl[Modul!halbeinfacher]{halbeinfach}\index{halbeinfach} oder
  \highl[Modul!vollständig reduzibler]{vollständig
    reduzibel}\index{vollständig reduzibel}.
\end{defini}

\begin{bemerk}
  Wie in der Algebra folgt, $M$ halbeinfacher $R$"~Modul, $N\subseteq M$
  Untermodul, so ist auch $N,M/N$ halbeinfach.
\end{bemerk}

%def 6.5
\begin{defini}[Halbeinfacher Ring]
  Ist der reguläre Linksmodul $\vorunten{R}R$ halbeinfach, so heißt der Ring
  $R$ \highl[Ring!halbeinfach]{halbeinfach}\index{halbeinfach}.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Genauer sollte man "`linkshalbeinfach"' sagen. Es zeigt sich aber,
    dass jeder "`linkshalbeinfache"' Ring auch "`rechtshalbeinfach"' ist und
    umgekehrt.
   \item Sei $R$ halbeinfach  und $R=\bigoplus_{i\in I} M_{i}$ mit einfachen
    Untermoduln $M_{i}$, d.\,h. mit minimalen Linksidealen. Wir schreiben $1=
    \sum_{i\in I} m_{i}$ mit $m_{i}\in M_{i}$ für alle $i\in I$. Dabei ist
    $J=\Set{i\in I | m_{i}\neq0}$ endlich. Dann ist also $1=\sum_{j\in J}
    m_{j}$, d.\,h. $r=r1=\sum_{j\in J}rm_{j}\in\sum_{j\in J} M_{j}$ für alle
    $r\in R$, d.\,h. $R=\sum_{j\in J} M_{j}= \bigoplus_{j\in J} M_{j}$. Somit
    ist $R$ eine direkte Summe \emph{endlich vieler} einfacher Untermoduln.

    Insbesondere ist $R$ linksartinsch und auch linksnoethersch. Nach der
    \autoref{def:5.8} hat $\vorunten{R}R$ eine Kompositionsreihe. Nach
    dem \autoref{satz:6.2} kommt jeder einfache $R$"~Modul bis auf Isomorphie
    als Kompositionsfaktor von $\vorunten{R}R$ vor. Daher existieren bis auf
    Isomorphie nur \emph{endlich viele} einfache $R$"~Moduln.
  \end{enumerate}
\end{bemerk}

\begin{satz}
  Ist $R$ halbeinfach, so auch jeder $R$"~Modul.
\end{satz}

%satz 6.6
\begin{satz}\label{satz:6.6}
  \begin{enumerate}
   \item Sei $M$ ein $R$"~Modul ($M\in\vorunten{R}\kat{Mod}$) und $n\in\N$.
    Dann ist $\End_{R}(M^{n})\cong\End_{R}(M)^{n\times n}$.
   \item $M_{1},\dotsc, M_{n}\in\vorunten{R}\kat{Mod}$,
    $\Hom_{R}(M_{i},M_{j})=0$ für alle $i\neq
    j\Rightarrow\End_{R}(M_{1}\times\dotso \times
    M_{n})\cong\End_{R}(M_{1})\times\dotso \times\End_{R}(M_{n})$.
   \item $e\in R$ idempotent. So ist $\End_{R}(Re)\cong eRe$. Insbesondere
    $\End_{R}(\vorunten{R}R)\cong R^{o}$.
  \end{enumerate}
\end{satz}

%satz 6.7
\begin{satz}[Satz von Wedderburn]\label{satz:6.7}
  Genau dann ist der Ring $R$ halbeinfach, wenn Zahlen $l\in\N_{0}$,
  $d_{1},\dotsc, d_{l}\in\N$ und Schiefkörper $D_{1},\dotsc, D_{l}$ existieren
  mit $R\cong D_{1}^{d_{1}\times d_{1}}\times\dotso D_{l}^{d_{l}\times
  d_{l}}$. Gegebenenfalls ist $l$ eindeutig, $d_{1},\dotsc, d_{l}$ sind bis
  auf die Reihenfolge eindeutig und $D_{1},\dotsc, D_{l}$ sind bis auf die
  Reihenfolge und Isomorphie eindeutig.
\end{satz}

\begin{bemerk}
  \begin{enumerate}
   \item $l$ ist die Anzahl der Isomorphieklassen einfacher $R$"~Moduln.
   \item Für $i=1,\dotsc,l$ ist $M_{i}\coloneqq D_{i}^{d_{i}\times1}$ ein
    einfacher Modul über $S\coloneqq D_{1}^{d_{1}\times d_{1}}\times\dotso
    \times D_{l}^{d_{l}\times d_{l}}$ mit $(s_{1},\dotsc, s_{l})m_{i}\coloneqq
    s_{i}d_{i}$ für $s_{1}\in D_{1}^{d_{1}\times d_{1}},\dotsc, s_{l}\in
    D_{l}^{d_{l}\times d_{l}}$, $m_{i}\in M_{i}$.
   \item Für $i=1,\dotsc,l$ ist $d_{i}$ die Vielfachheit von $M_{i}$ als
    Kompositionsfaktor von $\vorunten{S}S$.
   \item Analog ist $R$ genau dann rechtshalbeinfach, wenn obige Bedingung
    erfüllt ist. Daher ist "`rechtshalbeinfach"' dasselbe wie
    "`linkshalbeinfach"'.
  \end{enumerate}
\end{bemerk}


\chapter{Übungsaufgaben}
\section{Aufgaben zu normierten Räumen}

Wir betrachten Folgenräume $l_{p}\coloneq l_{p}(\K)\coloneq  \{x=(\xi_{1},
\xi_{2},\dotsc)\colon \xi_{i}\in\K, \sum_{i=1}^{\infty}
\abs{\xi_{i}}^{p}<\infty\}$ mit $0<p\leq\infty$ und
$\norm{x}_{p}\coloneq (\sum_{i=1}^{\infty} \abs{\xi_{i}}^{p})^{\nicefrac{1}{p}}$
mit $0<p<\infty$. Weiter ist $l_{\infty}\coloneq l_{\infty}(\K)\coloneq \{x=
(\xi_{1}, \xi_{2},\dotsc)\colon \xi_{i}\in\K, \sup_{1\leq i<\infty}
\abs{\xi_{i}}<\infty\}$. Dann kann man folgende Norm festlegen:
$\norm{x}_{\infty}\coloneq \sup_{1\leq i<\infty} \abs{\xi_{i}}$. Seien
$x=(\xi_{i}), y=(\eta_{i})$, so schreibt man $x\cdot y=(\xi_{i}\eta_{i}),
x+y\coloneq (\xi_{i}+\eta_{i})$ und $\lambda x\coloneq (\lambda\xi_{i})$ für $\lambda\in\K$.
\begin{enumerate}[{A}ufg{a}be 1]
 \item Man zeige die folgenden Ungleichungen:
  \begin{itemize}
   \item \highl[Ungleichung!Höldersche]{Höldersche Ungleichung}: Seien $0<r,
    p,q\leq\infty$. Dann gilt für $x\in l_{p}, y\in l_{p}$:
    \begin{gather*}
      \norm{x\cdot y}_{r}\leq \norm{x}_{p}\norm{y}_{q}\qquad\frac{1}{r}=
	 \frac{1}{p}+ \frac{1}{q}
    \end{gather*}
   \item \highl[Ungleichung!Minkowskische]{Minkowskische Ungleichung}: Sei
    $0<p\leq\infty$. Dann gilt für $x,y\in l_{p}$:
    \begin{gather*}
      \norm{x+y}_{p}\leq\max\{2^{\nicefrac{1}{p}-1}, 1\}(\norm{x}_{p}+
	 \norm{y}_{p})
    \end{gather*}
  \end{itemize}
 \item Man zeige: $l_{p}<l_{q}$ für $0<p<q\leq\infty$ und es gilt
  $\norm{x}_{q}\leq\norm{x}_{p}$ für $x\in l_{p}$.
 \item Man zeige, dass die Räume $[l_{p}, \norm{\cdot}_{p}]$ für $1\leq
  p\leq\infty$ Banachräume sind.
 \item Man zeige, dass $l_{p}$ für $1\leq p<\infty$ separabel und $l_{\infty}$
  nicht separabel ist.
\end{enumerate}

\section{Aufgaben zu Operatoren}

\begin{enumerate}[{A}ufg{a}be 1]
 \item Es gilt $\norm{T}=\sup_{\norm{x}<1} \norm{Tx}= \sup_{\norm{x}=1}
  \norm{Tx}= \sup_{x\neq0} \frac{\norm{Tx}}{\norm{x}}=\inf\{c\geq0\colon
  \forall x\in X\colon\norm{Tx}\leq c\norm{x}\}$.\\
  Sei $\alpha\coloneq \sup_{\norm{x}<1} \norm{Tx}$. Es ist klar, dass
  $\norm{T}\geq\alpha$ gilt. Sei nun $\epsilon>0$ und $x\in X$ beliebig. Dann
  ist $\frac{1}{\norm{x}+\epsilon} \norm{Tx}=
  \norm{T(\frac{x}{\norm{x}+\epsilon})}\leq \alpha\Rightarrow \norm{Tx}\leq
  \alpha(\norm{x}+\epsilon)\xrightarrow{\epsilon\rightarrow0}
  \alpha\norm{x}\Rightarrow \norm{Tx}\leq\alpha\norm{x}\Rightarrow
  \norm{T}\leq\alpha$.

  Sei nun $\beta\coloneq \sup_{\norm{x}=1} \norm{Tx}$. Dann ist
  $\norm{\frac{x}{\norm{x}}}=1$  und es folgt,
  $\norm{T(\frac{x}{\norm{x}})}\leq \beta\Rightarrow\norm{Tx}\leq\beta
  \norm{x}$ für alle $x\in X$. Also folgt, dass $\norm{T}\leq\beta$.

  Sei $\gamma\coloneq \sup_{x\neq0} \frac{\norm{Tx}}{\norm{x}}\Rightarrow
  \norm{Tx}\leq \gamma\norm{x}$ für alle $x\in X$. Also ist
  $\norm{T}\leq\gamma$. Für $\norm{T}\geq\gamma$ existiert ein $\epsilon>0$
  beliebig und es existiert ein $x_{\epsilon}\neq0$ mit $\gamma-\epsilon\leq
  \frac{\norm{Tx_{\epsilon}}}{\norm{x_{\epsilon}}}
  =\norm{T(\frac{x_{\epsilon}}{\norm{x_{\epsilon}}})} \leq\norm{T}\Rightarrow
  \norm{T}\geq\gamma-\epsilon\Rightarrow\norm{T}\geq\gamma$ für
  $\epsilon\rightarrow0$.

  Sei $A\coloneq \inf\{c\geq0\colon\forall x\in X\colon\norm{Tx}\leq
  c\norm{x}\}$ und $c>A$. Dann gilt für alle $x\in X$: $\norm{Tx}\leq
  c\norm{x}\Rightarrow\norm{T}\leq c\Rightarrow\norm{T}\leq A$. Wegen
  $\norm{Tx}\leq\norm{T} \norm{x}$ folgt, dass $A\leq\norm{T}$.
\end{enumerate}


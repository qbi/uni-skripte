\section{Lineare Teilräume}

\begin{defini}
  Sei $X$ ein Vektorraum. Eine beliebige Teilmenge $M\subseteq X$ heißt genau
  dann \highl[Teilraum!linearer]{linearer Teilraum} von $X$, wenn für alle
  $\alpha, \beta\in\K$ und für alle $x,y\in M$ gilt: $\alpha x+\beta+y\in M$.
\end{defini}

\begin{defini}
  Sei $\emptyset\neq M\subseteq X$. Dann heißt $\bigcap_{N\supseteq M} N$ die
  \highl[Hülle!lineare]{lineare Hülle} von $M$. Bei der Vereinigung ist $N$
  ein Teilraum von $X$.
\end{defini}

%lem I.3.1
\begin{lem}
  Sei $X$ ein Vektorraum und $M\subseteq X$ nicht leer. Dann gilt:
  \begin{gather*}
    \spn(M)= \bigcap_{N\supseteq M, N\text{ Teilraum von } X} N=\colon A
  \end{gather*}
  \begin{proof}
    Trivialerweise gilt $A\subseteq\spn(M)$. Umgekehrt haben wir $M\subseteq
    A\Rightarrow\spn(M)\subseteq\spn(A)=A$, denn $A$ ist ein linearer Raum.
  \end{proof}
\end{lem}

%satz I.3.2
\begin{satz}\label{satz:i.32}
  Sei $M\subseteq X$ ein Teilraum eines normierten Raumes $X$. Dann ist
  $\overline{M}$ ein Teilraum von $X$.
  \begin{proof}
    Seien $x,y\in\overline{M}, \alpha,\beta\in\K$. Dann ist zu zeigen: $\alpha
    x+\beta y\in\overline{M}$ Nach \autoref{lem:i.21} existieren Folgen
    $(x_{n}), (y_{n})\subseteq M$ mit $x_{n}\xrightarrow{n\rightarrow\infty}
    x, y_{n}\xrightarrow{n\rightarrow\infty} x$. Nun folgt, $\alpha x_{n}+
    \beta y_{n} \in M$ und für $n\rightarrow\infty$ haben wir dann $\alpha
    x_{n}+\beta y_{n}\xrightarrow{n\rightarrow\infty} \alpha x+\beta
    y\in\overline{M}$
  \end{proof}
\end{satz}

\begin{defini}
  Sei $\emptyset\neq M\subseteq X$ eine Teilmenge eines normierten Raumes $X$.
  Die Menge $A\colon=\bigcap_{N\supseteq M, N\text{ abgeschlossener Teilraum
  von } X} N$ heißt
  \highl[Hülle!abgeschlossene lineare]{abgeschlossene lineare Hülle} von $M$.
\end{defini}

\begin{bemerk}
  Die abgeschlossene lineare Hülle von $M$ ist der kleinste abgeschlossene
  Teilraum, der $M$ enthält, d.\,h. für einen abgeschlossenen linearen
  Teilraum $B\supseteq M\Rightarrow A\subseteq B$.
\end{bemerk}

%lem I.3.3
\begin{lem}
  Sei $\emptyset\neq M\subseteq X$ eine nichtleere Teilmenge eines normierten
  Raumes $X$. Dann gilt:
  \begin{gather*}
    \overline{\spn(M)} =\bigcap_{N\supseteq M, N\text{ abgeschlossener
       Teilraum von } X} N
  \end{gather*}
  \begin{proof}
    Nach \autoref{satz:i.32} ist die Teilmengenbeziehung $\supseteq$ klar. Für
    die Gegenrichtung sei $N$ ein beliebiger abgeschlossener Teilraum mit
    $N\supseteq M\Rightarrow\spn(M)\subseteq
    N\Rightarrow\overline{\spn(M)}\subseteq\overline{N}=N$, denn $N$ ist
    abgeschlossen. Somit ist für ein beliebiges $N$
    $\overline{\spn(M)}\subseteq\bigcap_{N\supseteq M, N\text{ abgeschlossener
    Teilraum von } X} N$.
  \end{proof}
\end{lem}

\begin{defini}
  Ein normierter Raum heißt genau dann
  \highl{separabel}\index{Raum!separabler}, wenn eine abzählbare Teilmenge
  $M\subseteq X$ mit $\overline{M}=X$ existiert.
\end{defini}

%satz I.3.4

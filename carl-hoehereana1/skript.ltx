\begin{defini}[Kompakt]
  Seien $X$ und $Y$ Banachräume. Dann heißt $T\in\CL(X,Y)$ genau dann
  \highl{kompakt}, wenn $T(B_{1}(0))$ präkompakt ist.
\end{defini}

\begin{lem}
  Sei $\CE(T)\coloneq\lim_{n\rightarrow\infty} \CE_{n}(T)$ für $T\in\CL(X,Y)$.
  Dann ist $T$ genau dann kompakt, wenn $\CE(T)=0$.
  \begin{proof}
    \begin{itemize}
     \item["`$\Rightarrow$"'] Sei $T\in\CL(X,Y)$ kompakt und
      $\epsilon>0$. Dann existieren $y_{1},\dotsc, y_{n(\epsilon)}\in Y$ mit
      $T(B_{1}(0))\subseteq\bigcup_{i=1}^{n(\epsilon)} (\{y_{i}\}+\epsilon
      B_{1}(0))\Rightarrow\CE_{n}(T)\leq\epsilon$ für alle $n\geq
      n_{\epsilon}$. Also ist $\lim\CE_{n}(T)=0$.
     \item["`$\Leftarrow$"'] Sei $\CE(T)=0$ und $\epsilon>0$. Dann existieren
      $n_{0}(\epsilon)\in\N$ mit
      $\CE_{n(\epsilon)}(T)<\epsilon\Rightarrow\exists y_{1},\dotsc,
      y_{n(\epsilon)}\in Y\colon T(B_{1}(0))\subset\bigcup_{i=1}^{n(\epsilon)}
      (\{y_{i}\}+\epsilon B_{1}(0))$. Also ist $B_{1}(0)$ präkompakt und $T$
      kompakt.
    \end{itemize}
  \end{proof}
\end{lem}

\begin{defini}
  \begin{enumerate}[(i)]
   \item $\CK(X,Y)\coloneq\{T\in\CL(X,Y)\colon T\text{ komkapt}\}$
   \item $\CK\coloneq \bigcup_{X,Y} \CK(X,Y)$ die Klasse der kompakten
    Operatoren zwischen beliebigen Banachräumen.
  \end{enumerate}
\end{defini}

%satz iv.4.1
\begin{satz}
  Es ist $\CK$ ein abgeschlossenes Operatorenideal in $\CL$.
  \begin{proof}

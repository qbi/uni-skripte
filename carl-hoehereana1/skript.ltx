%satz II.5.12
\begin{satz}
  \begin{enumerate}[(i)]
   \item Sei $J\colon X\rightarrow Y$ eine metrische Injektion vom normierten
    Raum $X$ in den normierten Raum $Y$. Dann ist $J'$ eine metrische
    Surjektion.
   \item Ist $Q\colon X\rightarrow Y$ eine metrische Surjektion, so ist $Q'$
    eine metrische Injektion.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[(i)]
     \item Wir betrachten die kanonische Faktorisierung $J=J_{R(J)}\circ
      J_{0}$. In unserem Fall ist $N(J)=\{0\}\Rightarrow X/_{N(J)}=X$ und
      $Q_{N(J)}=I_{X}$.
      \begin{gather*}
	\xymatrix{X \ar[r]^{J} \ar@{.>}[d]_{Q_{N(J)}} \ar[dr]^{J_{0}} & Y\\
	  X/_{N(J)} \ar@{.>}[r]_{J_{0}} & R(J) \ar[u]_{J_{R(J)}} }
      \end{gather*}
      Dabei sind $J_{0}$ und $J_{0}^{-1}$ nach Definition metrische
      Isomorphismen, d.\,h. $\norm{J_{0}(x)}=\norm{x}$ und
      $\norm{J_{0}^{-1}(y)}= \norm{y}$.

      Wir zeigen, dass $J'(\mathring{B}_{Y'})= \mathring{B}_{X'}$. Dazu genügt
      es zu zeigen, dass für alle $a\in\mathring{B}_{X'}$ ein
      $b\in\mathring{Y'}$ mit $a=J'(b)$ existiert. Dabei wird mit
      $\mathring{B}_{X}$ das $\mathring{B}_{1}(0)\subseteq X$ bezeichnet.

      Sei $a\in\mathring{B}_{X}$. Dann gilt für
      $b_{0}\coloneq(J_{0}^{-1})'(a)= (J_{0}')^{-1}(a)$ folgendes:
      $\norm{b_{0}}\leq\norm{(J_{0}^{-1})'} \norm{a}= \norm{J_{0}^{-1}}
      \norm{a}= \norm{a}<1\Rightarrow b_{0}\in B_{(R(J))'}$. Nach
      \autoref{folg:ii.44} existiert $b\in Y'$ mit $b\circ J_{R(J)}=b_{0}$ und
      $\norm{b}= \norm{b_{0}}<1$. Dann gilt, $J'(b)=a$, denn $\langle
      x,a\rangle= \langle x,J_{0}'(b_{0})\rangle= \langle
      J_{0}(x),b_{0}\rangle= \langle J_{0}(x),b\rangle= \langle J(x),
      b\rangle= \langle x, J'(b)\rangle$ für alle $x\in X$. Damit folgt,
      $a=J'(b)$ und $J'(\mathring{B}_{Y'})\supseteq\mathring{B}_{X'}$. Wegen
      $\norm{J'(b)}\leq\norm{J'} \norm{b}=\norm{b}$ folgt auch
      $J'(\mathring{B}_{Y'})\subseteq\mathring{B}_{X'}$.
     \item Sei $Q(\mathring{B}_{X})=\mathring{B}_{Y}$. Wir zeigen
      $\norm{Q'(b)}\geq \norm{b}$ für $y\in\mathring{B}_{Y}$. Für $b\in Y'$
      und $0<\epsilon<1$ wählen wir $y\in\mathring{B}_{Y}$ und erhalten
      $\abs{\langle y,b\rangle}\geq(1-\epsilon)\norm{b}= (1-\epsilon)
      \sup_{\norm{y}\leq1} \abs{\langle y,b\rangle}$. Wegen
      $Q(\mathring{B}_{X})=\mathring{B}_{Y}$ existiert $x\in\mathring{B}_{X}$
      mit $Q(x)=y$ und es folgt: $\norm{Q'(b)}\geq\abs{\langle x,
      Q'(b)\rangle}= \abs{\langle Q(x),b\rangle}= \abs{\langle y,b\rangle}\geq
      (1-\epsilon) \norm{b}\Rightarrow \norm{Q'(b)}\geq(1-\epsilon)\norm{b}$.
      Schließlich ist für $\epsilon\rightarrow0$: $\norm{Q'(b)}\geq\norm{b}$.
      Die Umkehrung folgt aus $\norm{Q'(b)}\leq\norm{Q'} \norm{b}= \norm{Q}
      \norm{b}= \norm{b}$. Also ist $Q'$ eine metrische Injektion.
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{defini}
  Ein Banachraum $F$ besitzt die metrische Fortsetzungseigenschaft, wenn für
  jede metrische Injektion $J\colon X_{0}\rightarrow X$ von einem normierten
  Raum $X_{0}$ in einen normierten Raum  $X$ und jeden Operator
  $T_{0}\in\CL(X_{0}, F)$ ein Operator $T\in\CL(X,F)$ existiert mit $T_{0}=
  T\circ J$ und $\norm{T}=\norm{T_{0}}$.
  \begin{gather*}
    \xymatrix{R(J) \ar[r]^{J_{R(J)}} & X \ar[d]^{T}\\
      X_{0} \ar[u]^{J_{0}} \ar[ur]|{J} \ar[r]_{T_{0}} & F }
  \end{gather*}
\end{defini}

\begin{bemerk}
  Für den Fall, dass $X_{0}\subseteq X$ ist, dann ist $J_{X_{0}}\colon
  X_{0}\rightarrow X$ mit $x\mapsto x$ eine metrische Injektion. Dann ist die
  metrische Fortsetzungseigenschaft die bisher betrachtete Fortsetzbarkeit.
\end{bemerk}

%satz II.5.13
\begin{satz}
  Sei $I$ eine Indexmenge. Dann besitzt $l_{\infty}(I)\coloneq\{f\colon
  I\rightarrow\K\colon\sup_{x\in I} \abs{f(x)}<\infty\}$ die metrische
  Fortsetzungseigenschaft.
  \begin{proof}
    Sei $J\colon X_{0}\rightarrow X$ eine metrische Injektion von einem
    normierten Raum $X_{0}$ in einen normierten Raum $X$ und
    $T_{0}\in\CL(X_{0}, l_{\infty}(I))$. Wir definieren für $y\in
    l_{\infty}(I)$ die Funktionale $b_{i}$ durch $\langle
    y,b_{i}\rangle\coloneq y(i)$ für $i\in I$. Die $b_{i}$ sind trivialerweise
    linear und es gilt: $\norm{b_{i}} =\sup_{\norm{y}_{\infty} \leq1}
    \abs{\infty y,b_{i}\rangle}= \sup_{\norm{y}_{\infty} \leq1} \abs{y(i)}\leq
    \sup_{\norm{y}_{\infty} \leq1} \norm{y}_{\infty}=1$. Also ist
    $b_{i}\in(l_{\infty}(I))'$. Wir setzen $\mathring{a}_{i}\coloneq
    T_{0}'(b_{i})\in X_{0}'$ und dann gilt:
    \begin{gather}
      \label{eq:5.13}
	 (T_{0}(x))(i)=\langle T_{0}'(x), b_{i}\rangle= \langle x,
	 T_{0}'(b_{i})\rangle= \langle x,\mathring{a}_{i}\rangle\qquad \forall
	 i\in I\\
      \norm{T_{0}}= \sup_{\norm{x}\leq1} \norm{T_{0}(x)}_{l_{\infty}(I)}=
	 \sup_{\norm{x}\leq1} \sup_{i\in I} \abs{\langle
	 x,\mathring{a}_{i}\rangle} = \sup_{i\in I} \sup_{\norm{x}\leq1}
	 \abs{\langle x, \mathring{a}_{i}\rangle}= \sup_{i\in I}
	 \norm{\mathring{a}_{i}}
    \end{gather}

    Sei $J=J_{R(J)}\circ J_{0}$ die kanonische Faktorisierung von $J\colon
    X_{0}\rightarrow X$. Dann gilt nach \autoref{satz:ii.32}: $\norm{J_{0}}=
    \norm{J_{0}^{-1}}=1$. Betrachten für $i\in I$ die Funktionale
    $l_{i}\coloneq \mathring{a}_{i}\circ J_{0}^{-1}\colon R(J)\rightarrow\K$.
    Nach dem \autoref{folg:ii.44} existieren Fortsetzungen $a_{i}$ von $l_{i}$
    von $R(J)$ auf $X$ mit $\norm{a_{i}}= \norm{l_{i}}$ für $i\in I$. Für
    $x\in X_{0}$ gilt: $\mathring{a}_{i}(x)= (l_{i}\circ J_{0})(x)=
    l_{i}(J_{0}(x))= a_{i}(J_{0}(x))= a_{i}(J(x))= (J'(a_{i}))(x)$. Damit
    folgt, dass $\mathring{a}_{i}= J'(a_{i})$ für alle $i\in I$.
    \begin{align}
      \label{eq:53a}
	 \norm{a_{i}} &= \norm{l_{i}}= \norm{\mathring{a}_{i}\circ
	 J_{0}^{-1}}\leq \norm{\mathring{a}_{i}} \norm{J_{0}^{-1}}=
	 \norm{\mathring{a}_{i}}\\
      \norm{\mathring{a}_{i}} &= \norm{J'(a_{i})}\leq\norm{J'} \norm{a}=
	 \norm{J} \norm{a_{i}}= \norm{a_{i}}\\
      &\Rightarrow\norm{\mathring{a}_{i}}= \norm{a_{i}}
    \end{align}
    Nun definieren wir $T\colon X\rightarrow l_{\infty}(I)$ durch
    $T(x)\coloneq(\langle x, a_{i}\rangle)_{i\in I}$. Dann gilt für $x\in
    X_{0}$:
    \begin{align*}
      (T\circ J)(x) &= T(J(x))= (\langle J(x), a_{i}\rangle)_{i\in I}=
	 (\langle x,J'(a_{i})\rangle)_{i\in
	 I}\stackrel{\text{\autoref{eq:53a}}}{=} (\langle
	 x,\mathring{a}_{i}\rangle)_{i\in I}\\
      &\stackrel{\text{\autoref{eq:5.13}}}{=} ((T_{0}(x))(i))_{i\in I}=
	 T_{0}(x)\\
      &\Rightarrow T_{0}=T\circ J
    \end{align*}
    Analog zu \autoref{eq:5.13} folgt weiter: $\norm{T}=\dotsb=\sup_{i\in I}
    \norm{a_{i}} \stackrel{\text{\autoref{eq:53a}}}{=} \sup_{i\in I}
    \norm{\mathring{a}_{i}} \stackrel{\text{\autoref{eq:5.13}}}{=}
    \norm{T_{0}}$.
  \end{proof}
\end{satz}

\begin{bemerk}
  Sei $M\subseteq X$ ein linearer Teilraum des normierten Raumes $X$ und
  $T_{0}\in\CL(M,l_{\infty}(I))$. Dann existiert eine Fortsetzung
  $T\in\CL(X,l_{\infty}(I))$ mit $T\circ J_{M}=T_{0}$ und $\norm{T}=
  \norm{T_{0}}$. Für $I=\{i\}$ folgt, dass $l_{\infty}(I)=\K$.
\end{bemerk}

\chapter{Hauptsätze für beschränkte lineare Operatoren auf Banachräumen}
\section{Der \textsc{Baire}sche Kategoriensatz (BKS)}

%satz III.1.1
\begin{satz}[Erste Variante des BKS]\label{satz:iii.11}
  Sei $(X,d)$ ein vollständiger metrischer Raum und $X=\bigcup_{k=1}^{\infty}
  A_{k}$, wobei $A_{k}$ abgeschlossen sind. Dann existiert ein $k_{0}$ mit
  $\inner(A_{k_{0}})\neq\emptyset$.
  \begin{proof}
    Wir nehmen an, dass für alle $k\in\N$ gilt, $\inner(A_{k})=\emptyset$. Dann
    folgt, dass für eine offene nichtleere Menge $O\subseteq X$ gilt:
    $O\setminus A_{k}\neq\emptyset$ für alle $k\in\N$. Für diese existiert
    weiter eine Kugel $\mathring{B}_{\epsilon}(x)$ mit
    $\epsilon\leq\nicefrac{1}{k}$ und $\cl(\mathring{B}_{\epsilon}(x))$. Denn
    $O\setminus A_{k}$ hat mindestens einen nichtleeren Punkt. Somit können
    wir induktiv Kugeln mit $1\geq\epsilon_{1}\geq\epsilon_{2}\geq\dotsb$ mit
    $\epsilon_{k}\leq\nicefrac{1}{k}$ und
    $\cl(\mathring{B}_{\epsilon_{k}}(x_{k})) \subseteq
    \mathring{B}_{\epsilon_{k-1}}(x_{k-1})\setminus A_{k}$ wählen. Wegen
    $x_{l}\in\mathring{B}_{\epsilon_{k}}(x_{k})$ für $l\geq k$ und
    $\epsilon_{k}\xrightarrow{k\rightarrow\infty} 0$ ist
    $\{x_{k}\}_{k=1}^{\infty}\subseteq X$ eine Cauchyfolge in $X$. Da $X$
    vollständig ist, folgt, $\lim_{k\rightarrow\infty} x_{k}=\colon x\in X$
    existiert. Damit gilt, $x\in\cl(\mathring{B}_{\epsilon_{k}}(x_{k}))$ für
    alle $k\in\N$. Andererseits folgt aus
    $\cl(\mathring{B}_{\epsilon_{k}}(x_{k}))\cap A_{k}=\emptyset$, dass
    $x\notin \bigcup_{k=1}^{\infty} A_{k}=X$. Dies ist ein Widerspruch zu
    $x\in X$.
  \end{proof}
\end{satz}

\begin{bemerk}
  Die Vollständigkeit von $X$ ist notwendig, wie das Beispiel $(\Q,
  \abs{\cdot})$ mit $\Q=\bigcup_{r\in\Q} \{r\}$, aber $\inner(\{r\})=\emptyset$,
  zeigt.
\end{bemerk}

%satz III.1.2
\begin{satz}[Zweite Variante des BKS]\label{satz:iii.12}
  Sei $(X,d)$ ein vollständiger metrischer Raum und $\{O_{n}\}_{n=1}^{\infty}$
  eine Folge offener und dichter Teilmengen von $X$. Dann ist
  $\bigcap_{n\in\N} O_{n}$ dicht in $X$.
  \begin{proof}
    Wir setzen $D\coloneq\bigcap_{n\in\N} O_{n}$ und zeigen $\cl(D)=X$. Jetzt
    genügt es zu zeigen, dass für alle $x\in X$ und alle $\epsilon>0$ gilt:
    $\mathring{B}_{\epsilon}(x)\cap D\neq\emptyset$.
    Sei also $\mathring{B}_{\epsilon_{0}}(x_{0})\subseteq X$ eine beliebige
    Kugel. Da $O_{1}$ offen und dicht ist, gilt:
    $O_{1}\cap\mathring{B}_{\epsilon_{0}}(x_{0})\neq\emptyset$ und
    $O_{1}\cap\mathring{B}_{\epsilon_{0}}(x_{0})$ ist offen. Also existiert
    ein $x_{1}\in O_{1}$ und ein $\epsilon_{1}>0$ mit
    $\epsilon_{1}<\nicefrac{\epsilon_{0}}{2}$ und
    $\mathring{B}_{\epsilon_{1}}(x_{1})\subseteq
    O_{1}\cap\mathring{B}_{\epsilon_{0}}(x_{0})$. Es könnte das $\epsilon_{1}$
    auch so gewählt werden, dass
    $\cl(\mathring{B}_{\epsilon_{1}}(x_{1}))\subseteq
    O_{1}\cap\mathring{B}_{\epsilon_{0}}(x_{0})$ gilt. Nun betrachten wir ein
    $O_{2}$, welches offen und dicht ist. Also gilt
    $O_{2}\cap\mathring{B}_{\epsilon_{1}}(x_{1})\neq\emptyset$ und ist offen.
    Wie oben existiert $x_{2}\in O_{2}$ und
    $\epsilon_{2}<\nicefrac{\epsilon_{1}}{2}<\nicefrac{\epsilon_{0}}{2^{2}}$
    mit $\cl(\mathring{B}_{\epsilon_{2}}(x_{2}))\subseteq O_{2}\cap
    \mathring{B}_{\epsilon_{1}}(x_{1})\subseteq O_{1}\cap
    O_{2}\cap\mathring{B}_{\epsilon_{0}}(x_{0})$. Sukzessives Fortsetzen
    liefert zwei Folgen $\{x_{n}\}_{n=1}^{\infty}$ und
    $\{\epsilon_{n}\}_{n=1}^{\infty}$ mit
    $\epsilon_{n}<\frac{\epsilon_{0}}{2^{n}}$ und
    \begin{gather}
      \label{eq:35}
      \cl(\mathring{B}_{\epsilon_{n}}(x_{n}))\subseteq O_{n}\cap
	 \mathring{B}_{\epsilon_{n-1}}(x_{n-1})\subseteq O_{1}\cap
	 O_{2}\cap\dotsb\cap O_{n}\cap\mathring{B}_{\epsilon_{0}}(x_{0})
    \end{gather}
    Damit folgt insbesondere:
    \begin{gather}
      \label{eq:36}
	 x_{n}\in\mathring{B}_{\epsilon_{N}}(x_{N})\subseteq
	 \mathring{B}_{\frac{\epsilon_{0}}{2^{N}}}(x_{N})\qquad \forall n>N
    \end{gather}
    Das zeigt, dass $\{x_{n}\}_{n=1}^{\infty}$ eine Cauchyfolge in $X$ ist. Da
    $X$ vollständig ist, folgt $x\coloneq\lim_{n\rightarrow\infty}
    x_{n}\in X$ existiert. Aus der \autoref{eq:36} folgt, dass
    $x\in\cl(\mathring{B}_{\epsilon_{n}}(x_{n}))$ für alle $n\in\N$. Nach
    \autoref{eq:35} folgt nun, $x\in\bigcap_{n\in\N}
    O_{n}\cap\mathring{B}_{\epsilon_{0}}(x_{0})=
    D\cap\mathring{B}_{\epsilon_{0}}(x_{0})$. Damit folgt,
    $D\cap\mathring{B}_{\epsilon_{0}}(x_{0})\neq\emptyset$.
  \end{proof}
\end{satz}

%lem III.1.3
\begin{lem}
  Aus \autoref{satz:iii.12} folgt \autoref{satz:iii.11}.
  \begin{proof}
    Wir nehmen an, es gelte \autoref{satz:iii.12} und \emph{nicht}
    \autoref{satz:iii.11}. Dann ist $(X,d)$ ein vollständiger metrischer Raum
    und es existieren $\{A_{n}\}_{n=1}^{\infty}$ abgeschlossen:
    $X=\bigcup_{n\in\N} A_{n}$ und $\inner(A_{n})= \emptyset$ für alle
    natürlichen Zahlen $n$. Dann gilt ebenfalls für alle $n$: $\cl(X\setminus
    A_{n})=X$. Denn wäre der Abschluss eine echte Teilmenge von $X$, dann
    würde $B_{\epsilon}(a)\subseteq X\setminus\cl(X\setminus A_{n})$
    existieren. Dies ist aber ein Widerspruch zur Abgeschlossenheit von
    $A_{n}$. Aus dem \autoref{satz:iii.12} folgt:
    \begin{gather}
      \label{eq:37}
	 \cl(\bigcap_{n\in\N}(X\setminus A_{n}))=X
    \end{gather}
    Andererseits ist $\bigcap_{n\in\N} (X\setminus A_{n})=\emptyset$, da
    $X=\bigcup_{n\in\N} A_{n}$ und es folgt, $\cl(\bigcap_{n\in\N} (X\setminus
    A_{n}))=\emptyset$. Das ist ein Widerspruch zu \autoref{eq:37}.
  \end{proof}
\end{lem}

\begin{defini}[nirgends dicht, 1./2. Kategorie]
  Sei $(X,d)$ ein metrischer Raum. Dann gelten:
  \begin{enumerate}[(i)]
   \item Es heißt $M\subseteq X$ \highl{nirgends dicht} genau dann, wenn
    $\inner(\cl(M))=\emptyset$.
   \item Es heißt $M\subseteq X$ von \highl{1.\,Kategorie} genau dann, wenn
    existieren $\{M_{n}\}_{n=1}^{\infty}\subseteq 2^{X}$ von nirgends dichten
    Mengen: $M=\bigcup_{n\in\N} M_{n}$.
   \item Es heißt $M\subseteq X$ von \highl{2.\,Kategorie} genau dann, wenn
    $M$ nicht von 1.\,Kategorie ist. ($\forall(M_{n})\subset X\colon M=\bigcup
    M_{n}\Rightarrow\exists M_{n_{0}}\colon\inner(\cl M_{n_{0}})\neq\emptyset$)
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{enumerate}[(i)]
   \item $\Q$ ist von der 1.\,Kategorie, da $\Q=\bigcup_{r\in\Q} \{r\}$ ist.
   \item Nirgends dichte Mengen liegen in keiner offenen Menge dicht.
  \end{enumerate}
\end{bemerk}

%Vorlesung vom 2009-01-12
%satz iii.1.3
\begin{satz}[\textsc{Baire}scher Kategoriensatz]\label{satz:iii.13}
  In einem vollständigen metrischen Raum $(X,d)$ liegt das Komplement einer
  Menge 1.\,Kategorie dicht, d.\,h. ist $M\subset X$ von 1.\,Kategorie, so
  gilt: $\cl (X\setminus M)=X$.
  \begin{proof}
    Der Satz ist äquivalent zum \autoref{satz:iii.12}. Daher zeigen wir zum
    Beweis die Äquivalenz:

    Sei $M=\bigcup M_{n}$ eine Menge 1.\,Kategorie mit $\inner(\cl
    M_{n})=\emptyset$ für alle natürlichen $n$. Dann gilt: $X\setminus M=
    \bigcap(X\setminus M_{n})\supset\bigcap(X\setminus\cl(M_{n}))$. Wegen
    $\cl(X\setminus\cl M_{n})=X$\footnote{Das sieht man wie folgt: Wir nehmen
    an, der Abschluss wäre nicht gleich. Dann ist $X\setminus\cl(X\setminus
    \cl M_{n})$ ungleich der leeren Menge und auch eine Teilmenge von
    $X\setminus(X\setminus\cl M_{n})= \cl M_{n}$. Da die Ausgangsmenge offen
    ist, enthält der Abschluss innere Punkte. Dies ist ein Widerspruch.} für
    alle natürlichen $n$ folgt nach \autoref{satz:iii.12}
    $X=\cl(\bigcap(X\setminus\cl M_{n}))\subseteq\cl\bigcap(X\setminus M_{n})=
    \cl(X\setminus M)$. Hieraus folgt, $\cl(X\setminus M)=X$.

    Für die Umkehrung (\autoref{satz:iii.13} $\Rightarrow$
    \autoref{satz:iii.12}) sei $(O_{n})\subset X$ mit $\cl O_{n}=X$ für alle
    natürlichen $n$. Dann muss gelten: $\inner (X\setminus O_{n})=\emptyset$.
    Zunächst ist zu zeigen, $X=\cl O_{n}=X\setminus\inner(X\setminus
    O_{n})\Rightarrow \inner(X\setminus O_{n})=\emptyset$. Denn $O_{n}=
    X\setminus(X\setminus O_{n})\subset X\setminus(X\setminus\inner
    O_{n})\Rightarrow \cl O_{n}\subset\cl(X\setminus(X\setminus\inner
    O_{n}))= X\setminus(X\setminus\inner O_{n})$. Andererseits $X\setminus
    O_{n}\supset X\setminus\cl O_{n}\Rightarrow \inner X\setminus O_{n}\supset
    X\setminus\cl O_{n}\Rightarrow X\setminus\inner(X\setminus O_{n})\subset
    X\setminus(X\setminus\cl O_{n})=\cl O_{n}$. Also ist $\cl O_{n}=
    X\setminus\inner(X\setminus O_{n})$. Nun setzen wir
    $M\coloneq\bigcup(X\setminus O_{n})$. Dies ist eine Menge der
    1.\,Kategorie. Mit \autoref{satz:iii.13} folgt, $X\setminus M=X\setminus
    (\bigcup(X\setminus O_{n}))= \bigcap O_{n}$ liegt dicht in $X$, d.\,h.
    $\cl(\bigcap O_{n})=X$. Damit folgt dann der \autoref{satz:iii.12}.
  \end{proof}
\end{satz}

Eine schwächere Form von \autoref{satz:iii.12} bzw. \autoref{satz:iii.13} und
gleichbedeutend mit dem erstgenannten \autoref{satz:iii.11} ist der folgende
\autoref{satz:iii.14}:

%satz iii.1.4
\begin{satz}\label{satz:iii.14}
  Ein vollständiger metrischer Raum $(X,d)$ ist von 2.\,Kategorie.
  \begin{proof}
    Wir zeigen zunächst, dass aus \autoref{satz:iii.11} folgt
    \autoref{satz:iii.14}: Sei $M_{n}\subset X$ mit $X=\bigcup M_{n}$. Dann
    gilt, $X=\bigcup\cl M_{n}$ und nach \autoref{satz:iii.11} existiert ein
    $M_{n_{0}}$ mit $\inner(\cl M_{n_{0}})\neq\emptyset$.

    Im folgenden wollen wir mit \autoref{satz:iii.14} impliziert
    \autoref{satz:iii.11} die Äquivalenz vervollständigen: Sei $(A_{n})\subset
    X$ abgeschlossen mit $X=\bigcup A_{n}$. Mit \autoref{satz:iii.14} folgt,
    dass ein $A_{n_{0}}$ existiert mit $\inner\cl A_{n_{0}}=\inner
    A_{n_{0}}\neq\emptyset$, denn $X$ ist von 2.\,Kategorie. Also folgt der
    \autoref{satz:iii.11}.
  \end{proof}
\end{satz}

\section{Das Prinzip von der gleichmäßigen Beschränktheit}

%satz iii..2.1
\begin{satz}[Prinzip der gleichmäßigen Beschränktheit]
  Sei $X$ ein Banachraum, $Y$ ein normierter Raum und $\CA\subset\CL(X,Y)$
  eine Menge beschränkter linearer Operatoren, so dass für jedes $x\in
  X\colon\sup_{T\in\CA} \norm{Tx}<\infty$ ist. Dann gilt,
  $\sup_{T\in\CA}\norm{T}<\infty$, d.\,h. $\CA\subset\CL(X,Y)$ ist in
  $\CL(X,Y)$ eine beschränkte Menge.
  \begin{proof}
    Wir setzen $A_{m}\coloneq\{x\in X\colon\forall T\in\CA\colon\norm{Tx}\leq
    m\}$ für eine natürliche Zahl $m$, d.\,h. $A_{m}= \bigcap_{T\in\CA} \{x\in
    X\colon\norm{Tx}\leq m\}$. Die Mengen $A_{m}$ sind abgeschlossen, denn
    $\{x\in X\colon\norm{Tx}\leq m\}$ abgeschlossen sind und für eine in $X$
    konvergente Folge $(x_{n})\subset\{x\in X\colon\norm{Tx}\leq m\}$ ist zu
    zeigen, dass $a\in\{x\in X\colon\norm{Tx}\leq m\}$. Wegen der
    Stetigkeit von $T$ folgt aus $x_{n}\rightarrow a$ auch $Tx_{n}\rightarrow
    Ta$ und auch $\norm{Tx_{n}}\rightarrow\norm{Ta}$. Damit folgt wegen der
    Beschränktheit $\norm{Ta}\leq m$. Also liegt $a$ in der Menge.

    Nach Voraussetzung ist $X=\bigcup A_{m}$. Weil $X$ ein Banachraum ist,
    existiert nach \autoref{satz:iii.11} (\textsc{Baire}scher Kategoriensatz)
    ein $m_{0}\in\N$ mit $\inner A_{m_{0}}\neq\emptyset$. Somit existiert eine
    Kugel $B_{r}(x_{0})\subset A_{m_{0}}$ mit positivem $r$. Insbesondere gilt
    $\norm{Tx}\leq m_{0}$ für jedes $x\in B_{r}(x_{0})$ und für alle
    $T\in\CA$. Also folgt für $x\in B_{r}(0)$, dass
    $\norm{Tx}=\norm{T(x+x_{0})- Tx_{0}}\leq\norm{T(x+x_{0})}+
    \norm{Tx_{0}}\leq m_{0}+ m_{0}=2m_{0}$. Also folgt hieraus $\norm{T}=
    \sup_{\norm{x}\leq1} \norm{Tx}= \nicefrac{1}{r} \sup_{\norm{y}\leq r}
    \norm{Ty}\leq\frac{2m_{0}}{r}$ für jedes $T\in\CA$. Also ist $\CA$
    beschränkt.
  \end{proof}
\end{satz}

\begin{bemerk}
  Obiger Satz wird auch manchmal als Satz von
  \textsc{Banach}"~\textsc{Steinhaus} bezeichnet.
\end{bemerk}

%satz III.2.2
\begin{satz}[Satz von \textsc{Banach}"~\textsc{Steinhaus}]\label{satz:iii.22}
  Seien $X,Y$ Banachräume, $(T_{n})\subset\CL(X,Y)$ eine Folge beschränkter
  linearer Operatoren, so dass für jedes $x\in X$ die Folge $(T_{n}x)$
  konvergiert. Dann ist der Operator  $T\colon X\rightarrow Y$ definiert durch
  $Tx\coloneq\lim T_{n}x$ linear und beschränkt, d.\,h. $T\in\CL(X,Y)$.
  \begin{proof}
    Es ist $T$ linear: Denn für $x,y\in X, \alpha, \beta\in\K$ ist $T(\alpha
    x+\beta y)= \lim T_{n}(\alpha x+\beta y)= \lim(\alpha T_{n}x+ \beta
    T_{n}y)= \alpha Tx+\beta Ty$.

    $T$ ist beschränkt: Die Folge $(T_{n}x)$ ist für alle $x\in X$ beschränkt,
    $(T_{n}x)$ konvergent. Damit folgt, $\sup_{n\in\N} \norm{T_{n}x}<\infty$.
    Nach dem Prinzip der gleichmäßigen Beschränktheit gilt für
    $\CA=\{T_{n}\}$, dass $\sup_{n\in\N} \norm{T_{n}}<\infty$. Somit ist
    $\norm{Tx}= \lim\norm{T_{n}x}\leq\sup_{n\in\N} \norm{T_{n}x}\leq
    (\sup_{n\in\N} \norm{T_{n}}) \norm{x}$ für alle $x\in X$. Das heißt, $T$
    ist ein beschränkter Operator von $X$ nach $Y$.
  \end{proof}
\end{satz}

%satz iii.2.3
\begin{satz}
  Seien $X,Y$ Banachräume, $(T_{n})\subset\CL(X,Y)$. Dann definiert $Tx=
  \lim T_{n}x$ genau dann einen Operator $T\in\CL(X,Y)$, wenn
  \begin{enumerate}
   \item $\forall x\in X\colon\sup_{n\in\N} \norm{T_{n}x}<\infty$
   \item $(T_{n}x)$ ist Cauchyfolge für jedes $x$ aus einer dichten Menge
    $M\subset X$.
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
     \item["`$\Rightarrow$"'] klar
     \item Sei $x\in X$ und $\epsilon>0$ beliebig. Dann existiert ein
      $x_{\epsilon}\in M$ mit $\norm{x-x_{\epsilon}}\leq\epsilon$. Ferner
      existiert $n_{\epsilon}\in\N$, so dass für alle $m,n\geq n_{\epsilon}$
      gilt: $\norm{T_{m}x_{\epsilon}- T_{n}x_{\epsilon}}\leq\epsilon$. Somit
      haben wir: $\norm{T_{m}x-T_{n}x}\leq\norm{T_{m}x-T_{m}x_{\epsilon}}+
      \norm{T_{m}x_{\epsilon}+T_{n}x_{\epsilon}}+
      \norm{T_{n}x_{\epsilon}-T_{n}x_{\epsilon}}\leq \norm{T_{m}}
      \norm{x-x_{\epsilon}}+ \epsilon+ \norm{T_{n}} \norm{x_{\epsilon}-x}$.
      Nach \autoref{satz:iii.22} folgt in Verbindung mit der ersten
      Eigenschaft, dass $\sup \norm{T_{n}}<\infty$ und auch
      $\norm{T_{m}-xT_{n}x}\leq (2\sup_{n\in\N}\norm{T_{n}}+1)\epsilon$. Damit
      ist $(T_{n}x)$ eine Cauchyfolge in $Y$ und da $Y$ ein Banachraum ist,
      existiert der Grenzwert von $T_{n}x$. Nach \autoref{satz:iii.22} ist der
      Operator $T\colon X\rightarrow Y$ definiert durch $Tx\coloneq\lim
      T_{n}x$ beschränkt und linear.
    \end{itemize}
  \end{proof}
\end{satz}

\begin{bemerk}
  In dem obigen zweiten Punkt kann man $M$ durch eine Menge $M_{0}$ mit
  $\cl(\spn M_{0})=X$ ersetzen.

  Für stetige Funktionen $f_{n}\colon X\rightarrow Y$ zwischen vollständigen
  metrischen Räumen gilt \autoref{satz:iii.22} im Allgemeinen nicht. Denn aus
  der punktweisen Konvergenz von $(f_{n}(x))$ folgt im Allgemeinen nicht die
  Stetigkeit von $f(x)\coloneq\lim f_{n}(x)$.
\end{bemerk}

\section{Der Satz von der offenen Abbildung}

\begin{defini}[Offene Abbildung]
  Seien $X$ und $Y$ metrische Räume. Dann heißt eine Abbildung $f\colon
  X\rightarrow Y$ \highl[Abbildung!offene]{offen}\index{offen}, wenn sie jede
  offene Menge $O\subset X$ wieder in eine offene Menge $f(O)$ abbildet. 
\end{defini}

% lem iii.3.1
\begin{lem}\label{lem:iii.31}
  Seien $X$ und $Y$ normierte Räume und ist $T\colon X\rightarrow Y$ linear.
  Dann gilt, $T$ ist genau dann eine offene Abbildung, wenn es ein $\delta>0$
  mit $\mathring{B}_{\delta}(0)\subset T(\mathring{B}_{1}(0))$ gibt.
  \begin{proof}
    \begin{itemize}
     \item["`$\Rightarrow$"'] klar
     \item["`$\Leftarrow$"'] Sei $O\subset X$ eine offene Menge und $x\in O$. Wir wählen
      $\epsilon>0$ mit $\mathring{B}_{\epsilon}(x)\subset O$. Dann gilt,
      $\mathring{B}_{\epsilon\delta}(Tx)\subset
      T(\mathring{B}_{\epsilon}(x))\subset T(O)$. Denn für
      $z\in\mathring{B}_{\epsilon\delta}(Tx)$ gilt
      $\norm{\nicefrac{1}{\epsilon} (z-Tx)}<\delta$ und damit ist
      $\nicefrac{1}{\epsilon} (z-Tx)\in \mathring{B}_{\delta}(0)\subset
      T(\mathring{B}_{1}(0))$. Dann existiert ein $y\in\mathring{B}_{1}(0)$
      mit $\nicefrac{1}{\epsilon}(z-Tx)=Ty$ oder $z=T(x+\epsilon y)$ mit
      $x+\epsilon y\in\mathring{B}_{\epsilon}(x)\subset O$. Somit ist $z\in
      T(\mathring{B}_{\epsilon}(x))\subset T(O)$, d.\,h.
      $\mathring{B}_{\epsilon\delta}(Tx)\subset T(O)$. Also ist $T(O)$ offen.
    \end{itemize}
  \end{proof}
\end{lem}

%lem iii.3.2
\begin{lem}\label{lem:iii.32}
  Sei $T\in\CL(X,Y)$ ein beschränkter linearer Operator von einem Banachraum
  $X$ in einen Banachraum $Y$. Dann gilt,
  $\mathring{B}_{c}(0)\subset\cl(T(\mathring{B}_{x}))$ mit $c>0$ impliziert
  $\mathring{B}_{c}(0)\subset T(\mathring{B}_{x})$.
  \begin{proof}
    Sei $y\in\mathring{B}_{c}(0)$, d.\,h. $\norm{y}<c$. Wir wählen ein
    $\epsilon>0$ mit $\norm{y}y\epsilon<c$. Dann folgt,
    $\overline{y}\coloneq\frac{c}{\epsilon} y\in\mathring{B}_{c}(0)$ nach
    Voraussetzung. Jetzt wählen wir ein $0<\alpha<1$, so dass
    $\frac{\epsilon}{c} \frac{1}{1-\alpha}<1$ ist. Dann existiert ein
    $y_{0}=Tx_{0} \in T(\mathring{B}_{x})$ mit $\norm{y-y_{0}}<\alpha c$. Nun
    betrachten wir $\frac{\overline{y}-y_{0}}{\alpha}\in\mathring{B}_{c}(0)$.
    Nach Voraussetzung existiert wieder ein $y_{1}=Tx_{1}\in
    T(\mathring{B}_{X})$ mit $\norm{\frac{\overline{y}-y_{0}}{\alpha}-
    y_{1}}<\alpha c$ oder $\norm{\overline{y}-(y_{0}+\alpha
    y_{1})}<\alpha^{2}c$. Induktiv erhalten wir eine Folge $y_{0},
    y_{1},\dotsc$ mit $\norm{\overline{y}- (\sum_{i=0}^{n} \alpha^{i} y_{i})}=
    \norm{\overline{y}- T(\sum_{i=0}^{n} \alpha^{i}x_{i})}<\alpha^{n+1}c$.
    Wegen $0<\alpha<1$ und $x_{i}\in\mathring{B}_{X}$ konvergiert
    $\sum_{i=0}^{n} \alpha^{i}x_{i}$ absolut, das $\sum_{i=0}^{n}
    \norm{\alpha^{i} x_{i}}\leq \sum_{i=0}^{n}
    \alpha^{i}\leq\sum_{i=0}^{\infty} \alpha^{i}=\frac{1}{1-\alpha}$. Somit
    existiert $\overline{x}\coloneq\sum_{i=0}^{\infty} \alpha^{i} x_{i}\in X$,
    da $X$ ein Banachraum ist. Nach Konstruktion ist
    $T\overline{x}=\overline{y}$, da $T$ stetig ist. Jetzt setzen wir
    $x\coloneq\frac{\epsilon}{c} \overline{x}$. Dann ist $Tx=
    \frac{\epsilon}{c} T\overline{x}= \frac{\epsilon}{c}\overline{y}=
    \frac{\epsilon}{c} \frac{c}{\epsilon}y=y$ und $\norm{x}=
    \frac{\epsilon}{c} \norm{\overline{x}}\leq\frac{\epsilon}{c}
    \sum_{i=0}^{\infty} \alpha^{i} \norm{x_{i}}\leq\frac{\epsilon}{c}
    \sum_{i=0}^{\infty} \alpha^{i}= \frac{\epsilon}{c} \frac{1}{1-\alpha}<1$.
    Damit liegt $x\in\mathring{B}_{x}$ und $y\in T(\mathring{B}_{x})$.
    \end{proof}
\end{lem}


%lem II.4.6
\begin{lem}\label{lem:ii.46}
  Sei $(X,d)$ ein separabler metrischer Raum. Dann ist jeder Teilraum
  $Y\subset X$ separabel, d.\,h. es existiert eine abzählbare Menge $B\subset
  Y$ mit $\cl(B)=Y$.
  \begin{proof}
    \begin{enumerate}[1.\,Schr{i}tt]
     \item Sei $A\subset X$ eine abzählbare dichte Menge in $X$, d.\,h.
      $\cl(A)=X$. Dann sind die Mengen
      $\CA_{1}\coloneq\{\mathring{B}_{r}(a)\colon a\in A\wedge0<r\in\Q\}$ und
      $\CA_{2}\coloneq\{\mathring{B}_{r}(a)\in\CA_{1}\colon
      \mathring{B}_{r}(a)\cap Y\neq\emptyset\}$ abzählbar. Für
      $\mathring{B}_{r}(a)\in\CA_{2}$ wählt man ein
      $b\in\mathring{B}_{r}(a)\cap Y$ und erhält eine abzählbare Menge
      $B\subset Y$.
     \item Es gilt, $\cl(B)=Y$. Denn geben wir uns ein $\epsilon>0$ und ein
      $y\in Y$ vor. Dann existiert ein $a\in A$ mit der Eigenschaft
      $d(y,a)<\nicefrac{\epsilon}{3}$ und eine rationale Zahl $r\in\Q$ mit
      $\nicefrac{\epsilon}{3}<r\nicefrac{\epsilon}{2}$. Nun ist
      $y\in\mathring{B}_{r}(a)$. Also existiert ein $b\in B$ mit der
      Eigenschaft, $d(y,b)\leq d(y,a)+d(a,b)<\nicefrac{\epsilon}{3}+
      r<\epsilon$, d.\,h. $B$ ist dicht in $Y$.
    \end{enumerate}
  \end{proof}
\end{lem}

%satz II.4.7
\begin{satz}\label{satz:ii.47}
  Sei $X$ ein normierter Raum. Dann gilt: Ist $X'$ separabel, so ist auch $X$
  separabel.
  \begin{proof}
    Nach \autoref{lem:ii.46} ist mit $X'$ auch die Einheitssphäre $\partial
    B_{X'}\coloneq\{a\in X'\colon\norm{a}=1\}$ separabel. Sei also
    $\{a_{1},\dotsc\}\subset\partial B_{X'}$ dicht in $\partial B_{X'}$. Wähle
    nun $x_{i}\in\partial B_{X'}$ mit $\abs{a_{i}(x_{i})}\geq\nicefrac{1}{2}$.
    Wir setzen $M\coloneq\spn\{x_{1},x_{2},\dotsc\}$ und zeigen $\cl(M)=X$.
    Sei $a\in X'$ mit $a|_{M}=0$. Wir zeigen jetzt die Aussage~(ii) von
    \autoref{koro:ii.45}. Dazu nehmen wir an, dass ein $a\in X'$ mit der
    Eigenschaft $a|_{M}=0$ und $a\neq0$ existiert. Dann existiert ein
    $a_{i_{0}}\in\partial B_{X'}$ mit $\norm{a-a_{i_{0}}}\leq\nicefrac{1}{4}$
    wegen der Separabilität von $\partial B_{X'}$ und es gilt die Abschätzung:
    $\nicefrac{1}{2}\leq\abs{a_{i_{0}}
    (x_{i_{0}})}=\abs{a_{i_{0}}(x_{i_{0}})- a(x_{i_{0}})}=
    \abs{(a_{i_{0}}-a)(x_{i_{0}})}\leq\norm{a-a_{i_{0}}} \norm{x_{i_{0}}}=
    \norm{a-a_{i_{0}}}\leq\nicefrac{1}{4}$ \lightning{}
    Also muss $a=0$ sein. Nach \autoref{koro:ii.45} gilt
    $\cl(M)=\cl(\spn\{x_{1},\dotsc\})=X$ und nach \autoref{satz:i.35} ist dann
    $X$ separabel.
  \end{proof}
\end{satz}

\begin{bemerk}
  Die Umkehrung von \autoref{satz:ii.47} gilt i.\,A. nicht. Denn sei
  beispielsweise $X=\ell_{1}$ ist separabel. Aber $X'=\ell_{1}'=\ell_{\infty}$
  ist \emph{nicht} separabel.
\end{bemerk}

\section{Dualer Operator}

\begin{defini}[Dualer Operator]
  Seien $X$ und $Y$ normierte Räume und $T\in\CL(X,Y)$. Der
  \highl[Operator!dualer]{duale Operator} $T'\colon X'\rightarrow Y'$ von $T$
  ist definiert durch:
  \begin{gather*}
    T'a\coloneq a\circ T\qquad a\in Y'
  \end{gather*}
  In der Literatur wird $T'$ auch oft als adjungierter Operator bezeichnet.
  Der Begriff des dualen Operators ist unerlässlich im Studium von
  beschränkten linearen Operatoren.
\end{defini}

%satz II.5.1
\begin{satz}
  Seien $X$ und $Y$ normierte Räume und $T\in \CL(X,Y)$. Dann ist
  $T'\in\CL(Y',X')$ und $\norm{T'}=\norm{T}$.
  \begin{proof}
    \begin{enumerate}
     \item Es ist $T'$ linear, denn für $a,b\in Y', \alpha,\beta\in\K$ gilt:
      $T'(\alpha a\beta b)= (\alpha a+\beta b)\circ T= \alpha(a\circ T)+
      \beta(b\circ T)=\alpha T'+\beta T'$.
     \item Es ist $T'$ beschränkt, denn $\norm{T'a}= \norm{a\circ
      T}\leq\norm{a} \norm{T}$ für $a\in Y'$. Also folgt,
      $\norm{T'}\leq\norm{T}<\infty$.
     \item Schließlich ist auch $\norm{T'}=\norm{T}$, denn
      $\norm{T}=\sup_{\norm{x}\leq1} \norm{Tx}= \sup_{\norm{x}\leq1}
      \sup_{\norm{a}\leq1} \abs{aT(x)}= \sup_{\norm{a}\leq1}
      \sup_{\norm{x}\leq1} \abs{aT(x)} =\sup_{\norm{a}\leq1}
      \sup_{\norm{x}\leq1} \abs{(T'a)(x)}= \sup_{\norm{a}\leq1} \norm{T'a}=
      \norm{T'}$.
    \end{enumerate}
  \end{proof}
\end{satz}

%satz II.5.2
\begin{satz}\label{satz:ii.52}
  Seien $X$ und $Y$ normierte Räume. Dann gelten folgende algebraische
  Eigenschaften dualer Operatoren:
  \begin{enumerate}[(i)]
   \item $\forall S,T\in\CL(X,Y)\,\forall\alpha,\beta\in\K\colon (\alpha
    S+\beta T)'= \alpha S'+\beta T'$
   \item $\forall S\in\CL(X,Y)\,\forall T\in\CL(Y,Z)\colon (TS)'=S'T'$
   \item $I_{X}'=I_{X'}$ für den identischen Operator $I_{X}(x)=x$.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[(i)]
     \item $(\alpha S+\beta T)'a=a\circ(\alpha S+\beta T)= \alpha(a\circ
      S)+\beta(a\circ T)= \alpha S'a+ \beta T'a= (\alpha S'+\beta T')a$ für
      alle $a\in Y'$
     \item $(TS)'a= a\circ(T\circ S)= (a\circ T)\circ S= S'(a\circ T)=
      (S'T')a$ für alle $a\in Z'$
     \item $I_{X}'a= a\circ T_{X}= a= I_{X'}a$
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{bemerk}
  Sei $X$ ein normierter Raum und $a\in X'$. Für den Wert $a(x)$ für $x\in X$
  benutzt man oft auch die Schreibweise $\langle x,a\rangle$ mit $\langle
  x,a\rangle\coloneq a(x)$. Mit Hilfe dieser Schreibweise ist der duale
  Operator $T'\in\CL(Y',X')$ von $T\in\CL(X,Y)$ wie folgt definiert:
  \begin{gather*}
    \langle x,T'a\rangle= \langle Tx, a\rangle\qquad x\in X, a\in Y'
  \end{gather*}
\end{bemerk}

\begin{bsp}
  Sei $M=(I_{ij})_{\substack{i=1,\dotsc,m\\ j=1,\dotsc,n}}$ eine $m\times n$
  Matrix. Durch $T_{M}x\coloneq\sum_{i=1}^{m} \left(\sum_{j=1}^{n} I_{ij}
  \xi_{j}\right)f_{i}$ für $x=(\xi_{1},\dotsc,\xi_{n})$, wobei $f_{1},\dotsc,
  f_{m}$ eine kanonische Basis im $\K^{m}$ ist, wird der Operator
  $T_{M}\colon\ell_{p}^{n}\rightarrow\ell_{q}^{n}$ definiert. Für den dualen
  Operator $T_{M}'\colon\ell_{q'}^{n}\rightarrow\ell_{p'}^{n}$ gilt: $T_{M}'a=
  \sum_{j=1}^{n} \left(\sum_{i=1}^{m} I_{ij} \alpha_{i}\right)e_{j}$ für
  $a=(\alpha_{1},\dotsc,\alpha_{m})\in\ell_{q'}^{m}$, wobei $e_{1},\dotsc,
  e_{n}$ die kanonische Basis im $\ell_{p'}^{n}$ ist. Damit gilt:
  $T_{M}'=T_{M^{T}}$, wobei $M^{T}= (I_{ij})_{\substack{i=1,\dotsc,m\\
  j=1,\dotsc,n}}$ die transponierte Matrix von $M$ ist.
\end{bsp}

\begin{defini}[Bidualer Raum]
  Sei $X$ ein normierter Raum. Dann heißt $X''\coloneq(X')'$
  \highl[Raum!bidualer]{bidualer Raum} von $X$.
\end{defini}

%satz II.5.3
\begin{satz}\label{satz:ii.53}
  Sei $X$ ein normierter Raum. Die Abbildung $K_{X}\colon X\rightarrow X''$
  definiert durch $(K_{X}x)a\coloneq a(x)$ für $x\in X$ und $a\in X'$ ist eine
  metrische Injektion, d.\,h. $K_{X}\in\CL(X,X'')$ und
  $\norm{K_{X}x}=\norm{x}$ für $x\in X$.


  Man nennt $K_{X}$ auch die \highl[Einbettung!kanonische]{kanonische
  Einbettung} von $X$ in $X''$. Jedes Element $x\in X$ kann als Funktional
  $K_{X}x$ auf $X'$ aufgefasst werden.
  \begin{proof}
    \begin{enumerate}
     \item Wir zeigen zuerst, dass $K_{X}\in\CL(X,X'')$ ist. Dazu ist $K_{X}$
      ein lineares Funktional auf $X'$
     \item Es ist $K_{X}$ eine metrische Injektion, denn $\norm{K_{X}x}=
      \sup_{\norm{a}\leq1} \norm{(K_{X}x)(a)}= \sup_{\norm{a}\leq1}
      \abs{a(x)}= \norm{x}$ für $x\in X$.
    \end{enumerate}
  \end{proof}
\end{satz}

%satz II.5.4
\begin{satz}\label{satz:ii.54}
  Seien $X$ und $Y$ normierte Räume. Dann gilt:
  \begin{enumerate}[(i)]
   \item $T''K_{X}=K_{Y}T$ für $T\in\CL(X,Y)$, wobei $T''\coloneq(T')'$
    bidualer Operator von $T$.
   \item $K_{X}'K_{X'}= I_{X'}$
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[(i)]
     \item $(T''K_{X}x)(a)=(K_{X}x)(T'a)= (T'a)(x)= a(Tx)= (K_{Y}Tx)(a)$ für
      alle $a\in Y'$. Damit folgt, $T''K_{X}x=K_{Y}Tx$ für alle $x\in X$ und
      weiter ist also $T''K_{X}=K_{y}T$.
     \item $(K_{X}'K_{X'}a)(x)= ((K_{X'}a)\circ K_{X})(x)= (K_{X'}a)(K_{X}x)=
      (K_{X}x)(a)= a(x)$ für alle $x\in X$. Damit ist also $K_{X}'K_{X'}a=a$
      für alle $a\in X'$ und die Behauptung ist gezeigt.
    \end{enumerate}
  \end{proof}
\end{satz}

%Vorlesung vom 2008-12-08 zweiter Teil
%satz II.5.5
\begin{satz}
  Seien $X$ und $Y$ normierte Räume. dann gilt:
  \begin{enumerate}[(i)]
   \item Ist $X$ endlich"=dimensional und $T\colon X\rightarrow Y$ linear, so
    ist $T\in\CL(X,Y)$, d.\,h. $T$ ist beschränkt.
   \item Seien die Dimensionen von $X$ und $Y$ gleich und endlich. Dann ist
    ein linearer Operator $T\colon X\rightarrow Y$ genau dann injektiv und
    surjektiv, wenn $T'\colon X'\rightarrow Y'$ injektiv und surjektiv ist.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[(i)]
     \item Sei $x_{1},\dotsc, x_{n}\in X$ eine Basis. Für ein $x\in X$ gilt
      die eindeutige Darstellung $x=\sum_{i=1}^{n} \xi_{i}x_{i}$. Durch
      $\norm{\sum_{i=1}^{n} \xi_{i}x_{i}}_{0}\coloneq\sum_{i=1}^{n}
      \abs{\xi_{i}}$ wird eine äquivalente Norm auf $X$ festgelegt. Damit
      existiert ein positives $C$ mit $\norm{x}_{0}= \norm{\sum_{i=1}^{n}
      \xi_{i} x_{i}}_{0}\leq C\norm{x}$. Also gilt die Abschätzung:
      $\norm{Tx}_{Y}= \norm{\sum_{i=1}^{n} \xi_{i} Tx_{i}}\leq \sum_{i=1}^{n}
      \abs{\xi_{i}} \norm{Tx_{i}}\leq \max_{1\leq i\leq n} \norm{Tx_{i}} \sum_{i=1}^{n}
      \abs{\xi_{i}}\leq C\max_{1\leq i\leq n} \norm{Tx_{i}} \norm{x}_{X}$.
      Also folgt: $\norm{T}\leq C\max_{1\leq i\leq n} \norm{Tx_{i}}<\infty$
      und $T$ ist beschränkt.
     \item
      \begin{itemize}
       \item["`$\Rightarrow$"'] Sei $T$ injektiv und surjektiv. Also existiert
	$T^{-1}\colon Y\rightarrow X$ linear. Wegen der endlichen Dimension
	ist $T^{-1}$ auch beschränkt. Durch $I_{x}=T^{-1}T$ und
	$I_{Y}=TT^{-1}$ folgt mit \autoref{satz:ii.52}: $I_{X'}= I'_{X}=
	(T^{-1}T)'= T'(T^{-1})'$ und ebenso $I_{Y'}= (T^{-1})'T'$. Damit ist
	$(T^{-1})'= T'^{-1}$. Damit muss $T'$ injektiv und surjektiv sein.
       \item["`$\Leftarrow$"'] Sei $T'$ injektiv und surjektiv. Wir zeigen
	zunächst, dass $T$ injektiv ist: Hierzu sei $Tx=0$ und $a\in Y'$. Dann
	gilt, $0=a(Tx)= (T'a)(x)$ und da $T'$ surjektiv ist, folgt $b(x)=0$
	für alle $b\in X'$. Nach dem Theorem von
	\textsc{Hahn}"~\textsc{Banach} (\autoref{folg:ii.44}) existiert ein
	$b\in X'$ mit $0=b(x)=\norm{x}\Rightarrow x=0$, d.\,h. $T$ ist injektiv.

	Wir nehmen an, dass $T$ \emph{nicht} surjektiv ist. Also ist
	$R(T)\subsetneq Y$ und $R(T)$ ist abgeschlossen, denn die Dimension
	von $R(T)$ ist endlich. Sei nun $y\in Y\setminus R(T)$. Dann existiert
	ein Funktional $a$ aus $Y'$ mit der Eigenschaft, dass $a(y)\neq0$ und
	$a|_{R(T)}=0$ wegen Punkt~iii aus \autoref{folg:ii.44}. Also ist
	$a(Tx)=0$ für alle $x\in X$. Hieraus folgt, dass $(T'a)(x)=0$ für alle
	$x\in X$. Da $T'$ injektiv, muss $a=0$ auf $Y$ sein. \lightning{}
      \end{itemize}
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{defini}[Linearer Homöomorphimus]
  Seien $X$ und $Y$ normierte Räume. Dann heißt ein linearer Operator $T\colon
  X\rightarrow Y$ \highl[Homöomorphimus!linearer]{linearer Homöomorphimus},
  falls $T$ bijektiv und bistetig ist.
\end{defini}

%satz II.5.6
\begin{satz}\label{satz:ii.56}
  Seien $X$ und $Y$ normierte Räume und $T$ eine beschränkte lineare Abbildung
  von $X$ nach $Y$. Danngelten folgende Aussagen:
  \begin{enumerate}[(i)]
   \item Ist $T$ ein Homöomorphimus, so ist der Dualoperator $T'$ ebenfalls
    ein Homöomorphimus und es gilt, $T'^{-1}=(T^{-1})'$.
   \item Ist $X$ ein Banachraum und $T'$ Homöomorphimus, so ist $T$ ein
    Homöomorphimus.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[(i)]
     \item Es ist $I_{X}=T^{-1}T$ und $I_{Y}=TT^{-1}$. Dann folgt aus
      \autoref{satz:ii.52} $I_{X'}=I_{X}'= (T^{-1}T)'= T'(T^{-1})'$ und
      $I_{Y'}= (T^{-1})'T'$. Insgesamt folgt: $(T^{-1})'= T'^{-1}$.
     \item Sei $X$ ein Banachraum und $T'\in\CL(Y',X')$. Dann ist nach dem
      ersten Punkt $T''\in\CL(X'',Y'')$ ein Homöomorphimus und es folgt die
      Abschätzung:
      \begin{enumerate}
       \item Für $a\in X''$ gilt:
	$\norm{a}=\norm{T''^{-1}T''a}\leq\norm{T''^{-1}} \norm{T''a}$. Wegen
	(i) und \autoref{satz:ii.54} erhält man für $x\in X$: $\norm{x}=
	\norm{K_{X}x}\leq\norm{T''^{-1}} \norm{T''K_{X}x} =\norm{T''^{-1}}
	\norm{K_{Y} Tx}\leq \norm{T''^{-1}} \norm{Tx}\leq \norm{T''^{-1}}
	\norm{T} \norm{x}$. Also gilt:
       \item $\frac{1}{\norm{T''^{-1}}} \norm{x}\leq \norm{Tx}\leq\norm{T}
	\norm{x}$ für alle $x\in X$.
      \end{enumerate}
      Aus dem zweiten Schritt folgt, dass $T_{0}\coloneq T\colon X\rightarrow
      R(T)$ ein Homöomorphimus ist. Denn $T_{0}$ ist injektiv und surjektiv
      von $X$ auf $R(T)$. Damit existiert $T_{0}^{-1}$ und es ist zu zeigen:
      $T_{0}^{-1}$ ist beschränkt. Für $y\in R(T)$ folgt mit dem zweiten Punkt
      die Abschätzung: $\norm{T_{0}^{-1} y}\leq\norm{T''^{-1}}
      \norm{TT_{0}^{-1}y}= \norm{T''^{-1}} \norm{y}$. Hieraus folgt,
      $\norm{T_{0}^{-1}\colon R(T)\rightarrow X}\leq\norm{T''^{-1}}<\infty$.

      Wir zeigen nun, dass $R(T)$ abgeschlossen ist. Dazu zeigen wir, dass
      $R(T)$ vollständig ist. Hierzu sei $(y_{n})\in R(T)$ eine Cauchyfolge.
      Dann gilt für $x_{n}\coloneq T_{0}^{-1} y_{n}$ die Abschätzung:
      $\norm{x_{n}-x_{m}}= \norm{T_{0}^{-1}y_{n} T_{0}^{-1}y_{m}}=
      \norm{T_{0}^{-1}(y_{n}-y_{m})}\leq\norm{T_{0}^{-1}} \norm{y_{n}-y_{m}}$
      und somit ist $(x_{n})\subset X$ eine Cauchyfolge in $X$. Da $X$
      vollständig, existiert $x\coloneq\lim_{n\rightarrow\infty} x_{n}$. Damit
      ist $y=T_{0}^{-1}x\in R(T)$ und es gilt, $\norm{y_{n}-y}=
      \norm{T_{0}x_{n}-T_{0}x}= \norm{T_{0}(x_{n}-x)}\leq\norm{T_{0}}
      \norm{x_{n}-x}\xrightarrow{n\rightarrow\infty} 0$, d.\,h. $(y_{n})$ ist
      in $R(T)$ konvergent. Also ist $R(T)$ vollständig und damit
      abgeschlossen in $Y$.

      Wir zeigen nun noch $R(T)=Y$. Dazu nehmen wir an, dass $R(T)\subsetneq
      Y$. Da $R(T)$ abgeschlossen, existiert nach dem
      \textsc{Hahn}"~\textsc{Banach}"~Theorem (\autoref{folg:ii.44}) ein
      Element $a$ aus $Y'$ mit $a\neq0$ und $a|_{R(T)}=0$. Andererseits gilt,
      $(T'a)(x)= a(Tx)=0$ für alle $x\in X$. Dann muss $T'a$ das
      Nullfunktional sein und wegen der Injektivität von $T'$ muss $a=0$ sein.
      \lightning{}
    \end{enumerate}

\chapter{Begriffe und Definitionen}

In diesem Kapitel sollen einige grundlegende Begriffe geklärt werden.
Üblicherweise sollten diese aus vorigen Veranstaltungen bekannt sein und
dienen hier nur der Auffrischung.

\begin{defini}[Gruppe]
  Sei $G$ eine Menge mit einer assoziativen Verknüpfung~$+$. Dann ist $G$ genau dann eine
  \highl{Gruppe}, wenn es ein $e\in G$ gibt, so dass für alle $g\in G$ gilt,
  $e+g=g+e=g$ und wenn es weiterhin zu jedem $g\in G$ ein $g^{-1}\in G$ gibt,
  mit $g+g^{-1}=g^{-1}+g=e$.
\end{defini}

\begin{defini}[Kommutativität]
  Sei $G$ eine Gruppe und $g_{1},g_{2}\in G$. Dann heißen $g_{1}$ und $g_{2}$
  \highl{vertauschbar}, wenn $g_{1}g_{2}=g_{2}g_{1}$. Sind alle Elemente aus
  $G$ vertauschbar, so bezeichnet man $G$ als
  \highl[Gruppe!kommutative]{kommutativ}\index{kommutativ}.
\end{defini}

\begin{defini}[Körper]
  Sei $(K,+,\cdot)$ eine Menge mit zwei assoziativen
  Verknüpfungen. Dann ist $K$ genau dann ein \highl{Körper}, wenn $K$
  mit der Verknüpfung~$+$ eine kommutative Gruppe und
  $K\setminus\{0\}$ mit der Verknüpfung~$\cdot$ eine kommutative
  Gruppe ist sowie wenn die Distributivität $a\cdot(b+c)=ab+ac$ für
  alle $a,b,c\in K$ gilt.
\end{defini}

\begin{defini}[Vektorraum]
  Ein \highl{Vektorraum}~$V$ über einem Körper~$(K,+,\cdot)$ ist ein abelsche
  Gruppe $(V,+)$ mit einer skalaren Multiplikation~$\cdot\colon K\times V\rightarrow
  V$. Dabei gilt für alle $u,v\in V$ und $a,b\in K$:
  \begin{enumerate}
   \item $a\cdot(b\cdot u)=(a\cdot b)\cdot u$
   \item $a\cdot(u+v)= a\cdot u+a\cdot v$
   \item $(a+b)\cdot v=a\cdot v+b\cdot v$
   \item $1\cdot v=v$
  \end{enumerate}
\end{defini}

\begin{defini}[Norm, Normierter Raum]
  Sei $X$ ein Vektorraum über einem Körper~$K$. Eine Funktion
  $\norm{\cdot}\colon X\rightarrow [0,\infty)$ heißt
  \highl{Norm} auf $X$, wenn für beliebige $x,y\in X$ und
  $\alpha\in K$ gilt:
  \begin{enumerate}
    \item $\norm{x}\geq 0 \wedge \norm{x}=0\Leftrightarrow x=0$
    \item $\norm{\alpha x}=\abs{\alpha}\cdot \norm{x}$ \highl{Homogenität}
    \item $\norm{x+y}\leq \norm{x}+\norm{y}$ Dreiecksungleichung
  \end{enumerate}
  Das Paar $(X,\norm{\cdot })$ heißt \highl[Raum!normierter]{normierter
    Raum}.
\end{defini}

\begin{defini}[Lineare Abbildung]
  Seien $V$ und $W$ Vektorräume über einem Körper~$K$. Eine Abbildung $f\colon
  V\rightarrow W$ heißt \highl[Abbildung!lineare]{lineare Abbildung}, wenn für
  alle $x,y\in V$ und $a\in K$ folgt:
  \begin{gather*}
    f(ax+y)=af(x)+f(y)
  \end{gather*}
\end{defini}

\begin{defini}[Topologie, topologischer Raum]
  Eine \highl{Topologie} $\CT$ auf einer nichtleeren Menge $X$ ist ein System von
  Teilmengen von $X$ mit:
  \begin{enumerate}[(i)]
   \item $\emptyset,X\in\CT$
   \item $O_{i}\in\CT, i\in I\neq\emptyset\Rightarrow\bigcup_{i\in I}
    O_{i}\in\CT$ (beliebige Vereinigungen offener Mengen sind wieder offen.)
   \item $O_{i}\in\CT, i=1,\dotsc,n\Rightarrow\bigcap_{i=1}^{n} O_{i}\in\CT$
    (endliche Durchschnitte offener Mengen sind offen.)
  \end{enumerate}
  Die Elemente von $\CT$ heißen \highl[Menge!offene]{offene Mengen} und
  $(X,\CT)$ heißt \highl[Raum!topologischer]{topologischer Raum}.
\end{defini}

\begin{defini}[Spurtopologie]
  Sei $A\subseteq X$ und $\CT$ eine Topologie auf $X$. Dann bildet
  $\CT|_{A}\coloneqq \{G\cap A\colon G\in\CT\}$ eine Topologie auf $X$.
  Man bezeichnet $\CT|_{A}$ als die von $\CT$ auf $A$
  \highl[Topologie!reduzierte]{reduzierte} oder auch
  \highl{Spurtopologie}.
\end{defini}

\begin{defini}[Cauchyfolge]
    Eine Folge $(x_{n})\subset X$ heißt genau dann \highl{Cauchyfolge}, wenn
  $\forall\epsilon>0\,\exists n_{\epsilon}\in\N\,\forall n,m\geq
  n_{\epsilon}\colon\norm{x_{n} -x_{m}}\leq\epsilon$.
\end{defini}

\begin{defini}[Vollständiger Raum, Banachraum]
  Ein normierter Raum heißt \highl[Raum!vollständig]{vollständig}, falls jede
  Cauchyfolge in $X$ konvergiert.
  Ein vollständiger normierter Raum heißt \highl{Banachraum}.
\end{defini}

\begin{defini}[Dichtheit]
  Eine Teilmenge $A\subset X$ heißt \highl{dicht}\index{Menge!dichte}, falls $\overline{A}=X$
  bezüglich der Topologie $\CT$.
\end{defini}



\chapter{Teilbarkeit konvexer Mengen (disjunkte Pflasterungen)}

\section{Konvexität und m-Teilbarkeit}

\subsection{Konvexe Mengen und affine Abbildungen}

%def 1
\begin{defini}[Konvexe Menge]
  \begin{enumerate}
   \item Eine Teilmenge~$K$ eines reellen Vektorraums~$X$ heißt
    \highl{konvex}\index{Menge!konvexe}, wenn für alle $x,y\in K$ und für alle
    $\lambda\in(0,1)$ gilt:
    \begin{gather*}
      \lambda x+(1-\lambda)y\in K
    \end{gather*}
   \item Ist $M\subseteq X$, so heißt $\conv(M)=\bigcap_{K \text{ konvex},
    M\subseteq K} K$ die \highl[Hülle!konvexe]{konvexe Hülle} von $M$.
  \end{enumerate}
\end{defini}

\begin{bsp}
  \begin{enumerate}
   \item Jede \highl{Kugel} $B(x,r)=\Set{y\in X | \norm{y-x}\leq r}$ eines
    normierten Raumes $(X,\norm{\cdot})$ mit $x\in X$ und $r\geq0$ ist konvex.
    Denn seien $y,z\in B(x,r)$ und $\lambda\in(0,1)$. Dann ist
    \begin{align*}
      \norm{(\lambda y+(1-\lambda)z)-x} &= \norm{\lambda y+z-\lambda z-x}=
	 \norm{\lambda y+z -\lambda z-x +(\lambda x-\lambda x)}\\
      &= \norm{\lambda y-\lambda x +(z-x)+ (\lambda x-\lambda z)}\\
      &= \norm{\lambda(y-x)+(1-\lambda)(z-x)} \leq\lambda\norm{y-x} +(1-\lambda) \norm{z-x}\\
      &\leq \lambda r+(1-\lambda)r=r
    \end{align*}
   \item Jeder Durchschnitt konvexer Mengen ist wieder konvex. Insbesondere
    ist die konvexe Hülle konvex.
   \item $K$ ist genau dann konvex, wenn für alle $n\geq2$, $x_{1},\dotsc,
    x_{n}\in K$ und für alle $\lambda_{1},\dotsc,\lambda_{n}\geq0$ aus
    $\sum_{i=1}^{n} \lambda_{i}=1$ folgt, dass $\sum_{i=1}^{n} \lambda_{i}
    x_{i}\in K$. Man bezeichnet die Summe $\sum_{i=1}^{n}\lambda_{i} x_{i}$  als
    \highl{Konvexkombination} von $x_{1},\dotsc, x_{n}$.
   \item Damit lässt sich die konvexe Hülle explizit schreiben durch:
    \begin{gather*}
      \conv(M)= \Set{\sum_{i=1}^{m} \lambda_{i}x_{i} |
    m\geq1, \lambda_{i}\geq0, \sum_{i=1}^{m}\lambda_{i}=1, x_{1},\dotsc,
    x_{n}\in M}
    \end{gather*}
  \end{enumerate}
\end{bsp}

\begin{defini}[Affine Abbildung]
  Eine Abbildung $\phi\colon X\rightarrow Y$ zwischen linearen Räumen $X$ und
  $Y$ über $\R$ heißt \highl[Abbildung!affine]{affin}\index{affin}, wenn für
  alle $x_{1}, x_{2}\in X$ und für alle $\lambda\in\R$ gilt:
  \begin{gather*}
    \phi(\lambda
       x_{1}+(1-\lambda)x_{2})=\lambda\phi(x_{1})+(1-\lambda)\phi(x_{2})
  \end{gather*}
\end{defini}

\begin{bemerk}\label{bem:1}
  \begin{enumerate}
   \item Die Abbildung $\phi$ ist genau dann affin, wenn für alle $m\geq2$,
    $x_{1},\dotsc, x_{m}\in M$ und für alle
    $\lambda_{1},\dotsc,\lambda_{m}\in\R$ aus $\sum_{i=1}^{m} \lambda_{i}=1$
    folgt, dass $\phi(\sum_{i=1}^{m} \lambda_{i} x_{i})= \sum_{i=1}^{m}
    \lambda_{i}\phi(x_{i})$
   \item Affine Bilder und Urbilder konvexer Mengen sind konvex.
   \item Die Abbildung $\phi\colon X\rightarrow Y$ ist genau dann affin, wenn
    ein $y_{0}\in Y$ und eine $\R$"~lineare Abbildung $\Phi\colon X\rightarrow
    Y$ existieren, so dass gilt, $\phi(x)=\Phi(x)+y_{0}$ für alle $x\in X$.
    Die Beweisidee dazu ist, dass $y_{0}= \phi(0)$ und $\Phi(x)=
    \phi(x)-\phi(0)$ ist.
   \item Inverse Abbildungen affiner Bijektionen sind wieder affin.
   \item Sind $\phi_{1}, \phi_{2}\colon X\rightarrow Y$ affin, so auch
    $\phi_{1}+\phi_{2}\colon X\rightarrow Y$. Sind $\phi_{1}\colon
    X\rightarrow Y$ und $\phi_{2}\colon Y\rightarrow Z$ affin, so auch
    $\phi_{2}\circ\phi_{1}\colon X\rightarrow Z$.
  \end{enumerate}
\end{bemerk}

\subsection{m-Teilbarkeit}

%def 3
\begin{defini}[teilbar, Pflasterung]
  Seien $R\neq\emptyset$ eine Menge, $G$ eine Gruppe von Transformationen auf
  $R$, $M\subseteq R$ eine Teilmenge von $R$ und $m\geq2$ eine natürliche
  Zahl. Dann bezeichnet man  $M$ genau dann als $m$"~\highl[teilbar]{teilbar}
  bezüglich $G$ oder sagt, $M$ hat eine
  $m$"~elementige disjunkte $G$"~\highl[Pflasterung]{Pflasterung}, 
  wenn $M$  disjunkte Zerlegungen $M=M_{1}\dotcup\dotsb\dotcup M_{m}$ hat, so
  dass es für alle  $i\in\{1,\dotsc,m\}$ ein $\gamma_{i}\in G$ mit
  $M_{i}=\gamma_{i}(M_{1})$ gibt.
\end{defini}

%def 8
\begin{defini}[Isometrie]
  Ist $(X,d)$ ein metrischer Raum, so heißt $\phi\colon X\rightarrow X$ genau
  dann \highl{Isometrie}, wenn gilt, $d(\phi(x),\phi(y))=d(x,y)$ für alle
  $x,y\in X$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}[a)]
   \item Isometrien sind stetig (sogar \textsc{Lipschitz}"~stetig) und
    injektiv ($x\neq y\Rightarrow d(\phi(x), \phi(y))=d(x,y)>0$, also
    $\phi(x)\neq\phi(y)$), aber im Allgemeinen \emph{nicht} surjektiv. Denn
    sei $X=[0,\infty)$ und $d(x,y)= \abs{x-y}$. Die Isometrie ist definiert
    durch $\phi\colon X\rightarrow X$ mit $x\mapsto x+1$. Dabei ist $x=0$ ohne
    Urbild.
   \item Die bijektiven Isometrien bilden eine Gruppe. Man nennt diese die
    \highl{Isometriegruppe} von $(X,d)$.
   \item Ist $\phi\colon X\rightarrow X$ eine bijektive Isometrie, so gilt für
    beliebige $x_{0}\in X$ und $r>0$, dass $\phi(B(x_{0},r))=B
    (\phi(x_{0}),r)$. Denn $x\in B(x_{0},r)$ gilt genau dann, wenn
    $d(x,x_{0})\leq r$ und wegen der Isometrie gilt das genau dann, wenn
    $d(\phi(x),\phi(x_{0}))\leq r\Leftrightarrow\phi(x)\in
    B(\phi(x_{0}),r)$. Für die Rückrichtung genügt es zu zeigen, dass
    $\phi^{-1}$ eine Isometrie ist. Sei dazu $x,y\in X$. Dann folgt, $d(x,y)=
    d(\phi(\phi^{-1}(x)), \phi(\phi^{-1}(y)))= d(\phi^{-1}(x), \phi^{-1}(y))$.

    Ist $\phi\colon X\rightarrow X$ eine nicht bijektive Isometrie, so gilt im
    Allgemeinen \emph{nicht} die Gleichheit $\phi(B(x_{0},r))=B(\phi(x_{0}),r)$.
    Beispielsweise sei $X=[0,\infty)$ mit dem Abstand $d(x,y)= \abs{x-y}$ und
    der Abbildung
    $\phi\colon X\rightarrow X$ mit $x\mapsto x+1$. Dann ist $\phi(B(0,1))=
    \phi([0,1])= [1,2]\neq[0,2]= B(\phi(0),1)$.
   \item Eine Drehung um \ang{45} ist genau dann
    eine Isometrie in $(\R^{n}, \norm{\cdot}_{p})$ mit $n\geq2$ und $1\leq
    p\leq\infty$, wenn $p=2$ gilt.
  \end{enumerate}
\end{bemerk}



\subsection{Isometrische Unteilbarkeit des typischen konvexen Körpers}

%def A
\begin{defini}
  \begin{enumerate}[(a)]
   \item Die Menge der $n$"~dimensionalen konvexen Körper:
    $\CK_{o}^{n}\coloneqq\Set{K\subseteq\R^{n} | K \text{ konvex, kompakt},
    \inn(K)\neq\emptyset}$
   \item $\epsilon$-\highl{Parallelmenge} von $M\subseteq\R^{n}$ mit
    $\epsilon>0$: $M_{\epsilon}\coloneqq\Set{x\in\R^{n} | \exists y\in
    M(\norm{x-y}_{2}\leq\epsilon)}$
    \missingfigure{Abbildung der Parallelmengen}
   \item \highl[Hausdorff-Abstand]{\textsc{Hausdorff}"~Abstand} zwischen
    Körpern $K_{1}, K_{2}\in\CK_{o}^{n}$: $d_{H}(K_{1},
    K_{2})\coloneqq\inf\Set{\delta>0 | K_{1}\subseteq(K_{2})_{\delta} \wedge
    K_{2}\subseteq(K_{1})_{\delta}}$. Dabei ist $(K_{1})_{\delta}$ und
    $(K_{2})_{\delta}$ die $\delta$-Parallelmenge.
  \end{enumerate}
\end{defini}

%lemma a
\begin{lemma}
  $(\CK_{o}^{n}, d_{H})$ ist ein metrischer Raum für alle $n\geq1$.
\end{lemma}

% def B
\begin{defini}
  Sei $(X,d)$ ein metrischer Raum.
  \begin{enumerate}[(a)]
   \item Ein Teilmenge~$N\subseteq X$ heißt genau dann \highl{nirgends dicht},
    wenn $\inn(\cl N)=\emptyset$.
   \item Eine Teilmenge~$M\subseteq X$ heißt genau dann von \highl[1.
    Kategorie]{1.\,Kategorie} oder \highl{mager}, wenn $\exists
    N_{1},N_{2},\dotsc\subseteq X$ nirgends dicht: $M=\bigcup_{i=1}^{\infty}
    N_{i}$.
   \item $(X,d)$ heißt genau dann \highl{Bairesch}, wenn $\forall M\subseteq
    X\colon(M)$ von 1.\,Kategorie gilt, dass $X\setminus M$ dicht in $X$ ist.
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{enumerate}[(a)]
   \item $M_{1},M_{2},\dotsc$ von erster Kategorie. Dann ist
    $\bigcup_{i=1}^{\infty} M_{i}$ ist auch von erster Kategorie.
   \item $X\setminus M$ dicht in $X\Leftrightarrow \cl(X\setminus M)=X$. Aber
    es gilt, $\cl(X\setminus M)= X\setminus\inn(M)$ und damit $\inn
    M=\emptyset$.
   \item Mengen von erster Kategorie in Baireschen Räumen sind "`klein"'.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{itemize}
   \item Man sieht, dass $\Q= \bigcup_{i=1}^{\infty}\{q_{i}\}$ ist mager in
    $\R$, aber dicht.
   \item $\Set{k+\nicefrac{1}{i} | k\in\Z, i=2,3,4,\dotsc}$ ist nirgends dicht
    in $\R$.
  \end{itemize}
\end{bsp}

%lemma b
\begin{lemma}[Bairescher Kategoriensatz]
  Jeder vollständige metrische Raum ist Bairesch.
\end{lemma}

\begin{bsp}
  \begin{itemize}
   \item $(\R,\abs{\cdot})$ ist Bairesch.
   \item $(\Q,\abs{\cdot})$ ist \emph{nicht} Bairesch, denn
    $\Q=\bigcup_{i=1}^{\infty} \{q_{i}\}$ mager in $(\Q,\abs{\cdot})$, aber
    $\Q\setminus\Q$ ist \emph{nicht} dicht.
  \end{itemize}
\end{bsp}

%lemma c
\begin{lemma}
  $(\CK_{o}^{n}, d_{H})$ ist Bairesch für $n\geq1$.
\end{lemma}

%def c
\begin{defini}
  Man sagt, eine Aussage~(A) gilt für den typischen $n$"~dimensionalen Körper,
  wenn die Ausnahmemenge $\Set{K\in\CK_{o}^{n} | K \text{ erfüllt (A) nicht}}$
  ist von erster Kategorie in $(\CK_{o}^{n}, d_{H})$.
\end{defini}

%def d
\begin{defini}
  Für eine Borelmenge~$B\subseteq\R^{n}$ seien $\vol_{n}(B)$ das
  ($n$"~dimensionale) \highl{Volumen} (Lebesgue-Maß, $n$"~dimensionales
  Hausdorff-Maß) und $\CH^{n-1}(B)$ das $(n-1)$"~dimensionale Hausdorff-Maß
  ("`Oberflächenmaß"') von $B$.
\end{defini}

% lemma d
\begin{lemma}\label{satz:lemma-d}
  Für $K_{1}, K_{2}\in\CK_{o}^{n}$ und $n\geq2$ mit $K_{1}\subseteq K_{2}$
  gelten die folgenden Aussagen:
  \begin{enumerate}[(a)]
   \item $\vol_{n}(K_{1})\leq\vol_{n}(K_{2})$ (Gleichheit gilt genau dann,
    wenn $K_{1}=K_{2}$)
   \item $\CH^{n-1}(\bd(K_{1}))\leq\CH^{n-1}(\bd(K_{2}))$ (Gleichheit gilt genau dann,
    wenn $K_{1}=K_{2}$)
  \end{enumerate}
  \begin{proof}
    Beweis wird hier nicht geführt. Die erste Aussage ist leicht zu beweisen
    und gilt auch für den Fall $n=1$. Während dies bei der zweiten Aussage
    nicht mehr so ist.
  \end{proof}
\end{lemma}

\begin{satz}
  Der typische $n$"~dimensionale konvexe Körper mit $n\geq1$ ist für
  \emph{kein} $m\in\{2,3,4,\dotsc\}$ bezüglich der euklidischen Isometrien
  $m$"~teilbar.
  \begin{proof}
    Hier wird eine Beweisidee skizziert: Der Fall $n=1$ ergibt sich aus
    \autoref{bem:1.11}. Die Fälle für $n\geq2$ ergeben sich aus
    \autoref{satz:lemma-e} und \autoref{satz:lemma-f} sowie seinen Folgerungen.
  \end{proof}
\end{satz}

% lemma e
\begin{lemma}\label{satz:lemma-e}
  Ein Körper~$K\in\CK_{o}^{n}$ mit $n\geq2$ besitze eine
  Vereinigungsdarstellung~$K=\bigcup_{i=1}^{m} \phi_{i}(M)$ mit einer
  Menge~$M\subseteq\R^{n}$ und $m\geq2$ euklidische Isometrien
  $\phi_{1},\dotsc,\phi_{m}$. Dann existieren $1\leq i_{1}\leq i_{2}\leq m$
  mit $\CH^{n-1}(\phi_{i_{2}}\phi_{i_{1}}^{-1}(\bd(K))\cap\bd(K))>0$.
  \begin{proof}
    Sei o.\,B.\,d.\,A. $M\in\CK_{o}^{n}$. Sonst ersetzt man das $M$ durch
    $\cl(\conv(M))$.
    \begin{enumerate}[1.\,F{a}ll]
     \item $\phi_{1}(M)=K$: Dann ist $\vol_{n}(\phi_{2}(M))=
      \vol_{n}(\phi_{1}(M))= \vol_{n}(K)$ mit $\phi_{2}(M)\subseteq K$. Nach
      dem \autoref{satz:lemma-d} ist dan $\phi_{2}(M)=K$. Also haben wir
      $\CH^{n-1}(\phi_{2}\phi_{1}^{-1}(\bd(K))\cap\bd(K))= \CH^{n-1}
      (\underbrace{\phi_{1}^{-1}(\bd(K))}_{\bd(M)}\cap\underbrace{\phi_{2}^{-1}(\bd(K))}_{\bd(M)})=
      \CH^{n-1}(\bd(M))> 0$.
     \item $\phi_{1}(M)\neq K$: Somit folgt, $\phi_{1}(M)\subsetneq K$ und wir
      schätzen ab: $\CH^{n-1}(\bd(M))=
      \CH^{n-1}(\bd(\phi_{1}(M)))\stackrel{\text{\autoref{satz:lemma-d}}}{<}
      \CH^{n-1}(\bd(K))\stackrel{\bd(K)\subseteq \bigcup_{i=1}^{m}
      \bd(\phi_{i}(M))}{=} \CH^{n-1}(\bd(K)\cap \bigcup_{i=1}^{m}
      \bd(\phi_{i}(M)))\leq \sum_{i=1}^{m} \CH^{n-1}(\bd(K)\cap
      \bd(\phi_{i}(M)))= \sum_{i=1}^{m} \CH^{n-1}(\phi_{i}^{-1}(\bd(K))\cap
      \bd(M))$. Damit überlappen sich notwendigerweise zwei Mengen. Also
      existieren zwei Indices $1\leq i_{1}\leq i_{2}\leq m$ mit
      $\CH^{n-1}((\phi_{i_{1}}^{-1}(\bd(K))\cap\bd(K))\cap
      (\phi_{i_{2}}^{-1}(\bd(K)))\cap (\bd(M)))>0$. Damit ist
      $\CH^{n-1}(\phi_{i_{1}}^{-1}(\bd(K))\cap\phi_{i_{2}}^{-1}(\bd(K)))>0$
      und es ergibt sich die Behauptung.
    \end{enumerate}
  \end{proof}
\end{lemma}

\begin{folg}\label{folg:1}
  Ist der konvexe Körper~$K\in\CK_{o}^{n}$ mit $n\geq2$ bezüglich der
  euklidischen Isometrien $m$"~teilbar für $m\geq2$, so existiert eine
  Isometrie $\phi\neq\id$ mit $\CH^{n-1}(\phi(\bd(K))\cap\bd(K))>0$.
\end{folg}

% lemma f
\begin{lemma}\label{satz:lemma-f}
  Sei $n\geq2$. Dann ist die Menge der $K\in\CK_{o}^{n}$ für die eine
  euklidische Isometrie $\phi\neq\id$ mit \autoref{folg:1} existiert von
  erster Kategorie in $(\CK_{o}^{n}, d_{H})$.
\end{lemma}

\begin{bemerk}
  Die mit der \autoref{folg:1} gegebene notwendige Bedingung ist für viele
  $K\in\CK_{o}^{n}$ erfüllt:
  \begin{itemize}
   \item  $K$ symmetrisch ($\exists\phi\neq\id$ euklidische Isometrie:
    $\phi(K)=K$), z.\,B. Kugeln
   \item $K$ mit Hyperebenenstück in $\bd(K)$, z.\,B. Polyeder
  \end{itemize}
\end{bemerk}

\subsection{Positive Aussagen zur isometrischen Teilbarkeit spezieller
  konvexer Kompakta in euklidischen Räumen}

\begin{satz}
  Für jede Dimension $n$ mit $n\mid3$ gibt es eine natürliche Zahl
  $m_{n}\geq2$ derart, dass jede abgeschlossene oder offene Kugel im
  euklidischen Raum $(\R^{n}, \norm{\cdot}_{2})$ für alle $m\geq m_{n}$
  isometrisch $m$"~teilbar ist.
\end{satz}

\begin{bsp}
  Für $n=3$ ist $m_{n}=22$ eine solche Zahl.
\end{bsp}

\begin{bemerk}
  \begin{enumerate}
   \item Im Vergleich mit anderen Normen, z.\,B. $\norm{\cdot}_{p}$ mit $1\leq
    p\leq\infty$ und $p\neq2$, liegt eine besonders reichhaltige
    Isometriegruppe vor. Weiterhin sind Kugeln besonders symmetrische Mengen,
    d.\,h. sie werden von vielen Isometrien auf sich abgebildet. In diesem
    Sinne nutzt der Satz besonders flexible Voraussetzungen.
   \item Zur Methodik des Beweises:
    \begin{itemize}
     \item $n=3$ ist zentraler Fall, betrachte o.\,B.\,d.\,A. $B(0,1)$ bzw.
      $\mathring{B}(0,1)$.
     \item Die Gruppe der orientierungserhaltenden Deckbewegungen von $B(0,1)$
      bzw. $\mathring{B}(0,1)$ ist relativ reichhaltig. Sie besitzt im
      Gegensatz zum zweidimensionalen Fall freie Untergruppen mit mehr als
      zwei Erzeugern. Aber sie sind nicht zu groß und ist lokal kommutativ.
      Die Begriffe werden im nächsten Kapitel genauer definiert.
     \item Zum Nachweis der $m$"~Teilbarkeit von $B(0,1)$ bzw
      $\mathring{B}(0,1)$ werden $n-1$ geeignete Drehungen (im algebraischen
      Sinne) $\delta_{1},\dotsc,\delta_{n-1}$ gewählt, wobei
      $\delta_{n-1},\dotsc,\delta_{n-2}$ Deckbewegungen der Kugel sind. Dann
      wird die Kugel in Teile von Orbits unter der Gruppe
      $\langle\delta_{1},\dotsc,\delta_{n-1}\rangle$ zerlegt und in jedem
      Orbit nach dem Zornschen Lemma eine Zerlegung gefunden.
    \end{itemize}
  \end{enumerate}
\end{bemerk}



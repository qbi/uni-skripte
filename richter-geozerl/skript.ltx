   \item Ein metrischer Raum~$(X,d)$ heißt genau dann
     \highl{Bairesch}, wenn für alle mageren Teilmengen~$M\subseteq X$
     gilt, dass $X\setminus M$ dicht in $X$ liegt.
  \end{enumerate}
\end{defini}

\begin{bemerk}
  \begin{enumerate}[(a)]
   \item Seien $M_{1},M_{2},\dotsc$ von erster Kategorie, dann ist
    $\bigcup_{i=1}^{\infty} M_{i}$ auch von erster Kategorie.
   \item $X\setminus M$ dicht in $X\Leftrightarrow \cl(X\setminus M)=X$. Aber
    es gilt, $\cl(X\setminus M)= X\setminus\inn(M)$ und damit $\inn
    M=\emptyset$.
   \item Mengen von erster Kategorie in Baireschen Räumen sind "`klein"'.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{itemize}
   \item Man sieht, dass $\Q= \bigcup_{i=1}^{\infty}\{q_{i}\}$ ist mager in
    $\R$, aber dicht.
   \item $\Set{k+\nicefrac{1}{i} | k\in\Z, i=2,3,4,\dotsc}$ ist nirgends dicht
    in $\R$.
  \end{itemize}
\end{bsp}


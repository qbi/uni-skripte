%satz 2
\begin{satz}\label{satz:2.2}
  Es sei $F$ die von $\sigma$ und $\tau$ erzeugte freie Gruppe vom Rang~$2$.
  Dann gibt es eine Zerlegung $F=A_{1}\dotcup A_{2}\dotcup A_{3}\dotcup A_{4}$
  mit $\sigma(A_{2})=A_{2}\cup A_{3}\cup A_{4}$ und $\tau(A_{4})= A_{1}\cup
  A_{2}\cup A_{4}$. Dabei kann man zu vorgegebenen $w\in F$ die Zerlegungen so
  wählen, dass $w$ und $\iota$ in derselben Menge $A_{i}$ liegen.
  \begin{proof}
    Ziel ist die Aufteilung der Worte $\tilde{w}\in F$ in disjunkte
    $A_{1},A_{2},A_{3}$ und $A_{4}$ mit
    \begin{align*}
      \sigma(A_{2})&\subseteq A_{2}\cup A_{3}\cup A_{4} & D_{\sigma}&\coloneqq
	 A_{2}& R_{\sigma}&\coloneqq A_{2}\cup A_{3}\cup A_{4}\\
      \sigma^{-1}(A_{2}\cup A_{3}\cup A_{4})&\subseteq A_{2}&
	 D_{\sigma^{-1}}&\coloneqq A_{2}\cup A_{3}\cup A_{4}&
	 R_{\sigma^{-1}}&\coloneqq A_{2}\\
      \tau(A_{4})&\subseteq A_{1}\cup A_{2}\cup A_{4}& D_{\tau}&\coloneqq
	 A_{4}& R_{\tau}&\coloneqq A_{1}\cup A_{2}\cup A_{4}\\
      \tau^{-1}(A_{1}\cup A_{2}\cup A_{4})&\subseteq A_{4}&
	 D_{\tau^{-1}}&\coloneqq A_{1}\cup A_{2}\cup A_{4}& R_{\tau^{-1}}&\coloneqq A_{4}
    \end{align*}
    Sei $w=\rho_{1}\dotso\rho_{n}$ mit
    $\rho_{i}\in\{\sigma,\sigma^{-1},\tau,\tau^{-1}\}$ und setze $w_{k}=
    \rho_{k+1}\dotso\rho_{n}$ mit $0\leq k\leq n$, $w_{0}=w$ und $w_{n}=\iota$.
    \begin{enumerate}[1.\,Schr{i}tt]
     \item Zuordnung der Worte $w_{k}$, $0\leq k\leq n$:
      \begin{itemize}
       \item $k\in\{0,n\}$: $w=w_{0}$ und
	\begin{gather}
	  \label{eq:11}
	     \iota=w_{n}\stackrel{!}{\in}
	\begin{cases}
	  A_{2}& \rho_{n}=\sigma\\
	  A_{1}& \rho_{n}=\sigma^{-1}\\
	  A_{4}& \rho_{n}=\tau\\
	  A_{3}& \rho_{n}=\tau^{-1}
	\end{cases}
	\end{gather}
       \item $k\in\{1,\dotsc,n-2\}$: Erfolgt per Induktion. Wir wissen, dass
	\begin{gather}
	  \label{eq:12}
	     w_{k}= \rho_{k}^{-1}w_{k-1}\stackrel{!}{\in}
	     \begin{cases}
	       A_{i} \text{ mit } A_{i}\subseteq R_{\rho_{k}^{-1}} & w_{k-1}\in D_{\rho_{k}^{-1}}\\
	       A_{i} \text{ mit } A_{i}\cap R_{\rho_{k}^{-1}}=\emptyset&
	       w_{k-1}\notin D_{\rho_{k}^{-1}}
	     \end{cases}
	\end{gather}
       \item $k=n-1$: $w_{k}=w_{n-1}=\rho_{n}$
       \item Zur Erfüllung der Definitions- und Wertebereiche sind nötig:
	\begin{gather}
	  \label{eq:13}
	     \rho_{n}= \rho_{n-1}^{-1}w_{n-2}\stackrel{!}{\in}
	     \begin{cases}
	       A_{i}\text{ mit } A_{i}\subseteq R_{\rho_{n-1}^{-1}}& w_{n-2}\in D_{\rho_{n-1}^{-1}}\\
	       A_{i}\text{ mit } A_{i}\cap R_{\rho_{n-1}^{-1}}=\emptyset&
	       w_{n-2}\notin D_{\rho_{n-1}^{-1}}
	     \end{cases}\\
	  \rho_{n}= \rho_{n}\iota \stackrel{!}{\in}
	     \begin{cases}
	       A_{i}\text{ mit } A_{i}\subseteq R_{\rho_{n}}& \iota\in D_{\rho_{n}}\\
	       A_{i}\text{ mit } A_{i}\cap R_{\rho_{n}}=\emptyset& \iota\notin D_{\rho_{n}}
	     \end{cases}
	\end{gather}
       \item Fallunterscheidung nach $\rho_{n}$ und $\rho_{n-1}$ und ob
	$w_{n-2}$ in oder nicht in $D_{\rho_{n-1}^{-1}}$ liegt.
	\begin{enumerate}[1.\,F{a}ll]
	 \item $\rho_{n}=\sigma$ bzw. analog $\rho_{n}=\tau$: Nach der
	  \autoref{eq:11} ist $\iota\in A_{2}\subseteq D_{\sigma}$ und nach
	  \autoref{eq:13} muss $\rho_{n}\stackrel{!}{\in}A_{2}\cup A_{3}\cup
	  A_{4}$ sein.
	  \begin{enumerate}[{1}.1\,F{a}ll]
	   \item $\rho_{n-1}=\sigma$:
	    \begin{enumerate}[{1}.{1}.1\,F{a}ll]
	     \item $w_{n-2}\in D_{\sigma^{-1}}$: Nach \autoref{eq:13} ist
	      $\rho_{n}\stackrel{!}{\in}A_{2}$. Das verträgt sich mit obigen
	      Forderung. Also Zuordnung $\rho_{n}\in A_{2}$ ist in Ordnung.
	     \item $w_{n-2}\notin D_{\sigma^{-1}}$: Um die \autoref{eq:13} zu
	      erfüllen, muss $\rho_{n}\in A_{1}\cup A_{3}\cup A_{4}$ sein.
	      Also Zuordnungen $\rho_{n}\in A_{3}$ oder $\rho_{n}\in A_{4}$ in Ordnung.
	    \end{enumerate}
	   \item $\rho_{n-1}=\sigma^{-1}$: Tritt nicht auf, weil die Kürzung
	    $\rho_{n-1}\rho_{n}$ möglich wäre.
	   \item $\rho_{n-1}=\tau$
	    \begin{enumerate}[{1}.\,3.1\,F{a}ll]
	     \item $w_{n-2}\in D_{\tau^{-1}}$: Nach \autoref{eq:13} ist
	      $\rho_{n}\stackrel{!}{\in}A_{4}$. Die Zuordnung $\rho_{n}\in
	      A_{4}$ ist in Ordnung.
	     \item $w_{n-2}\notin D_{\tau^{-1}}$:  Nach \autoref{eq:13} ist
	      $\rho_{n}\stackrel{!}{\in} A_{1}\cup A_{2}\cup A_{3}$. Die
	      Zuordnung $\rho_{n}\in A_{2}$ oder $\rho_{n}\in A_{3}$ ist in
	      Ordnung.
	    \end{enumerate}
	   \item $\rho_{n-1}=\tau^{-1}$:
	    \begin{enumerate}[{1}.\,4.1\,F{a}ll]
	     \item $w_{n-2}\in D_{\tau}$: Nach \autoref{eq:13} ist
	      $\rho_{n}\stackrel{!}{\in} A_{1}\cup A_{2}\cup A_{4}$. Die
	      Zuordnung $\rho_{n}\in A_{2}$ und $\rho_{n}\in A_{4}$ in Ordnung.
	     \item $w_{n-2}\notin D_{\tau}$: Nach \autoref{eq:13} ist
	      $\rho\stackrel{!}{\in} A_{3}$. Die Zuordnung ist in Ordnung.
	    \end{enumerate}
	  \end{enumerate}
	 \item $\rho_{n}=\sigma^{-1}$ bzw. $\rho_{n}=\tau^{-1}$ geht analog zu oben.
	\end{enumerate}
      \end{itemize}
     \item Zuordnung der Worte aus $F\setminus\{w_{0},\dotsc, w_{n}\}$: Jedes
      $\tilde{w}\in F$ hat eine eindeutige (nicht kürzbare) Darstellung
      $\tilde{w}= vw_{i}$ mit einem $w_{i}\in\{w_{0},\dotsc, w_{n}\}$ von
      maximaler Länge.

      Wir führen nun eine Induktion nach der Länge $l=l(v)$ von $v$ durch. Für
      $l=0$ ist $\tilde{w}=w_{i}$ und ist damit schon zugeordnet. Im
      Induktionsschritt ist $\tilde{w}= \rho v'w_{i}$ mit $l(v')=l$ und
      $\rho\in\{\sigma,\sigma^{-1},\tau,\tau^{-1}\}$. Das $\tilde{w}$ muss wie
      folgt zugeordnet werden:
      \begin{gather}
	\label{eq:14}
	   \tilde{w}\stackrel{!}{\in}
	   \begin{cases}
	     A_{i}\text{ mit } A_{i}\subseteq R_{\rho}& v'w_{i}\in D_{\rho}\\
	     A_{i}\text{ mit } A_{i}\cap R_{\rho}=\emptyset& v'w_{i}\in D_{\rho}
	   \end{cases}
      \end{gather}
    \end{enumerate}
  \end{proof}
\end{satz}


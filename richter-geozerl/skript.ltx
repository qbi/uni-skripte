% hs1
\begin{satz}\label{satz:hs1}
  Für einen normierten Raum $(X,\norm{\cdot})$ sind äquivalent:
  \begin{enumerate}[(i)]
   \item $(X,\norm{\cdot})$ streng konvex.
   \item $\forall x_{1},x_{2}\in
    B(0,1)\colon\norm{\frac{x_{1}+x_{2}}{2}}=1\Rightarrow x_{1}=x_{2}$.
   \item $\forall x_{1},x_{2}\in X\,\forall x_{0}\in X\,\forall r>0\colon
    x_{1},x_{2}\in
    B(0,1)\wedge\norm{x_{1}-x_{2}}=2r\Rightarrow\frac{x_{1}+x_{2}}{2}= x_{0}$
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
     \item[(i)$\Rightarrow$(ii)] Betrachten $x_{1},x_{2}\in B(0,1)$ mit
      $\norm{\frac{x_{1}+x_{2}}{2}}=1$ und es ist zu zeigen, dass
      $x_{1}=x_{2}$. Wir wissen $1=\norm{\frac{x_{1}+x_{2}}{2}}\leq\frac{1}{2}
      \norm{x_{1}}+
      \frac{1}{2}\norm{x_{2}}\leq\nicefrac{1}{2}+\nicefrac{1}{2}=1$. Also ist
      $\norm{x_{1}}=\norm{x_{2}}=1$, d.\,h. $x_{1}, x_{2}\in\bd(B(0,1))$. Nun
      nehmen wir an, dass $x_{1}\neq x_{2}$ und betrachten die Strecke
      $\overline{x_{1}x_{2}}= \Set{\lambda x_{1}+(1-\lambda)x_{2} |
      0\leq\lambda \leq1}$. Es ist $\norm{\lambda
      x_{1}+(1-\lambda)x_{2}}\leq\lambda\norm{x_{1}}+ (1-\lambda)\norm{x_{2}}=
      1$. Wir wissen, $1=\norm{\frac{x_{1}+x_{2}}{2}}$ und wir unterscheiden
      zwei Fälle:
      \begin{itemize}
       \item $0\leq\lambda\leq\nicefrac{1}{2}$:
	$1=\norm{\frac{x_{1}+x_{2}}{2}}= \norm{\frac{1}{2(1-\lambda)} (\lambda
	x_{1}+(1-\lambda)x_{2}) +(1-\frac{1}{2(1-\lambda)}) x_{1}}\leq
	\frac{1}{2(1-\lambda)} \norm{\lambda x_{1}+(1-\lambda)x_{2}}+
	1-\frac{1}{2(1-\lambda)} \norm{x_{1}}\leq1$
       \item $\nicefrac{1}{2}\leq\lambda\leq1$: $\norm{\frac{1}{2\lambda}
	(\lambda x_{1}+(1-\lambda)x_{2})+ (1-\frac{1}{2\lambda})x_{2}}
	\leq\frac{1}{2\lambda} \norm{\lambda x_{1}+(1-\lambda)x_{2}}
	+(1-\frac{1}{2\lambda}) \norm{x_{2}}\leq1$.
      \end{itemize}
      Somit ist also: $\norm{\lambda x_{1}+(1-\lambda)x_{2}}=1$ und es folgt,
      $\overline{x_{1}x_{2}}\subseteq\bd(B(0,1))$ \lightning{}zu dem Punkt~(i).
     \item[(ii)$\Rightarrow$(i)] Wir nehmen an, die Voraussetzung gilt nicht.
      Dann haben wir eine Strecke $\overline{x_{1}x_{2}}$ mit $x_{1}\neq
      x_{2}$, die in $\bd(B(0,1))$ liegt. Dann ist
      $\norm{\frac{x_{1}+x_{2}}{2}}=1$ für $x_{1},x_{2}\in B(0,1)$, denn
      $\frac{x_{1}+x_{2}}{2}\in\overline{x_{1}x_{2}}\subseteq\bd(B(0,1))$. Aus
      (ii) folgt aber $x_{1}=x_{2}$. \lightning{}
     \item[(ii)$\Rightarrow$(iii)] Sei $x_{0},x_{1},x_{2}\in X$, $r>0$,
      $x_{1},x_{2}\in B(0,1)$ und $\norm{x_{1}-x_{2}}=2r$. Damit liegen
      $y_{1}\coloneqq\frac{x_{1}-x_{0}}{r}$ und
      $y_{2}\coloneqq-\frac{x_{2}-x_{0}}{r}$ in der Einheitskugel $B(0,1)$.
      Weiter ist
      $\norm{\frac{y_{1}+y_{2}}{2}}=\norm{\frac{x_{1}-x_{2}}{2r}}=1$. Wegen
      des zweiten Punktes ergibt sich $y_{1}=y_{2}$. Also ist
      $\frac{x_{1}-x_{0}}{r}= -\frac{x_{2}-x_{0}}{r}$ und damit
      $\frac{x_{1}+x_{2}}{2}=x_{0}$.
     \item[(iii)$\Rightarrow$(ii)] Wir betrachten $x_{1},x_{2}\in B(0,1)$ mit
      $\norm{\frac{x_{1}+x_{2}}{2}}=1$. Wir setzen $y_{1}\coloneqq x_{1},
      y_{2}\coloneqq-x_{2}, y_{0}\coloneqq0$ und $r\coloneqq1$. Diese erfüllen
      $y_{1},y_{2}\in B(0,1)=B(y_{0},r)$ und $\norm{y_{1}-y_{2}}=
      \norm{x_{1}+x_{2}}= 2\norm{\frac{x_{1}+x_{2}}{2}}=2r$. Nach dem
      Punkt~(iii) folgt, dass $0=y_{0}= \frac{y_{1}+y_{2}}{2}=
      \frac{x_{1}+x_{2}}{2}$. Also ist $x_{1}=x_{2}$.
    \end{itemize}
  \end{proof}
\end{satz}


\begin{bsp}
  \begin{enumerate}[(a)]
   \item nicht streng konvexe Räume:
    \begin{itemize}
     \item $(\R^{n}, \norm{\cdot}_{1})$, denn die
    Strecke $\overline{(1,0,\dotsc),(0,1,0,\dotsc)}\subseteq\bd(B(0,1))$.
     \item $(\ell_{1}, \norm{\cdot}_{1})$, denn die
    Strecke $\overline{(1,0,\dotsc),(0,1,0,\dotsc)}\subseteq\bd(B(0,1))$.
     \item $(\R^{n}, \norm{\cdot}_{\infty})$ und analog $(c_{0},
      \norm{\cdot}_{\infty})$,  die Strecke
      $\overline{(1,1,0,0,\dotsc)(1,\dotsc,1,0,0,\dotsc)}\subseteq\bd(B(0,1))$
    \end{itemize}
   \item streng konvexe Räume: $(\R^{n}, \norm{\cdot}_{p})$ mit $1<
    p<\infty$ und analog $(\ell_{p}, \norm{\cdot}_{p})$ mit $1<p<\infty$.
    \begin{proof}
      Für $1<p<\infty$ hat man die Funktion $f_{p}\colon\R\rightarrow\R$ mit
      $f_{p}(x)\coloneqq\abs{x}^{p}$. Diese erfüllt die Ungleichung
      $f_{p}(\frac{x+y}{2})\leq\nicefrac{1}{2} (f_{p}(x)+f_{p}(y))$ für alle
      $x,y\in\R$. Die Gleichheit gilt genau dann, wenn $x=y$.

      Nun ist $x,y\in B(0,1)\subseteq\R^{n}$ mit $x=(\xi_{1},\dotsc,\xi_{n})$ und
      $y=(\eta_{1},\dotsc,\eta_{n})$. Weiter ist $\norm{\frac{x+y}{2}}_{p}=1$.
      Es ist zu zeigen, dass $x=y$. Es gilt: $1= \norm{\frac{x+y}{2}}_{p} \leq
      \nicefrac{1}{2}
      \norm{x}_{p}+\nicefrac{1}{2}\norm{y}_{p}\leq\nicefrac{1}{2}
      +\nicefrac{1}{2}=1$. Damit haben wir $\norm{x}_{p}^{(p)}=
      \norm{y}_{p}^{(p)}=  \norm{\frac{x+y}{2}}_{p}^{(p)}=1$ und weiter
      $\abs{\xi_{1}}^{p}+\dotsb+\abs{\xi_{n}}^{p}=
      \abs{\eta_{1}}^{p}+\dotsb+\abs{\eta_{n}}^{p}=
      \abs{\frac{\xi_{1}+\eta_{1}}{2}}^{p}+\dotsb+\abs{\frac{\xi_{n}+\eta_{n}}{2}}^{p}=1$.
      Es folgt, $\frac{\abs{\xi_{1}^{p}} + \abs{\eta_{1}}^{p}}{2}+\dotsb+
      \frac{\abs{\xi_{n}^{p}} + \abs{\eta_{n}}^{p}}{2}= \abs{\frac{\xi_{1}
      +\eta_{1}}{2}}^{p}+\dotsb+\abs{\frac{\xi_{n}
      +\eta_{n}}{2}}^{p}\Rightarrow \frac{f_{p}(\xi_{1})
      +f_{p}(\eta_{1})}{2}+\dotsb+ \frac{f_{p}(\xi_{n})+ f_{p}(\eta_{n})}{2}=
      f_{p}(\frac{\xi_{1}+\eta_{1}}{2})+\dotsb+f_{p}(\frac{\xi_{n}+\eta_{n}}{2})
      \Rightarrow\xi_{1}=\eta_{1},\dotsc,\xi_{n}=\eta_{n}$. Also $x=y$.
    \end{proof}
  \end{enumerate}
\end{bsp}


\subsection{Die Kettenbruchentwicklung reellquadratischer irrationaler Zahen}

Sei $K=\Q(\sqrt{D}), D>1$, quadratfrei. Sei $\alpha\in K\setminus\Q$, dann
existiert eine eindeutig bestimmte $a,b,c\in\Z$ mit
\begin{enumerate}
 \item $a>0$
 \item $\ggT(a,b,c) = 1$
 \item $a\alpha^{2}+b\alpha + c=0$
\end{enumerate}

\begin{defini}
  Die \highl{Diskriminante} $\disc(\alpha)$ ist \gdwdef $\disc(\alpha) =
  b^{2}-4ac$. Es gilt $\disc(\alpha)>0$.
\end{defini}

\begin{defini}
  $\alpha\in K\setminus\Q$ heißt \highl{reduziert} \gdwdef $\alpha>1,
  -1<\alpha'<0$ ($a=r+s\sqrt{D} \Rightarrow \alpha' =r-s\sqrt{D}, r,s\in\Q$)
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Äquivalent: $\alpha>1, -\frac{1}{\alpha'}>1$
   \item Mit $\alpha$ ist auch $-\frac{1}{\alpha'}$ reduziert
   \item $\sqrt{D}$ ist nicht reduziert, $-\sqrt{D}< -1$
   \item Sei $\alpha=(\sqrt{D}- [\sqrt{D}])^{-1}, \alpha>1,
    \alpha'=\frac{1}{-\sqrt{D}-[\sqrt{D}]}<0, \alpha'>-1$ ist auch klar.
  \end{enumerate}
\end{bemerk}

\begin{fakt}
  Für eine gegebene natürliche Zahl~$m$ existieren nur endlich viele redzierte
  Zahlen~$\alpha_{i}$ mit $\disc(\alpha_{i})=m$.

  \begin{proof}
    Sei $\alpha$ reduziert und $\disc(\alpha)=m$.
    \begin{gather*}
      \alpha = \frac{-b+\epsilon\sqrt{m}}{2a},\quad \epsilon\in[-1,1]
    \end{gather*}
    Für $\epsilon=-1$ folgt $-b-\sqrt{m}>0, \alpha'=\frac{-b+\sqrt{m}}{2a}<0$.
    Widerspruch. Also $\epsilon=+1$. Dann folgt
    \begin{gather*}
      -b+\sqrt{m}>2a>b+\sqrt{m}\qquad(0>\alpha'>-1)
    \end{gather*}
    Somit ist $b<0$ und $0< -b<\sqrt{m}$. Also nur endlich viele $b$.
    $2a< -b+\sqrt{m}, a>0$ $\Rightarrow$ nur endlich viele $a$.
    $m=b^{2}-4ac$ $\Rightarrow$ nur endlich viele $c$.
  \end{proof}
\end{fakt}

\begin{defini}
  Sei $GL(2,\Z) = \{(\begin{smallmatrix}a& b\\c& d\end{smallmatrix})\in
  M(2,2;\Z)\colon \det=\pm1\}$.
\end{defini}

6 ist unendlich: $(\begin{smallmatrix}1& 1\\0& 1\end{smallmatrix})$ hat
undenliche Ordnung.

$(\begin{smallmatrix}0& 1\\1& 0\end{smallmatrix})$ ist Torsionselement. Sei
$\alpha\in K\setminus\Q$ $g_{n}:=(\begin{smallmatrix}p_{n}& p_{n-1}\\ q_{n}&
q_{n-1}\end{smallmatrix}), \det g_{n} = (-1)^{n+1}$

Wir hatten gesehen
\begin{gather*}
  \alpha = \frac{p_{n-1}\alpha_{n}+p_{n-2}}{q_{n-1}\alpha_{n}+q_{n-2}}
\end{gather*}
$GL(2,\Z)$ operiert auf $K\setminus\Q$ vermöge
\begin{gather*}
  \begin{pmatrix}
    a& b\\
    c& d
  \end{pmatrix}
     \alpha := \frac{a\alpha + b}{c\alpha +d}
\end{gather*}
(gebrochenlineare Substitutionen)

\begin{defini}
  $\alpha, \beta\in K\setminus\Q$ heißen \highl{äquivalent} \gdwdef $\exists
  g\in GL_{2}\Z\colon \beta=g\alpha$.
\end{defini}

\begin{bemerk}
  Ist $\alpha\in K\setminus\Q$ und $\alpha_{n}$ der $n$-te Rest der
  Kettenbruchentwicklung, also $\alpha=[a_{0}; a_{1},\dotsc,
  a_{n-1},\alpha_{n}]$, so ist $\alpha_{n}$ äquivalent zu $\alpha$.
\end{bemerk}

\begin{fakt}
  Sei $\alpha=[a_{0}; a_{1},\dotsc, a_{n-1},\alpha_{n}]$ wie oben, dann ist
  die Diskriminante von $\alpha_{n}$ gleich der von $\alpha$.

  \begin{proof}
    Setze $h_{n}=(\begin{smallmatrix}a_{n}& 1\\1& 0\end{smallmatrix}) \in
    GL_{2}\Z$
    \begin{gather*}
      h_{n}(\alpha_{n+1}) = \frac{a_{n}\alpha_{n+1}+1}{\alpha_{n+1}} = a_{n} +
         \frac{1}{\alpha_{n+1}} = \alpha_{n}
    \end{gather*}
    Das heißt $h_{n}(\alpha_{n+1}) = \alpha_{n}$.

    Wir zeigen: Die zahlen $\beta$ und $\gamma=\frac{m\beta+1}{\beta}$ haben
    dieselbe Diskriminante ($m\geq1$).

    Sei dazu $a\gamma^{2}+b\gamma+c = c$. $\Rightarrow$ $a(m\beta+1)^{2} +
    b(m\beta+1)\beta + c\beta^{2} = 0$ $\Rightarrow$
    $(\underbrace{am^{2}+bm+c}_{=A}) \beta^{2} + (\underbrace{2am+b}_{=B}) \beta +
    \underbrace{a}_{=C} = 0$.

    \begin{align*}
      B^{2}+4AC  &= 4a^{2}m^{2} + 4abm + b^{2} - 4a^{2}m^{2}-4abm -4ac\\
      & = b^{2}-4ac
    \end{align*}
    Das heißt $\disc(\beta)$ teil $\disc(\gamma)$

    Die analoge Recchnugn für $\gamma$ und $\beta=(\begin{smallmatrix}m& 1\\1&
    0\end{smallmatrix})^{-1}$ zu $\gamma$. \todo{hfw}
  \end{proof}
\end{fakt}

\begin{fakt}
  \begin{enumerate}
   \item Ist $\alpha$ reduziert, so auch alle $\alpha_{n}$.
   \item Die $\alpha_{n}$ sind reduziert für $n\gg1$.
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item $\alpha=a_{n}+\frac{1}{\alpha_{n+1}}$ ($a_{n}=[\alpha_{n}]$),
      $\alpha_{n+1}>1$.

      Ist $\alpha>1$, $-1<\alpha<0$ und $\beta$ definiert durch
      $\alpha=[\alpha]+\frac{1}{\beta}$, so ist $\beta>1$ und
      $-\frac{1}{\beta'} = [\alpha] - \alpha' >1$

     \item
      \begin{align*}
        \alpha &= \frac{p_{n-1}\alpha_{n}+p_{n-2}}{q_{n-1}\alpha_{n}+q_{n-1}} \Rightarrow\\
        \alpha_{n} &= \frac{q_{n-2}\alpha -p_{n-2}}{-q_{n-1}\alpha +p_{n-1}}
           \qquad (-I~\text{operiert trivial})\\
        \alpha_{n}' &= \frac{q_{n-2}\alpha' -p_{n-2}}{-q_{n-1}\alpha'+p_{n-1}}
           = -\frac{q_{n-2}}{q_{n-1}} \frac{\alpha' - \frac{p_{n-2}}{q_{n-2}}}
           {\alpha' -\frac{p_{n-1}}{q_{n-1}}}
      \end{align*}
      Der rechte Bruch geht gegen 1, also $\alpha_{n}'<0$ für $n\gg1$.
      $\alpha_{n}>1$ ist klar.

      \begin{align*}
        \alpha_{n}' &= -\frac{q_{n-2}}{q_{n-1}} (\underbrace{\frac{\alpha' -
           \frac{p_{n-1}}{q_{n-1}}}{\alpha' - \frac{p_{n-1}}{q_{n-1}}}}_{=1} +
           \frac{\frac{p_{n-1}}{q_{n-1}} - \frac{p_{n-2}}{q_{n-2}}} {\alpha' -
             \frac{p_{n-1}}{q_{n-1}}})\\
        &= -\frac{q_{n-2}}{q_{n-1}} ( 1+
           \frac{(-1)^{n}}{q_{n-1}q_{n-2}(\alpha' - \frac{p_{n-1}}{q_{n-1}})})\\
        &= -\frac{1}{q_{n-1}} ( \frac{(-1)^{n}}{q_{n-1} (\alpha' -
           \frac{p_{n-1}}{q_{n-1}})})\\
        \intertext{$\Rightarrow$}
        \alpha_{n+1}' &= \frac{1}{q_{n-1}} (\underbrace{q_{n-1} -
           q_{n-2}}_{\geq1} -
           \underbrace{\frac{(-1)^{n}}{q_{n-1}(\alpha'-\frac{p_{n-1}}{q_{n-1}})}}
           _{\rightarrow 0})
      \end{align*}
      $\Rightarrow$ $\alpha_{n}'+1>0$ für $n\gg1$.
    \end{enumerate}
  \end{proof}
\end{fakt}

\begin{defini}
  $[a_{0}; a_{1},\dotsc, a_{n}]$ heißt \highl{periodisch} \gdwdef $\exists
  k>0, n_{0}\in\N$, so dass $\forall n\geq n_{0}$ $a_{n+k}= a_{n}$. Das
  minimale $k$ heißt \highl{Periode}.

  Der Kettenbruch heißt \highl{reinperiodisch} \gdwdef für alle $n\geq0$ gilt
  $a_{n+k}=a_{n}$.

  Schreibweise: $[a_{0}; a_{1},\dotsc, a_{r}, \overline{a_{r+1},\dotsc,
  a_{r+k}}]$ respektive $[\overline{a_{0}; a_{1},\dotsc, a_{k-1}}]$.
\end{defini}


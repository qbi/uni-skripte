\section{Das Nichtverschwinden von \texorpdfstring{$L(1,\chi)$}{L(1,X)} für
  \texorpdfstring{$\chi\ne\chi_{0}$}{X<>X0}}

\begin{fakt}
  Sei $\chi\ne\chi_{0}$. Dann ist $L(s,\chi)$ auf $(0,\infty)$ sogar stetig
  differenzierbar und es gilt
  \begin{gather*}
    L'(s,\chi) = -\sum_{n=1}^{\infty} \frac{\chi(n)\ln n}{n^{s}}
  \end{gather*}

  \begin{proof}
    Wir zeigen, dass die Reihe rechts gleichmäßig für $s\geq\delta>0$
    konvergiert.
    \begin{gather*}
      s_{M,N} = \sum_{n=M}^{N} \frac{\chi(n)\ln n}{n^{s}}
         = \sum_{n=M}^{N-1} s_{n}(\frac{\ln n}{n^{s}} -
         \frac{\log(n+1)}{(n+1)^{s}}) + \frac{s_{N}\ln N}{N^{s}}\\
      s_{n} = \sum_{x=M}^{n} \chi(x)\\
      \abs{s_{M,N}} \leq \phi(m) (\sum_{n=M}^{n+1} \abs{\frac{\ln n}{n^{s}}} -
         \frac{\ln(n+1)}{(n+1)^{s}} + \frac{\ln N}{N^{s}})\\
      \phi\colon [1,\infty) \rightarrow\R\colon t\mapsto\frac{\ln t}{t^{s}},
         s\geq\delta>0\\
      \phi'(t) = \frac{1}{t^{s+1}} - s\frac{\ln t}{t^{s+1}}
         = (1-s\ln t) t^{-s-1}
    \end{gather*}
    $\phi'(t)=0$ für $t=e^{\frac{1}{s}}$ und $<0$ für $t>e^{\frac{1}{s}}$.
    Also ist $\phi$ streng monoton fallend für $t\geq e^{\frac{1}{\delta}}$.
    \begin{gather*}
      \Rightarrow \abs{s_{M,N}} \leq \phi(m) \frac{\ln M}{M}
    \end{gather*}
    $\Rightarrow$ Reihe konvergiert gleichmäßig für $s\geq \delta$.
  \end{proof}
\end{fakt}


\chapter{Die Zetafunktion eines quadratischen Zahlkörpers}
\section{Die Zetafunktion eines quadratischen Zahlkörpers}

\begin{defini}
  Sei $\nicefrac{K}{\Q}$ quadratisch, seine Zetafunktion ist definiert als
  \begin{gather*}
    \zeta_{K}(s) := \sum_{(0)\ne\ideal \subset O_{K}}
       \frac{1}{(\N\ideal)^{s}}, \quad s\in\C
  \end{gather*}
\end{defini}

\begin{fakt}
  Sei $\chi_{K}$ der Charakter zu $K$, dann gilt
  \begin{gather*}
    \zeta_{K}(s) = \zeta(s) L(s,\chi_{K})
  \end{gather*}
  Es folgt: $\zeta_{K}(s)$ kovergiert absolut für $Res(s)>1$.

  \begin{proof}
    Für $a>1$ sit $\zeta(s) L(s, \chi_{K}) =
    \sum_{m=1}^{\infty}\frac{1}{m^{s}} \sum_{n=1}^{\infty}
    \frac{\chi_{K}(n)}{n^{s}} =
    \sum_{m,n=1}^{\infty}\frac{\chi_{K}(n)}{(mn)^{s}} = \sum_{d=1}^{\infty}
    \frac{1}{d^{s}} \Big(\sum_{r\mid d} \chi_{K}(r) \Big) = \sum
    \frac{a_{n}}{n^{s}}$ mit $a_{n} = \sum_{d\mid n} \chi_{K}(d)$.

    [$\sum a_{m}x^{m}\sum b_{n}x^{n} = \sum_{m,n} a_{m}b_{n} x^{m+n} =
    \sum_{N} (\sum_{nm = N} a_{m}b_{n})$\\ $\sum_{m} \frac{a_{m}}{m^{s}}
    \sum_{n} \frac{b_{n}}{n^{s}} = \sum_{m,n} \frac{a_{m}b_{n}}{(mn)^{s}} =
    \sum_{N} \frac{1}{N^{s}}(\sum_{nm=N} a_{m}b_{n})$]

    Wir stellen fest: $a_{n}$ ist multiplikatis: Für $\ggT(m,n) = 1$ ist
    $a_{m,n} = a_{m}\cdot a_{n}$

    \begin{gather*}
      a_{mn} = \sum_{d\mid mn} \chi_{K}(d) = \sum_{d_{1}\mid m, d_{2}\mid n}
         \chi_{K}(d_{1}d_{2}) = \sum_{d_{1}\mid m} \chi_{K}(d_{1}) \cdot
         \sum_{d_{2}\mid n} \chi_{K}(d_{2}) = a_{m}\cdot a_{n}
    \end{gather*}
    Andererseits
    \begin{gather*}
      \zeta_{K}(s) = \sum_{n=1}^{\infty} \frac{b_{n}}{n^{s}}, b_{n} = \card\{
         \ideal\subset O_{K}\colon \N\ideal =n\}
    \end{gather*}
    $b_{n}$ ist multiplikativ: Seien $\ggT(m,n)=1$
    \begin{gather*}
      n= \prod p^{ap}, \ideal[a] = \prod \ideal[p]^{b_{\ideal[p]}} = \prod_{p
         ~\text{verzeigt}} \ideal[p]^{b_{p}} \prod_{p~\text{träge}}
         \ideal^{b_{p}} \prod_{p~\text{zerlegt}} \ideal[p]^{b_{p}}
         \ideal[p]'^{b_{p}'}\\
      \N\ideal[a] = \prod_{p~\text{verzeigt}} p^{b_{p}} \prod_{p~\text{träge}}
         p^{2b_{p}} \prod_{p~\text{zerlegt}} p^{b_{p} + b'_{p}}
    \end{gather*}
    Also $\N\ideal[a]=n$ \gdw $a_{p} = b_{p}$ $p$ verzweigt, $a_{p} = 2b_{p}$
    $p$ träge, $a_{p} = b_{p}+b_{p}'$ $p$ zerlegt.

    Somit ist
    \begin{gather*}
      b_{n} =
      \begin{cases}
        0&  a_{p}\text{ungerade für ein träge $p$}.\\
        \prod_{p~\text{zerlegt}, p\mid n} (a_{p}+1)& \text{sonst}
      \end{cases}
    \end{gather*}
    Hieraus folgt die Multiplikation sofort.

    Wir zeigen $a_{p^{n} = b_{p^{n}}} \forall p, n\geq 1$
    \begin{gather*}
      a_{p^{n}} = \sum_{r=0}^{n} \chi_{K}(p^{r}) = 1\quad \text{für $p$
         verzweigt}\\
      b_{p^{n}} = 1\quad\text{für $p$ verzweigt}
    \end{gather*}

    Sei $p$ träge
    \begin{gather*}
      a_{p^{n}} = \sum_{r=0}^{n} \chi_{K}(p)^{r} = \sum_{r=0}^{n} (-1)^{r} =
         \begin{cases}
           0& \text{$n$  ungerade}\\
           1& \text{$n$ gerade}
           \end{cases}
      b_{p^{n}} = \card \{ \ideal \subset O_{K}\colon \N\ideal = p^{n}\}
    \end{gather*}
    $\Rightarrow$ $\ideal$ Potenz den Primideal $\ideal\subset pO_{K}$,
    $\ideal = p^{r}O_{K}, \N\ideal = p^{2r}$

    Also
    \begin{gather*}
      b_{p^{n}} =
         \begin{cases}
           0& n~\text{gerade}\\
           1& n~\text{ungerade}
         \end{cases}
    \end{gather*}
    Sie $p$ zerlegt:
    \begin{gather*}
      a_{p^{n}} = \sum_{r=0}^{n} \chi_{K}(p)^{r} = n+1\\
      b_{p^{n}} = \card \{ \ideal^{b} (\ideal')^{b'}\colon b+b' = n\} = n+1
    \end{gather*}
  \end{proof}
\end{fakt}

\begin{folger}

\begin{defini}
  Sei $m\geq 1$ und $\chi$ der Direchlet-Charakter $mod^{*} m$, $\zeta$
  fixierte primitive $n$.\,Einheitswurzel. z.\,B.
  \begin{gather*}
    \zeta = e^{\frac{2\pi i}{m}} \in\C
  \end{gather*}

  Die \highl{Gausssche Summe} $G=G(a,\chi)$ ist definiert durch
  \begin{gather*}
    G(a,\chi) = G_{a}(\chi) = \sum_{x\pmod{m}} \chi(x) \zeta^{ax}
  \end{gather*}
  für $a\in\nicefrac{\Z}{m\Z}$
\end{defini}

\begin{bemerk}
  Die \highl{eulersche Gammafunktion}
  \begin{align*}
    \Gamma(s) &= \int_{0}^{\infty} e^{-x} x^{s-1}\,dx\\
    &= \int_{\R_{+}^{*}} e^{-x} x^{s} \frac{dx}{x}
  \end{align*}
  $\frac{dx}{x}$ ist ein HAAR-Maß, $e^{-x}$ ist ein additiver Charakter auf
  $\R$ und $x^{s}$ ist multiplikativer Charakter auf $\R^{*}$.

  $m=p$ $G(a,\chi) = \int_{\F_{p}} \chi(x) \zeta^{ax}\,dx$

  $s\Gamma(s) = \Gamma(s+1)$

  $\Gamma(n+1) = n!$, $\Gamma(\frac{1}{2}) = \sqrt{\pi}$

  $\Gamma(s)\Gamma(1-s) = \frac{\pi s}{\sin\pi s}$
\end{bemerk}

\begin{fakt}
  Sei $\chi+\chi_{0}$ Direchlet-Charakter $modulo^{*} m$, dann gilt für $s>1$:
  \begin{gather*}
    L(s,\chi) = \frac{1}{m}\sum_{a=0}^{m-1} G(a,\chi) \sum_{n=1}^{\infty}
       \frac{\zeta^{-an}}{n^{s}}
  \end{gather*}

  \begin{proof}
    Da $s>1$ im Bereich der absoluten konvergenz, daher können wir fröhlich
    umordnen.
    \begin{align*}
      \sum_{a=0}^{m-1} G(a,\chi) \zeta^{-an} &= \sum_{a=0}^{m-1}
         \sum_{x\pmod{m}} \chi(x) \zeta^{a(x-n)}\\
      & = \sum_{x\pmod{m}} \chi(x) \sum_{a=0}^{m-1} \zeta^{a(x-n)}
         = \sum_{x\pmod{m}} \chi(x) \frac{\zeta^{m(x-n)}-1}{\zeta^{x-n}-1} =
         \\
      &= \begin{cases}
           0& n \not\equiv x\pmod{m}\\
           m& n\equiv x\pmod{m}
         \end{cases}
    \end{align*}

    Also ist das gleich $m\chi(n)$.
  \end{proof}
\end{fakt}


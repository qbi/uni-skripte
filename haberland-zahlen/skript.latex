      \begin{array}{c|*{6}{c}}
        D & 2 & 3 & 5 & 6 & 7 & 10\\
        \hline
        d_{K} & 8 & 12 & 5 & 24 & 28 & 40
      \end{array}
    \end{gather*}

   \item imaginarquadratische Zahlenkörper:
    \begin{gather*}
      \begin{array}{c|*{7}{c}}

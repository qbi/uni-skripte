\begin{satz}[Euler, Lagrange]
  \begin{enumerate}
   \item Für alle $\alpha\in K\setminus\Q$ ist die Kettenbruchentwicklung
    periodisch
   \item Ist $\alpha$ reduziert, so ist sie reinperiodisch.
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item Für $n\gg1$ ist $\alpha_{n}$ reduziert und hat dieselbe
      Diskriminante wie $\alpha$, als sind dises $\alpha_{n}$ aus einer
      endlichen Menge $\Rightarrow$ $\exists n,k$, so dass
      $a_{n+k}=a_{n}$ $\Rightarrow$
      $a_{m+k}=a_{m}\;\forall m\geq n$.

     \item Ist $\alpha$ reduziert, so auch alle $\alpha_{n}$.
      \begin{gather*}
        \alpha_{n} = [\alpha_{n}] + \frac{1}{\alpha_{n+1}}
      \end{gather*}
      Wir zeigen: Sind $\alpha, \beta$ reduziert und $\alpha=
      N+\frac{1}{\beta}$ mit positiven natürlichen Zahlen $N$, so gilt
      $N=[-\frac{1}{\beta'}]$.

      Hieraus würde folgen: $\alpha_{n}$ ist eindeutig bestimmt durch
      $\alpha_{n+1}$
      \begin{gather*}
        \alpha > 1, -1 < \alpha' < 0 \Leftrightarrow -\frac{1}{\alpha'} > 1\\
        \beta > 1, -1 < \beta' < 0 \Leftrightarrow -\frac{1}{\beta'} > 1
      \end{gather*}
      $-\frac{1}{\beta'} = N-\alpha' = N+\frac{1}{-\frac{1}{\alpha'}}
      \Rightarrow [-\frac{1}{\beta'}] = N$
      Somit folgt aus $\alpha_{n+k}=\alpha_{n}$ auch
      $\alpha_{n-1+k}=\alpha_{n-1}$ und damit $a_{n-1+k}=a_{n-1}$
    \end{enumerate}
  \end{proof}
\end{satz}

\begin{bemerk}
  Die Umkehrung gilt auch: Jeder periodische Kettenbruch konvergiert gegen
  eine quadratische Irrationalität.

  Rein periodisch gegen reduzierte.
  \begin{gather*}
    \alpha = [\overline{a_{0}; a_{1},\dotsc, a_{n}}] \Rightarrow
       \alpha=[a_{0},\dotsc, a_{n},\alpha]
  \end{gather*}
  $\Rightarrow \alpha = g\alpha$ für eine $g\in GL_{2}\Z$.

  $\alpha=g\alpha$ ist quadratische Gleichung für $\alpha$.
\end{bemerk}

\begin{fakt}
  Ist $\alpha$ reduziert und $\alpha=[\overline{a_{0},\dotsc, a_{k-1}}]$, so
  ist $-\frac{1}{\alpha'} = [\overline{a_{k-1},a_{k-2},\dotsc, a_{0}}]$.

  \begin{proof}
    $\alpha_{n}= a_{n}+\frac{1}{\alpha_{n+1}}$ $\Rightarrow$
    $-\frac{1}{\alpha_{n+1}'} = a_{n} + (-\alpha_{n}')$ $\Rightarrow$
    $a_{n}=[-\frac{1}{\alpha_{n+1}'}]$ ($0< -\alpha_{n}'<1$ wegen Red.)

    Also $-\frac{1}{\alpha_{k}'} = [a_{k},a_{k-1},\dotsc, a_{0},
    -\frac{1}{\alpha'}]$ Nun ist $\alpha_{k}=\alpha$ $\Rightarrow$
    $-\frac{1}{\alpha} = [a_{k-1},\dotsc, a_{0},-\frac{1}{\alpha'}]$
    $\Rightarrow$ $-\frac{1}{\alpha'} = [\overline{a_{k-1}, \dotsc, a_{0}}]$.
  \end{proof}
\end{fakt}

\begin{fakt}
  Ist $\alpha=\sqrt{D}$ mit Nichtquadrat~$D>1$, so gilt mit $g=[\sqrt{D}]$:
  \begin{gather*}
    \alpha = [g, \overline{a_{1},\dotsc, a_{k-1}, 2g}] = [g,
       \overline{a_{k-1},\dotsc, a_{1}, 2g}]
  \end{gather*}

  \begin{proof}
    $\alpha=g+\frac{1}{\alpha_{1}}, \alpha_{1}>1, -\frac{1}{\alpha_{1}'} =
    g+\alpha$ wegen $\alpha' = -\alpha$. Somit ist $-\frac{1}{\alpha_{1}'} >
    2g >1$ und damit ist $\alpha_{1}$ reduziert. $[-\frac{1}{\alpha_{1}'}]=2g$
    \begin{gather*}
      \alpha_{1} = [\overline{a_{1},\dotsc, a_{k}}], -\frac{1}{\alpha_{1}} =
         [\overline{a_{k},\dotsc, a_{1}}], a_{k}=2g\\
      \Rightarrow
         \alpha = -\frac{1}{\alpha_{1}'} - g = [\underbrace{a_{k}-g}_{=g},
         \overline{a_{k-1},\dotsc, a_{1}, 2g}]
    \end{gather*}
  \end{proof}
\end{fakt}

\begin{fakt}
  Sei $D>1$ quadratfrei, $D\equiv 2,3\pmod{4}$. Dann ist für $\sqrt{D} = [g;
  \overline{a_{1},\dotsc, a_{k-1}, 2g}]$ die Zahl
  $\epsilon=p_{k-1}+q_{k-1}\sqrt{D}$ eine Einheit.

  \begin{proof}
    \begin{align*}
      \sqrt{D} &= [g; a_{1},\dotsc, a_{k-1}, [2g, a_{1},\dotsc, a_{?}]]\\
      & = [g; a_{1},\dotsc, a_{k-1}, \sqrt{D}+g]\\
      & = \frac{p_{n-1}(g+\sqrt{D})+p_{n-2}}{q_{k-1}(g+\sqrt{D}+q_{k-2})}\\
      \Rightarrow&
         \sqrt{D}(q_{k-1}g + q_{k-2}+q_{k-1}\sqrt{D}) =
         p_{k-1}g+p_{k-2}+p_{k-1}\sqrt{D}\\
      \Rightarrow&
         Dq_{k-1} = p_{k-1}g+p_{k-2}\qquad q_{k-1}\\
      p_{k-1} = q_{k-1}g+q_{k-2}\qquad p_{k-1}\\
      p_{k-1}^{2} - D q_{k-1}^{2} = p_{k-1}q_{k-2}-p_{k-2}q_{k-1} = (-1)^{k}
    \end{align*}
    $\Rightarrow \epsilon=pk_{-1}+q_{k-1}\sqrt{D}$ ist Einheit.
  \end{proof}
\end{fakt}

\begin{bemerk}
  Die Periodenlänge ist $\leq 2D$.

  Wie groß kann eine Fundamentaleinheit werden? $\ln \epsilon_{D}\leq
  \sqrt{D}, \epsilon_{D} \leq e^{\sqrt{D}}$.
\end{bemerk}


\section{Fundamentaleinheiten und Kettenbrüche}

\subsection{Allgemeine Theorie der Kettenbrüche}

Kettenbrüche im Englischen continues fractions.

\begin{defini}
  Seien $a_{0}, a_{1}$ Unbestimmte. Ein Kettenbruch sieht dann so aus:
  \begin{gather*}
    [a_{0}; a_{1}, \dotsc, a_{n}] = a_{0}
       + \cfrac{1}{a_{1}
           + \cfrac{1}{a_{2}
               + \cfrac{1}{
                   +\dotsb
                   }
               }
           }
  \end{gather*}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Sind die $a_{n}$ positive natürliche Zahlen für $n\geq1$, so ist das
    eine rationale Zahl.
   \item Dind die $a_{n}$ positive reelle Zahlen für $n\geq1$, so ist das eine
    reelle Zahl.
   \item $[a_{0};a_{1},\dotsc, a_{n}] = \frac{p_{n}}{q_{n}}$ mit
    $p_{n},q_{n}\in \Z$-Polynome in den $a_{i}$
    \begin{gather*}
      [a_{0}] = a_{0} = \frac{a_{0}}{1}, [a_{0}; a_{1}] = a_{0} +
         \frac{1}{a_{1}} = \frac{a_{0}a_{1}+1}{a_{1}}
    \end{gather*}
  \end{enumerate}
\end{bemerk}

\begin{fakt}\label{fakt:1}
  Setzt $p_{-1}=1, q_{-1}=0, p_{0}=a_{1}, q_{0}=1$. Dann gilt:
  \begin{enumerate}
   \item $p_{n+2}=a_{n+2}p_{n+1}+p_{n}$
   \item $q_{n+2}=a_{n+2}q_{n+1}+q_{n}$
   \item $p_{n},q_{n}$ teilerfremd in $\Z [a_{0};a_{1},\dotsc, a_{n}]$
  \end{enumerate}

  \begin{proof}
    Induktion: $\frac{p_{1}}{q_{1}} = \frac{a_{0}a_{1}+1}{a_{1}}$ -- stimmt.

    $\frac{p_{n}'}{q_{n}'} = [a_{0};a_{1},\dotsc, a_{n}]$.

    \begin{gather*}
      \frac{p_{n+2}}{q_{n+2}} = a_{0} + \frac{1}{\frac{p_{n+1}'}{q_{n+1}'}} =
         \frac{a_{0} p_{n+1}' + q_{n+1}'}{p_{n+1}'}
    \end{gather*}
    Rechts sind Zähler und Nenner teilerfremd, also
    \begin{gather}\label{eq:5}
      \begin{split}
        p_{n+2} &= a_{0}p_{n+1}' + q_{n+1}'\\
        q_{n+2} &= p_{n+1}'
      \end{split}
    \end{gather}
    Es folgt
    \begin{gather*}
      p_{n+2} = a_{0} (a_{n+2} p_{n}' + p_{n-1}') + a_{n+2} q_{n}' + q_{n-1}'
         = a_{n+2} \underbrace{(a_{0} p_{n}' + q_{n}')}_{p_{n+1}} +
         \underbrace{(a_{0}p_{n-1}' + q_{n-1}')}_{=p_{n}}
    \end{gather*}
    Analog für $q_{n+2}$. Teilerfremdheit folgt aus \autoref{eq:5}.
  \end{proof}
\end{fakt}

\begin{folger}
  Sind die $a_{n}\in\N^{*}$ für $n\geq1$, so sind die oben rekursiv
  definierten Zahlen $p_{n}$ und $q_{n}$ auch teilerfrem (in $\Z$).
\end{folger}

\begin{fakt}
  Seien $a_{0},a_{1},\dotsc \in\Z, \forall j\geq1\colon a_{j}>0$.
  \begin{enumerate}
   \item $p_{n},q_{n}$ streng monoton wachsend,
   \item $p_{n}q_{n+1}-p_{n+1}q_{n} = (-1)^{n+1}$
   \item $p_{n}q_{n+2}-p_{n+2}q_{n} = (-1)^{n+1} a_{n+2}$
   \item Die Brüche mit geradem Index sind streng monoton wachsend, die mit
    ungeradem Index sind streng monoton fallend
   \item $\frac{p_{n}}{q_{n}}$ konvergiert
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item folgt aus \autoref{fakt:1}
     \item $p_{0}q_{1}-p_{1}q_{0} = a_{0}a_{1}-(a_{0}a_{1}+1)=-1$
      \begin{align*}
        p_{n}q_{n+1} - p_{n+1}q_{n} & = p_{n}(a_{n+1}q_{n}+q_{n-1}) -
           (a_{n+1}p_{n}-p_{n-1})q_{n}\\
        & = p_{n}q_{n-1} - p_{n-1}q_{n}
      \end{align*}
     \item $p_{-1}q_{1}-q_{-1}q_{1} = a_{1}-0 = a_{1}$
      \begin{align*}
        p_{n}q_{n+2} - p_{n+2}q_{n} & = p_{n} (a_{n+2}q_{n+1} + q_{n}) -
           q_{n}(a_{n+2}p_{n+1} +p_{n})\\
        & = a_{n+2} (p_{n}q_{n+1} - p_{n+1}q_{n})
      \end{align*}
      Zum Schluss nochmal den 2.\,Punkt anwenden.

     \item
      \begin{gather*}
        \frac{p_{n}}{q_{n}} - \frac{p_{n+2}}{q_{n+2}} = \frac{(-1)^{n+1}
           a_{n+2}}{q_{n}q_{n+2}}
      \end{gather*}

     \item Wir zeigen: Beide Folgen sind beschränkt
      \begin{gather*}
        \frac{p_{2r}}{q_{2r}} < \frac{p_{2n}}{q_{2n}}\qquad
           \frac{p_{2n+1}}{q_{2n+1}} < \frac{p_{2s+1}}{q_{2s+1}}
           \quad\text{für~}n \gg 1\\
        \frac{p_{2n}}{q_{2n}} - \frac{p_{2n+1}}{q_{2n+1}} =
           \frac{(-1)^{2n+1}}{q_{2n}q_{2n+1}} = -\frac{1}{q_{2n}q_{2n+1}}\\
        \frac{p_{2n}}{q_{2n}} + \frac{1}{q_{2n}q_{2n+1}} =
           \frac{p_{2n+1}}{q_{2n+1}}\\
        \intertext{$\Rightarrow$ Beide Folgen konvergent}
        \abs{\frac{p_{2n}}{q_{2n}} - \frac{p_{2n+1}}{q_{2n+1}}} =
           \frac{1}{q_{2n}q_{2n+1}} \xrightarrow{n\rightarrow\infty} 0
      \end{gather*}
    \end{enumerate}
  \end{proof}
\end{fakt}

\subsection{Kettenbrüche zu reellen Zahlen}

\begin{fakt}
  Sei $\alpha\in\R$, wir definieren rekursiv zwei Folgen $a_{n}$ und
  $\alpha_{n}$ durch
  \begin{align*}
    \alpha &= a_{0} + \frac{1}{a_{1}}, a_{1}>1, a_{0}=[\alpha]\\
    \alpha_{n} & = a_{n}+\frac{1}{\alpha_{n+1}}, \alpha_{n+1}>1,
       a_{n}=[\alpha_{n}]
  \end{align*}
  Solange, wie $a_{n}\ne \alpha_{n}$ ist.

  \begin{enumerate}
   \item Der Prozess stoppt $\Leftrightarrow$ $\alpha\in\Q$
   \item Im Fall $\alpha\in\R\setminus\Q$ gilt $\frac{p_{n}}{q_{n}}
    \rightarrow \alpha$; d.\,h. Kettenbrüche eignen sich genauso gut wie
    Dezimalzahlen zur Approximation von irrationalen\help{heißen die
    irrational?} Zahlen. Sie konvergieren sogar schneller als Dezimalzahlen
     ($\rightarrow$ besser als Dezimalzahlen), aber dafür ist die Addition
    kompliziert.
   \item $\alpha=[a_{0};a_{1},\dotsc, a_{n-1}, \alpha_{n}] =
    \frac{p_{n-1}\alpha_{n}+p_{n-2}}{q_{n-1}\alpha_{n}+q_{n-2}}$
   \item $\abs{a_{n}-\alpha_{n}} <1$
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item Sei $n$ so, dass $\alpha_{n}=a_{n} \Rightarrow \alpha =
      [a_{0};a_{1},\dotsc, a_{n}] \in\Q$.


\section{Elementarer Beweis von \texorpdfstring{$L(1,\chi)\ne0$}{L(1,X)} für
  reelles \texorpdfstring{$\chi$}{X}}
(d'après \foreignlanguage{russian}{GELBFOND} 1956)

Sei also $\chi\ne\chi_{0}$, $\chi^{2}=\chi_{0}$ Charakter $(\mods m)$.
\begin{gather*}
  F(t) := \sum_{n=1}^{\infty} \chi(n)\frac{t^{n}}{1-t^{n}}
\end{gather*}
$F$ konvergiert absolut für $0<t<1$: klar.

Es folgt
\begin{align*}
  F(t) &= \sum_{n=1}^{\infty} \chi(n) \sum_{m=1}^{\infty} t^{mn}\\
  &= \sum_{N=1}^{\infty} d_{\chi}(N) t^{N}\quad\text{mit } d_{\chi}(N) =
     \sum_{d\mid N} \chi(d)
\end{align*}

\begin{fakt}
  \begin{enumerate}
   \item $d_{\chi}$ ist muliplikativ, d.\,h. für $\ggT(r,s) = 1$ gilt
    $d_{\chi}(rs)=d_{\chi}(r) d_{\chi}(s)$
   \item $d_{\chi}(n)\geq0$
   \item $d_{\chi}(n^{2})\geq1$
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item $\delta\mid rs$ $\Leftrightarrow$ $\delta=\kappa\nu$ und
      $\kappa\mid r, \nu\mid s$.
      \begin{gather*}
        d_{\chi}(rs) = \sum_{\delta\mid rs} \chi(\delta) = \sum_{\kappa\mid
           r} \sum_{\nu\mid s} \chi(\kappa\nu) = d_{\chi}(r)d_{\chi}(s)
      \end{gather*}

     \item nun noch für Primzahlpotenzen wegen (i): Ist $n=p^{k}$, so ist
      $d_{\chi}(n) = \chi_(1)+\chi(p) + \dotsb+\chi(p)^{k}$. Für $p\mid m$
      ist $\chi(p)=0$, also $d_{\chi}(n)=1$. Für $\chi(p)=+1$ ist
      $\delta_{\chi}(p^{k})=k+1$. Für $\chi(p)=-1$ ist $d_{\chi}(p^{k})=
      \begin{cases}0&2\nmid k\\1&2\mid k\end{cases}$

     \item folgt sofort
    \end{enumerate}
  \end{proof}
\end{fakt}

\begin{folger}
  \begin{gather*}
    \lim_{t\rightarrow1-0} F(t)=\infty
  \end{gather*}

  \begin{proof}
    $F(t)$ hat die Minorante $\sum_{n=1}^{\infty} t^{n^{2}}$, diese
    divergiert für $t\rightarrow1-0$:
    \begin{gather*}
      \sum_{1}^{N} t^{n^{2}} \rightarrow N \Rightarrow \liminf F(t)\geq N
         \quad \forall N
    \end{gather*}
    Wir nehmen nun an: $L(1,\chi)=0$. Sei $\phi_{n}(t)=\frac{1}{n(n-t)} -
    \frac{t^{n}}{1-t^{n}}, 0<t<1$. Dann gilt
    \begin{gather*}
      F(t) = -\sum_{n=1}^{\infty} \chi(n) \phi_{n}(t)
    \end{gather*}
    Es gilt $\phi_{n}(t)\geq \phi_{n+1}(t)$ $\forall t\in(0,1)$.
    \begin{gather*}
      (1-t)(\phi_{n}(t)) - \phi_{n+1}(t) = \frac{1}{n} - \frac{1}{n+m} -
         (1-t)\frac{t^{n}}{1-t^{n}} + (1-t) \frac{t^{n+1}}{1-t^{n+1}}\\
      = \frac{1}{n(n+1)} - (1-t) \frac{t^{n}(1-t^{n+1})-t^{n+1}(1-t^{n})}
         {(1-t^{n}) (1-t^{n+m})}\\
      = \frac{1}{n(n+1)} - \frac{t^{n}(1-t)^{2}}{(1-t^{n}) (1-t^{n+m})}\\
      = \frac{1}{n(n+1)} - \frac{t^{n}}{(1+t+\dotsb+t^{n-1}) (1+t+\dotsb+t^{n})}\\
    \intertext{Zwischenrechnung:}
      1+t+\dotsb+t^{n-1} \geq n \sqrt[n]{t^{\frac{n(n-1)}{2}}} = n
         t^{\frac{n-1}{2}}\\
      1+t+\dotsb+t^{n} \geq (n+1) t^{\frac{n}{2}}\\
    \intertext{Also:}
      (1-t)(\phi_{n}(t) - \phi_{n+1}(t)) \geq \frac{1}{n(n+1)} -
         \frac{1}{n(n+1)} \frac{t^{n}}{t^{n-\frac{1}{2}}} = \frac{1}{n(n+1)}
         (1-t^{\frac{1}{2}}) >0
    \end{gather*}

    Wir wenden auf $\sum\chi(n) \phi_{n}(t)$ ABELsche Summation an
    \begin{gather*}
      \sum_{n=1}^{N} \chi(n)\phi_{n}(t) = \sum_{n=1}^{N-1}
         s_{n}(\chi)(\phi_{n}(t) -\phi_{n+1}(t)) + s_{N}(\chi)\phi_{N}(t)\\
      \Rightarrow \abs{\sum_{n=1}^{N} \chi(n)\phi_{n}(t)} \leq \phi(m)
         \sum_{n=1}^{N-1} (\phi_{n}(t)-\phi_{n+1}(t)) + \phi_{N}(t) =
         \phi(m)\phi_{1}(t)\\
      \phi_{1}(t) = \frac{1}{1-t} - \frac{t}{1-t} = 1
    \end{gather*}
    Also
    \begin{gather*}
      \abs{\sum_{n=1}^{N} \chi(n)\phi_{n}(t)} \leq \phi(n)\quad \forall N\geq1
    \end{gather*}
    im Widerspruch zu $\lim_{t\rightarrow1-0} F(t)=\infty$.
  \end{proof}
\end{folger}

\chapter{Quadratische Zahlenkörper}

\section{Grundbegriffe}

\begin{defini}
  Ein \highl{quadratischer Zahlenkörper} $\Q(\sqrt{D}), D\in\Z,
  D\notin\{0,1\}$ $D$ \highl{quadratfrei} ist definiert als Menge durch
  \begin{gather*}
    \Q(\sqrt{D}) = \{\alpha+\beta\sqrt{D}\colon \alpha,\beta\in\Q\} \subseteq\C
  \end{gather*}
\end{defini}

\begin{fakt}
  $\Q(\sqrt{D})$ ist Körper.

  \begin{proof}
    Das die Addition, Subtraktion und Multiplikation nicht aus dem Körper
    führen ist klar.
    $\frac{1}{\alpha+\beta\sqrt{D}} =
    \frac{\alpha-\beta\sqrt{D}}{\alpha^{2}-D\beta^{2}}$ $D$ quadratfrei
    impliziert $\alpha^{2}-D\beta^{2}\ne0$.
  \end{proof}
\end{fakt}

\begin{bemerk}
  \begin{enumerate}
   \item $\Q\subset\Q(\sqrt{D})$ und $\dim_{\Q} \Q(\sqrt{D})=2$
   \item Für $D_{1}\ne D_{2}$ ist $\Q(\sqrt{D_{1}})\ne\Q(\sqrt{D_{2}})$
  \end{enumerate}
\end{bemerk}

\begin{fakt}
  Auf $\Q(\sqrt{D})$ existiert ein Automorphismus
  \begin{gather*}
    \sigma\colon \Q(\sqrt{D}) \rightarrow \Q(\sqrt{D})\colon
       \alpha+\beta\sqrt{D} \mapsto\alpha-\beta\sqrt{D}
  \end{gather*}
  Es gilt:
  \begin{enumerate}
   \item $\sigma(a\pm b) =\sigma(a)\pm\sigma(b)$
   \item $\sigma(ab) = \sigma(a)\sigma(b)$
   \item $\sigma^{2} = Id$
  \end{enumerate}
\end{fakt}

\begin{defini}
  Für $D>1$ heißt $\Q(\sqrt{D})$ \highl{reellquadratisch}. \todo{hier fehlt was}
\end{defini}

\begin{gather*}
 N\colon\Q(\sqrt{D}) \rightarrow\Q,\quad N(a) = a\cdot\sigma(a)\\
 Tr\colon\Q(\sqrt{D}) \rightarrow\Q,\quad Tr(a) = a+\sigma(a)
\end{gather*}

\begin{bemerk}
  \begin{gather*}
    N(\alpha+\beta\sqrt{D}) = \alpha^{2}-D\beta^{2}\\
    N(ab) = N(a) N(b)\\
    N(\alpha a) = \alpha^{2} N(a)\quad\text{für~}\alpha\in\Q^{\ast}\\
    Tr(\alpha + \beta\sqrt{D}) = 2\alpha\\
    Tr(a\pm b) = Tr(a) \pm Tr(b)\\
    Tr(\alpha a) = \alpha Tr(a)\quad\text{für~}\alpha\in\Q
  \end{gather*}
\end{bemerk}


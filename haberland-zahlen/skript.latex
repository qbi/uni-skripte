\begin{bemerk}
  Ist $\chi_{1}$ Charakter modulo~$m$ und $\chi_{2}$ ein Charakter modulo~$n$,
  so ist $\chi_{1}\chi_{2}$ Charakter modulo~$m\cdot n$.
\end{bemerk}

\begin{fakt}
  Sei $\ggT(m,n) = 1$, $\chi_{1}$ Charakter modulo~$m$, $\chi_{2}$ Charakter
  modulo~$n$ und $a\in\Z$. Dann gilt für den Charakter $\chi_{1}\cdot\chi_{2}
  \pmod{nm}$
  \begin{gather*}
    G(a,\chi_{1}\cdot\chi_{2}) = \chi_{1}(n)\chi_{2}(m) G(a,\chi_{1})
       G(a,\chi_{2})
  \end{gather*}

  \begin{proof}
    $\exists x,y\in\Z\colon mx+ny = 1$. Also $\chi_{1}(ny) = 1$ und
    $\chi_{2}(mx)=1$.
    \begin{align*}
      \zeta_{mn} &= e^{\frac{2\pi i}{mn}} = e^{\frac{2\pi i(mx+ny)}{mn}}\\
      e^{\frac{2\pi ix}{n}} e^{\frac{2\pi iy}{m}} = \zeta_{n}^{x} \zeta_{m}^{y}
    \end{align*}
    Durchläuft $r$ die Zahlen $0,1,\dotsc,m-1$ und $s$ die Zahlen
    $0,1,\dotsc,n-1$, so durchläuft $rn+sm$ alle Restklassen modulo~$m$.
    \begin{align*}
      G(a,\chi_{1}\chi_{2}) &= \sum_{r=0}^{m-1}\sum_{s=0}^{n-1} \chi_{1}
         (rn+sm) \chi_{2}(rn+sm) \zeta_{mn}^{a(rn+sm)}\\
      &= \sum_{r=0}^{m-1} \sum_{s=0}^{n-1} \chi_{1}(rn) \chi_{2}(sm)
         \zeta_{n}^{ax(rn+sm)} \zeta_{m}^{ay(rn+sm)}\\
      & = \sum_{r=1}^{m-1} \sum_{s=1}^{n-1} \chi_{1}(n)\chi_{2}(m) \chi_{1}(r)
         \chi_{2}(s) \zeta_{n}^{axsm} \zeta_{m}^{ayrn}
    \end{align*}
    Nun gilt $\ggT(y,m) = \ggT(x,n)=1$, also durchläuft mit $r$ auch $ynr$ ein
    Restklassensystem modulo~$m$.

    Gleiches gilt für $xns$. $r_{1} = ynr$ und $s_{1}=xms$. Somit
    \begin{align*}
      G(a,\chi_{1}\chi_{2})&= \sum_{r_{1}} \sum_{s_{1}} \chi_{1}(n)
         \chi_{1}(y^{-1}n^{-1}r_{1}) \chi_{2}(m) \chi_{2}(x^{-1}m^{-1}s_{1})
         \zeta_{m}^{ar_{1}} \zeta_{n}^{as_{1}}\\
      &= \chi_{1}(y^{-1}) \chi_{2}(x^{-1}) \sum_{r_{1}} \chi_{1}(r_{1})
         \zeta_{m}^{ar_{1}} \sum_{s_{1}} \chi_{2}(s_{1})\zeta_{n}^{as_{1}}\\
      &= \chi_{1}(n) \chi_{2}(m) G(a,\chi_{1}) G(a,\chi_{2})
    \end{align*}
  \end{proof}
\end{fakt}

\begin{folger}
  $m=m_{1}\dotsm m_{r}$, $\ggT(m_{i},m_{j}) = 1$ $\forall i\ne j$.
  $\chi_{i}\pmod{m_{i}}$, $\chi=\prod\chi_{i}$. Dann gilt für $a\in\Z$:
  \begin{gather*}
    G(a,\chi) = \prod_{i=1}^{r} (G(a,\chi_{i})\cdot \chi_{i}(\frac{m}{m_{i}}))
  \end{gather*}

  \begin{proof}
    Induktion über $r$ für dem Indukitionsanfang siehe oben.
  \end{proof}
\end{folger}

\begin{satz}[nach Gauss]
  \begin{gather*}
    G(1,\bigl(\frac{\cdot}{p}\bigr)) =
       \begin{cases}
         \sqrt{p}& p\equiv1\pmod{4}\\
         i\sqrt{p}& p\equiv3\pmod{4}
       \end{cases}
  \end{gather*}

  \begin{proof}
    \begin{align*}
      G\overline{G} & = \sum_{x,y=1}^{p-1} (\frac{xy}{p})\zeta_{p}^{x-y}&
         \text{substituiere $y=xz$}\\
      \abs{G}^{2}& = \sum_{x,z=1}^{p-1} (\frac{x^{2}z}{p}) \zeta_{p}^{(1-z)}\\
      & = \sum_{x,z=1}^{p-1} (\frac{z}{p}) \zeta_{p}^{x(1-z)}\\
      & = \sum_{z} (\frac{z}{p}) \sum_{x=1}^{p-1} \zeta_{p}^{x(1-z)}
    \end{align*}
    Es gilt:
    \begin{gather*}
      \sum_{x=1}^{p-1} \zeta_{p}^{ax} =
         \begin{cases}
           p-1& a\equiv 0\pmod{p}\\
           -1& a\not\equiv 0\pmod{p}
         \end{cases}
    \end{gather*}

    \begin{gather*}
      \abs{G}^{2} = (\frac{1}{p}) (p-1) + \sum_{z\ne1,0} (\frac{z}{p}) (-1) =
         p-1 - \sum_{z\ne1,0} (\frac{z}{p}) = p
    \end{gather*}
    $\Rightarrow$ $\abs{G}^{2} = p$

    Andererseits:
    \begin{align*}
      \overline{G}& = \sum_{x=1}^{p-1} (\frac{x}{p}) \zeta_{p}^{-x}& (y=-x)\\
      & = \sum_{y=1}^{p-1} (\frac{-y}{p}) \zeta_{p}^{y} = (\frac{-1}{p}) \sum
         (\frac{y}{p}) \zeta_{p}^{y}\\
      \Rightarrow \overline{G}& = (\frac{-1}{p})\cdot G\\
      \Rightarrow G^{2}& = (\frac{-1}{p}) p\\
      \intertext{Also}
      G &=
         \begin{cases}
           \pm \sqrt{p} & p\equiv 1\pmod{4}\\
           \pm i\sqrt{p}& p\equiv 3\pmod{4}
         \end{cases}
    \end{align*}

    Nun Schurs Beweis für das Vorzeichen:
    \begin{align*}
      M := (\zeta_{p}^{xy})_{0\leq x,y\leq p-1}& \zeta_{p} = e^{\frac{2\pi i}{p}}\\
      \Tr M = \sum_{x=0}^{p-1} \zeta_{p}^{x^{2}}
    \end{align*}
    Durchläuft $a$ die Quadrate in $\F_{p}^{*}$ und $b$ die Nichtquadrate in
    $\F_{p}^{*}$, so ist
    \begin{gather*}
      1+ \sum_{a} \zeta_{p}^{a} + \sum_{b} \zeta_{p}^{b} = 0
    \end{gather*}
    Andererseits ist
    \begin{gather*}
      G = \sum_{a} \zeta_{p}^{a} - \sum_{b} \zeta_{p}^{b} = 1+ 2\sum_{a}
         \zeta_{p}^{a} = \sum_{x=0}^{p-1} \zeta_{p}^{x^{2}}
    \end{gather*}
    $\Rightarrow$ $\Tr M=G$.

    $M^{2}$ hat folgende Einträge
    \begin{gather*}
      \sum_{i=0}^{p-1} \zeta_{p}^{xi} \zeta_{p}^{iy} = \sum_{i=0}^{p-1}
         \zeta_{p}^{i(x+y)}
    \end{gather*}
    Also
    \begin{gather*}
      M^{2} =
         \begin{pmatrix}
           p& 0& \dotso & 0\\
           0& & & p\\
           \vdots& & \adots\\
           0& p
         \end{pmatrix}
    \end{gather*}
    Seien $\lambda_{1},\dotsc,\lambda_{p}$ die Eigenwerte von $M$, dann sind
    $\lambda_{1}^{2},\dotsc,\lambda_{p}^{2}$ die Eigenwerte von $M^{2}$.

    Das charakteristische Polynom von $M^{2}$ ist
    \begin{gather*}
      \det \begin{pmatrix}
             x-p& \dotso \\
             & x& & -p\\
             & & \xdots\\
             & -p& & x
           \end{pmatrix}
         = (x-p) \det
          \begin{pmatrix}
             x& & -p\\
             & \xdots\\
             -p& & x
           \end{pmatrix}
    \end{gather*}

    $=(x-p) ((x+p)(x-p))^{\frac{p-1}{2}} = (x-p)^{\frac{p-1}{2}}
    (x+p)^{\frac{p-1}{2}}$. Übungsaufgabe.

    Also sind undern den $\lambda_{i}^{2}$ $\frac{p+1}{2}$ viele gleich $p$,
    $\frac{p-1}{2}$ viele $= -p$. Die Eigenwerte $\lambda_{i}$ sind
    $\pm\sqrt{p}, \pm i\sqrt{p}$.

    Seien $a,b,c,d$ die Anzahlen der $\lambda_{i}$ gleich
    \begin{gather*}
      \sqrt{p}, -\sqrt{p}, i\sqrt{p}, -i\sqrt{p}
    \end{gather*}
    Es gilt $a+b = \frac{p+1}{2}$ und $c+d = \frac{p-1}{2}$
    \begin{gather*}
      G = (a-b+(c-d)i) \sqrt{p} (G=\sum \lambda_{i})
    \end{gather*}
  \end{proof}
\end{satz}

\begin{bsp}
  \begin{enumerate}
   \item $p=3$, $\zeta_{3} = e^{\frac{2\pi i}{3}} = \frac{-1 + i\sqrt{3}}{2}$
    \begin{gather*}
      G(1,\bigl(\frac{\cdot}{3}\bigr) = (\frac{0}{3}) \zeta_{3}^{0} +

\begin{fakt}[Elementare Eigenschaften]
  \begin{enumerate}
   \item $(\frac{x}{p}) = x^{\frac{p-1}{2}}$ (in $\F_{p}$)
   \item $(\frac{xy}{p}) = (\frac{x}{p})(\frac{y}{p})$
   \item $(\frac{1}{p}) = 1$
   \item $(\frac{-1}{p}) = (-1)^{\frac{p-1}{2}}$
  \end{enumerate}

  \begin{proof}
    \begin{enumerate}
     \item $x=g^{a}, g\in \F_{p}^{\ast}$ Primitivwurzel. $0\leq a <p-1$,
      $x^{p}=1 \Rightarrow x^{\frac{p-1}{2}} = \pm 1$. Weiter
      $g^{\frac{p-1}{2}} = -1$. Ist $x$ Quadrat, so ist $a$ gerade, also
      $x^{\frac{p-1}{2}}=g^{a\frac{p-1}{2}} = (-1)^{a}=1$.

      Ist $x^{\frac{p-1}{2}}=1$,so folgt $g^{a\frac{p-1}{2}}=1$, also
      $(-1)^{a} = 1 \Rightarrow a$ ist gerade.

     \item folgt sofort aus (i)
     \item ist trivial
     \item $(-1)^{\frac{p-1}{2}} = (\frac{-1}{p})$ nach (i).
    \end{enumerate}
  \end{proof}
\end{fakt}


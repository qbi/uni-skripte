\begin{lemma}[Satz von Abel]
  Sei $\sum_{n=0}^{\infty} a_{n} z^{n}$ eine Potenzreihe mit Konvergenzradius
  $R>0$. $\sum a_{n} R^{n}$ konvergiere. Dann gilt für $x\in\R$
  \begin{gather*}
    \lim_{x\rightarrow R-0} \sum_{n=0}^{\infty} a_{n}x^{n} =
       \sum_{n=0}^{\infty} a_{n} R^{n}
  \end{gather*}

  \begin{proof}
    \begin{gather*}
      \sum a_{n} x^{n} = \sum a_{n} R^{n} \bigl(\frac{x}{R}\bigr)^{n}
    \end{gather*}
    nehmen Teilreihe raus:
    \begin{gather*}
      \sum_{n=M}^{N} a_{n} R^{n} \bigl(\frac{x}{R}\bigr)^{n} =
         \sum_{n=M}^{N-1} s_{n} \bigl(\bigl(\frac{x}{R}\bigr)^{n} -
         \bigl(\frac{x}{R}\bigr)^{n+1}\bigr) + s_{N} \bigl(\frac{x}{R}\bigr)^{N}\\
      \Rightarrow \abs{\sum_{n=M}^{N} a_{n} R^{n} \bigl(\frac{x}{R}\bigr)^{n}}
         \leq \epsilon \bigl(\sum_{n=M}^{N} \bigl(\frac{x}{R}\bigr)^{n} -
         \bigl(\frac{x}{R}\bigr)^{n+1} + \bigl(\frac{x}{R}\bigr)^{N} \bigr)
         = \epsilon \bigl(\frac{x}{R}\bigr)^{M} < \epsilon
    \end{gather*}
    $\Rightarrow$ absolutkonvergent. für $0\leq x \leq R$ $\Rightarrow$
    Grenze stetig.
  \end{proof}
\end{lemma}

\begin{lemma}
  Sei $0<\theta<2\pi$, dann gilt:
  \begin{gather*}
    \sum_{n=1}^{\infty} \frac{e^{in\theta}}{n} = -\log (2\sin\frac{\theta}{2})
       + i(\frac{\pi}{2}-\frac{\theta}{2})
  \end{gather*}

  \begin{proof}
    \begin{align*}
      1-e^{i\theta} & = e^{\frac{i\theta}{2}} (e^{-\frac{i\theta}{2}}) -
         e^{-\frac{i\theta}{2}}\\
      & = -2 i \sin\frac{\theta}{2} e^{\frac{i\theta}{2}}\\
      & = 2\sin(\frac{\theta}{2}) e^{i(-\frac{\pi}{2}+\frac{\theta}{2})}
    \end{align*}
    Dabei gilt $0<\frac{\theta}{2}<\pi$, also $\sin\frac{\theta}{2}>0$.
    $-\frac{\pi}{2}<\frac{\theta}{2}-\frac{\pi}{2} <\frac{\pi}{2}$.
    \begin{gather*}
      \log (1-e^{i\theta}) = \log (2\sin\frac{\theta}{2}) + i
         (\frac{\theta}{2} - \frac{\pi}{2})
    \end{gather*}
    (Hauptzweig)
    \begin{gather*}
      -\log (1-e^{i\theta}) = -\log(2\sin\frac{\theta}{2})
       + i(\frac{\pi}{2}-\frac{\theta}{2})
    \end{gather*}
  \end{proof}
\end{lemma}


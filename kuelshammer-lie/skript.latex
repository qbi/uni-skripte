    \begin{pspicture}(11,5)
      \psline(0,0)(3,0)(3,3)(1.5,4.5)(0,3)(0,0)
      \psline(0,0)(3,3)(0,3)(3,0)
      \psdots[dotstyle=o,dotsize=.25](0,0)(0,3)(3,3)(1.5,4.5)(3,0)
      \psline(6,0)(6,4.5)(10,4.5)(10,3)(6,3)
      \psdots[dotstyle=o,dotsize=.25](6,0)(6,4.5)(10,4.5)(10,3)(6,3)
    \end{pspicture}

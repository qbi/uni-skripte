\chapter{Konjugationssätze}

%bem 11.1
\begin{bemerk}
  Sei $L$ eine halbeinfache Lie-Algebra mit Cartanalgebra $H$, Wurzelsystem
  $\Phi$ und Weylgruppe $W$. Dann ist die Abbildung $\mu\colon
  H^{*}\rightarrow H, \alpha\mapsto h_{\alpha}$ eine lineare Bijektion. Für
  $\sigma\in W$ setzen wir
  $\hat{\sigma}\coloneqq \mu^{-1}\circ\sigma\circ\mu\in\text{End}_{\C}(H^{*})$. Dann
  ist $\hat{\sigma}\circ\hat{\tau}=\widehat{\sigma\circ\tau}$ für $\sigma,
  \tau\in W$ und für $\alpha\in\Phi$ ist $h_{\hat{\sigma}(\alpha)}=
  \mu(\hat{\sigma})\alpha))= \sigma(\mu(\alpha))= \sigma(h_{\alpha})$.
  Insbesondere ist $\hat{\sigma}(\Phi)=\Phi$.
\end{bemerk}

%satz 11.1
\begin{satz}\label{satz:111}
  Sei $L$ eine halbeinfache Lie-Algebra mit Cartanalgebra $H$, Wurzelsystem
  $\Phi$ und Weylgruppe $W$. Zu je zwei Basen $\Pi, \Pi'$ existiert ein
  $\sigma\in W$ mit $\hat{\sigma}(\Pi)=\Pi'$.
  \begin{proof}
    Beweis mit "`versteckter"' Induktion:
    Seien $P(\Pi), P(\Pi')$ die Mengen der positiven Wurzeln in $\Phi$
    bezüglich $\Pi$ bzw. $\Pi'$. Im Fall $P(\Pi)=P(\Pi')$ existieren zu jedem
    $\alpha\in\Pi$ Elemente $n_{\beta'}\in\N_{0}$ mit
    $\alpha=\sum_{\beta'\in\Pi'} n_{\alpha\beta'}\beta'$ und umgekehrt. Daher
    ist $\Pi=\Pi'$.

    Sei $P(\Pi)\neq P(\Pi')$, d.\,h. $P(\Pi)\nsubseteq P(\Pi')$ wegen
    $\abs{P(\Pi)}= \frac{\abs{\Phi}}{2}= \abs{P(\Pi')}$. Dann ist auch
    $\Pi\nsubseteq P(\Pi')$. Wähle $\alpha\in\Pi\setminus P(\Pi')$. Sei
    $\beta\in P(\Pi)$ beliebig. Schreibe $\beta=\sum_{\gamma\in\Pi}
    n_{\gamma} \gamma$ für $n_{\gamma}\in\N_{0}, \gamma\in\Pi$. Dann ist
    $\Phi\ni\hat{\sigma}_{\alpha}(\beta)=\beta-\frac{2\kappa_{L}(h_{\alpha},
    h_{\beta})}{\kappa_{L}(h_{\alpha}, h_{\alpha})}\alpha$. Daher ist
    $\hat{\sigma}_{\alpha}(\beta)\in P(\Pi)$ außer im Fall $\beta=\alpha$.
    Folglich ist $\hat{\sigma}_{\alpha}(P(\Pi)\cap P(\Pi'))\subseteq P(\Pi)$.
    Offenbar ist auch $\hat{\sigma}_{\alpha}(\Pi')$ eine Basis von $\Phi$
    mit $\hat{\sigma}_{\alpha}(P(\Pi)\cap
    P(\Pi'))\subseteq\hat{\sigma}_{\alpha}(P(\Pi'))=
    P(\hat{\sigma}_{\alpha}(\Pi'))$, d.\,h. also
    $\hat{\sigma}_{\alpha}(P(\Pi)\cap P(\Pi'))\subseteq P(\Pi)\cap
    P(\hat{\sigma}_{\alpha}(\Pi'))$. Wegen $\hat{\sigma}_{\alpha}(\alpha)=
    -\alpha\in P(\Pi')$ ist
    $\alpha=\hat{\sigma}_{\alpha}(-\alpha)\in\hat{\sigma}_{\alpha}(P(\Pi'))=
    P(\hat{\sigma}_{\alpha}(\Pi'))$. Daher ist $\abs{P(\Pi)\cap P(\Pi')}<
    \abs{P(\Pi)\cap P(\hat{\sigma}_{\alpha}(\Pi'))}$.

    So erhält man Elemente $\alpha_{1},\dotsc,\alpha_{n}\in\Phi$ mit
    $\abs{P(\Pi)\cap P(\Pi')}<\abs{P(\Pi)\cap
    P(\hat{\sigma}_{\alpha_{1}}(\Pi'))}< \abs{P(\Pi)\cap
    P(\hat{\sigma}_{\alpha_{2}}(\hat{\sigma}_{\alpha_{1}}(\Pi')))}<\dotsb$. Am
    Schluss hat man ein $\sigma\in W$ mit $P(\Pi)=P(\hat{\sigma}(\Pi'))$,
    d.\,h. $\Pi=\hat{\sigma}(\Pi')$.
  \end{proof}
\end{satz}

%bem 11.2
\begin{bemerk}
  Mit den obigen Bezeichnungen gilt für $\alpha, \beta\in\Pi$:
  \begin{gather*}
    \frac{2\kappa_{L}(h_{\hat{\sigma}(\alpha)},
       h_{\hat{\sigma}(\beta)})}{\kappa_{L}(h_{\hat{\sigma}(\alpha)},
       h_{\hat{\sigma}(\alpha)})}= \frac{2\kappa_{L}(\sigma(h_{\alpha}),
       \sigma(h_{\beta}))}{\kappa_{L}(\sigma(h_{\alpha}),
       \sigma(h_{\alpha}))}= \frac{2\kappa_{L}(h_{\alpha},
       h_{\beta})}{\kappa_{L}(h_{\alpha}, h_{\alpha})}
  \end{gather*}
  Dies zeigt, dass die Cartaninvarianten bezüglich $\Pi$ und $\Pi'$
  übereinstimmen.
\end{bemerk}

\begin{satzON}
  Seien $L$ eine Lie-Algebra, $x,y\in L, \delta\in\Der(L)$ und $n\in \N_{0}$.
  Dann gilt:
  \begin{gather*}
    \delta^{n}([x,y])= \sum_{i=0}^{n} \binom{n}{i} [\delta^{i}(x),
       \delta^{n-i}(y)]
  \end{gather*}
  \begin{proof}
    Induktion nach $n$:
    Für $n=0$ steht auf beiden Seien $[x,y]$. Sei also $n>0$ und
    $\delta^{n-1}([x,y])= \sum_{i=0}^{n-1} \binom{n-1}{i} [\delta^{i}(x),
    \delta^{n-1-i}(y)]$. Dann ist:
    \begin{align*}
      \delta^{n}([x,y]) &= \delta(\delta^{n-1}([x,y]))= \sum_{i=0}^{n-1}
	 \binom{n-1}{i} \delta([\delta^{i}(x), \delta^{n-1-i}(y)])\\
      &= \sum_{i=0}^{n-1} \binom{n-1}{i} [\delta^{i+1}(x), \delta^{n-1-i}(y)]+
	 \sum_{i=0}^{n-1} \binom{n-1}{i} [\delta^{i}(x), \delta^{n-i}(y)]\\
      &= \sum_{j=1}^{n} \binom{n-1}{j-1} [\delta^{j}(x), \delta^{n-j}(y)] +
	 \sum_{j=0}^{n-1} \binom{n-1}{j} [\delta^{j}(x), \delta^{n-j}(y)]\\
      &= \sum_{j=0}^{n-1} \binom{n}{j} [\delta^{j}(x), \delta^{n-j}(y)]
    \end{align*}
  \end{proof}
\end{satzON}

%bem 11.3
\begin{bemerk}
  Seien $V$ ein endlich"=dimensionaler Vektorraum und $\phi\in\text{End}_{\C}(V)$
  nilpotent, d.\,h. $\phi^{n}=0$ für ein $n\in\N$. Wir setzen
  \begin{gather*}
    \exp(\phi)\coloneqq  \sum_{k=0}^{\infty} \frac{\phi^{k}}{k!}= \id_{V} +
       \underbrace{\phi+ \frac{\phi^{2}}{2}+\dotsb+
	 \frac{\phi^{n}}{n!}}_{\text{nilpotent}}\in\text{End}_{\C}(V)
  \end{gather*}
  Damit ist $\exp(\phi)$ bijektiv. Für nilpotente Elemente $\phi,
  \psi\in\text{End}_{\C}(V)$ mit $\phi\circ\psi=\psi\circ\phi$ ist wie üblich
  $\phi+\psi$ nilpotent und $\exp(\phi+\psi)=\exp(\phi)\exp(\psi)$.
\end{bemerk}

\begin{satzON}
  Seien $L$ eine Lie-Algebra, $x,y\in L$ und $\delta\in\Der(L)$ nilpotent. Dann
  gilt:
  \begin{gather*}
    [(\exp\delta)(x), (\exp\delta)(y)]= (\exp\delta)[x,y]
  \end{gather*}
  Also ist $\exp(\delta)$ ein Homomorphismus von Lie-Algebren.
  \begin{proof}
    Sei $n\in\N$ mit $\delta^{n}=0$. Dann gilt
    \begin{align*}
      [(\exp\delta)(x), (\exp\delta)(y)] &= \left[\sum_{i=0}^{n}
	 \frac{\delta^{i}(x)}{i!}, \sum_{j=0}^{n} \frac{\delta^{j}(y)}{j!}\right]\\
      &= \sum_{k=0}^{2n} \sum_{l=0}^{k} \left[\frac{\delta^{l}(x)}{l!},
	 \frac{\delta^{k-l}(y)}{(k-l)!}\right]\\
      &= \sum_{k=0}^{2n} \frac{\delta^{k}([x,y])}{k!}= (\exp\delta)([x,y])
    \end{align*}
  \end{proof}
\end{satzON}

%bem 11.4
\begin{bemerk}
  Nach dem obigen Satz gehört $\exp(\delta)$ für jede nilpotente Derivation
  $\delta$ einer Lie-Algebra $L$ zur Automorphismengruppe $\text{Aut}(L)$. Ein
  Element $a\in L$ heißt \highl{ad"~nilpotent}, falls die Abbildung
  $\ad_{a}\colon L\rightarrow L$ nilpotent ist. Für jedes ad-nilpotente
  Element $a\in L$ ist also $\exp(\ad_{a})\in\text{Aut}(L)$. Solche
  Automorphismen nennt man \highl[Automorphismus!innerer]{innere
  Automorphismen} von $L$. Die von den inneren Automorphismen erzeugte
  Untergruppe von $\text{Aut}(L)$ bezeichnet man mit $\Int(L)$. Für
  $a,b\in L$ und $\phi\in\text{Aut}(L)$ ist
  $(\phi\circ\ad_{a}\circ\phi^{-1})(b)=\phi([a, \phi^{-1}(b)])= [\phi(a), b]=
  \ad_{\phi(a)}(b)$, also $\phi\circ\ad_{a}\circ\phi^{-1}=\ad_{\phi(a)}$ und
  daher $\phi\circ\exp(\ad_{a})\circ\phi^{-1}=\exp(\ad_{\phi(a)})$, falls $a$
  ad-nilpotent. Dies zeigt, dass $\Int(L)$ ein Normalteiler von
  $\text{Aut}(L)$ ist: $\Int(L)\trianglelefteq\text{Aut}(L)$.
\end{bemerk}

%bem 11.5
\begin{bemerk}
  Sei $L$ eine Lie-Algebra. Ein Element $x\in L$ heißt \highl{stark
  ad-nilpotent}, falls Elemente $y\in L, \alpha\in\C^{\times}$ existieren mit $x\in
  L_{\alpha}(\ad_{y})$. Für $\beta\in\C$ ist dann
  \begin{align*}
    \ad_{x}(L_{\beta}(\ad_{y})) &= [x, L_{\beta}(\ad_{y})]\subseteq
       [L_{\alpha}(\ad_{y}), L_{\beta}(\ad_{y})]\subseteq
       L_{\alpha+\beta}(\ad_{y})
  \end{align*}
  Für $n\in\N$ ist also $(\ad_{x})^{n}(L_{\beta}(\ad_{y}))\subseteq
  L_{n\alpha+\beta}(\ad_{y})$. Wegen $L=\sum_{\beta\in\C} L_{\beta}(\ad_{y})$
  existiert also ein $n\in\N$ mit $(\ad_{x})^{n}=0$, d.\,h. $x$ ist
  ad-nilpotent.

  Wir setzen $\mathfrak{N}(L)\coloneqq  \{x\in L\colon x \text{ stark
  ad-nilpotent}\}$ und bezeichnen mit $\mathfrak{E}(L)$ die von den inneren
  Automorphismen $\exp(\ad_{x})$ mit $x\in\mathfrak{N}(L)$ erzeugte
  Untergruppe von $\Int(L)$.
\end{bemerk}

\begin{satzON}
  Sei $\phi\colon K\rightarrow L$ ein Epimorphismus von Lie-Algebren. Dann ist
  $\phi(\mathfrak{N}(K))= \mathfrak{N}(L)$ und zu jedem $\tau\in\FE(L)$
  existiert ein $\sigma\in\FE(K)$ mit $\tau\circ\phi=\phi\circ\sigma$.
  \todo{Diagramm einfügen}\help{Wie sah das Diagramm aus?}
  \begin{proof}
    Bekanntlich gilt für $\alpha\in\C^{*}, y\in K\colon
    \phi(K_{\alpha}(\ad_{y}))= L_{\alpha}(\ad_{\phi(y)})$. Daher ist
    $\phi(\FN(K))= \FN(L)$.

    Sei $\tau\in\FE(L)$. Sei o.\,B.\,d.\,A. $\tau=\exp(\ad_{b})$ für ein
    $b\in\FN(L)$. Wähle $a\in K$ mit $b=\phi(a)$. Für $z\in K$ gilt:
    \begin{align*}
      (\phi\circ\exp(\ad_{a}))(z) &= \phi(z+[a,z]+
	 \nicefrac{1}{2}[a,[a,z]]+\dotsb)\\
      &= \phi(z)+ [b, \phi(z)]+ \nicefrac{1}{2}[b,[b,\phi(z)]]+\dotso =
	 ((\exp\ad_{b})\circ\phi)(z)
    \end{align*}
  \end{proof}
\end{satzON}

%satz 11.6
\begin{satz}\label{satz:115}
  Für jeden Epimorphismus von Lie-Algebren $\phi\colon K\rightarrow L$ gilt:
  \begin{enumerate}
   \item Ist $G$ eine Cartanalgebra von $K$, so ist $\phi(G)$ eine
    Cartanalgebra von $L$.
   \item Ist $H$ eine Cartanalgebra von $L$ und $G$ eine Cartanalgebra von
    $\phi^{-1}(H)$, so ist $G$ eine Cartanalgebra von $K$.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}
     \item Mit $G$ ist auch $\phi(G)$ nilpotent. Sei $a\in K$ mit $\phi(a)\in
      N_{L}(\phi(G))$, d.\,h. $a\in N_{K}(G+\ker\phi)= G+\ker\phi$ nach den
      \autoref{satz:43} und \autoref{satz:45}. Folglich ist $\phi(a)\in\phi(G)$.
     \item Offenbar ist $G$ nilpotent. Nach dem ersten Teil des Satzes ist $\phi(G)$ eine
      Cartanalgebra von $\phi(\phi^{-1}(H))=H$. Also folgt
      $\phi(G)=H$. Für $x\in N_{K}(G)$ ist $\phi(x)\in
      N_{L}(\phi(G))=N_{L}(H)=H$, d.\,h. $x\in\phi^{-1}(H)$. Folglich ist
      $x\in N_{\phi^{-1}(H)}(G)=G$.
    \end{enumerate}
  \end{proof}
\end{satz}

%satz 11.7
\begin{satz}\label{satz:117}
  Seien $H_{1}, H_{2}$ Cartanalgebren einer auflösbaren Lie-Algebra $L$. Dann
  existiert ein $\sigma\in\FE(L)$ mit $\sigma(H_{1})=H_{2}$.
  \begin{proof}
    Beweis erfolgt durch Induktion nach der Dimension von $L$. Im Fall
    $\dim L\leq1$ ist nichts zu tun. Denn dann ist $H_{1}=H_{2}=L$. Sei also
    nun $\dim L>1$. Ist $L$ nilpotent, ist $H_{1}=L=H_{2}$. Sei $L$ nicht
    nilpotent und $A\neq0$ ein möglichst kleines abelsches Ideal in $L$. Dann
    sind $H_{1}+A/_{A}, H_{2}+A/_{A}$ Cartanalgebren von $L/_{A}$. Nach
    Induktion existiert ein $\tau\in\FE(L/_{A})$ mit $\tau(H_{1}+A/_{A})=
    H_{2}+ A/_{A}$. Nach \autoref{satz:115} existiert ein $\sigma\in\FE(L)$
    mit $\sigma(a)+A=\tau(a+A)$ für $a\in L$. Insbesondere ist
    \begin{align*}
      \alpha(a)+A &= \tau(a+A)=\tau(0)=0\qquad\text{für } a\in A
    \end{align*}
    Damit gilt $\sigma(a)\in A$. Somit ist gezeigt: $\sigma(A)=A$. Wegen
    $\sigma(H_{1}+A)/_{A}=\tau(H_{1}+A/_{A})=H_{2}+A/_{A}$ ist
    $\sigma(H_{1}+A)= H_{2}+A$. Insbesondere ist $\sigma(H_{1})$ eine
    Cartanalgebra von $H_{2}+A$. Im Fall $\dim H_{2}+A<\dim L$ existiert ein
    $\rho\in\FE(H_{2}+A)$ mit $\rho(\sigma(H_{1}))=H_{2}$. Offenbar ist $\rho$
    Einschränkung eines Elements in $\FE(L)$, d.\,h. in diesem Fall sind wir
    fertig.

    Sei also $L=H_{2}+A=\sigma(H_{1}+A)$. Dann ist auch $L=H_{1}+A$. Nach
    \autoref{satz:45} existiert ein $x\in L$ mit $H_{2}=L_{0}(\ad_{x})$.
    Offenbar
    ist $A=A_{0}(\ad_{x})\oplus A_{*}(\ad_{x})$ mit
    $A_{0}(\ad_{x})\coloneqq A\cap L_{0}(\ad_{x})= A\cap H_{2}\subseteq H_{2}$
    und $A_{*}(\ad_{x})\coloneqq A\cap L_{*}(\ad_{x})$ und $L_{*}(\ad_{x})\coloneqq 
    \sum_{\alpha\in\C^{*}} L_{\alpha}(\ad_{x})$. Dabei ist
    $[A,A_{*}(\ad_{x})]= 0$ und $[H_{2}, A_{*}(\ad_{x})]\subseteq
    A\cap[L_{0}(\ad_{x}), L_{*}(\ad_{x})]\subseteq A\cap
    L_{*}(\ad_{x})=A_{*}(\ad_{x})$. Folglich ist $A_{*}(\ad_{x})\subseteq L$
    ein Ideal mit $A_{*}(\ad_{x})\subseteq A$. Im Fall $A_{*}(\ad_{x})=0$ wäre
    $L=H_{2}+A=H_{2}$ nilpotent. \lightning{}\\
    Nach Wahl von $A$ ist $A=A_{*}(\ad_{x})\subseteq L_{*}(\ad_{x})$. Wegen
    $L= H_{2}+A\subseteq L_{0}(\ad_{x})\oplus L_{*}(\ad_{x})=L$ ist also
    $A=L_{*}(\ad_{x})$. Wegen $L=H_{1}+A$ existieren $y\in H_{1}, z\in A$ mit
    $x=y+z$. Da $\ad_{x}|L_{*}(\ad_{x})$ bijektiv ist, existiert ein $z'\in
    L_{*}(\ad_{x})=A$ mit $z=\ad_{x}(z')=[x,z']$. Wegen $[z', [z',a]]=0$ für
    alle $a\in L$ ist $(\ad_{z'})^{2}=0$, also
    $\exp(\ad_{z'})=\id_{L}+\ad_{z'}$. Insbesondere ist $(\exp\ad_{z'})(x)=
    x+[z',x]=x-z=y$. Daher ist $H\coloneqq L_{0}(\ad_{y})$ auch eine
    Cartanalgebra von $L$. Wegen $y\in H_{1}$ ist $H_{1}\subseteq
    L_{0}(\ad_{y})=H$, also ist $H_{1}=H=(\exp\ad_{z})(H_{2})$.

    Offenbar ist $z'=z_{1}+\dotsb+ z_{n}$ mit stark ad-nilpotenten Elementen
    $z_{1},\dotsc, z_{n}$ in $L_{*}(\ad_{x})=A$. Für $i,j=1,\dotsc,n$ ist
    dabei $[\ad_{z_{i}}, \ad_{z_{j}}]= \ad_{[z_{i}, z_{j}]}=0$. Daher ist
    $\exp(\ad_{z'})= \exp(\sum_{i=1}^{n} \ad_{z_{i}})= \prod_{i=1}^{n}
    (\exp\ad_{z_{i}})\in\FE(L)$.
  \end{proof}
\end{satz}

\begin{defini}
  Eine \highl{Borelalgebra} einer Lie-Algebra $L$ ist eine maximale auflösbare
  Unteralgebra von $L$.
\end{defini}

\begin{bemerkON}
  Jede Cartanalgebra von $L$ ist in einer Borelalgebra von $L$ enthalten.
\end{bemerkON}

\begin{bsp}
  Sei $L$ halbeinfach mit Cartanzerlegung $L=H\oplus\bigoplus_{\alpha\in\Phi}
  \C e_{\alpha}$ wie üblich und sei $\Pi\subseteq\Phi$ Basis. Dann ist
  $B(\Pi)\coloneqq  H\oplus\bigoplus_{\alpha\in\Phi, \text{pos. bezüglich } \Pi} \C
  e_{\alpha}$ eine Borelalgebra von $L$. Denn $N(\Pi)\coloneqq 
  \bigoplus_{\alpha\in\Phi, \text{pos. bezüglich } \Pi} \C e_{\alpha}$ ist ein Ideal
  in $B(\Pi)$ und $B(\Pi)/_{N(\Pi)}\cong H$ ist abelsch. Ferner ist $N(\Pi)$
  nilpotent. Denn für positive $\alpha_{1},\dotsc,\alpha_{n}\in\Phi$ ist
  $[\dotso[e_{\alpha_{1}}, e_{\alpha_{2}}], e_{\alpha_{3}}],\dotsc,
  e_{\alpha_{n}}]\in L_{\alpha_{1}+\dotsb+\alpha_{n}}(H)$ und für $n\gg0$ ist
  $\alpha_{1}+\dotsb+\alpha_{n}\notin\Phi$, also
  $L_{\alpha_{1}+\dotsb+\alpha_{n}}(H)=0$. Daher ist $B(\Pi)$ auflösbar.

  Sei $K\subseteq L$ eine auflösbare Unteralgebra mit $B(\Pi)\subsetneq K$.
  Dann ist $H$ auch eine Cartanalgebra von $K$. Daher ist
  $K=H\oplus\bigoplus_{\alpha\in H^{*}} K_{\alpha}(H)$ mit
  $K_{\alpha}(H)\subseteq L_{\alpha}(H)$ für $\alpha\in H^{*}$. Im Falle
  $K\nsubseteq B(\Pi)$ existiert eine positive Wurzel $\alpha\in\Phi$ mit
  $e_{-\alpha}\in K$.
  %Vorlesung vom 2007-07-18
  Wegen $e_{\alpha}\in B(\Pi)\subseteq K$ ist auch $h_{\alpha}=[e_{\alpha},
  e_{-\alpha}]\in K$. Daher ist $U\coloneqq \C h_{\alpha}\oplus \C
  e_{\alpha}\oplus\C e_{-\alpha}\subseteq K$ eine Unteralgebra, also
  auflösbar. Andererseits ist $[e_{\alpha}, e_{-\alpha}]=h_{\alpha},
  [h_{\alpha}, e_{\alpha}]=\underbrace{\alpha(h_{\alpha})}_{\neq0} e_{\alpha},
  [h_{\alpha}, e_{-\alpha}]= \underbrace{-\alpha(h_{\alpha})}_{\neq0}
  e_{-\alpha}$, also $U'=U$. \lightning{}
\end{bsp}

%satz 11.8
\begin{satz}
  Sei $L$ eine halbeinfache Lie-Algebra mit der Cartanzerlegung
  $L=H\oplus\bigoplus_{\alpha\in\Phi} \C e_{\alpha}$. Seien $\Pi, \Pi'$ zwei
  Basen von $\Phi$. Dann existiert ein $\tau\in\FE(L)$ mit $\tau(B(\Pi))=
  B(\Pi')$.
  \begin{proof}
    Nach \autoref{satz:111} existiert ein $\sigma$ in der Weylgruppe $W$ mit
    $\hat{\sigma}(\Pi)=\Pi'$. Schreibe $\sigma=\sigma_{\alpha_{1}}\circ\dotso
    \circ\sigma_{\alpha_{r}}$ mit $\alpha_{1},\dotsc,\alpha_{r}\in\Phi$. Dann
    ist $\hat{\sigma}_{\alpha_{r}}(\Pi)$ eine Basis von $\Phi$, und es genügt
    zu zeigen, dass ein Element $\tau_{r}\in\FE(L)$ existiert mit
    $\tau_{r}(B(\Pi))=B(\hat{\sigma}_{\alpha_{r}}(\Pi))$. Der Rest ist dann
    Induktion nach $r$.

    Daher können wir annehmen: $\sigma=\sigma_{\alpha}$ für ein
    $\alpha\in\Phi$. Dann ist $H= \C h_{\alpha}\oplus(\C h_{\alpha})^{\perp}$.
    mit $(\C h_{\alpha})^{\perp}=\ker(\alpha)$. Denn für $h\in H$ gilt:
    $h\in(\C h_{\alpha})^{\perp}\Leftrightarrow
    0=\underbrace{\kappa_{L}(h_{\alpha}, h)}_{\alpha(h)} \Leftrightarrow
    h\in\ker(\alpha))$.

    Für $f_{\alpha}\coloneqq \frac{2}{\alpha(h_{\alpha})}e_{-\alpha}\in
    L_{-\alpha}(H)$ und $g_{\alpha}\coloneqq 
    \frac{2}{\alpha(h_{\alpha})}h_{\alpha}\in H$ gilt ferner:
    \begin{gather*}
      [e_{\alpha},
    f_{\alpha}]= g_{\alpha}\qquad [g_{\alpha}, e_{\alpha}]=2e_{\alpha}\qquad
    [g_{\alpha}, f_{\alpha}]=-2f_{\alpha}
    \end{gather*}
    Außerdem sind $e_{\alpha}, -f_{\alpha}$ stark ad-nilpotent mit
    \begin{align*}
      (\exp\ad_{e_{\alpha}})(e_{\alpha}) &= e_{\alpha}+ [e_{\alpha},
	 e_{\alpha}]+ \nicefrac{1}{2} [e_{\alpha},[e_{\alpha},
	 e_{\alpha}]]+\dotsb= e_{\alpha}\\
      (\exp\ad_{e_{\alpha}})(f_{\alpha}) &= f_{\alpha}+ [e_{\alpha},
	 f_{\alpha}]+ \nicefrac{1}{2}[e_{\alpha}, [e_{\alpha},
	 f_{\alpha}]]+\dotsb= f_{\alpha}+g_{\alpha}+
	 \nicefrac{1}{2}[e_{\alpha}, g_{\alpha}]+\dotsb\\
      &= f_{\alpha}+g_{\alpha}-e_{\alpha}\\
      (\exp\ad_{e_{\alpha}})(g_{\alpha}) &= g_{\alpha}+ [e_{\alpha},
	 g_{\alpha}]+ \nicefrac{1}{2}[e_{\alpha}, [e_{\alpha},
	 g_{\alpha}]]+\dotsb= g_{\alpha}-2e_{\alpha}\\
      (\exp\ad_{-f_{\alpha}})(e_{\alpha}) &=\dotsb= e_{\alpha}+g_{\alpha}-f_{\alpha}\\
      (\exp\ad_{-f_{\alpha}})(f_{\alpha}) &=\dotsb= f_{\alpha}\\
      (\exp\ad_{-f_{\alpha}})(g_{\alpha}) &=\dotsb= g_{\alpha}-2f_{\alpha}
    \end{align*}
    Daher ist $\tau\coloneqq (\exp\ad_{e_{\alpha}})\circ(\exp\ad_{-f_{\alpha}})
    \circ (\exp\ad_{e_{\alpha}})\in\FE(L)$ mit
    \begin{align*}
      \tau(g_{\alpha}) &= ((\exp\ad_{e_{\alpha}})\circ
	 (\exp\ad_{-f_{\alpha}}))(g_{\alpha}- 2e_{\alpha})=
	 (\exp\ad_{e_{\alpha}}) (g_{\alpha}-2e_{\alpha}-2g_{\alpha})\\
      &= (\exp\ad_{e_{\alpha}})(-g_{\alpha}-2e_{\alpha})=
	 -g_{\alpha}+2e_{\alpha}-2e_{\alpha}=-g_{\alpha}
    \end{align*}
    Ferner gilt für $h\in\ker(\alpha)$: $(\exp\ad_{e_{\alpha}})(h)=
    h+[e_{\alpha},h]+ \nicefrac{1}{2}[e_{\alpha},[e_{\alpha},h]]+\dotsb =
    h-\alpha(h)e_{\alpha}+\dotsb =h$ und
    $(\exp\ad_{-f_{\alpha}})(h)=\dotsb=h$. Also $\tau(h)=
    h$. Daher ist $\tau$ eine Fortsetzung von $\sigma_{\alpha}$.

    Zum Beweis von $\tau(B(\Pi))= B(\hat{\sigma}_{\alpha}(\Pi))$ genügt zu
    zeigen, dass $\tau(L_{\beta}(H))= L_{\hat{\sigma}_{\alpha}(\beta)}(H)$ für
    $\beta\in\Phi$. Dies folgt, da für alle $\beta, \gamma\in\Phi$ gilt:
    \begin{align*}
      [h_{\gamma}, \tau(e_{\beta})] &= \tau([\tau^{-1}(h_{\gamma}),
	 e_{\beta}])= \tau([\sigma^{-1}_{\alpha}(h_{\gamma}), e_{\beta}])=
	 \tau(\beta(\sigma^{-1}_{\alpha}(h_{\gamma}))e_{\beta})=
	 \beta(\sigma^{-1}_{\alpha}(h_{\gamma}))\tau(e_{\beta})\\
      &= \kappa_{L}(h_{\beta},
	 \sigma^{-1}_{\alpha}(h_{\gamma}))\tau(e_{\beta})=
	 \kappa_{L}(\sigma_{\alpha}(h_{\beta}), h_{\gamma})\tau(e_{\beta})=
	 \kappa_{L}(h_{\hat{\sigma}_{\alpha}(\beta)},
	 h_{\gamma})\tau(e_{\beta})\\
      &= (\hat{\sigma}_{\alpha}(\beta))(h_{\gamma})\tau(e_{\beta}) 
    \end{align*}
  \end{proof}
\end{satz}

%satz 11.9
\begin{satz}\label{satz:119}
  Für jede Lie-Algebra $L$ gilt:
  \begin{enumerate}
   \item Für jede Borelalgebra $B\subseteq L$ ist $B=N_{L}(B)$. (Borelalgebren
    sind immer selbstnormalisierend.)
   \item Die Abbildung $B\mapsto B/_{\Rad(L)}$ ist eine Bijektion zwischen den
    Mengen der Borelalgebren in $L$ einerseits und in der Lie-Algebra
    $L/_{\Rad(L)}$.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}
     \item Sei $x\in N_{L}(B)$. Dann ist $[B+\C x, B+\C x]\subseteq B$. Daher
      ist $B+\C x$ eine auflösbare Unteralgebra von $L$. Folglich ist $B+\C
      x=B$, d.\,h. $x\in B$.
     \item Für jede Borelalgebra $B\subseteq L$ ist $B+\Rad(L)$ eine
      auflösbare Unteralgebra von $L$. Denn $\Rad(L)$ ist auflösbares Ideal in
      $L$ und $B+\Rad(L)$ und $B+\Rad(L)/_{\Rad(L)}\cong B/_{B\cap\Rad(L)}$
      ist auflösbar. Also ist $B+\Rad(L)=B$, d.\,h. $\Rad(L)\subseteq B$. Daher
      ist $B/_{\Rad(L)}\subseteq L/_{\Rad(L)}$ eine auflösbare Unteralgebra.
      Sei $\overline{C}\in L/_{\Rad(L)}$ eine Borelalgebra mit
      $B/_{\Rad(L)}\subseteq\overline{C}$. Dann ist $\overline{C}=
      C/_{\Rad(L)}$ mit einer auflösbaren Unteralgebra $C\subseteq L$. Wegen
      $B\subseteq C$ folgt, $B=C$. Daher ist
      $B/_{\Rad(L)}=C/_{\Rad(L)}=\overline{C}\subseteq L/_{\Rad(L)}$ eine
      Borelalgebra. Dies zeigt, dass die angegebene Abbildung wohldefiniert
      und injektiv ist. Zum Beweis der Surjektivität sei
      $\overline{C}\subseteq L/_{\Rad(L)}$ eine Borelalgebra. Dann ist
      $\overline{C}=C/_{\Rad(L)}$ mit einer auflösbaren Unteralgebra $C$ von
      $L$. Sei $B\subseteq L$ Borelalgebra mit $C\subseteq B$. Dann ist
      $\Rad(L)\subseteq B$, und $B/_{\Rad(L)}\subseteq L/_{\Rad(L)}$ ist eine
      Borelalgebra. Wegen $\overline{C}=C/_{\Rad(L)}\subseteq B/_{\Rad(L)}$
      ist $\overline{C}=B/_{\Rad(L)}$. Damit ist die Surjektivität bewiesen.
    \end{enumerate}
  \end{proof}
\end{satz}

%satz 11.10
\begin{satz}\label{satz:1110}
  Sei $B_{1}, B_{2}$ Borelalgebren einer beliebigen Lie-Algebra $L$. Dann
  existiert ein Element $\sigma\in\FE(L)$ mit $\sigma(B_{1})=B_{2}$.
  \begin{proof}
    (\cite{humph}, pp. 84--86)
    Der \autoref{satz:115} und der \autoref{satz:119} liefern eine Reduktion
    auf den Fall, dass $L$ halbeinfach ist. Dann folgt eine Induktion nach der
    Dimension von $B_{1}\cap B_{2}$. Dabei gehen noch andere Dinge ein, die
    wir in der Vorlesung nicht behandelt haben (z.\,B. die abstrakte
    Jordanzerlegung).
  \end{proof}
\end{satz}

%satz 11.11
\begin{satz}\label{satz:1111}
  Seien $H_{1}, H_{2}$ Cartanalgebren einer Lie-Algebra $L$. Dann existiert
  ein $\tau\in\FE(L)$ mit $\tau(H_{1})=H_{2}$.
  \begin{proof}
    Für $i=1,2$ sei $B_{i}\subseteq L$ eine Borelalgebra mit $H_{i}\subseteq
    B_{i}$. Nach \autoref{satz:1110} existiert ein $\sigma\in\FE(L)$ mit
    $\sigma(B_{1})=B_{2}$. Dann sind $\sigma(H_{1})$ und $H_{2}$
    Cartanalgebren von der Borelalgebra $B_{2}$. Nach \autoref{satz:117}
    existiert ein $\rho\in\FE(B_{2})$ mit $\rho(\sigma(H_{1}))=H_{2}$. Nach
    Definition von $\FE(L)$ kann man das $\rho$ zu einem $\rho'\in\FE(L)$
    fortsetzen. Also ist $\tau\coloneqq \rho'\circ\sigma\in\FE(L)$ mit
    $\tau(H_{1})=H_{2}$.
  \end{proof}
\end{satz}

\begin{bemerkON}
  Die Dimension einer Cartanalgebra von $L$ nennt man den \highl{Rang} von
  $L$ und nach dem \autoref{satz:1111} hat jede halbeinfache Lie-Algebra ein
  eindeutig bestimmtes Dynkindiagramm, unabhängig von der Wahl der
  Cartanalgebra und der Wahl der Basis des Wurzelsystems.
\end{bemerkON}


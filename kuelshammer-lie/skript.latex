\chapter{Grundbegriffe}

\begin{defini} % 1.1
  Eine endlich-dimensionale und komplexe \highl{Lie-Algebra} ist ein
  endlich-dimensionaler Vektorraum $L$ über dem Körper $\C$ mit einer
  bilinearen Abbildung $L\times L\rightarrow L, (a,b)\mapsto [a,b]$, so dass
  gilt:
  \begin{enumerate}
   \item (\highl{Schiefsymmetrie}) $[a,a]=0\,\forall a\in L$
   \item (\highl{Jacobi-Identität}) $[[a,b],c]+[[b,c],a]+ [[c,a], b]= 0\,\forall
    a,b,c\in L$
  \end{enumerate}
\end{defini}

\begin{bemerkON}
  In dieser Vorlesung betrachten wir den Körper $\C$. Verallgemeinerungen sind
  möglich, müssen aber evtl. speziell betrachtet werden. Wir betrachten ohne
  besondere Nennung immer endlich-dimensionale Lie-Algebren. Spezialfälle
  werden besonders erwähnt.
\end{bemerkON}

Mann nennt $[a,b]$ das \highl{Lie-Produkt}, \highl{Lie-Klammer} oder
\highl{Kommutator}.

\begin{bemerkON}
  Für $a,b\in L$ ist $0=[a+b,a+b]=[a,a]+[b,b]+[b,a]+[a,b]$, d.\,h. $[b,a]=-
  [a,b]$. Außerdem erhält man aus der Bilinearität $[0,a]=0=[a,0]$.
\end{bemerkON}

\begin{bsp}\label{bsp:11}
  \begin{enumerate}
   \item Jeder $\C$-Vektorram $V$ ist eine Lie-Algebra mit $[a,b]\colon=0$ für
    alle $a,b\in V$.
   \item Für Lie-Algebren $L_{1},\dotsc, L_{n}$ dann ist auch das
    \highl[Produkt!direktes]{direkte Produkt} $L_{1}\times\dotso \times L_{n}$ eine Lie-Algebra, wenn man
    definiert: \[[(a_{1},\dotsc, a_{n}),\dotsc,(b_{1},\dotsc, b_{n})] \colon=
    ([a_{1}, b_{1}],\dotsc,[a_{n},b_{n}])\] für $a_{1}, b_{1}\in L_{1},\dotsc,
    a_{n}, b_{n}\in L_{n}$.
   \item Für $n\in\N$ bilden die komplexen $n\times n$-Matrizen eine
    Lie-Algebra $gl_{n}=\C^{n\times n}$ mit $[a,b]\colon= ab-ba$ für $a,b\in
    gl_{n}$.
    Für $a,b,c\in gl_{n}$ gilt: $[[a,b],c]=(ab-ba)c-c(ab-ba)=abc-bac-cab+cba$,
    also erhalten wir $[[a,b],c]+[[b,c],a]+[[c,a],b]= abc-bac-cab+cba +bca
    -cba-abc+acb + cab-acb-bca+bac=0$. Man nennt $gl_{n}$ die
    \highl[Lie-Algebra!allgemeine lineare]{allgemeine lineare Lie-Algebra} des
    Grades $n$
  \end{enumerate}
\end{bsp}

\begin{defini}
  Eine \highl{Unteralgebra} einer Lie-Algebra $L$ ist ein Untervektorraum
  $K\subseteq L$ mit $[a,b]\in K$ für $a,b\in K$.
\end{defini}

\begin{bemerkON}
  Gegenenfalls wird $K$ mit den entsprechend eingeschränkten Verknüpfungen
  selbst zu einer Lie-Algebra.
\end{bemerkON}

\begin{bsp}
  \begin{enumerate}
   \item Für $n\in \N$ bilden die oberen Dreiecksmatrizen eine Unteralgebra
    $\Fb_{n}$ von $gl_{n}$. Denn das Produkt von oberen Dreiecksmatrizen
    ist wieder eine.
   \item In jeder Lie-Algebra $L$ sind $0, L$ und $\C a$ für $a\in L$
    Unteralgebren.
   \item Für jeden Untervektorraum $U\subseteq L$ ist der \highl{Normalisator}
    $N_{L}(U)\colon= \{a\in L\colon [a,u]\in U, u\in U\}$ von $U$ in $L$. Denn
    für $\alpha, \beta\in \C, a,b\in N_{L}(U), u\in U$ gilt: $[\alpha a+\beta
    b,u]=\alpha[a,u]+\beta[b,u]\in U$ und  $[[a,b],u]=-[[b,u],a]-[[u,a],b]=
    [a, \underbrace{[b,u]}_{\in U}]- [b, \underbrace{[a,u]}_{\in U}]$.
   \item Für jeder Teilmenge $X\subseteq L$ ist der \highl{Zentralisator}
    $G_{L}(X)\colon= \{a\in L\colon [a,x]=0\,\forall x\in X\}$ von $X$
    eine Unteralgebra von $L$. Ist $X=\{x\}$ für ein $x\in L$, so schreiben
    wir $C_{L}(x)$ und sprechen vom Zentralisator von $x$.
   \item Insbesondere ist das \highl{Zentrum} $Z(L)\colon= G_{L}(L)= \{a\in
    L\colon [a,b]=0\,\forall b\in L\}$ von $L$ eine Unteralgebra von $L$.
   \item Für jede Menge $\FM$ von Unteralgebren von $L$ ist auch
    $\bigcap_{U\in \FM}$ eine Unteralgebra von $L$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Ein \highl{Ideal} einer Lie-Algebra $L$ ist ein Untervektorraum $I\subseteq
  L$ mit $[a,b]\in I$ für alle $a\in I, b\in L$.
\end{defini}

\begin{bemerkON}
  \begin{enumerate}
   \item Gegenenfalls ist auch $[b,a]=-[a-b]\in I$ für alle $a\in I, b\in L$.
   \item Jedes Ideal von $L$ ist eine Unteralgebra von $L$. Eine Unteralgebra
    ist im Allgemeinen \emph{kein} Ideal.
  \end{enumerate}
\end{bemerkON}

\begin{bsp}
  \begin{enumerate}
   \item $\Fb_{2}$ ist kein Ideal in $gl_{2}$, denn
    $\begin{pmatrix}1&0\\0&0\end{pmatrix} \begin{pmatrix}0&0\\1&0\end{pmatrix}
    - \begin{pmatrix}0&0\\1&0\end{pmatrix}
    \begin{pmatrix}1&0\\0&0\end{pmatrix}=
    \begin{pmatrix}0&0\\-1&0\end{pmatrix}$.
   \item In jeder Lie-Algebra $L$ sind $0, L$ und $Z(L)$ Ideale. Für $z\in
    Z(L), a\in L$ ist nämlich $[z,a]=0\in Z(L)$.
   \item Jede Unteralgebra $K\subseteq L$ ist ein Ideal in $N_{L}(K)$ und $K$
    ist genau dann ein Ideal in $L$, wenn der Normalisator $N_{L}(K)=L$ ist.
   \item Der Durchschnitt von Idealen ist wieder ein Ideal: Für jede Menge
    $\FF$ von Idealen in $L$ ist auch $\bigcap_{I\in\FF} I$ ein Ideal in $L$.
   \item Für Ideale $I,J$ von $L$ ist auch $I+J=\{a+b\colon a\in I, b\in
     J\}$ ist ein Ideal in $L$. Es gilt nämlich $[a+b,x]=[a,x]+[b,x]\in
    [I+J]$. Analog für Summen von endlich vielen Idealen.
   \item Für Ideale $I,J$ von $L$ ist auch $[I,J]=\{\sum_{k=1}^n [a_i,
    b_i]\colon a_1,...,a_n,\in I, b_1,...,b_n\in J\}$ ein Ideal in $L$. Für
    $a_1,\dotsc,a_n\in I, b_1,\dotsc,b_n\in J, x\in L$ gilt nämlich:
    $[\sum_{k=1}^n [a_k,b_k],x]=\sum_{k=1}^n (-[ [ b_k,x], a_k]-[ [x,a_k],
    b_k])= \sum_{k=1}^n ([a_k, [b_k,x]]+[ [a_k,x], b_k])\in [I,J]$.
    Insbesondere ist die abgeleitete Algebra $L'\colon= [L,L]\colon= 
    \{\sum_{k=1}^n [a_k, b_k]\colon a_1, b_1,\dots,a_n,b_n\in L, n\in\N_0$\}
    \item Definiert man man induktiv $L^{(0)}\colon= L, L^{(1)}\colon= L',
    L^{(n)}\colon= (L^{(n-1)})'$ oder $L^1\colon= L, L^2=L', L^n\colon=
    [L^{n-1}, L]$, so sind $L^{(n)}, L^n$ für $n\in\N$ Ideale in $L$. Man
    nennt $L^{(0)} \supseteq L^{(1)}\supseteq L^{[2)}\supseteq \dots$ die
    \highl[Kette!abgeleitete]{abgeleitete Kette} von $L$ und $L^1\supseteq L^2 \supseteq
    L^3\supseteq \dots$ die \highl[Zentralkette!absteigende]{absteigende} oder
    \highl[Zentralkette!untere]{untere Zentralkette} von $L$.
  \end{enumerate}
\end{bsp}

\begin{satzON}
Für jedes Ideal $I$ einer Lie-Algebra $L$ bilden die Restklassen
  $a+I=\{a+x\colon x\in I\}$ bilden eine Lie-Algebra $L/_I$, die
  \highl{Restklassenalgebra} von $L$ modulo $I$, wenn man für $\alpha \in \C,
  a,b\in L$ definiert:
  \begin{gather*}
    \alpha(a+I)\colon= \alpha a+I\qquad (a+I)+(b+I)=(a+b)+I\qquad [a+I,
  b+I]\colon=[a,b]+I
  \end{gather*}
  \begin{proof}
    Die Lie-Klammer auf $L/_I$ ist wohldefiniert. Sind nämlich $a,a', b,b'\in
    L$ mit $a+I=a'+I$ und $b+I=b'+I$, so ist $a-a'\in I$, also
    $[a,b]-[a',b]=[a-a',b]=I$, d.\,h. $[a,b]+I=[a',b]+I$. Genauso verfährt
    man mit $b$ und $b'$. Die Axiome einer Lie-Algebra rechnet man leicht
    nach.
  \end{proof}
\end{satzON}

\begin{defini}
Ein \highl{Homomorphismus} einer Lie-Algebra $L$ in eine Lie-Algebra $M$ ist
  eine lineare Abbildung $\varphi\colon L\rightarrow M$ mit $\varphi([a,b])=
  [\varphi(a),\varphi(b)]$ für alle $a,b\in L$. Wie üblich definiert man
  Monomorphismen, Epimorphismen, Isomorphismen, Endomorphismen und
  Automorphismen zwischen Lie-Algebren.
\end{defini}

%bem 1.5
\begin{bemerk}\label{bem:15}
  \begin{enumerate}
   \item Für jede Unteralgebra $U\subseteq L$ und jeden Homomorphismus
    $\varphi\colon L\rightarrow M$ ist $\varphi(U)\subseteq M$ eine
    Unteralgebra. Für $a,b\in U$ ist nämlich $[\varphi(a),
    \varphi(b)]=\varphi(\underbrace{[a,b]}_{\in U})\in \varphi(U)$.
    Insbesondere ist das Bild $\varphi(L)$ eine Unteralgebra von $M$.
   \item Für jedes Ideal $I\subseteq L$ ist $\varphi(I)\subseteq \varphi(L)$
    Ideal. Denn für $a\in I, b\in  L$ ist $[\varphi(a), \varphi(b)]=
    \varphi(\underbrace{[a,b]}_{\in I})\in\varphi(I)$. Jedoch ist $\varphi(I)$
    im Allgemeinen kein Ideal in $M$. Wie der folgende Homomorphismus
    $\Fb_2\rightarrow \gl_2, a\mapsto a$ und das Ideal $I\colon=\Fb_2$ von
    $\Fb_2$ zeigen.
   \item Für jede Unteralgebra $V\subseteq M$ ist $\varphi^{-1}(V)= \{a\in
    L\colon \varphi(a)\in V\}\subseteq L$ ist eine Unteralgebra von $L$. Denn
    für $a,b\in\varphi^{-1}(V)$ ist $\varphi([a,b])=[\varphi(a),
    \varphi(b)]\in V$, d.\,h. $[a,b]\in\varphi^{-1}(V)$.
   \item Für jedes Ideal $J\subseteq M$ ist $\varphi^{-1}(J)\subseteq L$
    Ideal. Denn für $a\in\varphi^{-1}(J), b\in  L$ ist
    $\varphi([a,b])=[\varphi(a), \varphi(b)]\in J$, d.\,h.
    $[a,b]\in\varphi^{-1}(J)$. Insbesondere ist der Kern $\ker(\varphi)\colon=
    \varphi^{-1}(0)=\{a\in L\colon \varphi(a)=0\}\subseteq L$ ein Ideal.
   \item Sind $L, M, N$ drei Lie-Algebren und $\varphi\colon L\rightarrow M,
    \psi\colon M\rightarrow N$ Homomorphismen, so auch $\psi\circ\varphi\colon
    L\rightarrow N$.
   \item Ist $\varphi\colon L\rightarrow M$ ein Isomorphismus, so auch
    $\varphi^{-1}\colon M\rightarrow L$. Denn für $x,y\in M$ gilt
    $\varphi^{-1}([x,y])=\varphi^{-1}([\varphi(\varphi^{-1}(x)),
    \varphi(\varphi^{-1}(y))])= \varphi^{-1}(\varphi([\varphi^{-1}(x),
    \varphi^{-1}(y)]))=[\varphi^{-1}(x), \varphi^{-1}(y)]$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Für jedes Ideal $I$ einer Lie-Algebra $L$ ist die kanonische
    Abbildung $\nu\colon L\rightarrow L/_{I}, a\mapsto a+I$ ein Epimorphimus
    mit $\ker I$. \help{fehlt da nicht noch was?}
   \item Betrachtet man $\C$ als Lie-Algebra mit $[\alpha, \beta]=0$ für alle
    $\alpha, \beta\in\C$, so ist für $n\in\N$ die Abbildung $\spur\colon
    \gl_{n}\rightarrow \C, (\alpha_{ij})\mapsto \sum_{i=1}^{n} \alpha_{ii}$
    ein Epimorphimus. Denn für $a,b\in\gl_{n}$ ist bekanntlich
    $\spur([a,b])=\spur(ab-ba)=\spur(ab)-\spur(ba)=0=[\spur(a), \spur(b)]$.
    Daher ist $\sll_{n} \colon= \ker(\spur)=\{a\in
    \gl_{n}\colon\spur(a)=0\}\subseteq \gl_{n}$  Ideal. Man nennt $\sll_{n}$ die
    \highl[Lie-Algebra!spezielle lineare]{spezielle lineare Lie-Algebra} des Grades $n$.
   \item Für jeden endlich-dimensionalen $\C$-Vektorraum $V$ bilden die
    linearen Abbildungen von $V$ in sich ein Lie-Algebra $\gl(V)$, die
    \highl[Lie-Algebra!allgemeine lineare]{allgemeine lineare Lie-Algebra} von
    $V$, wenn man $[\phi, \psi]=  \phi\cdot\psi-\psi\cdot\phi$ für
    $\phi,\psi\in \gl(V)$ definiert. Dies 
    zeigt man analog zu \autoref{bsp:11} Nummer (iii). Wählt man
    eine Basis $b_{1},\dotsc, b_{n}$ von $V$ und schreibt  $\phi(b_{j}) =
    \sum_{i=1}^{n} \alpha_{ij}(\phi)b_{i}$ mit $\alpha_{ij}(\phi)\in\C$ für
    $i,j=1,\dotsc,n$ ist $\gl(V)\rightarrow\gl_{n}, \phi\mapsto
    (\alpha_{ij}(\phi))$ ein Isomorphismus. Das Urbild von $\sll_{n}$ unter
    dieser Abbildung ist $\sll(V)\colon= \{\phi\in\gl(V)\colon
    \spur(\phi)=0\}$. Das hängt nicht von der Wahl der Basis ab. Man nennt
    $\sll(V)$ \highl[Lie-Algebra!spezielle lineare]{spezielle lineare
    Lie-Algebra} von $V$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Lie-Algebren $L, M$ heißen isomorph ($L\equiv M$), falls ein Isomorphismus
  $\phi\colon L\rightarrow M$ existiert.
\end{defini}

\begin{bsp}
  Für jeden $\C$-Vektorraum $V$ der Dimension $n<\infty$ ist $\gl(V)\equiv
  \gl_{n}$. 
\end{bsp}

\begin{bemerkON}
  $\equiv$ ist eine Äquivalenzrelation.
\end{bemerkON}

\begin{satz}[Homomorphiesatz]\label{satz:16}
  Für jeden Homomorphismus von Lie-Algebren $\phi\colon L\rightarrow M$ ist
  die Abbildung $\overline{\phi}\colon L/_{\ker\phi}\rightarrow \phi(L),
  a+\ker(\phi) \mapsto \phi(a)$ ein Isomorphismus. Insbesondere ist
  $L/_{\ker\phi}\equiv \phi(L)$.
  \begin{proof}
    Man rechnet leicht nach, dass die Abbildung $\overline{\phi}$
    wohldefiniert, linear und bijektiv ist. Außerdem gilt für alle $a,b\in
    L\colon \overline{\phi}([a+\ker\phi,
    b+\ker\phi])=\overline{\phi}([a,b]+\ker\phi)= \phi([a,b])= [\phi(a),
    \phi(b)]= [\overline{\phi}(a+\ker\phi), \overline{\phi}(b+\ker\phi)]$.
  \end{proof}
\end{satz}

\begin{satz}[Erster Isomorphiesatz]\label{satz:17}
  Für jedes Ideal $I$ und jede Unteralgebra $K$ einer Lie-Algebra $L$, 
  ist $K+I$ eine Unteralgebra von $L$. Darin ist $I$ ein Ideal, $K\cap I$
  Ideal in $K$ und
  \begin{gather*}
  K/_{K\cap I} \equiv K+I/_{I}    
  \end{gather*}
  \begin{proof}
    Sei $\nu\colon L\rightarrow L/_{I}, a\mapsto a+I$ kanonisch. Nach
    \autoref{bem:15}
    ist $\nu(K)=\{a+I:a\in K\}$ eine Unteralgebra von $L/_{I}$. Daher ist
    $\nu^{-1}(\nu(K))$ eine Unteralgebra von $L$. Es ist in der Regel nicht
    dasselbe wie $\nu$. Für $x\in\nu^{-1}(\nu(K))$ ist $x+I=\nu(x)\in \nu(K)$.
    Also $x+I=a+I$ für ein $a\in K$. Daher ist $i\colon= x-a\in I$ und das
    Element $x=a+i\in K+I$. Für $b\in K, j\in I$ ist andererseits das
    $\nu(b+j)=b+j+I=b+I=\nu(b)\in\nu(K)$, d.\,h. $b+j\in\nu^{-1}(\nu(K))$.
    Folglich ist $\nu^{-1}(\nu(K))=K+I$ Unteralgebra von $L$.

    Da $I$ Ideal in $L$, ist es auch Ideal in $K+I$. Ferner ist $K/_{I}$ der
    Kern der Einschränkung von $\nu$ auf $K$. Also ist das ein Ideal in $K$.
    Wende Homomorphiesatz auf diese Einschränkung von $\nu$ an: $K/_{K\cap
    I}\equiv \nu(K) =\{a+I\colon a\in K\}= \{a+j+I\colon a\in K, j\in I\} =
    K+I/_{I}$.
  \end{proof}
\end{satz}

\begin{satz}[Zweiter Isomorphiesatz]\label{satz:18}
  Sind $I, J$ zwei Ideale einer Lie-Algebra $L$ mit $I\subseteq J$, so ist
  $J/_{I}$ ein Ideal in $L/_{I}$ mit
  \begin{gather*}
  (L/_{I})/_{(J/_{I})}\equiv L/_{J}    
  \end{gather*}
  \begin{proof}
    Sei $\nu\colon L\rightarrow L/_{I}$ kanonische Abbildung. Nach 
    \autoref{bem:15} ist $J/_{I}=\nu(J)$ Ideal in $\nu(L)=L/_{I}$. Sei
    $\mu\colon L/_{I}\rightarrow (L/_{I})/_{(J/_{I})}$ kanonisch. Dann ist
    $\ker(\mu\dot
    \nu)=J$ (Nachrechnen). Wende den Homomorphiesatz auf $\mu\dot\nu$ an:
    $L/_{J}\equiv (L/_{I})/_{(J/_{I})}$.
  \end{proof}
\end{satz}

\chapter{Darstellungen und Moduln}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $V$ ein endlich-dimensionaler
  $\C$-Vektorraum. Eine \highl{Darstellung} von $L$ auf $V$ ist ein
  Homomorphismus $\Delta\colon L \rightarrow \gl(V)$.
\end{defini}

\begin{bsp}
  Für $a\in L$ ist die Abbildung $\ad_{a}=\ad_{a}^{L}\colon L\rightarrow L,
  x\mapsto [a,x]$ linear mit $\ad_{[a,b]}(x)=[[a,b],x]=-[[b,x],a]-[[x,a],b] =
  [a,[b,x]]-[b,[a,x]]= (\ad_{a}\dot \ad_{b})(x)-(\ad_{b}\dot\ad_{a})(x)=
  [\ad_{a}, \ad_{b}](x)$ für alle $b,x\in L$. daher ist die Abbildung
  $\ad\colon L\rightarrow \gl(L), a\mapsto \ad_{a}$ ein Homomorphismus von
  Lie-Algebren und damit eine Darstellung von $L$ auf $L$, die
  \highl[Darstellung!adjungierte]{adjungierte Darstellung} von $L$. Ihr Kern ist $\{a\in L\colon
  \ad_{a}=0\}=\{a\in L\colon [a,x]=0\,\forall x\in L\}=Z(L)$.
\end{bsp}

\begin{bemerk}
  Wir werden die adjungierte Darstellung dazu benutzen, um Methoden der
  linearen Algebra auf Lie-Algebren anzuwenden.
\end{bemerk}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Ein $L$-\highl{Modul} ist ein $\C$-Vektorraum mit
  einer bilinearen Abbildung $L\times V\rightarrow V, (a,v)\mapsto a\cdot v$
  für die gilt
  \begin{gather*}
    [a,b]\cdot v=a\cdot(b\cdot v)-b\cdot(a\cdot v)\quad a,b\in L, v\in V
  \end{gather*}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Für $a\in  L$ ist also dann die Abbildung $\Delta(a)\colon
    V\rightarrow V, v\mapsto av$ linear und gleichzeitig ist die Abbildung
    $\Delta\colon L\rightarrow \gl(V), a\mapsto \Delta(a)$ ein Homomorphismus
    von Lie-Algebra, also Darstellung. Auf diese Weise liefert jeder $L$-Modul
    eine Darstellung.
   \item Ist umgekehrt $\Delta$ eine Darstellung einer Lie-Algebra $L$ auf
    einen endlich-dimensionalen $\C$-Vektorraum $V$, so kann man $V$ zu einem
    $L$-Modul machen, indem man definiert $a\cdot v\colon= (\Delta(a))(v)$ für
    $a\in L, v\in V$. Dies rechnet man leicht nach. Darstellung einer
    Lie-Algebra $L$ und $L$-Modul beschreiben den gleichen mathematischen
    Sachverhalt.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Jede Lie-Algebra $L$ ist selbst ein $L$-Modul, wenn man $a\cdot
    v\colon=[a,v]$ für $a,v\in L$ setzt. Die entsprechende Darstellung ist die
    adjungierte Darstellung.
   \item Jeder endlich-dimensionale $\C$-Vektorraum wird zu einem $L$-Modul,
    wenn man $a\cdot v=0$ definiert.
   \item Für $L$-Moduln $V_{1},\dotsc, V_{n}$ ist auch das
    \highl[Produkt!direktes]{direkte
    Produkt} $V_{1}\times\dotso \times V_{n}$ ein $L$-Modul, wenn man
    definiert $a\cdot (v_{1},\dotsc, v_{n})\colon= (a\cdot v_{1},\dotsc,
    a\cdot v_{n})$ mit $a\in L, v_{1}\in V_{1},\dotsc, v_{n}\in V_{n}$.
   \item Für $L$-Moduln $V,W$ wird der $\C$-Vektorraum $\Hom_{\C}(V,W)$ aller
    linearer Abbildungen von $V$ nach $W$ zu einem $L$-Modul, wenn man $a\cdot
    f$ für $a\in L f\in\Hom_{\C}(V,W)$ durch $(a\cdot f)(v)\colon= a\cdot f(v)
    -f(a\cdot v)$ für $v\in V$ definiert. Dies rechnet man leicht nach.

    Insbesondere ist $V^{*}\colon= \Hom_{\C}(V,\C)$ ein $L$-Modul mit $(a\cdot
    f)(v)= -f(a\cdot v)$ für $a\in L, f\in V^{*}, v\in V$. $V^{*}$ heißt
    \highl[Modul!dualer]{dualer Modul}.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $n\in\N$. Eine \highl{Matrixdarstellung} des
  Grades $n$ von $L$ ist ein Homomorphismus $\Lambda\colon L\rightarrow
  \gl_{n}$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Für jede Matrixdarstellung $\Lambda$ des Grades $n$ von $L$ wird der
    $\C^{n}$ zu einem $L$-Modul, wenn man definiert $a\cdot v\colon=
    \Lambda(a) v$ für $a\in L, v\in\C^{n}$.
   \item Ist umgekehrt $V$ ein $L$-Modul, $b_{1},\dotsc, b_{n}$ eine Basis von
    $V$ und $a\cdot b_{j}=\sum_{i=1}^{n} \lambda_{ij}(a\cdot b_{i})$ mit
    $\lambda_{ij}(a)\in\C$, so ist die Abbildung $\Lambda\colon L\rightarrow
    \gl_{n}, a\mapsto (\lambda_{ij}(a))$ eine Matrixdarstellung von $L$. Daher
    besteht kein großer Unterschied zwischen Darstellungen, Matrixdarstellung
    und Moduln. Wir werden meist mit Moduln arbeiten.
  \end{enumerate}
\end{bemerk}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $V$ ein $L$-Modul. Ein \highl{Untermodul} von
  $V$ ist ein Untervektorraum $U\subseteq V$ mit $a\cdot u\in U$ für alle
  $a\in L, u\in U$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Gegebenenfalls ist $U$ selbst ein $L$-Modul mit den entspechend
    eingeschränkten Verknüpfungen.
   \item Für jeden Untermodul $U\subseteq V$ wird die Menge
    $V/_{U}=\{v+U\colon v\in V\}$ zu einem $L$-Modul, wenn man definiert:
    \begin{gather*}
      (v+U)+(v'+U)\colon= (v+v')+U\\
      \alpha(v+U)\colon= \alpha v+U\\
      a\cdot(v+U)\colon= (a\cdot v)+U\qquad v,v'\in V, \alpha\in \C, a\in L
    \end{gather*}
    Man bezeichnet diese Menge als \highl{Faktormodul} von $V$ modulo $U$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item $0,V$ sind stets Untermoduln. Sind dies die einzigen Untermoduln und
    ist außerdem $V\neq 0$, so nennt man $V$
    \highl[Untermodul!einfaches]{einfach} oder
    \highl[Untermodul!irreduzibler]{irreduzibel}.
   \item Die Untermoduln von $L$ selbst sind genau die Ideale von $L$.
   \item Für jede Menge $\FU$ von Untermoduln von $V$ ist auch
    $\bigcap_{U\in\FU} U$ Untermodul von $V$.
   \item Für Untermoduln $U_{1},\dotsc, U_{n}$ von $V$ ist auch die Summe
    $U_{1}+\dotsb+ U_{n}$ ein Untermodul von $V$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Seien $L$ eine Lie-Algebra, $V, W$ seien $L$-Moduln und $\phi\colon
  V\rightarrow W$ linear mit $\phi(a\cdot v)=a\cdot\phi(v)$ für $a\in L, v\in
  V$. Dann nennt man $\phi$ einen $L$-\highl{Homomorphismus}. Wie üblich
  definiert man \highl{Monomorphismus}, \highl{Epimorphismus},
  \highl{Isomorphismus}, \highl{Endomorphismus} und \highl{Automophismus} von
  $L$-Moduln.
\end{defini}

\begin{bemerkON}
  \begin{enumerate}
    \item Für jeden $L$-Homomorphismus $\phi\colon V\rightarrow W$ und
    Untermoduln $X\subseteq V, Y\subseteq W$ sind $\phi(X)\subseteq W$ und
    $\phi(Y)\subseteq W$ Untermoduln, wie man leicht nachrechnet. Insbesondere
    sind Kern und Bild von $L$-Homomorphismen Untermoduln.
   \item Für die $L$-Moduln $V, W$ bilden die $L$-Homomorphismen $V\rightarrow
    W$ einen Untervektorraum $\Hom_{L}(V,W)$ von $\Hom_{\C}(V,W)$.
   \item Für $L$-Moduln $U,V,W$ und $L$-Homomorphismen $\phi\colon
    U\rightarrow V, \psi\colon V\rightarrow W$ ist auch $\phi\circ\psi\colon
    U\rightarrow W$ ein $L$-Homomorphismus und stets ist $\id_{V}$ ein
    $L$-Automophismus.
   \item Für $L$-Moduln $V,W$ und jeden $L$-Isomorphismus $\phi\colon
    V\rightarrow W$ ist auch $\phi^{-1}\colon W\rightarrow V$ ein
    $L$-Isomorphismus.
  \end{enumerate}
\end{bemerkON}

\begin{bsp}
  Für jeden Untermodul $U$ eines $L$-Moduls $V$ ist die kanonische Abbildung
  $V\rightarrow V/_{U}$ ein $L$-Epimorphismus.
\end{bsp}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Man nennt die $L$-Moduln $V,W$ \highl{isomorph}
  und schreibt $V\cong W$, falls ein $L$-Isomorphismus $V\rightarrow W$
  existiert.
\end{defini}

\begin{bemerkON}
  Die Relation $\cong$ ist eine Äquivalenzrelation.
\end{bemerkON}

\begin{satzON}[Homomorphiesatz]
  Seien $L$ eine Lie-Algebra, $V,W$ $L$-Moduln und $\phi\colon V\rightarrow W$
  ein $L$-Homomorphismus. Dann ist die Abbildung $\overline{\phi}\colon
  V/_{\ker(\phi)}\rightarrow \phi(V), v+\ker(\phi)\mapsto\phi(v)$ ein $L$-
  Isomorphismus. Insbesondere ist $V/_{\ker(\phi)}\cong\phi(V)$.
  \begin{proof}
    Der Beweis erfolgt analog zu \autoref{satz:16}.
  \end{proof}
\end{satzON}

\begin{satz}[Isomorphiesätze]
  Seien $L$ eine Lie-Algebra, $W$ ein $L$-Modul und $U,V\subseteq W$
  Untermoduln. Dann ist $U+V/_{V}\cong U/_{U}\cap V$. Im Fall $U\subseteq
  V$ ist $V/_{U}\subseteq W/_{U}$ ein Untermodul mit
  $(W/_{U})/_{(V/_{U})}\cong W/_{V}$.
  \begin{proof}
    Analog zu \autoref{satz:17} und \autoref{satz:18}
  \end{proof}
\end{satz}

\begin{satz}[Lemma von Schur]
  Seien $L$ eine Lie-Algebra, $V,W$ irreduzible $L$-Moduln und
  $\phi\in\Hom_{L}(V,W)$. Im Fall $V\ncong W$ ist dann $\phi=0$ und im Fall
  $V=W$ ist $\phi=\alpha\id_{V}$ für ein $\alpha\in\C$.
  \begin{proof}
    Sei $\phi\neq0$. Dann ist $\ker(\phi)\subsetneqq V$ ein Untermodul, also
    $\ker(\phi)=0$ wegen der Irrduzibilität von $V$. Analog ist
    $0\neq\phi(V)\subseteq W$ Untermodul, also $\phi(V)=W$ wegen der
    Irrduzibilität von $W$. Daher ist $\phi$ ein $L$-Homomorphismus.

    Sei außerdem $V=W$ und $\alpha$ ein Eigenwert von $\phi$. Dann ist
    $\phi-\alpha\id_{V}$ ein $L$-Endomorphismus von $V$, der nicht bijektiv
    ist. Also ist $\phi-A\alpha\id_{V}=0$.
  \end{proof}
\end{satz}

\begin{satz}\label{satz:32}
  Für eine Lie-Algebra $L$ und einen $L$-Modul $V$ sind äquivalent:
  \begin{enumerate}[(1)]
    \item Es existieren irreduzible Untermoduln $U_{1},\dotsc,
    U_{k}\subseteq V$ mit $V=U_{1}+\dotsb+ U_{k}$.
   \item Es existieren irreduzible Untermoduln $V_{1},\dotsc, V_{l}\subseteq
    V$ mit $V=V_{1}\oplus\dotso \oplus V_{l}$.
   \item Zu jedem Untermodul $U\subseteq V$  existiert ein Untermodul
    $W\subseteq V$ mit $V=U\oplus W$.
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
      \item[(3)$\Rightarrow$(2)] Sei (3) erfüllt und $V_{1}\subseteq V$ ein
      irreduzibler Untermodul. Dann existiert ein Untermodul $W_{1}\subseteq
      V$ mit $V=V_{1}\oplus W_{1}$. Sei $V_{2}\subseteq W_{1}$ ein
      irreduzibler Untermodul. Dann existiert ein Untermodul $W_{2}\subseteq
      V$ mit $V=V_{1}\oplus V_{2}\oplus W_{2}$.
      Auf diese Weise fährt man fort und erhält so irreduzible Untermoduln
      $V_{1},\dotsc, V_{l}\subseteq V$ mit $V=V_{1}\oplus\dotso \oplus V_{l}$.
     \item[(2)$\Rightarrow$(1)] klar
     \item[(1)$\Rightarrow$(3)] Sei (1) erfüllt und $U\subseteq V$ ein
      Untermodul. Im Fall $U_{1}\subseteq U$ setzen wir $W_{1}\colon= 0$ und
      im Fall $U_{1}\nsubseteq U$, d.\,h. $U_{1}\cap U=\emptyset$, setzen
      wir $W_{2}\colon= U_{1}$. Dann ist $U+W_{1}=U\oplus W_{1}$. Im Fall
      $U_{2}\subseteq U\oplus W_{1}$ setzen wir $W_{2}\colon= 0$ und im Fall
      $U_{2}\nsubseteq U\oplus W_{1}$, d.\,h. $(U\oplus W_{1})\cap
      U_{2}=\emptyset$, setzen wir $W_{2}\colon=U_{2}$. Dann ist
      $U+W_{1}+W_{2}= U\oplus W_{1}\oplus W_{2}$. Auf diese Weise fahren wir
      fort und erhalten so die Untermoduln $W_{1},\dotsc, W_{k}\subseteq V$
      mit $V=U\oplus W_{1}\oplus\dotso \oplus W_{k}$.
    \end{itemize}
  \end{proof}
\end{satz}

\begin{defini}
  Gegebenenfalls heißt $V$ \highl{vollständig irreduzibel} oder
  \highl{halbeinfach}.
\end{defini}

\chapter{Nilpotente Lie-Algebren}

\begin{defini}
  Eine Lie-Algebra $L$ mit $L^{n}=0$ für ein $n\in\N$ heißt \highl{nilpotent}.
  Im Falle $L^{2}=0$ wird diese als \highl{kommutativ} oder \highl{abelsch}
  bezeichnet.
\end{defini}

\begin{bsp}
  \begin{enumerate}
    \item Für $n\in\N$ bilden die oberen Dreiecksmatrizen mit Hauptdiagonale 0
    eine Unteralgebra $L=\Fn_{n}$ von $\Fb_{n}$. Ist $\{e_{ij}\colon
    i,j=1,\dotsc,n\}$ die Standardbasis von $\gl_{n}$, so ist $\{e_{ij}\colon
    1\leq i<j\leq n\}$ eine Basis von $L$. Wir behaupten, dass für $m\in\N$
    die Matrizen $e_{ij}$ mit $j-i\geq m$ eine Basis von $L^{m}$ bilden.

    Für $m=1$ ist das richtig. Sei also $m>1$ und bereits gezeigt, dass die
    $e_{ij}$ mit $j-i\geq m-1$ eine Basis von $L^{m-1}$ bilden. Dann besteht
    $L^{m}=[L^{m-1},L]$ aus den Linearkombinationen der Elemente $[e_{ij},
    e_{kl}]= e_{ij}e_{kl}-e_{kl}e_{ij}= \delta_{jk}e_{il}-\delta_{il}e_{kj}$
    mit $j-i\geq m-1$ und $k<l$. Im Fall $j=k$ ist $l-i\geq k+1-i=j-i+1\geq m$
    und im Fall $i=l$ ist $j-k\geq j+1-k=j+1-i\geq m$. Daher ist $[e_{ij},
    e_{kl}]$ stets Linearkombination der $e_{rs}$ mit $s-r\geq m$.

    Für $r,s\in\{1,\dotsc,n\}$ mit $s-r\geq m$ ist umgekehrt
    $e_{rs}=[e_{r,s-1}, e_{r-1,s}]\in L^{m}$. Damit ist die Behauptung
    gezeigt. Im Fall $m\geq n$ ist insbesondere $L^{n}=0$, d.\,h. $L$ ist
    nilpotent.
   \item Dagegen ist die Lie-Algebra $\Fb_{n}$ aller oberen Dreiecksmatrizen
    für $n>1$ nicht nilpotent. Denn $\{e_{ij}\colon 1\leq i<j\leq n\}$ ist
    eine Basis von $\Fb_{n}$ und für $i\leq j$ und $k\leq l$ ist $[e_{ij},
    e_{kl}]= \delta_{jk}e_{il}-\delta_{il}e_{kj}$. Dieses Element liegt in
    $\Fn_{n}$ im Fall $j\neq k, i\neq l$, aber auch im Fall $j=k, i=l$. Daher
    ist $\Fb_{n}^{2}\subseteq\Fn_{n}$. Andererseits ist $[e_{ij},
    e_{kl}]=e_{ij}$ für $i<j$, d.\,h. $\Fb_{n}^{2}\subseteq \Fn_{n}$.
    Insgesamt ist also $\Fb_{n}^{2}=\Fn_{n}$.
    Das gleiche Argument zeigt aber auch $\Fn_{n}\subseteq [\Fn_{n}, \Fb_{n}]=
    [\Fb_{n}^{2}, \Fb_{n}]= \Fb_{n}^{3}$ und umgekehrt ist
    $\Fb_{n}^{3}\subseteq\Fb_{n}^{2}=\Fn_{n}$. Folglich ist
    $\Fb_{n}^{3}=\Fn_{n}= \Fb_{n}^{2}$. Obiger Schluss lässt sich weiter
    fortsetzen und man erhält $\Fb_{n}^{m}=\Fn_{n}$ für alle $m\in\N$ mit
    $m\geq2$. Für $n>1$ ist $\Fb_{n}$ daher nicht nilpotent.
  \end{enumerate}
\end{bsp}

% bem 3.1
\begin{bemerk}\label{bem:31}
  \begin{enumerate}
    \item Eine Lie-Algebra $L$ ist genau dann abelsch, wenn $[a,b]=0$ für alle
    $a,b\in L$ ist.
   \item Ist $L$ nilpotent, so auch jede Unteralgebra $K\subseteq L$. Denn
    induktiv zeigt man leicht $K^{n}\subseteq L^{n}$ für $n\in\N$.
   \item Für jeden Homomorphismus von Lie-Algebren $\phi\colon L\rightarrow M$
    und $n\in\N$ ist analog $\phi(L^{n})=\phi(L)^{n}$. Mit $L$ ist also auch
    $\phi(L)$ nilpotent.
   \item Ist $Z/_{Z(L)}$ nilpotent, so auch $L$. Denn ist $k\in\N$ mit $0=
    (L/_{Z(L)})^{k}=L^{k}+Z(L)/_{Z(L)}$, so ist $L^{k}\subseteq Z(L)$ und
    $L^{k+1}=[L^{k},L]\subseteq[Z(L),L]=0$
  \end{enumerate}
\end{bemerk}

\begin{bemerk}\label{bem:32}
  Seien $V$ ein endlich-dimensionaler $\C$-Vektorraum und $\phi\in\gl(V)$ mit
  $\phi^{n}=0$ für ein $n\in\N$. Dann heißt $\phi$ \highl{nilpotent}. Für
  $\psi\in\gl(V)$ ist gegebenenfalls $\ad_{\phi}(\psi)=[\phi, \psi]=
  \phi\circ\psi- \psi\circ\phi$. Induktiv folgt daraus, dass
  $(\ad_{\phi})^{k}(\psi)$ für $k\in\N$ eine Summe von Termen der Form
  $\pm\phi^{i}\circ\psi\circ\phi^{j}$ mit $i+j=k$ ist. Im Fall $k=2n$ ist also
  $i\geq n$ oder $j\geq n$. Daher ist $(\ad_{\phi})^{2n}=0$, d.\,h. die
  lineare Abbildung $\ad_{\phi}\colon\gl(V)\rightarrow\gl(V)$ ist auch
  nilpotent.
\end{bemerk}

\begin{satzON}
  Sei $V\neq0$ ein endlich-dimensionaler $\C$-Vektorraum und sei $L\subseteq
  \gl(V)$ eine Unteralgebra in der jedes Element nilpotent ist. Dann existiert
  ein $v\in V\setminus\{0\}$ mit $\phi(v)=0$ für alle $\phi\in L$.
  \begin{proof}
    Der Beweis erfolgt per Induktion nach $n\colon\dim L$. Für den
    Induktionsanfang  $n=0$ ist alles klar. Sei also $n>0$ und der Satz
    bewiesen für Lie-Algebren kleinerer Dimension. Sei $K\subset L$ eine echte
    Unteralgebra möglichst großer Dimension. Jedes $\phi\in K$ induziert wegen
    $\ad_{\phi}(K)\subseteq K$ eine lineare Abbildung:
    \begin{gather*}
      \overline{\phi}\colon L/_{K}\rightarrow L/_{K},
	 \psi\mapsto\ad_{\phi}(\phi)+K=[\phi,\psi]+K
    \end{gather*}
    Nach \autoref{bem:32} sind mit $\phi$ auch $\ad_{\phi}$ und
    $\overline{\phi}$ nilpotent und die Abbildung:
    \begin{gather*}
      \Phi\colon K\rightarrow\gl(L/_{K}), \phi\mapsto\overline{\phi}
    \end{gather*}
    ist ein Homomorphismus von Lie-Algebren. Wegen $\dim\Phi(K)\leq\dim K<n$
    können wir die Induktionsvoraussetzung anwenden und erhalten ein
    $\leq+K\in L/_{K}\setminus\{0\}$ mit
    \begin{gather*}
      0=(\Phi(\phi))(\psi+K)=\overline{\phi}(\psi+K)=[\phi,\psi]+K
    \end{gather*}
    d.\,h. $[\phi,\psi]\in K$ für $\phi\in K$. Folglich gilt für $\phi,
    \phi'\in K, \alpha, \alpha'\in\C$:
    \begin{gather*}
      [\phi+\alpha\psi, \phi'+\alpha'\psi]=[\phi,\phi']+\alpha'[\phi,\psi]
	 -\alpha[\phi',\psi]\in K
    \end{gather*}
    Daher ist $K+\C\psi\subseteq L$ eine Unteralgebra, die $K$ echt enthält.
    Nach der Wahl von $K$ ist also $L=K+\C\psi$.

    Für $\phi,\phi'in K, \alpha\in\C$ ist außerdem $[\phi,\phi'+\alpha\psi]=
    [\phi,\phi'] +\alpha[\phi,\psi]\in K$. Daher ist $K\subseteq L$ Ideal. Wir
    wenden jetzt die Induktionsvoraussetzungen auf die Unteralgebra
    $K\subseteq\gl(V)$ an und erhalten so $W\colon=\{v\in V\colon \phi(v)=0
    \text{ für } \phi\in K\}\neq\emptyset$. Offenbar ist $W\subseteq V$
    Untervektorraum und für $\phi\in K, w\in W$ gilt:
    \begin{gather*}
      \phi(\psi(w))= [\phi,\psi](w)+\psi(\phi(w))= [\phi,\psi](w)=0
    \end{gather*}
    wegen $[\phi,\psi]\in K$. Daher ist $\psi(W)\subseteq W$ und die
    Einschränkung $w\colon W\rightarrow W$ von $\psi$ ist nilpotent. Sei
    $m\in\N$ mit $w^{m}=0\neq w^{m-1}$ und sei $w\in W$ mit
    $v\colon=w^{m-1}(w)\neq 0$. Dann ist $\psi(v)=0$ und $\phi(v)=0$ für $v\in
    K$. Wegen $L=K+\C\psi$ folgt die Behauptung.
  \end{proof}
\end{satzON}

\begin{satz}[Engel]\label{satz:engel}
  Eine Lie-Algebra $L$ ist genau dann nilpotent, wenn $\ad_{a}\colon
  L\rightarrow L$ für alle $a\in L$ nilpotent ist.
  \begin{proof}
    \begin{itemize}
      \item["`$\Rightarrow$"'] Für $a\in L$ ist $(\ad_{a})^{0}(L)=L$. Sei
      $n\in\N$ und bereits $(\ad_{a})^{n-1}(L)\subseteq L^{n}$ bewiesen. Für
      $b\in L$ ist dann
      \begin{gather*}
	(\ad_{a})^{n}(b)=\ad_{a}(\ad_{a}^{n-1}(b))= [a,\ad_{a}^{n-1}(b)] \in
	   [L,L^{n}] = L^{n+1}
      \end{gather*}
      Folglich ist $(\ad_{a})(L)\subseteq L^{n+1}$ für $n\in\N$. Ist $L$
      nilpotent, so existiert ein $m\in\N$ mit $L^{m}=0$. Dann ist aber
      $(\ad_{a})^{m}=0$ für $a\in L$.
     \item["`$\Leftarrow$"'] Wir führen den Beweis per Induktion nach
      $n\colon=\dim L$ durch. O.\,B.\,d.\,A. sei dabei $n\neq 0$. Nach der
      Voraussetzung sind alle Elemente in der Unteralgebra $\ad(L), \gl(L)$
      nilpotent. Nach \autoref{satz:32} existiert also ein $z\in
      L\setminus\{0\}$ mit $0= \ad_{x}(z)= [x,z]$ für alle $x\in L$. Dann ist
      $z\in Z(L)$, d.\,h. $Z(L)\neq0$. Für $a\in L$ ist auch
      $\ad_{a+Z(L)}\colon L/_{Z(L)}\rightarrow L/_{Z(L)}$ nilpotent. Wegen
      $\dim L/_{Z(L)}<n$ kann man die Induktionsvoraussetzung auf $L/_{Z(L)}$
      anwenden. Fologlich ist $L/_{Z(L)}$ nilpotent, also auch $L$ nach
      \autoref{bem:31} (iv).
    \end{itemize}
  \end{proof}
\end{satz}

%% satz 3.4
\begin{satz}\label{satz:34}
  Seien $V$ ein endlich-dimensionaler $\C$-Vektorraum, $a,b\in\gl(V),
  \alpha,\beta\in\C$ und $n\in\N$. Dann gilt:
  \begin{gather*}
    (b-(\alpha+\beta)\id_{V})^{n}\circ a=\sum_{i=0}^{n} \binom{n}{i}
       ((\ad_{b}-\beta\id_{\gl(V)})^{i} (a))\circ(b-\alpha\id_{V})^{n-i}
  \end{gather*}
  \begin{proof}
    Der Beweis erfolgt wieder per Induktion nach $n$.
    Im Fall $n=0$ steht auf beiden Seiten $a$. Sei also die Formel bereits für
    ein $m\in\N$ bewiesen. Mit $f_{i}\colon=
    (\ad_{b}-\beta\id_{\gl(V)})^{i}(a)$ ist dann:
    \begin{align*}
      (b-(\alpha+\beta)\id_{V})\circ f_{i} &= b\circ f_{i} -\alpha f_{i}-\beta
	 f_{i}\\
      &= [b,f_{i}] + f_{i}\circ b-\alpha f_{i}-\beta f_{i}\\
      &= (\ad_{b}-\beta\id_{\gl(V)})(f_{i})+f_{i}\circ(b-\alpha\id_{V})=
	 f_{i+1}+f_{i}\circ(b-\alpha\id_{V})\\
      \intertext{also nach Induktion}\\
      (b-(\alpha+\beta)\id_{V})^{n+1}\circ a &= (b-(\alpha+\beta)\id_{V})\circ
	 \sum_{i=0}^{n} \binom{n}{i} f_{i}\circ (b-\alpha\id_{V})^{n-i}\\
      &= \sum_{i=0}^{n} \binom{n}{i} f_{i+1}\circ(b-\alpha\id_{V})^{n-i} +
	 \sum_{i=0}^{n} \binom{n}{i} f_{i} \circ(b-\alpha\id_{V})^{n+1-i}\\
      &= \dotsb= \sum_{i=0}^{n} \binom{n+1}{i}
	 f_{i+1}\circ(b-\alpha\id_{V})^{n+1-i}
    \end{align*}
  \end{proof}
\end{satz}

% bem 3.5
\begin{bemerk}\label{bem:35}
  Seien $V$ ein endlich-dimensionaler $\C$-Vektorraum und $\phi\colon
  V\rightarrow V$ linear. Für $\lambda\in\C$ heißt
  \begin{gather*}
    V_{\lambda}(\phi)\colon= \{v\in V\colon (\phi-\lambda\id_{V})^{n}
       (v)=0\quad n\in\N\}
  \end{gather*}
  \highl{Hauptraum} von $\phi$ bezüglich $\lambda$. Aus der linearen Algebra
  ist bekannt:
  \begin{gather*}
    V=\bigoplus_{\lambda\in\C} V_{\lambda}(\phi)
  \end{gather*}
  Insbesondere ist $V_{\lambda}(\phi)\neq0$ für nur endlich viele
  $\lambda\in\C$, nämlich die Eigenwerte von $\phi$.
\end{bemerk}

\begin{satzON}
  Seien $L$ eine nilpotente Lie-Algebra und $\Delta\colon L\rightarrow\gl(V)$
  eine Darstellung. Für $b\in L$ und $\lambda\in\C$ ist dann
  $V_{\lambda}(\Delta(b))$ ein $L$-Untermodul von $V$.
  \begin{proof}
    Nach \autoref{satz:34} gilt für $n\in\N, a\in L$ und $u\in
    V_{\lambda}(\Delta(b))$:
    \begin{gather*}
      ((\Delta(b)-\lambda\id_{V})^{n}\circ\Delta(a))(n)= \sum_{i=0}^{n}
	 \binom{n}{i} (((\ad_{\Delta(b)})^{i} (\Delta(a)))\circ (\Delta(b)-
	 \lambda\id_{V})^{n-i})(u)
    \end{gather*}
    Für $n-i\gg0$ ist aber $(\Delta(b)-\lambda\id_{V})^{n-i}(u)=0$ und für
    $i\gg0$ ist $(\ad_{\Delta(b)})^{i}(\Delta(a))=0$ wegen der Nilpotenz von
    $\Delta(L)$. Daher ist $a\cdot u= (\Delta(a))(u)\in
    V_{\lambda}(\Delta(b))$.
  \end{proof}
\end{satzON}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Ein $L$-Modul $V\neq0$ heißt \highl{unzerlegbar},
  falls keine echten Untermoduln $U, W\subseteq V$ mit $V=U\oplus W$ existiert.
\end{defini}

\begin{bemerk}\label{bem:36}
  Seien $L$ eine nilpotente Lie-Algebra, $V$ ein unzerlegbarer $L$-Modul und
  $\Delta\colon L\rightarrow\gl(V)$ die entsprechende Darstellung. Nach
  \autoref{bem:35} hat $\Delta(a)$ für $a\in L$ genau einen Eigenwert
  $\lambda(a)$. Mit $n\colon= \dim V$ gilt also $\spur
  (\Delta(a))=n\lambda(a)$. Folglich ist die Abbildung:
  \begin{gather*}
    \lambda\colon L\rightarrow\C, a\mapsto\lambda(a)
  \end{gather*}
  linear und für $a,b\in L$ gilt:
  \begin{gather*}
    \lambda([a,b])= \nicefrac{1}{n} \spur(\Delta([a,b]))= \nicefrac{1}{n}
       \spur(\Delta(a)\circ \Delta(b)-\Delta(b)\circ\Delta(a))=0
  \end{gather*}
  Daher ist $\lambda\colon L\rightarrow\C$ ein Homomorphismus von Lie-Algebren
  und $\lambda(L')=0$.

  Für $a\in L$ ist auch $\Gamma(a)\colon= \Delta(a)-\lambda(a)\id_{V}$ linear
  und für $a,b\in L$ gilt:
  \begin{gather*}
    [\Gamma(a), \Gamma(b)]= [\Delta(a), \Delta(b)]= \Delta([a,b])=
       \Gamma([a,b])
  \end{gather*}
  Daher ist $\Gamma$ eine weitere Darstellung von $L$ auf $V$ und für $a\in L$
  ist $\Gamma(a)$ eine nilpotente lineare Abbildung.
\end{bemerk}


%% Vorlesung vom 2007-05-02
\begin{defini}
  Sei $\Delta\colon L\rightarrow \gl(V)$ eine Darstellung einer Lie-Algebra
  $L$ und ist $\Delta(a)$ nilpotent für alle $a\in L$, dann heißt $\Delta$ im
  folgenden \highl{Nildarstellung}.
\end{defini}

\begin{satz}\label{satz:37}
  Sei $\Delta\colon L\rightarrow\gl(V)$ eine Nildarstellung einer Lie-Algebra
  $L$ mit der Eigenschaft, dass der entsprechende $L$-Modul $V$ irreduzibel
  ist. Dann ist $\dim V=1$ und daher $\Delta(a)=0$ für alle $a\in L$.
  \begin{proof}
    Nach Voraussetzung ist jedes Element in $\Delta(L)$ nilpotent. Nach
    \autoref{satz:32} existiert also ein $v\in V\setminus \{0\}$
    mit $a\cdot v=0$ für alle $a\in L$. Dann ist also $\C v\subseteq V$
    Untermodul. Da $V$ irreduzibel, folgt, $V=\C v$.
  \end{proof}
\end{satz}

\begin{satz}\label{satz:38}
  Sei $\Delta\colon L\rightarrow\gl(V)$ eine Nildarstellung einer Lie-Algebra
  $L$. Dann existiert eine Basis $B$ von $V$ mit der Eigenschaft, dass für
  jedes $a\in L$ die Matrix $\Delta(a)$ bzgl. $B$ eine obere Dreiecksmatrix
  mit Hauptdiagonale 0 ist.
  \begin{proof}
    Setze $V_{0}\colon= V$ und wählen, soweit möglich, für $i=1,2,\dotsc$
    einen Untermodul $V_{i}\subsetneq V_{i-1}$ möglichst großer Dimension..
    Dann ist $V=V_{0}\supset V_{2}\supset \dotso \supset V_{n-1}\supset
    V_{n}=0$ für ein $n\in\N_{0}$. Für $i=1,\dotsc,n$ ist $V_{i-1}/_{V_{i}}$
    ein irreduzibler $L$-Modul und die Darstellung von $L$ auf
    $V_{i-1}/_{V_{i}}$ ist eine Nildarstellung. Nach dem Satz
    \autoref{satz:37} ist also $\dim V_{i-1}/_{V_{i}}=1$ und $0=a\cdot
    (v+V_{i})=av+V_{i}$ für alle $a\in L, v\in V_{i-1}$, d.\,h. $a\cdot
    V_{i-1}\subseteq V_{i}$. Wir wählen eine Basis $b_{1},\dotsc, b_{n}$ von
    $V$ mit der Eigenschaft, dass $b_{1},\dotsc, b_{i}$ für alle
    $i=1,\dotsc,n$ eine Basis von $V_{n-i}$ ist. Dann folgt die Behauptung.
  \end{proof}
\end{satz}

\begin{bemerk}
  Aus \autoref{bem:36} und \autoref{satz:38} folgt also,
  dass zu jeder nilpotenten Lie-Algebra und jedem unzerlegbaren $L$-Modul $V$
  ein Homomorphismus  $\lambda\colon L\rightarrow\C$ und eine Basis von $V$
  existieren mit der Eigenschaft, dass in der entsprechenden Matrixdarstellung
  $\Lambda$ von $L$ die Matrix $\Lambda(a)$ für $a\in L$ die folgende Form hat:
  \begin{gather*}
    \Lambda(a)= \begin{pmatrix}\lambda(a) & & \text{\Large{0}}\\
		   \text{\Large{0}} & \ddots & *\\
		  &  & \lambda(a)\end{pmatrix}
  \end{gather*}
\end{bemerk}

\begin{defini}
  Sei $\Delta\colon L\rightarrow \gl(V)$ eine Darstellung einer nilpotenten
  Lie-Algebra $L$. Für $\lambda\in L^{*}=\Hom_{\C}(L,\C)$ heißt
  $V_{\lambda}\colon=\{v\in V\colon \forall a\in L\,\exists n\in\N\colon
  (\Delta(a)-\lambda(a)\id_{V})^{n}(v)=0\}$ \highl{Gewichtsraum} von $V$ bzgl.
  $\lambda$. Im Fall $V_{\lambda}\neq 0$ heißt $\lambda$ \highl{Gewicht} von
  $V$.
\end{defini}

%satz 3.8
\begin{satz}\label{satz:39}
  Seien $L$ eine nilpotente Lie-Algebra und $V$ ein $L$-Modul. Für $\lambda\in
  L^{*}$ ist $V_{\lambda}\subseteq V$ Untermodul und
  \begin{gather*}
   V=\oplus_{\lambda\in  L^{*}} V_{\lambda} 
  \end{gather*}
  Insbesondere hat $V$ nur endlich viele Gewichte. Ferner
  ist jedes Gewicht ein Homomorphismus von Lie-Algebren.
  \begin{proof}
    Wir schreiben $V=U_{1}\oplus\dotso \oplus U_{k}$ mit unzerlegbaren
    Untermoduln $U_{1},\dotsc, U_{k}$. Für $i=1,\dotsc,k$ liefert $U_{i}$
    einen Homomorphismus von Lie-Algebren $\lambda_{i}\colon L\rightarrow\C$
    wie oben. Wir bezeichnen mit $U(\lambda_{i})$ die Summe aller $U_{j}$ mit
    $\lambda_{i}=\lambda_{j}$. Dann ist $U(\lambda_{i})\subseteq
    V_{\lambda_{i}}$ und $V$ ist die direkte Summe der verschiedenen
    $U(\lambda_{i})$. o.\,B.\,d.\,A. sieht das so aus:
    $V=U(\lambda_{1})\oplus\dotso \oplus U(\lambda_{l})$ für $l\leq k$.

    Sei $\mu\in L^{*}$ und $v\in V\mu$. Schreiben $v=\sum_{i=1}^{l} v_{i}$ mit
    $v_{i} \in U(\lambda_{i})$ für $i=1,\dotsc,l$. Im Fall $\mu\neq
    \lambda_{j}$ wählen wir $a\in L$ mit $\mu(a)\neq \lambda_{j}(a)$. Sei
    $\Delta$ die darstellung von $L$ auf $V$ und $\Delta_{j}$ die Darstellung
    von $L$ auf $U(\lambda_{j})$. Dann hat die Matrix von
    $\Delta_{j}(a)-\mu(a)\id_{U(\lambda_{j})}$ bzgl. einer geeigneten Basis
    die Form:
    \begin{gather*}
      \begin{pmatrix}
	\lambda_{j}(a)-\mu(a) & & \text{\Large{0}}\\
	 & \ddots & *\\
	\text{\Large{0}} &  & \lambda_{j}(a)-\mu(a)
      \end{pmatrix}
    \end{gather*}
    Diese Matrix ist regulär. Andererseits existiert ein $n\in\N$ mit
    $0=(\Delta(a)-\mu(a)\id_{V})^{n}(v)=\sum_{i=1}^{l}
    \underbrace{(\Delta(a)-\mu(a)\id_{V})^{n} (v_{i})}_{\in U(\lambda_{i})}$.
    Daher ist $0=(\Delta(a)-\mu(a)\id_{V})^{n}(v_{j})= (\Delta_{j}(a)-
    \mu(a)id_{U(\lambda_{j})})^{n}(v_{j})$, d.\,h. $v_{j}=0$. Daher sind
    $\lambda_{1},\dotsc,\lambda_{l}$ die einzigen Gewichte und es ist
    $U(\lambda_{i})=V_{\lambda_{i}}$ für $i=1,\dotsc,l$.
  \end{proof}
\end{satz}


\chapter{Cartanalgebren}

\begin{defini}
  Eine \highl{Derivation} einer Lie-Algebra $L$ ist eine lineare Abbildung
  $\delta\colon L\rightarrow L$ mit $\delta([x,y])=[\delta(x),y]+
  [x,\delta(y)]$ für alle $x,y\in L$.
\end{defini}

\begin{bsp}
  \begin{enumerate}
    \item Für $a\in L$ ist $\ad_{a}$ eine Derivation von $L$. Denn für $x,y\in
    L$ gilt: $\ad_{a}([x,y])= [a,[x,y]]= -[[x,y],a]= [[y,a],x]+ [[a,x],y]=
    [x,\ad_{a}(y)]+ [\ad_{a}(x),y]$. Man nennt $\ad_{a}$ eine
    \highl[Derivation!innere]{innere Derivation} von $L$.
   \item Für Derivationen $\delta, \delta'$ von $L$ und $\alpha\in\C$ sind
    auch $\delta+\delta', \alpha\delta, [\delta, \delta']$ Derivationen von
    $L$. Denn für $x,y\in L$ gilt $[\delta, \delta']([x,y])=
    \delta(\delta'([x,y]))- \delta'(\delta([x,y]))= \delta([\delta'(x), y]+
    [x,\delta'(y)])- \delta'([\delta(x),y]+ [x,\delta(y)]) =
    [\delta(\delta'(x)), y]+ [\delta'(x), \delta(y)]+ [\delta(x), \delta'(y)]+
    [x,\delta(\delta'(y))]- [\delta'(\delta(x)),y]- [\delta(x), \delta'(y)]-
    [\delta'(x), \delta(y)]- [x,\delta'(\delta(y))]= [[\delta,\delta'](x),y]+
    [x, [\delta,\delta'](y)]$.

    Daher bilden die Derivationen der Lie-Algebra $L$ eine Unteralgebra
    $\Der(L)\subseteq \gl(V)$.
  \end{enumerate}
\end{bsp}

\begin{bemerk}
  Für $a\in L$ und $\delta\in\Der(K)$ ist \[[\delta,\ad_{a}]= \ad_{\delta(a)}\]
  Denn für alle $x\in L$ gilt $[\delta,\ad_{a}](x)= \delta(\ad_{a}(x))-
  \ad_{a}(\delta(x))= \delta([a,x])-[a,\delta(x)]= [\delta(a),x]=
  \ad_{\delta(a)}(x)$.

  Daher bilden die inneren Derivationen von $L$ ein Ideal in $\Der(L)$.
\end{bemerk}

\begin{satz}\label{satz:41}
  Seien $L$ eine Lie-Algebra, $\delta\in\Der(L)$ und $\lambda, \mu\in\C$. Dann
  ist
  \begin{gather*}
    [L_{\lambda}(\delta), L_{\mu}(\delta)]\subseteq L_{\lambda+\mu}(\delta)
  \end{gather*}
  Inbesondere ist $L_{0}(\delta)\subseteq L$ eine Unteralgebra.
  \begin{proof}
    Seien $x\in L_{\lambda}(\delta), y\in L_{\mu}(\delta)$ und $k,l\in\N_{0}$
    mit $(\delta-\lambda\id_{L})^{k}(x)=0=(\delta-\mu\id_{L})^{l}(y)$. Wegen
    $\ad_{\delta}(\ad_{x})=[\delta, \ad_{x}]= \ad_{\delta(x)}$ ist
    $(\ad_{\delta}- \lambda \id_{\gl(L)})^{i}(\ad_{x})= \ad_{(\delta-
    \lambda\id_{L})^{i}}(x)$. Nach \autoref{satz:34} gilt also:
    \begin{align*}
      (\delta- (\lambda+\mu)\id_{L})^{k+l}([x,y])&= \sum_{i=0}^{k+l}
	 \binom{k+l}{i} \left((\ad_{\delta} -\lambda
	 \id_{\gl(L)})^{i}(\ad_{x})\circ (\delta -\mu\id_{L})^{k+l-i}\right)(y)\\
      &=\sum_{i=0}^{k+l} \binom{k+l}{i} \left(\ad_{(\delta-
	 \lambda\id_{L})^{i}}(x)\circ (\delta- \mu\id_{L})^{k+l-i}\right)(y)\\
      &= \sum_{i=0}^{k+l} \binom{k+l}{i} [(\delta- \lambda\id_{L})^{i}(x),
	 (\delta- \mu\id_{L})^{k+l-i}(y)]=0
    \end{align*}\help{Stimmt die Formel in der zweiten Zeile?}
    Denn für $i\geq k$ ist $(\delta- \lambda\id_{L})^{i}(x)=0$ und für $i<k$
    ist $(\delta-\mu\id_{L})^{k+l-i}(y)=0$.
  \end{proof}
\end{satz}

\begin{defini}
  Für jede Lie-Algebra $L$ und jedes Element $a\in L$ heißt
  \begin{gather*}
  L_{0}(\ad_{a})=\{x\in L\colon (\ad_{a})^{n}(x)=0, n\in\N\}    
  \end{gather*}
  \highl{Engelalgebra} (oder $a$-Engelalgebra) von $L$.
\end{defini}

\begin{bemerk}\label{bem:42}
  \begin{enumerate}
    \item Wegen $\ad_{a}(a)=[a,a]=0$ ist stets $a\in L_{0}(\ad_{a})$.
   \item Sei $V$ ein endlich-dimensionaler $\C$-Vektorraum, $\phi\in\gl(V)$
    und $U\subseteq V$ ein Untervektorraum mit $\phi(U)\subseteq U$. seien
    $\phi_{U}\in \gl(U)$ die Einschränkung von $\phi$ und $\phi^{U}\colon
    V_{U}\rightarrow V/_{U}, v+U\mapsto \phi(v)+U$ die von $\phi$ induzierte
    lineare Abbildung. Für $\lambda\in\C$ ist dann $U_{\lambda}(\phi_{U})=
    U\cap V_{\lambda}(\phi)$ und $(V/_{U})_{\lambda}(\phi^{U})=
    V_{\lambda}(\phi) + U/_{U}$. das werden wir im folgenden benutzen.
  \end{enumerate}
\end{bemerk}

\begin{defini}
  Eine Unteralgebra $K$ einer Lie-Algebra $L$ mit $N_{L}(K)=K$ heißt
  \highl{selbstnormalisierend} in $L$.
\end{defini}

% satz 4.3
\begin{satz}\label{satz:43}
  Sei $E$ eine Engelalgebra einer Lie-Algebra $L$ und sei $K\subseteq L$ eine
  Unteralgebra mit $E\subseteq K$. Dann ist $K$ selbstnormalisierend in $L$.
  Insbesondere ist $E$ selbstnormalisierend in $L$.
  \begin{proof}
    Sei $a\in L$ mit $E=L_{0}(\ad_{a})$. Dann ist $a\in E\subseteq K\subseteq
    N_{L}(K)$. Also $a+K=0$ in der Lie-Algebra $M\colon= N_{L}(K)/_{K}$. Daher
    ist $\ad_{a+K}^{M}=\ad_{0}^{M}=0$. Aus \autoref{bem:42} Punkt (ii) folgt:
    \begin{align*}
      M &= M_{0}(\ad_{a+K}^{M})= N_{L}(K)_{0}
	 (\ad_{a}/_{N_{L}(K)})+K/_{K}\\
      &\subseteq L_{0}(\ad_{a})+K/_{K}=E+K/_{K}=0
    \end{align*}
    d.\,h. $N_{L}(K)=K$
  \end{proof}
\end{satz}

%bem 4.4
\begin{bemerk}\label{bem:44}
  Seien $V$ ein $\C$-Vektorraum der Dimension $n<\infty$ und
  $\phi,\psi\in\gl(V)$. Dann existieren Polynome $p_{1},\dotsc, p_{n}$ mit
  $\deg p_{i}\geq n$ für $i=1,\dotsc,n$ und der Eigenschaft, dass für
  $\mu\in\C$ das charakteristische Polynom von $\phi+\mu\psi$ die Form
  \begin{gather*}
    \lambda^{n}+p_{1}(\mu)\lambda^{n-1}+\dotsb+p_{n-1}(\mu) \lambda+ p_{n}(\mu)
  \end{gather*}
  hat. Dies erkennt man sofort durch Entwickeln von
  $\det(\lambda\id_{V}-\phi-\mu\psi)$.
\end{bemerk}

%satz 4.4
\begin{satz}\label{satz:44}
  Sei $K$ eine Unteralgebra einer Lie-Algebra $L$ und sei $z\in K$ mit
  $K=L_{0}(\ad_{z})$. Für alle $x\in K$ mit $L_{0}(\ad_{x})\subseteq
  L_{0}(\ad_{z})$ sei ferner $L_{0}(\ad_{x})=L_{0}(\ad_{z})$. Dann ist
  $L_{0}(\ad_{z})\subseteq L_{0}(\ad_{x})$ für alle $x\in K$.
  \begin{proof}
    Nach \autoref{satz:41} ist $H\colon= L_{0}(\ad_{z})\subseteq L$ eine
    Unteralgebra mit $J\subseteq H$. Für $x\in K$ ist also
    $\ad_{x}(H)\subseteq H$. Daher sind die Abbildungen:
    \begin{gather*}
      \phi_{x}\colon H\rightarrow H, a\mapsto\ad_{x}(a)=[x,a]\\
      \psi_{x}\colon L/_{H}\rightarrow L/_{H}, a+H\mapsto\ad_{x}(a)+H= [x,a]+H
    \end{gather*}
    wohldefiniert und linear. Setze $m\colon=\dim H, n\colon=\dim L$ und
    $y\colon= x-z\in K$. Für $\mu\in \C$ ist dann $\phi_{z+\mu y}=\phi_{z}+
    \mu\phi_{y}$ und $\psi_{z+\mu y}= \psi_{z}+\mu\psi_{y}$. Nach
    \autoref{bem:44} existieren Polynome $f_{1},\dotsc, f_{m}$ mit $\deg
    f_{i}\leq m$ für $i=1,\dotsc,m$ und der Eigenschaft, dass das
    charakteristische Polynom von $\phi_{z+\mu y}$ die folgende Form hat:
    \begin{gather*}
      \lambda^{m} +f_{1}(\mu)\lambda^{m-1}+\dotsb+f_{m}(\mu)
    \end{gather*}
    Analog existieren Polynome $g_{1},\dotsc, g_{n-m}$ mit $\deg g_{i}\leq
    n-m$ für $i=1,\dotsc,n-m$ und der Eigenschaft, dass das charakteristische
    Polynom von $\psi_{z+\mu y}$ die folgende Form hat:
    \begin{gather*}
      \lambda^{n-m} + g_{1}(\mu)\lambda^{n-m-1}+\dotsb+g_{n-m}(\mu)
    \end{gather*}
    Nach \autoref{bem:42} ist $(L/_{H})_{0}(\psi_{z})=L_{0}(\ad_{z})+H/_{H}=0$,
    d.\,h. 0 ist kein Eigenwert von $\psi_{z}$. Folglich ist
    $g_{n-m}(0)\neq0$. Insbesondere ist $g_{n-m}\neq0$, d.\,h. $g_{n-m}$ hat
    höchstens $n$ Nullstellen. Seien $\mu_{0},\dotsc,\mu_{n}\in\C$ mit
    $g_{n-m}(\mu_{i})\neq0$ für $i=0,\dotsc,n$. Dann ist jeweils 0 kein
    Eigenwert von $\psi_{z+\mu_{i}y}$, also
    \begin{gather*}
      0=(L/_{H})_{0} (\psi_{z+\mu_{i}y})= L_{0}(\ad_{z+\mu_{i}y})+H/_{H}
    \end{gather*}
    Folglich ist $L_{0}(\ad_{z+\mu_{i}y}\subseteq H$. Nach Voraussetzung ist
    daher:
    \begin{gather*}
      H=L_{0}(\ad_{z+\mu_{i}y})=\{a\in L\colon (\ad_{z+\mu_{i}y})^{k}(a)\quad
	 k\in\N\}
    \end{gather*}
    Zu jedem $a\in H$ existieren also ein $k\in\N$ mit $0=(\phi_{z+\mu_{i}
    y})^{k}(a)$. Daher ist $H=H_{0}(\phi_{z+\mu_{i} y})$. Folglich ist
    $\phi_{z+\mu_{i} y}$ nilpotent, d.\,h. das charakteristische Polynom von
    $\phi_{z+\mu_{i} y}$ ist $\lambda^{m}$. Nach dem Identitätssatz für
    Polynome ist also $f_{1}(\mu_{i})=\dotsb=f_{m}(\mu_{i})=0$. Wegen $\deg
    f_{j}\leq m\leq n$ folgt, $f_{j}=0$ für $j=1,\dotsc,m$. Für $\mu\in\C$ ist
    also $\lambda^{m}$ das charakteristische Polynom von $\phi_{z+\mu y}$.
    Insbesondere ist 0 der einzige Eigenwert von $\phi_{z+\mu y}$. Also ist
    $H=H_{0}(\phi_{z+\mu y})\subseteq L_{0}(\ad_{z+\mu y})$. Für $\mu=1$
    erhält man insbesondere $h\subseteq l_{0}(\ad_{z+y})=L_{0}(\ad_{x})$.
  \end{proof}
\end{satz}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Eine Engelalgebra von $L$, die keine andere
  Engelalgebra von $L$ echt enthält, heißt
  \highl[Engelalgebra!minimale]{minimale Engelalgebra} von $L$. Eine
  nilpotente selbstnormalisierende Unteralgebra von $L$ heißt
  \highl{Cartanalgebra} von $L$.
\end{defini}

\begin{satzON}
  Für eine Unteralgebra $H$ einer Lie-Algebra $L$ sind äquivalent:
  \begin{enumerate}
    \item $H$ ist eine minimale Engelalgebra von $L$.
   \item $H$ ist eine Cartanalgebra von $L$.
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
      \item[(i)$\Rightarrow$(ii)] Sei $H$ eine minimale Engelalgebra von $L$
      und sei $z\in L$ mit $H=L_{0}(\ad_{z})$, d.\,h. $Z\in H$. Nach
      \autoref{satz:44} ist $H\subseteq L_{0}(\ad_{x})$ für $x\in H$. Daher
      ist $\ad_{x}\colon H\rightarrow H$ für $x \in H$ nilpotent. Nach
      \autoref{satz:engel} ist $H$ nilpotent und nach \autoref{satz:43} ist
      $H$ selbstnormalisierend.
     \item[(ii)$\Rightarrow$(i)] Sei $H$ eine Cartanalgebra von $L$, also
      insbesondere nilpotent. Für $x\in H$ ist dann $\ad_{x}\colon
      H\rightarrow H$ nilpotent, d.\,h. $H=H_{0}(\ad_{x})\subseteq
      L_{0}(\ad_{x})$. Wir wählen $z\in H$ so, dass $L_{0}(\ad_{z})$ so klein
      wie möglich ist. Für $x\in H$ ist dann $L_{0}(\ad_{z})\subseteq
      L_{0}(\ad_{x})$ nach \autoref{satz:44}. Ferner ist die Abbildung
      \begin{gather*}
	\phi_{x}\colon L_{0}(\ad_{z})/_{H}\rightarrow L_{0}(\ad_{z})/_{H},
	   y+H\mapsto\ad_{x}(y)+H=[x,y]+H
      \end{gather*}
      wohldefiniert und linear. Die Abbildung
      \begin{gather*}
	\Phi\colon H\rightarrow\gl(L_{0}(\ad_{x})/_{H}), x\mapsto\phi_{x}
      \end{gather*}
      ist ein Homomorphismus. Für $x\in H$ ist ferner $\Phi(x)=\phi_{x}$
      nilpotent. Für $y\in L_{0}(\ad_{z})\subseteq L_{0}(\ad_{x})$ existiert
      nämlich ein $n\in\N$ mit $(\ad_{x})^{n}(y)=0$, d.\,h. $0=
      (\ad_{x})^{n}(y)+H=\phi_{x}^{n} (y+H)$. Daher ist jedes Element in
      $\Phi(H)$ nilpotent.

      Wir nehmen an: $L_{0}(\ad_{z})\neq H$. Nach \autoref{satz:32} existiert
      dann ein $y+H\in L_{0}(\ad_{z})/_{H}\setminus\{0\}$ mit $0=
      \phi_{x}(y+H)= [x,y]+H$ für alle $x\in H$. Daher ist $[x,y]\in H$ für
      alle $x\in H$, also $y\in N_{L}(H)=H$ und $y\cdot H=0$.

      Dies zeigt: $L_{0}(\ad_{z})=H$, d.\,h. $H$ ist eine Engelalgebra von
      $L$. Ist $L_{0}(\ad_{a})\subseteq H$ für ein $a\in L$, so ist $a\in
      L_{0}(\ad_{a})\subseteq H$ und daher $H=L_{0}(\ad_{z})\subseteq
      L_{0}(\ad_{a})$. Folglich ist $H$ eine minimale Engelalgebra von $L$.
    \end{itemize}
  \end{proof}
\end{satzON}

%bsp 4.5
\begin{bsp}\label{bsp:45}
  Für $n\in\N$ bilden die Diagonalmatrizen eine Cartanalgebra $H=\Fh_{n}$ von
  $L=\gl_{n}$. Für $x,y\in H$ ist nämlich $[x,y]=xy-yx=0$, d.\,h. $H$ ist
  abelsch und damit nilpotent. Sei $a=(\alpha_{ij})\in N_{L}(H)$ und
  $x=(\xi_{ij})\in H$. Dann ist $ax-xa\in H$, d.\,h. für alle $i\neq k$ gilt:
  \begin{gather*}
    0=\sum_{j=1}^{n} (\alpha_{ij}\xi_{jk}-\xi_{ij}\alpha_{jk})=
       \alpha_{ik}\xi_{kk}-\xi_{ii}\alpha_{ik}= \alpha_{ik}(\xi_{kk}-\xi_{ii})
  \end{gather*}
  Für $x=e_{kk}$ erhält man also $0=\alpha_{ik}$. Also ist $a\in H$.
\end{bsp}

%def 4.6
\begin{defini}
  Sei $H$ eine nilpotente Unteralgebra einer Lie-Algebra $L$. Für $\lambda\in
  H^{*}$ bezeichnet man mit $L_{\lambda}(H)$ den \highl{Gewichtsraum} des
  $H$-Moduls zum Gewicht $\lambda$. Offenbar ist
  \begin{gather*}
    L_{\lambda}(H)=\bigcap_{z\in H} L_{\lambda(z)}(\ad_{z}^{L})
  \end{gather*}
  Für $\lambda, \mu\in H^{*}$ folgt daher aus \autoref{satz:41}:
  $[L_{\lambda}(H), L_{\mu}(H)] \subseteq L_{\lambda+\mu}(H)$.
\end{defini}

%satz 4.6
\begin{satz}\label{satz:46}
  Eine nilpotente Unteralgebra $H$ einer Lie-Algebra $L$ ist genau dann eine
  Cartanalgebra von $L$, wenn $H=L_{0}(H)$ gilt.
  \begin{proof}
    Für $x\in H$ und $y\in N_{L}(H)$ ist $\ad_{x}(y)=[x,y]\in H$. Da $H$
    nilpotent ist, existiert ein $n\in\N$ mit $(\ad_{x})^{n}(y)=0$. Daher ist
    $y\in L_{0}(H)=\colon J$. Dies zeigt, $H\subseteq N_{L}(H)\subseteq J$. Im
    Fall $H=J$ ist also $H$ eine Cartanalgebra von $L$. Im Fall $H\neq J$
    betrachten wir $J/_{H}$ als $H$-Modul. Die entsprechende Darstellung ist
    eine Nildarstellung. Daher existiert ein $z+H\in J/_{H}\setminus\{0\}$ mit
    $0=a\cdot(z+H)=az+H$, d.\,h. $[a,z]\in H$ für $a\in H$. Folglich ist $z\in
    N_{L}(H)\setminus H$, d.\,h. $H$ ist keine Cartanalgebra von $L$.
  \end{proof}
\end{satz}

\begin{bemerk}
  Sei $H$ eine Cartanalgebra einer Lie-Algebra $L$. Betrachtet man $L$ als
  $H$-Modul, liefert \autoref{satz:39} die Zerlegung:
  \begin{gather*}
    L=\bigoplus_{\lambda\in H^{*}} L_{\lambda}(H) \tag{\highl{Cartanzerlegung}}
  \end{gather*}
  Die entsprechenden Gewichte $\lambda\in H^{*}\setminus\{0\}$ heißen
  \highl[Wurzel]{Wurzeln} von $L$ bezüglich $H$. Nach  \autoref{satz:46} ist
  $L_{0}(H)=H$. Bezeichnet man die Menge aller Wurzeln von $L$ bezüglich $H$
  mit $\Phi$, so kann man die Cartanzerlegung auch in der folgenden Form
  schreiben:
  \begin{gather*}
    L=H\oplus\bigoplus_{\lambda\in\Phi} L_{\lambda}(H)
  \end{gather*}
  Dabei ist $\Phi$ endlich und $0\notin\Phi$. Für $\alpha, \beta\in\Phi$
  existieren eindeutig bestimmte $s,t\in\N_{0}$ mit
  $\beta-s\alpha,\dotsc,\beta,\dotsc,\beta+t\alpha\in\Phi$. Aber
  $\beta-(s+1)\alpha, \beta+(t+1)\alpha\notin\Phi$. Man nennt
  $\beta-s\alpha,\dotsc,\beta,\dotsc,\beta+t\alpha\in\Phi$ die
  $\alpha$-\highl{Kette} durch $\beta$.
\end{bemerk}

\begin{bsp}
  In $n\in\N, L\in\gl_{n}, H\in\Fh_{n}, h\in H$ und $h=\sum_{i=1}^{n} \xi_{i}
  e_{ii}$ mit $\xi_{1},\dotsc,\xi_{n}\in ??$. \help{Wie ist die obige Zeile
  genau. Kopie war nicht lesbar.} Für $j\neq k$ gilt dann:
  \begin{gather*}
    \ad_{k}(e_{jk})= [h,e_{jk}]= he_{jk}-e_{jk}h=(\xi_{j}-\xi_{k})e_{jk}
  \end{gather*}
  Definiert man also $\alpha_{jk}\in H^{*}$ durch $\alpha_{jk}(\sum_{i=1}^{n}
  \xi_{i} e_{ii})\colon= \xi_{j}-\xi_{k}$, so ist $e_{jk}\in
  L_{\alpha_{jk}}(H)$. Wegen $L=H\oplus\bigoplus_{j\neq k} \C e_{jk}=
  H\oplus\bigoplus_{\alpha\in\Phi} L_{\alpha}(H)$ folgt sogar
  $L_{\alpha_{jk}}(H)=\C e_{jk}$. Daher gilt hier: $\Phi= \{\alpha_{jk}\colon
  j,k=1,\dotsc,n, j\neq k\}$
\end{bsp}

%satz 4.7
\begin{satz}\label{satz:47}
  Seien $H$ eine Cartanalgebra einer Lie-Algebra $L$ und $\alpha, \beta$
  Wurzeln von $L$ bezüglich $H$. Dann existiert ein $q\in\Q$ mit $\beta|
  [L_{-\alpha}(H), L_{\alpha}(H)]= g\alpha|[L_{-\alpha}(H), L_{\alpha}(H)]$.
  \begin{proof}
    Seien $\beta-s\alpha,\dotsc,\beta,\dotsc,\beta+t\alpha$ die $\alpha$-Kette
    durch $\beta$ und
    \begin{gather*}
      M\colon= L_{\beta-s\alpha}(H)\oplus\dotso \oplus
	 L_{\beta}(H)\oplus\dotso \oplus L_{\beta+t\alpha}(H)
    \end{gather*}
    Dann ist $[L_{\alpha}(H),M]\subseteq M, [L_{-\alpha}(H),M]\subseteq M$ und
    $[H,M]=[L_{0}(H),M]\subseteq M$. Für $y\in L_{-\alpha}(H), z\in
    L_{\alpha}(H)$ und $x\colon= [y,z]\in L_{0}(H)=H$ ist $\ad_{x}=[\ad_{y},
    \ad_{x}]$ , also
    \begin{align*}
      0 &= \spur(\ad_{y}\circ\ad_{z}-\ad_{z}\circ\ad_{y})(M)=\spur(\ad_{x}|M)\\
      &= \sum_{i=-s}^{t} \underbrace{(\dim L_{\beta+i\alpha}(H))}_{=\colon
	 d_{i}}\cdot(\beta+i\alpha)(x)
    \end{align*}
    Daher gilt:
    \begin{gather*}
      \beta(x)=-\frac{\sum_{i=-s}^{t} id_{i}}{\sum_{i=-s}^{t} d_{i}}\alpha(x)
    \end{gather*}
  \end{proof}
\end{satz}

\chapter{Auflösbare Lie-Algebren}

% def 5.1
\begin{defini}
  Eine Lie-Algebra $L$ mit $L^{(n)}=0$ für ein $n\in\N$ heißt
  \highl{auflösbar} bzw. \highl[Lie-Algebra!auflösbare]{auflösbare
  Lie-Algebra}.
\end{defini}

\begin{bemerkON}
  \begin{enumerate}
    \item Für jede Unteralgebra $k$ einer Lie-Algebra $L$ und $n\in\N$ ist
    $K^{(n)}\subseteq L^{(n)}$. Mit $L$ ist also auch $K$ auflösbar.
   \item Für $n\in\N$ und jeden Homomorphismus von Lie-Algebren $\phi\colon
    L\rightarrow M$ ist $\phi(L^{(n)})= \phi(L)^{(n)}$ (nachrechnen!). Mit $L$
    ist also auch $\phi(L)$ auflösbar.
   \item Ist $I$ ein auflösbares Ideal einer Lie-Algebra $L$ mit der
    Eigenschaft, dass $L/_{I}$ auflösbar ist, so ist auch $L$ auflösbar. Sind
    nämlich $m,n\in\N$ mit $0=I^{(m)}$ und $0=(L/_{I})^{(n)}=L^{(n)}+I/_{I}$,
    so ist $L^{(n)}\subseteq I$ und $L^{(m+n)}=(L^{(n)})^{(m)}\subseteq
    I^{(m)}=0$.
   \item Sind $I,J$ auflösbare Ideale von $L$, so auch $I+J$. Denn nach dem
    obigen Erkenntnissen ist $I+J/_{J}\cong I/_{I}\cap J$ auflösbar und wegen
    (iii) ist dann $I+J$ auflösbar.
   \item Für jede Lie-Algebra $L$ ist nach (iv) die Summe aller auflösbaren
    Ideale von $L$ ein auflösbares Ideal $\Rad L$ von $L$. Dieses heißt
    \highl{Radikal} von $L$. Nach (iii) ist stets $\Rad(L/_{\Rad L})=0$.
   \item Eine Lie-Algebra $L$ mit $\Rad L=0$ heißt \highl{halbeinfach} oder
    \highl[Lie-Algebra!halbeinfache]{halbeinfache Lie-Algebra}. Nach (v) ist
    $L/_{\Rad L}$ halbeinfach für jede Lie-Algebra $L$.
  \end{enumerate}
\end{bemerkON}

\begin{bsp}
  \begin{enumerate}[(a)]
    \item Jede nilpotente Lie-Algebra $L$ ist auflösbar. Denn für $n\in\N$ ist
    $L^{(n)}\subseteq L^{n}$ (nachrechnen!)
   \item Für $n\in\N$ ist $\Fb_{n}$ auflösbar. Denn nach dem ersten Beispiel
    im dritten Kapitel ist $\Fb_{n}'=\Fn_{n}$, also
    $\Fb_{n}^{(n+1)}=(\Fb_{n}')^{(n)}=\Fn_{n}^{(n)}=0$.
   \item Die Lie-Algebra $\sll_{2}$ ist nicht auflösbar. Denn mit den üblichen
    Bezeichnungen bilden:
    \begin{align*}
      e_{11}-e_{22} &= [e_{12}, e_{21}]\\
      2e_{12} &= [e_{11}-e_{22}, e_{12}]\\
      -2e_{21} &= [e_{11}-e_{22}, e_{21}]
    \end{align*}
    eine Basis von $\sll_{2}$. Daher ist $\sll_{2}=\sll_{2}'=\sll_{2}''=\dotsb$.
  \end{enumerate}
\end{bsp}

\begin{satz}[Dynkins Lemma]\label{satz:51-dynkin}
  Seien $L$ eine Lie-Algebra, $V$ ein $L$-Modul, $I\subseteq L$ ein Ideal und
  $\lambda\in I^{*}$. Dann ist $U=\{v\in V\colon\}\subseteq V$ ein Untermodul.
  \todo{Formel ergänzen}
  \begin{proof}
    Offenbar ist $U\subseteq V$ ein Untervektorraum und sei o.\,B.\,d.\,A.
    $U\neq 0$. Für $u\in U, x\in L, a\in I$ gilt:
    \begin{align*}
      a\cdot(x\cdot u) &= x\cdot(a\cdot u)+[a,x]\cdot u= x\cdot(\lambda(a)u)
	 +\lambda([a,x])u\\
      &= \lambda(a)x\cdot u+\lambda([a,x])u
    \end{align*}
    Für ein $i\in\N$ sei bereits gezeigt, dass die Elemente
    $\alpha_{ij}(a)\in\C$ existieren mit
    \begin{gather*}
      a\cdot(x^{i}\cdot u)= \lambda(a)x^{i}\cdot i+\sum_{j=0}^{i-1}
	 \alpha_{ij}(a)x^{j}\cdot u
    \end{gather*}
    Dann gilt
    \begin{align*}
      a\cdot(x^{i+1}\cdot u) &= a\cdot(x\cdot(x^{i}\cdot u))=
	 x\cdot(a\cdot(x^{i}\cdot u)) +[a,x](x^{i}u)\\
      &= x(\lambda(a)x^{i}u+\sum_{j=0}^{i-1} \alpha_{ij}(a) x^{j}u)+
	 \lambda([a,x])x^{i}u+ \sum_{j=0}^{i-1} \alpha_{ij}([a,x])x^{j}u\\
      &= \lambda(a) x^{i+1}u+ \sum_{j=0}^{i-1} \alpha_{ij}(a) x^{j+1}u+
	 \lambda([a,x])x^{i}u+ \sum_{j=0}^{i-1} \alpha_{ij}([a,x])x^{j}u\\
      &= \lambda(a) x^{i+1}u+ \sum_{j=0}^{i}
	 \underbrace{\alpha_{i+1,j}(a)}_{\in\C} x^{j}u
    \end{align*}
    Wegen $\dim V<\infty$ existiert ein $n\in\N$ mit der Eigenschaft, dass
    $u,xu,\dotsc,x^{n}u$ linear abhängig sind. Sei $n$ minimal mit dieser
    Eigenschaft und $W\colon= \spn(u,xu,\dotsc,x^{n-1}u)$. Dann bilden
    $u,xu,\dotsc,x^{n-1}u$ eine Basis von $W$. Offenbar ist $xW\subseteq W$
    und $aW\subseteq W$ für $a\in I$. Ist $\Delta$ die Darstellung von $L$ auf
    $V$, so gilt für $a\in I\colon\spur(\Delta(a)|W)=n\lambda(a)$.
    Insbesondere ist
    \begin{gather*}
      n\lambda([a,x])= \spur(\Delta([a,x])|W)= \spur(\Delta(a)\circ\Delta(x)
	 - \Delta(x)\circ\Delta(a)|W)=0
    \end{gather*}
    Folglich ist $\lambda([a,x])=0$ und $a\cdot(x\cdot u)=\lambda(a)x\cdot u$.
    Dies zeigt $x\cdot u\in U$.
  \end{proof}
\end{satz}


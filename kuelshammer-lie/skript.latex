\chapter{Grundbegriffe}

\begin{defini} % 1.1
  Eine (endlich-dimensionale und komplexe) \highl{Lie-Algebra} ist ein
  endlich-dimensionaler $\C$-Vektorraum $L$ mit einer bilinearen Abbildung
  $L\times L\rightarrow L, (a,b)\mapsto [a,b]$, so dass gilt:
  \begin{enumerate}
   \item (\highl{Schiefsymmetrie}) $[a,a]=0\,\forall a\in L$
   \item (\highl{Jacobi-Identität}) $[[a,b],c]+[[b,c],a]+ [[c,a], b]= 0\,\forall
    a,b,c\in L$
  \end{enumerate}
\end{defini}

\begin{bemerk}
  In dieser Vorlesung betrachten wir den Körper $\C$. Verallgemeinerungen sind
  möglich, müssen aber evtl. speziell betrachtet werden. Wir betrachten ohne
  besondere Nennung immer endlich-dimensionale Lie-Algebren. Spezialfälle
  werden besonders erwähnt.
\end{bemerk}

Mann nennt $[a,b]$ das \highl{Lie-Produkt}, \highl{Lie-Klammer} oder
\highl{Kommutator}.

\begin{bemerk}
  Für $a,b\in L$ ist $0=[a+b,a+b]=[a,a]+[b,b]+[b,a]+[a,b]$, d.\,h. $[b,a]=-
  [a,b]$. Außerdem erhält man aus der Bilinearität $[0,a]=0=[a,0]$.
\end{bemerk}

\begin{bsp}\label{bsp:11}
  \begin{enumerate}
   \item Jeder $\C$-Vektorram $V$ ist eine Lie-Algebra mit $[a,b]\colon=0$ für
    alle $a,b\in V$.
   \item Für Lie-Algebren $L_{1},\dotsc, L_{n}$ dann ist auch das
    \highl[Produkt!direktes]{direkte Produkt} $L_{1}\times\dotso \times L_{n}$ eine Lie-Algebra, wenn man
    definiert: \[[(a_{1},\dotsc, a_{n}),\dotsc,(b_{1},\dotsc, b_{n})] \colon=
    ([a_{1}, b_{1}],\dotsc,[a_{n},b_{n}])\] für $a_{1}, b_{1}\in L_{1},\dotsc,
    a_{n}, b_{n}\in L_{n}$.
   \item Für $n\in\N$ bilden die komplexen $n\times n$-Matrizen eine
    Lie-Algebra $gl_{n}=\C^{n\times n}$ mit $[a,b]\colon= ab-ba$ für $a,b\in
    gl_{n}$.
    Für $a,b,c\in gl_{n}$ gilt: $[[a,b],c]=(ab-ba)c-c(ab-ba)=abc-bac-cab+cba$,
    also erhalten wir $[[a,b],c]+[[b,c],a]+[[c,a],b]= abc-bac-cab+cba +bca
    -cba-abc+acb + cab-acb-bca+bac=0$. Man nennt $gl_{n}$ die
    \highl[Lie-Algebra!allgemeine lineare]{allgemeine lineare Lie-Algebra} des
    Grades $n$
  \end{enumerate}
\end{bsp}

\begin{defini}
  Eine \highl{Unteralgebra} einer Lie-Algebra $L$ ist ein Untervektorraum
  $K\subseteq L$ mit $[a,b]\in K$ für $a,b\in K$.
\end{defini}

\begin{bemerk}
  Gegenenfalls wird $K$ mit den entsprechend eingeschränkten Verknüpfungen
  selbst zu einer Lie-Algebra.
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Für $n\in \N$ bilden die oberen Dreiecksmatrizen eine Unteralgebra
    $\Fb_{n}$ von $gl_{n}$. Denn das Produkt von oberen Dreiecksmatrizen
    ist wieder eine.
   \item In jeder Lie-Algebra $L$ sind $0, L$ und $\C a$ für $a\in L$
    Unteralgebren.
   \item Für jeden Untervektorraum $U\subseteq L$ ist der \highl{Normalisator}
    $N_{L}(U)\colon= \{a\in l\colon [a,u]\in U\,u\in U\}$ von $U$ in $L$. Denn
    für $\alpha, \beta\in \C, a,b\in N_{L}(U), u\in U$ gilt: $[\alpha a+\beta
    b,u]=\alpha[a,u]+\beta[a,u]\in U$ und  $[[a,b],u]=-[[b,u],a]-[[u,a],b]=
    [a, \underbrace{[b,u]}_{\in U}]- [b, \underbrace{[a,u]}_{\in U}]$.
   \item Für jeder Teilmenge $X\subseteq L$ ist der \highl{Zentralisator}
    $G_{L}(X)\colon= \{a\in L\colon [a,x]=0\,\forall x\in X\}$ von $X$
    eine Unteralgebra von $L$. Ist $X=\{x\}$ für ein $x\in L$, so schreiben
    wir $C_{L}(x)$ und sprechen vom hzentralisator von $x$.
   \item Insbesondere ist das \highl{Zentrum} $Z(L)\colon= G_{L}(L)= \{a\in
    L\colon [a,b]=0\,\forall b\in l\}$ von $L$ eine Unteralgebra von $L$.
   \item Für jede Menge $\FM$ von Unteralgebren von $L$ ist auch
    $\bigcap_{U\in \FM}$ eine Unteralgebra von $L$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Ein \highl{Ideal} einer Lie-Algebra $L$ ist ein Untervektorraum $I\subseteq
  L$ mit $[a,b]\in I$ für alle $a\in I, b\in L$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Gegenenfalls ist auch $[b,a]=-[a-b]\in I$ für alle $a\in I, b\in L$.
   \item Jedes Ideal von $L$ ist eine Unteralgebra von $L$. Eine Unteralgebra
    ist im Allgemeinen \emph{kein} Ideal.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item $\Fb_{2}$ ist kein Ideal in $gl_{2}$, denn
    $\begin{pmatrix}1&0\\0&0\end{pmatrix} \begin{pmatrix}0&0\\1&0\end{pmatrix}
    - \begin{pmatrix}0&0\\1&0\end{pmatrix}
    \begin{pmatrix}1&0\\0&0\end{pmatrix}=
    \begin{pmatrix}0&0\\-1&0\end{pmatrix}$.
   \item In jeder Lie-Algebra $L$ sind $0, L$ und $Z(L)$ Ideale. Für $z\in
    Z(L), a\in L$ ist nämlich $[z,a]=0\in Z(L)$.
   \item Jede Unteralgebra $K\subseteq L$ ist ein Ideal in $N_{L}(K)$ und $K$
    ist genau dann ein ideal in $L$, wenn der Normalisator $N_{L}(K)=L$ ist.
   \item Der Durchschnitt von Idealen ist wieder ein Ideal: Für jede Menge
    $\FF$ von Idealen in $L$ ist auch $\bigcap_{I\in\FF} I$ ein Ideal in $L$.
   \item Für Ideale $I,J$ von $L$ ist auch $I+J=\{a+b\colon a\in I, b\in
     J\}$ ist ein Ideal in $L$. Es gilt nämlich $[a+b,x]=[a,x]+[b,x]\in
    [I+J]$. Analog für Summen von endlich vielen Idealen.
   \item Für Ideale $I,J$ von $L$ ist auch $[I,J]=\{\sum_{k=1}^n [a_i,
    b_i]\colon a_1,...,a_n,\in I, b_1,...,b_n\in J\}$ ein Ideal in $L$. Für
    $a_1,\dotsc,a_n\in I, b_1,\dotsc,b_n\in J, x\in L$ gilt nämlich:
    $[\sum_{k=1}^n [a_k,b_k],x]=\sum_{k=1}^n (-[ [ b_k,x], a_k]-[ [x,a_k],
    b_k])= \sum_{k=1}^n ([a_k, [b_k,x]]+[ [a_k,x], b_k])\in [I,J]$.
    Insbesondere ist die abgeleitete Algebra $L'\colon= [L,L]\colon= 
    \{\sum_{k=1}^n [a_k, b_k]\colon a_1, b_1,\dots,a_n,b_n\in L, n\in\N_0$\}
\item Definiert man man induktiv $L^{(0)}\colon= L, L^{(1)}\colon= L',
    L^{(n)}\colon= (L^{(n-1)})'$ oder $L^1\colon= L, L^2=L', L^n\colon=
    [L^{n-1}, L]$. so sind $L^{(n)}, L^n$ für $n\in\N$ Ideale in $L$. Man
    nennt $L^{(0)} \supseteq L^{(1)}\supseteq L^{[2)}\supseteq \dots$ die
    \highl[Kette!abgeleitete]{abgeleitete Kette} von $L$ und $L^1\supseteq L^2 \supseteq
    L^3\supseteq \dots$ die \highl[Zentralkette!absteigende]{absteigende} oder
    \highl[Zentralkette!untere]{untere Zentralkette} von $L$.
  \end{enumerate}
\end{bsp}

\begin{satz}
Für jedes Ideal $I$ einer Lie-Algebra $L$ bilden die Restklassen
  $a+I=\{a+x\colon x\in I\}$ bilden eine Lie-Algebra $L/_I$, die
  \highl{Restklassenalgebra} von $L$ modulo $I$, wenn man für $\alpha \in \C,
  a,b\in L$ definiert:
  \begin{gather*}
    \alpha(a+I)\colon= \alpha a+I\qquad (a+I)+(b+I)=(a+b)+I\qquad [a+I,
  b+I]\colon=[a,b]+I
  \end{gather*}
  \begin{proof}
    Die Lie-Klammer auf $L/_I$ ist wohldefiniert. Sind nämlich $a,a', b,b'\in
    L$ mit $a+I=a'+I$ und $b+I=b'+I$, so ist $a-a'\in I$, also
    $[a,b]-[a',b]=[a-a',b]=I$, d.\,mh. $[a,b]+I=[a',b]+I$. Genauso verfährt
    man mit $b$ und $b'$. Die Axiome einer Lie-Algebra rechnet man leicht
    nach.
  \end{proof}
\end{satz}

\begin{defini}
Ein \highl{Homomorphismus} einer Lie-Algebra $L$ in eine Lie-Algebra $M$ ist
  eine lineare Abbildung $\varphi\colon L\rightarrow M$ mit $\varphi([a,b])=
  [\varphi(a),\varphi(b)]$ für alle $a,b\in L$. Wie üblich definiert man
  Monomorphismen, Epimorphismen, Isomorphismen, Endomorphismen und
  Automorphismen zwischen Lie-Algebren.
\end{defini}

\begin{bemerk}\label{bem:15}
  \begin{enumerate}
   \item Für jede Unteralgebra $U\subseteq L$ und jeden Homomorphismus
    $\varphi\colon L\rightarrow M$ ist $\varphi(U)\subseteq M$ eine
    Unteralgebra. Für $a,b\in U$ ist nämlich $[\varphi(a),
    \varphi(b)]=\varphi(\underbrace{[a,b]}_{\in U})\in \varphi(U)$.
    Insbesondere ist das Bild $\varphi(L)$ eine Unteralgebra von $M$.
   \item Für jedes Ideal $I\subseteq L$ ist $\varphi(I)\subseteq \varphi(L)$
    Ideal. Denn für $a\in I, b\in  L$ ist $[\varphi(a), \varphi(b)]=
    \varphi(\underbrace{[a,b]}_{\in I})\in\varphi(I)$. Jedoch ist $\varphi(I)$
    im Allgemeinen kein Ideal in $M$. Wie der folgende Homomorphismus
    $\Fb_2\rightarrow \gl_2, a\mapsto a$ und das Ideal $I\colon=\Fb_2$ von
    $\Fb_2$ zeigen.
   \item Für jede Unteralgebra $V\subseteq M$ ist $\varphi^{-1}(V)= \{a\in
    L\colon \varphi(a)\in V\}\subseteq L$ ist eine Unteralgebra von $L$. Denn
    für $a,b\in\varphi^{-1}(V)$ ist $\varphi([a,b])=[\varphi(a),
    \varphi(b)]\in V$, d.\,h. $[a,b]\in\varphi^{-1}(V)$.
   \item Für jedes Ideal $J\subseteq M$ ist $\varphi^{-1}(J)\subseteq L$
    Ideal. Denn für $a\in\varphi^{-1}(J), b\in  L$ ist
    $\varphi([a,b])=[\varphi(a), \varphi(b)]\in J$, d.\,h.
    $[a,b]\in\varphi^{-1}(J)$. Insbesondere ist der Kern $\ker(\varphi)\colon=
    \varphi^{-1}(0)=\{a\in L\colon \varphi(a)=0\}\subseteq L$ ein Ideal.
   \item Sind $L, M, N$ drei Lie-Algebren und $\varphi\colon L\rightarrow M,
    \psi\colon M\rightarrow N$ Homomorphismen, so auch $\psi\circ\varphi\colon
    L\rightarrow N$.
   \item Ist $\varphi\colon L\rightarrow M$ ein Isomorphismus, so auch
    $\varphi^{-1}\colon M\rightarrow L$. Denn für $x,y\in M$ gilt
    $\varphi^{-1}([x,y])=\varphi^{-1}([\varphi(\varphi^{-1}(x)),
    \varphi(\varphi^{-1}(y))])= \varphi^{-1}(\varphi([\varphi^{-1}(x),
    \varphi^{-1}(y)]))=[\varphi^{-1}(x), \varphi^{-1}(y)]$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Für jedes Ideal $I$ einer Lie-Algebra $L$ ist die kanonische
    Abbildung $\nu\colon L\rightarrow L/_{I}, a\mapsto a+I$ ein Epimorphimus
    mit $\ker I$.
   \item Betrachtet man $\C$ als Lie-Algebra mit $[\alpha, \beta]=0$ für alle
    $\alpha, \beta\in\C$, so ist für $n\in\N$ die Abbildung $\spur\colon
    \gl_{n}\rightarrow \C, (\alpha_{ij})\mapsto \sum_{i=1}^{n} \alpha_{ii}$
    ein Epimorphimus. Denn für $a,b\in\gl_{n}$ ist bekanntlich
    $\spur([a,b])=\spur(ab-ba)=\spur(ab)-\spur(ba)=0=[\spur(a), \spur(b)]$.
    Daher ist $\sll_{n} \colon= \ker(\spur)=\{a\in
    \gl_{n}\colon\spur(a)=0\}\subseteq \gl_{n}$  Ideal. Man nennt $\sll_{n}$ die
    \highl[Lie-Algebra!spezielle lineare]{spezielle lineare Lie-Algebra} des Grades $n$.
   \item Für jeden endlich-dimnesionalen $\C$-Vektorraum $V$ bilden die
    linearen Abbildungen von $V$ in sich ein Lie-algebra $\gl(V)$, die
    \highl[Lie-Algebra!allgemeine lineare]{allgemeine lineare Lie-Algebra} von $V$, wenn man $[\phi, \psi]=
    \phi\dot \psi-\psi\dot\phi$ für $\phi$, $\psi\in \gl(V)$ definiert. Dies
    zeigt man analog zu \autoref{bsp:11} Nummer (iii). Wählt man
    eine Basis $b_{1},\dotsc, b_{n}$ von $V$ und schreibt man $\phi(b_{j}) 0
    \sum_{i=1}^{n} \alpha_{ij}(\phi)b_{i}$ mit $\alpha_{ij}(\phi)in\C$ für
    $i,j=1,\dotsc,n$. $\gl(V)\rightarrow\gl_{n, \phi\mapsto
    (\alpha_{ij}(\phi))}$ ein Isomorphismus. Das Urbild von $\sll_{n}$ unter
    dieser Abbildung ist $\sll(V)\colon= \{\phi\in\gl(V)\colon
    \spur(\phi)=0\}$. Das hängt nicht von der Wahl der Basis ab. Man nennt
    $\sll(V)$ \highl[Lie-Algebra!spezielle lineare]{spezielle lineare Lie-Algebra} von $V$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Lie-Algebren $L, M$ heißen isomorph ($L\equiv M$), falls ein Isomorphismus
  $\phi\colon L\rightarrow M$ existiert.
\end{defini}

\begin{bsp}
  Für jeden $\C$-Vektorraum $V$ der Dimension $n<\infty$ ist $\gl(V)\equiv
  \gl_{n}$. 
\end{bsp}

\begin{bemerk}
  $\equiv$ ist eine Äquivalenzrelation.
\end{bemerk}

\begin{satz}[Homomorphiesatz]\label{satz:16}
  Für jeden Homomorphismus von Lie-Algebren $\phi\colon L\rightarrow M$ ist
  die Abbildung $\overline{\phi}\colon L/_{\ker\phi}\rightarrow \phi(L),
  a+\ker(\phi) \mapsto \phi(a)$ ein Isomorphismus. Insbesondere ist
  $L/_{\ker\phi}\equiv \phi(L)$.
  \begin{proof}
    Man rechnet leicht nach, dass die Abbildung $\overline{\phi}$
    wohldefiniert, linear und bijektiv ist. Außerdem gilt für alle $a,b\in
    L\colon \overline{\phi}([a+\ker\phi,
    b+\ker\phi])=\overline{\phi}([a,b]+\ker\phi)= \phi([a,b])= [\phi(a),
    \phi(b)]= [\overline{\phi}(a+\ker\phi), \overline{\phi}(b+\ker\phi)]$.
  \end{proof}
\end{satz}

\begin{satz}[Erster Isomorphiesatz]\label{satz:17}
  Für jedes Ideal $I$ und jede Unteralgebra $K$ einer Lie-Algebra $L$, dann
  ist $K+I$ eine Unteralgebra von $L$. Darin ist $I$ ein Ideal, $K\cap I$
  Ideal in $K$ und
  \begin{gather*}
  K/_{K\cap I} \equiv K+I/_{I}    
  \end{gather*}
  \begin{proof}
    Sei $\nu\colon L\rightarrow L/_{I}, a\mapsto a+I$ kanonisch. Nach
    \autoref{bem:15}
    ist $\nu(K)=\{a+I:a\in K\}$ eine Unteralgebra von $L/_{I}$. Daher ist
    $\nu^{-1}(\nu(K))$ eine Unteralgebra von $L$. Es ist in der Regel nicht
    dasselbe wie $\nu$. Für $x\in\nu^{-1}(\nu(K))$ ist $x+I=\nu(x)\in \nu(K)$.
    Also $x+I=a+I$ für ein $a\in K$. Daher ist $i\colon= x-a\in I$ und das
    element $x=a+i\in K+I$. Für $b\in K, j\in I$ ist andererseits das
    $\nu(b+j)=b+j+I=b+I=\nu(b)\in\nu(K)$, d.\,h. $b+j\in\nu^{-1}(\nu(K))$.
    Folglich ist $\nu^{-1}(\nu(K))=K+I$ Unteralgebra von $L$.

    Da $I$ Ideal in $L$, ist es auch Ideal in $K+I$. Ferner ist $K/_{I}$ der
    Kern der Einschränkung von $\nu$ auf $K$. Also ist das ein Ideal in $K$.
    Wende Homomorphiesatz auf diese Einschränkung von $\nu$ an: $K/_{K\cap
    I}\equiv \nu(K) =\{a+I\colon a\in K\}= \{a+j+I\colon a\in K, j\in I\} =
    K+I/_{I}$.
  \end{proof}
\end{satz}

\begin{satz}[Zweiter Isomorphiesatz]\label{satz:18}
  Sind $I, J$ zwei Ideale einer Lie-Algebra $L$ mit $I\subseteq J$, so ist
  $J/_{I}$ ein Ideal in $L/_{I}$ mit
  \begin{gather*}
  (L/_{I})/_{(J/_{I})}\equiv L/_{J}    
  \end{gather*}
  \begin{proof}
    Sei $\nu\colon L\rightarrow L/_{I}$ kanonische Abbildung. Nach der Bem.
    1.5 ist $J/_{I}=\nu(J)$ Ideal in $\nu(L)=L/_{I}$. Sei $\mu\colon
    L/_{I}\rightarrow (L/_{I})/_{(J/_{I})}$ kanonisch. Dann ist $\ker(\mu\dot
    \nu)=J$ (Nachrechnen). Wende den Homomorphiesatz auf $\mu\dot\nu$ an:
    $L/_{J}\equiv (L/_{I})/_{(J/_{I})}$.
  \end{proof}
\end{satz}

\chapter{Darstellungen und Moduln}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $V$ ein endlich-dimensionaler
  $\C$-Vektorraum. Eine \highl{Darstellung} von $L$ auf $V$ ist ein
  Homomorphismus $\Delta\colon L \rightarrow \gl(V)$.
\end{defini}

\begin{bsp}
  Für $a\in L$ ist die Abbildung $\ad_{a}=\ad_{a}^{L}\colon L\rightarrow L,
  x\mapsto [a,x]$ linear mit $\ad_{[a,b]}(x)=[[a,b],x]=-[[b,x],a]-[[x,a],b] =
  [a,[b,x]]-[b,[a,x]]= (\ad_{a}\dot \ad_{b})(x)-(\ad_{b}\dot\ad_{a})(x)=
  [\ad_{a}, \ad_{b}](x)$ für alle $b,x\in L$. daher ist die Abbildung
  $\ad\colon L\rightarrow \gl(L), a\mapsto \ad_{a}$ ein Homomorphismus von
  Lie-Algebren und damit eine Darstellung von $L$ auf $L$, die
  \highl[Darstellung!adjungierte]{adjungierte Darstellung} von $L$. Ihr Kern ist $\{a\in L\colon
  \ad_{a}=0\}=\{a\in L\colon [a,x]=0\,\forall x\in L\}=Z(L)$.
\end{bsp}

\begin{bemerk}
  Wir werden die adjungierte Darstellung dazu benutzen, um Methoden der
  linearen Algebra auf Lie-Algebren anzuwenden.
\end{bemerk}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Ein $L$-\highl{Modul} ist ein $\C$-Vektorraum mit
  einer bilinearen Abbildung $L\times V\rightarrow V, (a,v)\mapsto a\cdot v$
  für die gilt
  \begin{gather*}
    [a,b]\cdot v=a\cdot(b\cdot v)-b\cdot(a\cdot v)\quad a,b\in L, v\in V
  \end{gather*}
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Für $a\in  L$ ist also dann die Abbildung $\Delta(a)\colon
    V\rightarrow V, v\mapsto av$ linear und gleichzeitig ist die Abbildung
    $\Delta\colon L\rightarrow \gl(V), a\mapsto \Delta(a)$ ein Homomorphismus
    von Lie-Algebra, also Darstellung. Auf diese Weise liefert jeder $L$-Modul
    eine Darstellung.
   \item Ist umgekehrt $\Delta$ eine Darstellung einer Lie-Algebra $L$ auf
    einen endlich-dimensionalen $\C$-Vektorraum $V$, so kann man $V$ zu einem
    $L$-Modul machen, indem man definiert $a\cdot v\colon= (\Delta(a))(v)$ für
    $a\in L, v\in V$. Dies rechnet man leicht nach. Darstellung einer
    Lie-Algebra $L$ und $L$-Modul beschreiben den gleichen mathematischen
    Sachverhalt.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item Jede Lie-Algebra $L$ ist selbst ein $L$-Modul, wenn man $a\cdot
    v\colon=[a,v]$ für $a,v\in L$ setzt. Die entsprechende Darstellung ist die
    adjungierte Darstellung.
   \item Jeder endlich-dimensionale $\C$-Vektorraum wird zu einem $L$-Modul,
    wenn man $a\cdot v=0$ definiert.
   \item Für $L$-Moduln $V_{1},\dotsc, V_{n}$ ist auch das
    \highl[Produkt!direktes]{direkte
    Produkt} $V_{1}\times\dotso \times V_{n}$ ein $L$-Modul, wenn man
    definiert $a\cdot (v_{1},\dotsc, v_{n})\colon= (a\cdot v_{1},\dotsc,
    a\cdot v_{n})$ mit $a\in L, v_{1}\in V_{1},\dotsc, v_{n}\in V_{n}$.
   \item Für $L$-Moduln $V,W$ wird der $\C$-Vektorraum $\Hom_{\C}(V,W)$ aller
    linearer Abbildungen von $V$ nach $W$ zu einem $L$-Modul, wenn man $a\cdot
    f$ für $a\in L f\in\Hom_{\C}(V,W)$ durch $(a\cdot f)(v)\colon= a\cdot f(v)
    -f(a\cdot v)$ für $v\in V$ definiert. Dies rechnet man leicht nach.

    Insbesondere ist $V^{*}\colon= \Hom_{\C}(V,\C)$ ein $L$-Modul mit $(a\cdot
    f)(v)= -f(a\cdot v)$ für $a\in L, f\in V^{*}, v\in V$. $V^{*}$ heißt
    \highl[Modul!dualer]{dualer Modul}.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $n\in\N$. Eine \highl{Matrixdarstellung} des
  Grades $n$ von $L$ ist ein Homomorphismus $\Lambda\colon L\rightarrow
  \gl_{n}$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Für jede Matrixdarstellung $\Lambda$ des Grades $n$ von $L$ wird der
    $\C^{n}$ zu einem $L$-Modul, wenn man definiert $a\cdot v\colon=
    \Lambda(a) v$ für $a\in L, v\in\C^{n}$.
   \item Ist umgekehrt $V$ ein $L$-Modul, $b_{1},\dotsc, b_{n}$ eine Basis von
    $V$ und $a\cdot b_{j}=\sum_{i=1}^{n} \lambda_{ij}(a\cdot b_{i})$ mit
    $\lambda_{ij}(a)\in\C$, so ist die Abbildung $\Lambda\colon L\rightarrow
    \gl_{n}, a\mapsto (\lambda_{ij}(a))$ eine Matrixdarstellung von $L$. Daher
    besteht kein großer Unterschied zwischen Darstellungen, Matrixdarstellung
    und Moduln. Wir werden meist mit Moduln arbeiten.
  \end{enumerate}
\end{bemerk}

\begin{defini}
  Seien $L$ eine Lie-Algebra und $V$ ein $L$-Modul. Ein \highl{Untermodul} von
  $V$ ist ein Untervektorraum $U\subseteq V$ mit $a\cdot u\in U$ für alle
  $a\in L, u\in U$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Gegebenenfalls ist $U$ selbst ein $L$-Modul mit den entspechend
    eingeschränkten Verknüpfungen.
   \item Für jeden Untermodul $U\subseteq V$ wird die Menge
    $V/_{U}=\{v+U\colon v\in V\}$ zu einem $L$-Modul, wenn man definiert:
    \begin{gather*}
      (v+U)+(v'+U)\colon= (v+v')+U\\
      \alpha(v+U)\colon= \alpha v+U\\
      a\cdot(v+U)\colon= (a\cdot v)+U\qquad v,v'\in V, \alpha\in \C, a\in L
    \end{gather*}
    Man bezeichnet diese Menge als \highl{Faktormodul} von $V$ modulo $U$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}
   \item $0,V$ sind stets Untermoduln. Sind dies die einzigen Untermoduln und
    ist außerdem $V\neq 0$, so nennt man $V$
    \highl[Untermodul!einfaches]{einfach} oder
    \highl[Untermodul!irreduzibler]{irreduzibel}.
   \item Die Untermoduln von $L$ selbst sind genau die Ideale von $L$.
   \item Für jede Menge $\FU$ von Untermoduln von $V$ ist auch
    $\bigcap_{U\in\FU} U$ Untermodul von $V$.
   \item Für Untermoduln $U_{1},\dotsc, U_{n}$ von $V$ ist auch die Summe
    $U_{1}+\dotsb+ U_{n}$ ein Untermodul von $V$.
  \end{enumerate}
\end{bsp}

\begin{defini}
  Seien $L$ eine Lie-Algebra, $V, W$ seien $L$-Moduln und $\phi\colon
  V\rightarrow W$ linear mit $\phi(a\cdot v)=a\cdot\phi(v)$ für $a\in L, v\in
  V$. Dann nennt man $\phi$ einen $L$-\highl{Homomorphismus}. Wie üblich
  definiert man \highl{Monomorphismus}, \highl{Epimorphismus},
  \highl{Isomorphismus}, \highl{Endomorphismus} und \highl{Automophismus} von
  $L$-Moduln.
\end{defini}

\begin{bemerkON}
  \begin{enumerate}
    \item Für jeden $L$-Homomorphismus $\phi\colon V\rightarrow W$ und
    Untermoduln $X\subseteq V, Y\subseteq W$ sind $\phi(X)\subseteq W$ und
    $\phi(Y)\subseteq W$ Untermoduln, wie man leicht nachrechnet. Insbesondere
    sind Kern und Bild von $L$-Homomorphismen Untermoduln.
   \item Für die $L$-Moduln $V, W$ bilden die $L$-Homomorphismen $V\rightarrow
    W$ einen Untervektorraum $\Hom_{L}(V,W)$ von $\Hom_{\C}(V,W)$.
   \item Für $L$-Moduln $U,V,W$ und $L$-Homomorphismen $\phi\colon
    U\rightarrow V, \psi\colon V\rightarrow W$ ist auch $\phi\circ\psi\colon
    U\rightarrow W$ ein $L$-Homomorphismus und stets ist $\id_{V}$ ein
    $L$-Automophismus.
   \item Für $L$-Moduln $V,W$ und jeden $L$-Isomorphismus $\phi\colon
    V\rightarrow W$ ist auch $\phi^{-1}\colon W\rightarrow V$ ein
    $L$-Isomorphismus.
  \end{enumerate}
\end{bemerkON}

\begin{bsp}
  Für jeden Untermodul $U$ eines $L$-Moduls $V$ ist die kanonische Abbildung
  $V\rightarrow V/_{U}$ ein $L$-Epimorphismus.
\end{bsp}

\begin{defini}
  Sei $L$ eine Lie-Algebra. Man nennt die $L$-Moduln $V,W$ \highl{isomorph}
  und schreibt $V\simeq W$, falls ein $L$-Isomorphismus $V\rightarrow W$
  existiert.
\end{defini}

\begin{bemerkON}
  Die Relation $\simeq$ ist eine Äquivalenzrelation.
\end{bemerkON}

\begin{satzON}[Homomorphiesatz]
  Seien $L$ eine Lie-Algebra, $V,W$ $L$-Moduln und $\phi\colon V\rightarrow W$
  ein $L$-Homomorphismus. Dann ist die Abbildung $\overline{\phi}\colon
  V/_{\ker(\phi)}\rightarrow \phi(V), v+\ker(\phi)\mapsto\phi(v)$ ein $L$-
  Isomorphismus. Insbesondere ist $V/_{\ker(\phi)}\simeq\phi(V)$.
  \begin{proof}
    Der Beweis erfolgt analog zu \autoref{satz:16}.
  \end{proof}
\end{satzON}

\begin{satz}[Isomorphiesätze]
  Seien $L$ eine Lie-Algebra, $W$ ein $L$-Modul und $U,V\subseteq W$
  Untermoduln. Dann ist $U+V/_{V}\simeq U/_{U}\cap V$. Im Fall $U\subseteq
  V$ ist $V/_{U}\subseteq W/_{U}$ ein Untermodul mit
  $(W/_{U})/_{(V/_{U})}\simeq W/_{V}$.
  \begin{proof}
    Analog zu \autoref{satz:17} und \autoref{satz:18}
  \end{proof}
\end{satz}

\begin{satz}[Lemma von Schur]
  Seien $L$ eine Lie-Algebra, $V,W$ irreduzible $L$-Moduln und
  $\phi\in\Hom_{L}(V,W)$. Im Fall $V\nsimeq W$ ist dann $\phi=0$ und im Fall
  $V=W$ ist $\phi=\alpha\id_{V}$ für ein $\alpha\in\C$.
  \begin{proof}
    Sei $\phi\neq0$. Dann ist $\ker(\phi)\subsetneqq V$ ein Untermodul, also
    $\ker(\phi)=0$ wegen der Irrduzibilität von $V$. Analog ist
    $0\neq\phi(V)\subseteq W$ Untermodul, also $\phi(V)=W$ wegen der
    Irrduzibilität von $W$. Daher ist $\phi$ ein $L$-Homomorphismus.

    Sei außerdem $V=W$ und $\alpha$ ein Eigenwert von $\phi$. Dann ist
    $\phi-\alpha\id_{V}$ ein $L$-Endomorphismus von $V$, der nicht bijektiv
    ist. Also ist $\phi-A\alpha\id_{V}=0$.
  \end{proof}
\end{satz}

\begin{satz}\label{satz:32}
  Für eine Lie-Algebra $L$ und einen $L$-Modul $V$ sind äquivalent:
  \begin{enumerate}[(1)]
    \item Es existieren irreduzible Untermoduln $U_{1},\dotsc,
    U_{k}\subseteq V$ mit $V=U_{1}+\dotsb+ U_{k}$.
   \item Es existieren irreduzible Untermoduln $V_{1},\dotsc, V_{l}\subseteq
    V$ mit $V=V_{1}\oplus\dotso \oplus V_{l}$.
   \item Zu jedem Untermodul $U\subseteq V$  existiert ein Untermodul
    $W\subseteq V$ mit $V=U\oplus W$.
  \end{enumerate}
  \begin{proof}
    \begin{itemize}
      \item[(3)$\Rightarrow$(2)] Sei (3) erfüllt und $V_{1}\subseteq V$ ein
      irreduzibler Untermodul. Dann existiert ein Untermodul $W_{1}\subseteq
      V$ mit $V=V_{1}\oplus W_{1}$. Sei $V_{2}\subseteq W_{1}$ ein
      irreduzibler Untermodul. Dann existiert ein Untermodul $W_{2}\subseteq
      V$ mit $V=V_{1}\oplus V_{2}\oplus W_{2}$.
      Auf diese Weise fährt man fort und erhält so irreduzible Untermoduln
      $V_{1},\dotsc, V_{l}\subseteq V$ mit $V=V_{1}\oplus\dotso \oplus V_{l}$.
     \item[(2)$\Rightarrow$(1)] klar
     \item[(1)$\Rightarrow$(3)] Sei (1) erfüllt und $U\subseteq V$ ein
      Untermodul. Im Fall $U_{1}\subseteq U$ setzen wir $W_{1}\colon= 0$ und
      im Fall $U_{1}\nsubseteq U$, d.\,h. $U_{1}\cap U=\emptyset$, setzen
      wir $W_{2}\colon= U_{1}$. Dann ist $U+W_{1}=U\oplus W_{1}$. Im Fall
      $U_{2}\subseteq U\oplus W_{1}$ setzen wir $W_{2}\colon= 0$ und im Fall
      $U_{2}\nsubseteq U\oplus W_{1}$, d.\,h. $(U\oplus W_{1})\cap
      U_{2}=\emptyset$, setzen wir $W_{2}\colon=U_{2}$. Dann ist
      $U+W_{1}+W_{2}= U\oplus W_{1}\oplus W_{2}$. Auf diese Weise fahren wir
      fort und erhalten so die Untermoduln $W_{1},\dotsc, W_{k}\subseteq V$
      mit $V=U\oplus W_{1}\oplus\dotso \oplus W_{k}$.
    \end{itemize}
  \end{proof}
\end{satz}

\begin{defini}
  Gegebenenfalls heißt $V$ \highl{vollständig irreduzibel} oder
  \highl{halbeinfach}.
\end{defini}

\chapter{Nilpotente Lie-Algebren}

\begin{defini}
  Eine Lie-Algebra $L$ mit $L^{n}=0$ für ein $n\in\N$ heißt \highl{nilpotent}.
  Im Falle $L^{2}=0$ wird diese als \highl{kommutativ} oder \highl{abelsch}
  bezeichnet.
\end{defini}

\begin{bsp}
  \begin{enumerate}
    \item Für $n\in\N$ bilden die oberen Dreiecksmatrizen mit Hauptdiagonale 0
    eine Unteralgebra $L=\Fn_{n}$ von $\Fb_{n}$. Ist $\{e_{ij}\colon
    i,j=1,\dotsc,n\}$ die Standardbasis von $\gl_{n}$, so ist $\{e_{ij}\colon
    1\leq i<j\leq n\}$ eine Basis von $L$. Wir behaupten, dass für $m\in\N$
    die Matrizen $e_{ij}$ mit $j-i\geq m$ eine Basis von $L^{m}$ bilden.

    Für $m=1$ ist das richtig. Sei also $m>1$ und bereits gezeigt, dass die
    $e_{ij}$ mit $j-i\geq m-1$ eine Basis von $L^{m-1}$ bilden. Dann besteht
    $L^{m}=[L^{m-1},L]$ aus den Linearkombinationen der Elemente $[e_{ij},
    e_{kl}]= e_{ij}e_{kl}-e_{kl}e_{ij}= \delta_{jk}e_{il}-\delta_{il}e_{kj}$
    mit $j-i\geq m-1$ und $k<l$. Im Fall $j=k$ ist $l-i\geq k+1-i=j-i+1\geq m$
    und im Fall $i=l$ ist $j-k\geq j+1-k=j+1-i\geq m$. Daher ist $[e_{ij},
    e_{kl}]$ stets Linearkombination der $e_{rs}$ mit $s-r\geq m$.

    Für $r,s\in\{1,\dotsc,n\}$ mit $s-r\geq m$ ist umgekehrt
    $e_{rs}=[e_{r,s-1}, e_{r-1,s}]\in L^{m}$. Damit ist die Behauptung
    gezeigt. Im Fall $m\geq n$ ist insbesondere $L^{n}=0$, d.\,h. $L$ ist
    nilpotent.
   \item Dagegen ist die Lie-Algebra $\Fb_{n}$ aller oberen Dreiecksmatrizen
    für $n>1$ nicht nilpotent. Denn $\{e_{ij}\colon 1\leq i<j\leq n\}$ ist
    eine Basis von $\Fb_{n}$ und für $i\leq j$ und $k\leq l$ ist $[e_{ij},
    e_{kl}]= \delta_{jk}e_{il}-\delta_{il}e_{kj}$. Dieses Element liegt in
    $\Fn_{n}$ im Fall $j\neq k, i\neq l$, aber auch im Fall $j=k, i=l$. Daher
    ist $\Fb_{n}^{2}\subseteq\Fn_{n}$. Andererseits ist $[e_{ij},
    e_{kl}]=e_{ij}$ für $i<j$, d.\,h. $\Fb_{n}^{2}\subseteq \Fn_{n}$.
    Insgesamt ist also $\Fb_{n}^{2}=\Fn_{n}$.
    Das gleiche Argument zeigt aber auch $\Fn_{n}\subseteq [\Fn_{n}, \Fb_{n}]=
    [\Fb_{n}^{2}, \Fb_{n}]= \Fb_{n}^{3}$ und umgekehrt ist
    $\Fb_{n}^{3}\subseteq\Fb_{n}^{2}=\Fn_{n}$. Folglich ist
    $\Fb_{n}^{3}=\Fn_{n}= \Fb_{n}^{2}$. Obiger Schluss lässt sich weiter
    fortsetzen und man erhält $\Fb_{n}^{m}=\Fn_{n}$ für alle $m\in\N$ mit
    $m\geq2$. Für $n>1$ ist $\Fb_{n}$ daher nicht nilpotent.
  \end{enumerate}
\end{bsp}

\begin{bemerkON}
  \begin{enumerate}
    \item Eine Lie-Algebra $L$ ist genau dann abelsch, wenn $[a,b]=0$ für alle
    $a,b\in L$ ist.
   \item Ist $L$ nilpotent, so auch jede Unteralgebra $K\subseteq L$. Denn
    induktiv zeigt man leicht $K^{n}\subseteq L^{n}$ für $n\in\N$.
   \item Für jeden Homomorphismus von Lie-Algebren $\phi\colon L\rightarrow M$
    und $n\in\N$ ist analog $\phi(L^{n})=\phi(L)^{n}$. Mit $L$ ist also auch
    $\phi(L)$ nilpotent.
   \item Ist $Z/_{Z(L)}$ nilpotent, so auch $L$. Denn ist $k\in\N$ mit $0=
    (L/_{Z(L)})^{k}=L^{k}+Z(L)/_{Z(L)}$, so ist $L^{k}\subseteq Z(L)$ und
    $L^{k+1}=[L^{k},L]\subseteq[Z(L),L]=0$
  \end{enumerate}
\end{bemerkON}

\begin{bemerk}\label{bem:32}
  Seien $V$ ein endlich-dimensionaler $\C$-Vektorraum und $\phi\in\gl(V)$ mit
  $\phi^{n}=0$ für ein $n\in\N$. Dann heißt $\phi$ \highl{nilpotent}. Für
  $\psi\in\gl(V)$ ist gegebenenfalls $\ad_{\phi}(\psi)=[\phi, \psi]=
  \phi\circ\psi- \psi\circ\phi$. Induktiv folgt daraus, dass
  $(\ad_{\phi})^{k}(\psi)$ für $k\in\N$ eine Summe von Termen der Form
  $\pm\phi^{i}\circ\psi\circ\phi^{j}$ mit $i+j=k$ ist. Im Fall $k=2n$ ist also
  $i\geq n$ oder $j\geq n$. Daher ist $(\ad_{\phi})^{2n}=0$, d.\,h. die
  lineare Abbildung $\ad_{\phi}\colon\gl(V)\rightarrow\gl(V)$ ist auch
  nilpotent.
\end{bemerk}

\begin{satzON}
  Sei $V\neq0$ ein endlich-dimensionaler $\C$-Vektorraum und sei $L\subseteq
  \gl(V)$ eine Unteralgebra in der jedes Element nilpotent ist. Dann existiert
  ein $v\in V\setminus\{0\}$ mit $\phi(v)=0$ für alle $\phi\in L$.
  \begin{proof}
    Der Beweis erfolgt per Induktion nach $n\colon\dim L$. Für den
    Induktionsanfang  $n=0$ ist alles klar. Sei also $n>0$ und der Satz
    bewiesen für Lie-Algebren kleinerer Dimension. Sei $K\subset L$ eine echte
    Unteralgebra möglichst großer Dimension. Jedes $\phi\in K$ induziert wegen
    $\ad_{\phi}(K)\subseteq K$ eine lineare Abbildung:
    \begin{gather*}
      \overline{\phi}\colon L/_{K}\rightarrow L/_{K},
	 \psi\mapsto\ad_{\phi}(\phi)+K=[\phi,\psi]+K
    \end{gather*}
    Nach \autoref{bem:32} sind mit $\phi$ auch $\ad_{\phi}$ und
    $\overline{\phi}$ nilpotent und die Abbildung:
    \begin{gather*}
      \Phi\colon K\rightarrow\gl(L/_{K}), \phi\mapsto\overline{\phi}
    \end{gather*}
    ist ein Homomorphismus von Lie-Algebren. Wegen $\dim\Phi(K)\leq\dim K<n$
    können wir die Induktionsvoraussetzung anwenden und erhalten ein
    $\leq+K\in L/_{K}\setminus\{0\}$ mit
    \begin{gather*}
      0=(\Phi(\phi))(\psi+K)=\overline{\phi}(\psi+K)=[\phi,\psi]+K
    \end{gather*}
    d.\,h. $[\phi,\psi]\in K$ für $\phi\in K$. Folglich gilt für $\phi,
    \phi'\in K, \alpha, \alpha'\in\C$:
    \begin{gather*}
      [\phi+\alpha\psi, \phi'+\alpha'\psi]=[\phi,\phi']+\alpha'[\phi,\psi]
	 -\alpha[\phi',\psi]\in K
    \end{gather*}
    Daher ist $K+\C\psi\subseteq L$ eine Unteralgebra, die $K$ echt enthält.
    Nach der Wahl von $K$ ist also $L=K+\C\psi$.

    Für $\phi,\phi'in K, \alpha\in\C$ ist außerdem $[\phi,\phi'+\alpha\psi]=
    [\phi,\phi'] +\alpha[\phi,\psi]\in K$. Daher ist $K\subseteq L$ Ideal. Wir
    wenden jetzt die Induktionsvoraussetzungen auf die Unteralgebra
    $K\subseteq\gl(V)$ an und erhalten so $W\colon=\{v\in V\colon \phi(v)=0
    \text{ für } \phi\in K\}\neq\emptyset$. Offenbar ist $W\subseteq V$
    Untervektorraum und für $\phi\in K, w\in W$ gilt:
    \begin{gather*}
      \phi(\psi(w))= [\phi,\psi](w)+\psi(\phi(w))= [\phi,\psi](w)=0
    \end{gather*}
    wegen $[\phi,\psi]\in K$. Daher ist $\psi(W)\subseteq W$ und die
    Einschränkung $w\colon W\rightarrow W$ von $\psi$ ist nilpotent. Sei
    $m\in\N$ mit $w^{m}=0\neq w^{m-1}$ und sei $w\in W$ mit
    $v\colon=w^{m-1}(w)\neq 0$. Dann ist $\psi(v)=0$ und $\phi(v)=0$ für $v\in
    K$. Wegen $L=K+\C\psi$ folgt die Behauptung.
  \end{proof}
\end{satzON}

\begin{satz}[Engel]
  Eine Lie-Algebra $L$ ist genau dann nilpotent, wenn $\ad_{a}\colon
  L\rightarrow L$ für alle $a\in L$ nilpotent ist.
  \begin{proof}
    \begin{itemize}
      \item["`$\Rightarrow$"'] Für $a\in L$ ist $(\ad_{a})^{0}(L)=L$. Sei
      $n\in\N$ und bereits $(\ad_{a})^{n-1}(L)\subseteq L^{n}$ bewiesen. Für
      $b\in L$ ist dann
      \begin{gather*}
	(\ad_{a})^{n}(b)=\ad_{a}(\ad_{a}^{n-1}(b))= [a,\ad_{a}^{n-1}(b)] \in
	   [L,L^{n}] = L^{n+1}
      \end{gather*}
      Folglich ist $(\ad_{a})(L)\subseteq L^{n+1}$ für $n\in\N$. Ist $L$
      nilpotent, so existiert ein $m\in\N$ mit $L^{m}=0$. Dann ist aber
      $(\ad_{a})^{m}=0$ für $a\in L$.
     \item["`$\Leftarrow$"'] Wir führen den Beweis per Induktion nach
      $n\colon=\dim L$ durch. o.\,B.\,d.\,A. sei dabei $n\neq 0$. Nach der
      Voraussetzung sind alle Elemente in der Unteralgebra $\ad(L), \gl(L)$
      nilpotent. Nach \autoref{satz:32} existiert also ein $z\in
      L\setminus\{0\}$ mit $0= \ad_{x}(z)= [x,z]$ für alle $x\in L$. Dann ist
      $z\in Z(L)$, d.\,h. $Z(L)\neq0$. Für $a\in L$ ist auch
      $\ad_{a+Z(L)}\colon L/_{Z(L)}\rightarrow L/_{Z(L)}$ nilpotent. Wegen
      $\dim L/_{Z(L)}<n$ kann man die Induktionsvoraussetzung auf $L/_{Z(L)}$
      anwenden. Fologlich ist $L/_{Z(L)}$ nilpotent, also auch $L$ nach
      Bemerkung 3.1 (iv). \todo{Link einfügen.}
    \end{itemize}
  \end{proof}
\end{satz}


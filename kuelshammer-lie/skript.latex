\begin{bemerk}
  Im obigen Satz sei $e_{1},\dotsc, e_{n}$ eine Basis von $M$. Dann bilden die
  Elemente $e_{i}\wedge e_{j}\wedge e_{k}$ mit $1\leq i<j<k\leq n$ eine Basis
  von $\bigwedge^{3}M$. Sei $a\in L$ und $ae_{j}=\sum_{i=1}^{n}
  \alpha_{ij}e_{i}$ mit $\alpha_{ij}\in\C$ für alle $i,j$. Außerdem sei
  $v=\sum_{1\leq i<j<k\leq n} \xi_{ijk} e_{i}\wedge e_{j}\wedge e_{k}
  \in\bigwedge^{3}M$ mit $\xi_{ijk}\in\C$ für alle $i,j,k$. Ist $1\leq
  i<j<k\leq n$ und $\pi\in\Sym(\{i,j,k\})$, setzen wir
  $\xi_{\pi(i)\pi(j)\pi(k)}\coloneqq  (\sgn \pi)\xi_{ijk}$. Zusätzlich setzen wir
  $\xi_{ijk}=0$, falls $i,j,k\in\{1,\dotsc,n\}$ nicht paarweise verschieden.
\end{bemerk}

\begin{satzON}
  Mit den obigen Bezeichnungen gilt:
  \begin{gather*}
    av=\sum_{r<s<t} \left(\sum_{q} \alpha_{rq} \xi_{qst} + \sum_{q}
       \alpha_{sq} \xi_{rqt} + \sum_{q} \alpha_{tq} \xi_{rsq}\right)e_{r}\wedge
       e_{s}\wedge e_{t}
  \end{gather*}
  \begin{proof}
    \begin{align*}
      ac &= \sum_{i<j<k} \xi_{ijk} a(e_{i}\wedge e_{j}\wedge e_{k})\\
      &= \sum_{i<j<k} \xi_{ijk}(ae_{i}\wedge e_{j}\wedge e_{k}+ e_{i}\wedge
	 ae_{j} \wedge e_{k}+ e_{i}\wedge e_{j}\wedge ae_{k})\\
      &= \sum_{i<j<k, l} \xi_{ijk} \alpha_{li} e_{i}\wedge e_{j}\wedge e_{k}+
	 \sum_{i<j<k,l} \xi_{ijk} \alpha_{lj} e_{i}\wedge e_{j}\wedge
	 e_{k}+\sum_{i<j<k,l} \xi_{ijk} \alpha_{lk} e_{i}\wedge e_{j}\wedge e_{k}\\
      &= \sum_{i<j<k, j\neq l\neq k} \xi_{ijk} \alpha_{li} e_{i}\wedge
	 e_{j}\wedge e_{k}+ \sum_{i<j<k, j\neq l\neq k} \xi_{ijk} \alpha_{lj}
	 e_{i}\wedge e_{j}\wedge e_{k}+ \sum_{i<j<k, j\neq l\neq k} \xi_{ijk}
	 \alpha_{lk} e_{i}\wedge e_{j}\wedge e_{k}\\
      &= \sum_{i<j<k} \alpha_{ii} \xi_{ijk} e_{i}\wedge e_{j}\wedge e_{k}
	 +\sum_{i<j<k} \alpha_{jj}\xi_{ijk} e_{i}\wedge e_{j}\wedge e_{k}
	 +\sum_{i<j<k} \alpha_{kk}\xi_{ijk} e_{i}\wedge e_{j}\wedge e_{k}\\
      &\qquad+\sum_{l<i<j<k} \alpha_{li} \xi_{ijk} e_{l}\wedge e_{j}\wedge
	 e_{k} -\sum_{l<i<j<k} \alpha_{lj} \xi_{ijk} e_{l}\wedge e_{i}\wedge
	 e_{k} +\sum_{l<i<j<k} \alpha_{lk} \xi_{ijk} e_{l}\wedge e_{i}\wedge e_{j}\\
      &\qquad+\sum_{i<l<j<k} \alpha_{li} \xi_{ijk} e_{l}\wedge e_{j}\wedge
	 e_{k} + \sum_{i<l<j<k} \alpha_{lj} \xi_{ijk} e_{i}\wedge e_{l}\wedge
	 e_{k} -\sum_{i<l<j<k} \alpha_{lk} \xi_{ijk} e_{i}\wedge e_{l}\wedge e_{j}\\
      &\qquad-\sum_{i<j<l<k} \alpha_{li} \xi_{ijk} e_{j}\wedge e_{l}\wedge
	 e_{k} +\sum_{i<j<l<k} \alpha_{lj} \xi_{ijk} e_{i}\wedge e_{l}\wedge
	 e_{k} +\sum_{i<j<l<k} \alpha_{lk} \xi_{ijk} e_{i}\wedge e_{j}\wedge e_{l}\\
      &\qquad+ \sum_{i<j<k<l} \alpha_{li} \xi_{ijk} e_{j}\wedge e_{k}\wedge
	 e_{l} -\sum_{i<j<k<l} \alpha_{lj} \xi_{ijk} e_{i}\wedge e_{k}\wedge
	 e_{l} +\sum_{i<j<k<l} \alpha_{lk} \xi_{ijk} e_{i}\wedge e_{j}\wedge
	 e_{l}\\
      &= \text{\todo{umformen, dass am Ende der Summe $e_{r}\wedge
    e_{s}\wedge e_{t}$ steht}}\\
      &= \sum_{r<s<t} (\sum_{s\neq q\neq t}
    \alpha_{rq} \xi_{qst} +\sum_{r\neq q\neq t} \alpha_{sq} \xi_{rqt} +
    \sum_{r\neq q\neq s} \alpha_{tq} \xi_{rsq})e_{r}\wedge e_{s}\wedge e_{t}
    \end{align*}
  \end{proof}
\end{satzON}


%diesmal ohne Nummer
\begin{defini}
  Sei $\Gamma$ ein Graph mit den Ecken $1,\dotsc,l$ und jeweils $n_{ij}$
  Kanten zwischen Ecken $i$ und $j$ mit $i\neq j$. Setzen
  $\omega_{ii}\colon=2$ für $i=1,\dotsc,l$ und
  $\omega_{ij}\colon=-\sqrt{n_{ij}}$ für $i\neq j$, so nennt man die
  symmetrische Bilinearform
  \begin{gather*}
    \omega\colon\R^{l}\times\R^{l}\rightarrow\R, ((\xi_{1},\dotsc,\xi_{l}),
       (\eta_{1},\dotsc,\eta_{l}))\mapsto\sum_{i,j=1}^{l} \omega_{ij}\xi_{i}
       \eta_{j}
  \end{gather*}
  die \highl{Coxeterform} von $\Gamma$.
\end{defini}

\begin{satzON}
  Sei $L$ eine halbeinfache Lie-Algebra, $H, \Phi, \Pi, \Gamma$ wie oben. Dann
  ist die Coxeterform $\omega_{\Gamma}$ positiv definit.\footnote{Der Satz ist
  das \emph{wesentliche} Hilfsmittel, um die Form der Graphen im folgenden
  nachzuweisen.}
  \begin{proof}
    Für $\alpha, \beta\in\Pi$ mit $\alpha\neq\beta$ existieren in $\Gamma$
    genau $A_{\alpha\beta}A_{\beta\alpha}=\frac{4\kappa_{L}(h_{\alpha},
    h_{\beta})^{2}}{\kappa_{L}(h_{\alpha}, h_{\alpha}) \kappa_{L}(h_{\beta},
    h_{\beta})}$ Kanten zwischen $\alpha$ und $\beta$. Wegen
    $\kappa_{L}(h_{\alpha}, h_{\beta})\leq0$ ist das
    $\omega_{\alpha\beta}=\frac{2\kappa_{L}(h_{\alpha},
    h_{\beta})}{\sqrt{\kappa_{L}(h_{\alpha}, h_{\alpha})}
    \sqrt{\kappa_{L}(h_{\beta}, h_{\beta})}}$. Ferner ist
    $\omega_{\alpha\alpha}=2=\frac{2\kappa_{L}(h_{\alpha},
    h_{\beta})}{\sqrt{\kappa_{L}(h_{\alpha}, h_{\alpha})}
    \sqrt{\kappa_{L}(h_{\beta}, h_{\beta})}}$. Für Elemente $\xi_{\alpha}\in\R
    (\alpha\in\Pi)$ ist daher
    \begin{align*}
    \sum_{\alpha,\beta\in\Pi} \omega_{\alpha\beta} \xi_{\alpha} \xi_{\beta} &=
	 \sum_{\alpha,\beta\in\Pi} \frac{2\kappa_{L}(h_{\alpha},
	 h_{\beta})}{\sqrt{\kappa_{L}(h_{\alpha}, h_{\alpha})}
	 \sqrt{\kappa_{L}(h_{\beta}, h_{\beta})}} \xi_{\alpha} \xi_{\beta}\\
      &= 2\kappa_{L}\left(\sum_{\alpha\in\Pi}
	 \frac{\xi_{\alpha}}{\sqrt{\kappa_{L}(h_{\alpha}, h_{\alpha})}},
	 \sum_{\beta\in\Pi} \frac{\xi_{\beta}}{\sqrt{\kappa_{L}(h_{\beta},
	 h_{\beta})}}\right)\geq0
    \end{align*}
    Mit $\kappa_{L}|H_{\R}\times H_{\R}$ ist auch
    $\omega_{\Gamma}$ positiv definit.
  \end{proof}
\end{satzON}

\chapter{Einfache Lie-Algebren}

%satz 8.1
\begin{satz}\label{satz:81}
  Sei $\Gamma$ ein Graph mit positiv definiter Coxeterform $\omega_{\Gamma}$
  und $\Gamma'$ ein Teilgraph von $\Gamma$, d.\,h. jede Ecke von $\Gamma'$ ist
  auch eine von $\Gamma$ und für Ecken $i,j$ von $\Gamma'$ existieren in
  $\Gamma'$ nicht mehr Kanten zwischen $i,j$ als in $\Gamma$. Dann ist auch
  $\omega_{\Gamma'}$ positiv definit.
  \begin{proof}
  Es habe $\Gamma'$ o.\,B.\,d.\,A. die
  Ecken $1,\dotsc,l'$ und $\Gamma$ die Ecken $1,\dotsc,l',\dotsc,l$ und die
  Matrizen von $\omega_{\Gamma}$ bzw. $\omega_{\Gamma'}$ seien $(\omega_{ij})$
  bzw. $(\omega_{ij}')$. Es ist $\omega_{ij}'\geq\omega_{ij}$ für alle
  $i,j=1,\dotsc,l'$. Ist $\omega_{\Gamma'}$ nicht positiv definit, dann ist
  auch $\omega_{\Gamma'}(x,x)\leq0$ für ein Element
  $x\in\R^{l'}\setminus\{0\}$. Schreibe $x=(\xi_{1},\dotsc,\xi_{l'})$. Für
  $y\colon= (\abs{\xi_{1}},\dotsc,\abs{\xi_{l}},0\dotso
  ,0)\in\R^{l}\setminus\{0\}$ gilt dann:
  \begin{align*}
    \omega_{\Gamma}(y,y) &= \sum_{i,j=1}^{l'} \omega_{ij} \abs{\xi_{i}}
       \abs{\xi_{j}} \leq \sum_{i,j=1}^{l'} \omega_{ij}' \abs{\xi_{i}}
       \abs{\xi_{j}}\\
    &\leq \sum_{i,j=1}^{l'} \omega_{ij}' \xi_{i} \xi_{j} =
       \omega_{\Gamma'}(x,x)\leq0
  \end{align*}
  Daher ist auch $\omega_{\Gamma'}$ nicht positiv definit.    
  \end{proof}
\end{satz}


% Satz 9.2
\begin{satz}\label{satz:9.2}
  Für jeden Teilkörper $L \subseteq \C$ mit $L =
  \overline{L}$, d.\,h. abgeschlossen
    gegenüber der komplexen Konjugation. und $\operatorname{i} \in L$
  gilt:\footnote{Zu gewissen Teil Umgekehrung von \autoref{satz:9.1}.}
  \begin{enumerate}[(i)]
  \item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Geraden
    $\mathcal{G}(L)$, so ist $z \in L$.
  \item Ist $z \in \C$ Schnittpunkt einer Gerade in $\mathcal{G}(L)$
    und eines Kreises in in $\mathcal{K}(L)$, so ist $z \in L(w)$ für
    ein $w \in \C$ mit $w^2 \in L$.
  \item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Kreisen in
    $\mathcal{K}(L)$, so ist $z \in L(w)$ für ein $w \in \C$ mit $w^2
    \in L$.
  \end{enumerate}
  \begin{beweis}
    \begin{enumerate}[(i)]
    \item Seien $a, b, c, d \in L$ mit $(a + \R b) \cap (c + \R d) =
      \{z\}$, d.\,h. $a + \lambda b = z = c + \mu d$ für geeignete
      $\lambda, \mu \in \R$. Dann ist $(\lambda, \mu)$ die einzige
      Lösung des linearen Gleichungssystems:
      \begin{align*}
        \lambda\Re(b) - \mu\Re(d) &= \Re(c - a) & 
        \mu\Im(b) - \mu\Im(d) &= \Im(c -a)
      \end{align*}
      und $(\lambda, \mu)$ liegt in $L \times L$. Wegen $\Re(b) =
      \frac{b + \overline{b}}{2}\in L$ und $\Im(b)= \frac{b +
        \overline{b}}{2\operatorname{i}} \in L$. Daher ist
      $z = a + \lambda b \in L$.
	
    \item Sei $z$ der Schnittpunkt der Geraden $a + \R b$ für $a, b \in
      L$ mit dem Kreis
      \begin{gather*}
        \Set{x + \operatorname{i}y | x, y \in \R, (x - c)^2 + (y -
          d)^2 = \rho^2}\qquad c, d, \rho \in L\cap\R, \rho>0
      \end{gather*}
      Schreibe $z = a + \lambda b$ mit $\lambda \in \R$. Dann ist
      \begin{gather*}
        (\Re(a) + \lambda\Re(b) - c)^2 + (\Im(a) + \lambda\Im(b) -
        d)^2 = \rho^2
      \end{gather*}
      Dies ist eine quadratische Gleichung für die Unbekannte $\lambda$ mit
      Koeffizienten in $L \cap \R$. Ist $D$ die entsprechende
      Diskriminante, so ist $D \in L$ und $\lambda \in L(\sqrt{D})$,
      also $z = a + \lambda b \in L(\sqrt{D})$.
	
    \item Sei $z$ Schnittpunkt der Kreise mit folgenden Gleichungen:
      \begin{gather*}
        (x - a_j)^2 + (y - b_j)^2 = \rho_j^2\qquad a_j, b_j, \rho_j \in
        L\cap\R, j = 1, 2
      \end{gather*}
      Subtraktion ergibt eine Gleichung der Form $(a_1 - a_2)x + (b_1
      - b_2)y = c$ mit $c \in L\cap \R$. Das $c$ enthält dabei die
      $\rho_{j}$ sowie $a_{j}^{2}$ und $b_{j}^{2}$ für $j=1,2$. Da die
      Mittelpunkte $a_1 + \operatorname{i}b_1, a_2 +
      \operatorname{i}b_2$ der gegebenen Kreise verschieden sind,
      beschreibt diese Gleichung eine Gerade, auf der mindestens zwei
      Punkte aus $L$ liegen. Also folgt die Behauptung aus (ii).
    \end{enumerate}
  \end{beweis}
\end{satz}

% Definition 9.2
\begin{defi}
  Für jede Körpererweiterung $L\mid K$ und jede Teilmenge $M \subseteq
  L$ sei $K(M)$ der Durchschnitt aller Teilkörper von $L$, die sowohl
  $K$ als auch $M$ enthalten.
\end{defi}

% Satz 9.3
\begin{satz}\label{satz:9.3}
  Für jede Teilmenge $M \subseteq \C$ mit $0, 1 \in M$ und jedes $z \in \C$ gilt:
  $z$ ist genau dann aus $m$ konstruierbar, wenn eine Folge von
  Teilkörpern
  \begin{gather*}
    \Q(M \cup \overline{M}) = L_0 \subseteq L_1 \subseteq \ldots
    \subseteq L_m
  \end{gather*}
  von $\C$ mit $z \in L_m$ und $[L_n\colon L_{n-1}] = 2$ für $n = 1,
  \dotsc, m$ existiert.
  \begin{beweis}
    \begin{itemize}
    \item["`$\Leftarrow$"'] Die angegebene Bedingung sei
      erfüllt. Nach \autoref{satz:9.1} ist $L_{0}=\Q(M \cup \overline{M})
      \subseteq M_{\infty}$. Nun gehen wir induktiv vor. Sei also $n
      \in \{1, \dotsc, m\}$ mit
      $L_{n-1} \subseteq M_{\infty}$ und sei $x \in L_n \setminus
      L_{n-1}$. Das geht, da der Grad der Körpererweiterung $2$
      ist. Dann ist $L_n = L_{n-1}(x)$ und das Minimalpolynom $\mu$ von
      $x$ über $L_{n-1}$ hat die Form $\mu = X^2 + aX + b$ mit $a, b
      \in L_{n-1}$. Also machen wir eine quadratische Ergänzung $(x +
      \frac{a}{2})^2 = x^2 + ax +
      \frac{a^2}{4} = \frac{a^2}{4} - b \in L_{n-1} \subseteq
      M_{\infty}$, also auch $x + \frac{a}{2} \in M_{\infty}$ nach dem
      \autoref{satz:9.1} (abgeschlossen gegenüber Ziehen von
      Quadratwurzel). Damit $L_n = L_{n-1}(x + \frac{a}{2})
      \subseteq M_{\infty}$. Insbesondere ist $z \in L_{m}\subseteq M_{\infty}$.
    \item["`$\Rightarrow$"'] Sei $z \in M_{\infty}$, also $z \in M_{k}$
      für ein $k \in \N_{0}$. Sei \OE{} $k \in \N$. Dann ist $z$ in \emph{einem}
      Schritt aus endlich vielen Punkten $y_1, \ldots, y_s \in
      M_{k-1}$ konstruierbar. Wir können annehmen, dass für $y_1,
      \ldots, y_s$ die Behauptung schon gilt. Für $j = 1, \ldots, s$
      existiert also eine Folge von Teilkörpern $\Q(M \cup \overline{M}) = L_{j_0}
      \subseteq L_{j_1} \subseteq \ldots \subseteq L_{j_{l_{j}}}$ von
      Teilkörpern von $\C$ mit $y_j \in L_{j_{l_j}}$. Dabei ist
      $l_{j}$ die Länge der Folge. Weiter haben wir
      $[L_{j,k}\colon L_{j,k-1}] = 2$ für $k = 1, \dotsc, l_j$. Jedes
      $L_{j,k}$ entsteht aus $L_{j, k-1}$ durch Adjunktion einer
      Quadratwurzel. Adjungiert man zu $\Q(M \cup \overline{M})$
      nacheinander all diese Quadratwurzeln sowie $\operatorname{i}$,
      so erhält man eine Folge
      von Teilkörpern $\Q(M \cup \overline{M}) = K_0 \subseteq K_1
      \subseteq \ldots \subseteq K_r$ von $\C$ mit $i, y_1, \dotsc,
      y_n \in K_r = \overline{K_r}$. Aus dem \autoref{satz:9.2} folgt die
      Behauptung für $z$.
    \end{itemize}
  \end{beweis}
\end{satz}


% Kapitel 1

\chapter{Elementare Zahlentheorie}

Mit $\N$ wird immer das Intervall $[1,\infty[$ bezeichnet und $\N_0 =
\N \cup 0$.

% Satz 1.1
\index{Division mit Rest}
\begin{satz}[Division mit Rest]\label{satz:1.1}
  Zu $a \in \Z$ und $m \in \N$ existieren stets eindeutig bestimmte
  $q, r \in \Z$ mit $a = qm + r$ und $0 \leq r < m$.
\begin{beweis}
Sei $R \coloneqq \{a - qm \colon q \in \Z\}$. Dann $R \cap \N_{0} \neq
\emptyset$. Denn für $a \geq 0$ ist $a - 0m = a \in \N_{0}$, und
für $a < 0$ ist $a - am = a(1 - m) \in \N_{0}$ ein kleinstes
Element. Sei $r \coloneqq a - qm \coloneqq \min R \cap \N_{0}$ mit $q \in \Z$. Dann
$r \geq 0$, aber $r - m = a - (q + 1)m < 0$. Denn wegen der obigen
Voraussetzung gilt, $\min R\cap\N_0=a-qm\Rightarrow a-(q+1)m\notin
R\cap\N_0 \Rightarrow a-(q+1)m<0$. Damit folgt, $r < m$. Also $q,
r$ wie gewünscht.

Seien auch $q', r' \in \Z$ mit $a = q'm + r'$ und $0 \leq r' <
m$. Dann $r - r' = (q' - q)m$. Wegen $\abs{r - r'} < m$ folgt $q' - q
= 0$. Denn $\abs{r-r} = \abs{(q'-q)m}<m$ und da $m\in\N\Rightarrow m
\abs{q'-q}< m\Rightarrow \abs{q'-q}<1\Rightarrow -1<q'-q<1$. Also $q'
= q$, d.\,h. $r' = r$.
\end{beweis}
\end{satz}

% Definition 1.1
\begin{defi}
Man bezeichnet $q$ als \addindex{Quotient} und $r$ als \addindex{Rest}.
\end{defi}

% Definition 1.2
\begin{defi}\label{defi:1.2}
  Man nennt $a \in \Z$ \addindex{Teiler} von $b \in \Z$ und schreibt
  $a\mid b$, wenn ein $c \in \Z$ mit $b = ac$ existiert. Man sagt auch $a$
  teilt $b$, $b$ ist Vielfaches von $a$, $b$ ist durch $a$ teilbar usw.
\end{defi}

% Satz 1.2
\begin{satz}\label{satz:1.2}
Für alle $a, b, c, x, y \in \Z$ gilt:
  \begin{inparaenum}[(i)]
	\item $a\mid 0$, $1\mid a$, $a\mid a$
	\item $a\mid b \Rightarrow \pm a\mid \pm b$
	\item $a\mid b \wedge b\mid c \Rightarrow a\mid c$
	\item $a\mid b \wedge b\mid a \Rightarrow a = \pm b$
	\item $a\mid b \wedge a\mid c \Rightarrow a\mid bx + cy$
	\item $0\mid a \Rightarrow a = 0$
	\item $a\mid b \wedge a,b \in \N \Rightarrow a \leq b$
\end{inparaenum}
\begin{beweis}
  Der Beweis wird nur für den Punkt (v) geführt. Der Rest ist
  analog. Nach Voraussetzung existiert $g,h \in \Z$ mit $b = ag$, $c =
  ah$. Folglich:
  \[bx + cy = agx + ahy = a(\underbrace{gx + hy}_{\in \Z})\] d.\,h. $a\mid gx + hy$.
\end{beweis}
\end{satz}

% Definition 1.3
\begin{defi}\label{defi:1.3}
Seien $a_{1}, \ldots, a_{n}, t \in \Z$ mit $t\mid a_{1}, \ldots,
t\mid a_{n}$. Dann heißt $t$ \addindex{gemeinsamer Teiler} von $a_{1},
\ldots, a_{n}$. Setze $\gt(a_{1}, \ldots, a_{n}) = \{t \in \Z
  \colon t\text{ gemeinsamer Teiler von } a_{1}, \ldots, a_{n}\}$.
\end{defi}

% Bemerkung
\index{Euklidischer Algorithmus}
\begin{bem}\label{bem:1.3}
Wegen $\gt(a_{1}, \ldots, a_{n}) = \gt(\pm a_{1}, \ldots, \pm a_{n})$
kann man $a_{1}, \ldots, a_{n} \in \N_{0}$ annehmen. Da man $a_{1},
\ldots, a_{n}$ auch permutieren darf, kann man $a_{1} \geq \ldots \geq
a_{n}$ annehmen, sogar $a_{1} > \ldots > a_{n} > 0$. Division mit Rest
  liefert $q, r \in \Z$ mit $a_{1} = qa_{n} + r$, $0 \leq r < a_{n}$.
  Aus Satz~\ref{satz:1.2} folgt $t\mid a_{1}\wedge t\mid
  a_{n}\Rightarrow t\mid \alpha_{1} a_{1}+ \alpha_{n} a_{n}$ mit
  $\alpha_{1}=1$ und $\alpha_{n}=-q$:
\[\gt(a_{1}, \ldots, a_{n}) = \gt(\underbrace{a_{1} - qa_{n}}_{=r}, a_{2}, \ldots, a_{n})\]
mit $r + a_{2} + \ldots + a_{n} < a_{1} + a_{2} + \ldots + a_{2}$.\\
Iteration ergibt schließlich:\\
\[\gt(a_{1}, \ldots, a_{n}) = \gt(b).\]
Dieses Verfahren heißt \highl[Algorithmus!euklidischer]{euklidischer
  Algorithmus} (\textsc{Euklid} 365--300).
\end{bem}

% Beispiel
\begin{bsp}
Das Beispiel zeigt die Anwendung des euklidischen Algorithmus'.
\begin{align*}
  \gt(45, 27, 12) & = \gt(\overbrace{45 - 3 \cdot 12}^{9}, 27, 12) =
  \gt(27, 12, 9) = \gt(27 - 3 \cdot 9, 12, 9)\\
  & = \gt(12, 9) = \gt(12 - 1 \cdot 9, 9) = \gt(9, 3) = \gt(9 - 3
  \cdot 3, 3)\\
  & = \gt(3) = \{\pm 1, \pm 3\}
\end{align*}
\end{bsp}

% Definition 1.4
%\index{Größter gemeinsamer Teiler}
\begin{defi}\label{defi:1.4}
  Seien $a_{1}, \ldots, a_{n} \in \Z$. Ein $d \in \N_{0} \cap
  \gt(a_{1}, \ldots, a_{n})$ heißt \addindex{größter gemeinsamer
    Teiler}\footnote{Bezeichnung: ggT} von $a_{1}, \ldots, a_{n}$,
  falls $d$ durch jeden gemeinsamen Teiler von $a_{1}, \ldots, a_{n}$
  teilbar ist.
\end{defi}

% Satz 1.3
\begin{satz}[Existenz des größten gemeinsamen Teilers]\label{satz:1.3}
Zu $a_{1}, \ldots, a_{n} \in \Z$ existiert stets genau ein größter
  gemeinsamer Teiler $d$.
\begin{beweis}
  Nach \autoref{bem:1.3} ist $\gt(a_{1}, \ldots, a_{n}) =
  \gt(b)$ für ein $b \in \N_{0}$. Dann ist $b$ ein größter gemeinsamer
  Teiler von $a_{1}, \ldots, a_{n}$. Ist $b' \in \N_{0}$ ein weiterer
  größter gemeinsamer Teiler von $a_{1}, \ldots, a_{n}$, so
  gilt \[b\mid b' \wedge b'\mid b,\] also $b = \pm b'$ nach
  \autoref{satz:1.2}. Wegen $b, b' \in \N_{0}$ folgt $b = b'$.
\end{beweis}
\end{satz}

% Bemerkung
\begin{bem}
  Man schreibt $d = \ggt(a_{1}, \ldots, a_{n})$ und zeigt leicht:\[d =
  \ggt(a_{1}, \ggt(a_{2}, \ldots, a_{n})).\] Daher genügt es meist,
  den größten gemeinsamen Teiler von zwei Zahlen zu berechnen.
\end{bem}

% Satz 1.4
\index{Erweiterter Euklidischer Algorithmus}
\begin{satz}[Erweiterter Euklidischer Algorithmus]\label{satz:1.4}
  Seien $a, b \in \N$. Setze
  \begin{align*}
    (x_{0}, y_{0}, z_{0}) & \coloneqq (1, 0, a) & (x_{1}, y_{1}, z_{1}) & \coloneqq
    (0, 1, b)
  \end{align*}
  und $i \coloneqq 1$. Im Fall $z_{i} = 0$ brechen wir ab. Im Fall $z_{i}
  \neq 0$ liefert Division mit Rest $q_{i}, r_{i} \in \Z$ mit $z_{i-1}
  = q_{i}z_{i} + r_{i}, 0 \leq r_{i} < z_{i}$. Wir setzen
  \[(x_{i+1}, y_{i+1}, z_{i+1}) \coloneqq (x_{i-1} - q_{i}x_{i}, y_{i-1} -
  q_{i}y_{i}, z_{i-1} - q_{i}z_{i}),\]
  erhöhen $i$ um 1 und iterieren. Dieses Verfahren bricht ab, und am
  Ende ist
  \[\ggt(a, b)  = z_{i-1} = x_{i-1}a + y_{i-1}b.\]
\begin{beweis}
Wegen $b = z_{1} > z_{2} > \ldots > z_{i-1} > z_{i} = 0$ bricht das
Verfahren ab.

Am Anfang ($i = 1$) ist $\ggt(a, b) = \ggt(z_{i-1}, z_{i})$, und das
bleibt während des Verfahrens erhalten. Beachte $\ggt(z_{i-1}, z_{i})
= \ggt(z_{i}, z_{i+1})$ mit $z_{i+1}= z_{i-1}-q_i z_i$. Am Ende ist
$z_{i} = 0$, also $\ggt(a, b) = \ggt(z_{i-1}, z_{i}) = z_{i-1}$. Am
Anfang $(i = 0, 1)$ ist $x_{i}a + y_{i}b = z_{i}$, und das bleibt
während des Verfahrens erhalten:

\[x_{i+1}a + y_{i+1}b = (x_{i-1} - q_{i}x_{i})a + (y_{i-1} -
q_{i}y_{i})b = \underbrace{x_{i-1}a + y_{i}b}_{z_{i-1}} -
q_{i}\underbrace{(x_{i}a + y_{i}b)}_{z_{i}} = z_{i+1}\] 
\end{beweis}
\end{satz}

% Beispiel
\begin{bsp}
$a = 143, b = 91$:\\
\begin{tabular}{c|c|c|c}
$x_{i}$ & $y_{i}$ & $z_{i}$ & $q_{i}$\\
\toprule
1 & 0 & 143\\
0 & 1 & 91 & 1\\
1 & -1 & 52 & 1\\
-1 & 2 & 39 & 1\\
2 & -3 & 13 & 3\\
& & 0\\
\bottomrule
\end{tabular}
Also ist $\ggt(143, 91) = 13 = 2 \cdot 143 - 3 \cdot 91$.
\end{bsp}

% Bemerkung
\begin{bem}
  Der erweiterte euklidische Algorithmus liefert also nicht nur $d \coloneqq
  \ggt(a, b)$, sondern auch $x, y \in \Z$ mit $d = ax + by$. Ist man
  an $x, y$ nicht interessiert, so kann man bei der Iteration die
  $x_{i}, y_{i}$ weglassen.
\end{bem}

% Satz 1.5
\begin{satz}\label{satz:1.5}
  Für $a_{1}, \ldots a_{n}, b \in \Z$ gilt:
  \[\exists\ x_{1}, \ldots, x_{n} \in \Z \colon b = x_{1}a_{1} +
  \ldots + x_{n}a_{n} \Leftrightarrow \ggt(a_{1}, \ldots, a_{n})\mid b.\]
\begin{beweis}
  \begin{itemize}
  \item["`$\Rightarrow$"'] Sei $b = x_{1}a_{1} + \ldots + x_{n}a_{n}$
    mit $x_{1}, \ldots, x_{n} \in \Z$. Für $t \in \gt(a_{1}, \ldots,
    a_{n})$ gilt dann $t\mid x_{1}a_{1} + \ldots + x_{n}a_{n} =
    b$. Insbesondere $\ggt(a_{1}, \ldots, a_{n})\mid b$.
  \item["`$\Leftarrow$"'] Sei $d \coloneqq \ggt(a_{1}, \ldots, a_{n})\mid b$, etwa
    $b = cd$. Es genügt zu zeigen, dass $y_{1}, \ldots, y_{n} \in \Z$
    existieren mit $d = y_{1}a_{1} + \ldots + y_{n}a_{n}$, denn dann
    ist $b = cd = cy_{1} a_{1} + \ldots + cy_{n} a_{n}= x_1 a_1
    +\ldots + x_n a_n$ für $x_i = cy_i$. Die Existenz von $y_{1},
    \ldots, y_{n}$ zeigen wir induktiv. Im Fall $n = 1$ ist $d = \pm
    a_{1}$. Im Fall $n = 2$ folgt die Existenz von $y_{1}, y_{2}$ aus
    \autoref{satz:1.4}. Im Fall $n > 2$ existieren nach Induktion
    $z_{1}, \ldots, z_{n} \in \Z$ mit $\ggt(a_{2}, \ldots, a_{n}) =
    z_{2}a_{2} + \ldots + z_{n}a_{n}$. Außerdem existieren $v_{1},
    v_{2} \in \Z$ mit $d = \ggt(a_{1}, \ggt(a_{2}, \ldots, a_{n}))$
    und sind nach \autoref{satz:1.5} gleich $v_{1}a_{1} +
    v_{2}\ggt(a_{2}, \ldots, a_{n}) = v_{1}a_{1} + v_{2}z_{2}a_{2} +
    \ldots + v_{2}z_{n}a_{n}$.
  \end{itemize}
\end{beweis}
\end{satz}

% Bemerkung
\begin{bem}
  Daher gilt: \[\ggt(a_{1}, \ldots, a_{n}) = 1 \Leftrightarrow
  \exists\ x_{1}, \ldots, x_{n} \in \Z \colon x_{1}a_{1} + \ldots +
  x_{n}a_{n} = 1.\] Gegebenenfalls heißen $a_{1}, \ldots, a_{n}$
  \addindex{teilerfremd}.
\end{bem}

% Definition 1.5
\begin{defi}\label{defi:1.5}
  Eine natürliche Zahl $p \neq 1$ heißt \addindex{Primzahl}, falls
  $\pm 1, \pm p$ ihre einzigen Teiler sind. Setze
  \[\PZ = \{p \in \N \colon p  \text{ Primzahl}\}\]
  Ist $a \in \Z$ und $p \in \PZ$ mit $p\mid a$, so heißt $p$ \addindex{Primteiler}
  (\addindex{Primfaktor}) von $a$.
\end{defi}

% Bemerkung
\begin{bem}
$\PZ = \{2, 3, 5, 7, 11, 13, \ldots\}$
\end{bem}

% Satz 1.6
\begin{satz}\label{satz:1.6}
Jede natürliche Zahl $a \neq 1$ hat einen Primteiler.
\begin{beweis}
  Wegen $1 \neq a\mid a$ ist $D \coloneqq \{d \in \N \colon 1 \neq d\mid a\} \neq
  \emptyset$. Folglich existiert $p \coloneqq \min D$. Wäre $p \notin
  \PZ$, so hätte $p$ einen Teiler $t \in \N$ mit $1 \neq t \neq
  p$. Dann wäre aber $t < p$ und $t \in D$ im Widerspruch zur Wahl
  von $p$. Also $p \in \PZ$.
\end{beweis}
\end{satz}

% Satz 1.7
\begin{satz}[Euklid]\label{satz:1.7}
$\abs{\PZ} = \infty$
\begin{beweis}
  Seien $p_1, \ldots, p_r \in \PZ$. Nach \autoref{defi:1.5} hat
  $m \coloneqq p_1 \cdots p_{r}+1$ einen Primfaktor $p_{r+1}$. Wegen $p_1
  \nmid  m, \ldots, p_r \nmid  m$ ist $p_{r+1} \notin \{p_1,
    \ldots, p_r \}.$
\end{beweis}
\end{satz}


% Bemerkung
\begin{bem}
  Die größte bekannte Primzahl ist $2^{32582657}-1$ (04.09.2006). Sie
  hat fast 10 Millionen
  Dezimalstellen. (\url{http://primes.utm.edu/largest.html}). Die Zahl
  im Exponent muss ebenfalls eine Primzahl sein.
\end{bem}

% Satz 1.8
\begin{satz}\label{satz:1.8}
  Für $a, b \in \Z$ ist jeder Primteiler $p$ von $ab$ ein Teiler von
  $a$ oder $b$.
\begin{beweis}
  Im Fall $p\mid a$ sind wir fertig. Sei also $p \nmid a$. Dann $1 =
  \ggt(p, a) = xp + ya$ mit geeigneten $x, y \in \Z$. Folglich gilt
  $p\mid xpb + yab = (xp + ya)b = 1b = b$.
\end{beweis}
\end{satz}


% Bemerkung
\begin{bem}
  Induktiv folgt leicht: Sind $a_1, \ldots, a_r \in \Z$ und $p \in
  \PZ$ mit $p\mid a_1 \cdots a_r$, so ist $p\mid a_i$ für ein $i \in
  \{1, \ldots, r\}$.
\end{bem}

% Satz 1.9
\index{Primfaktorzerlegung}
\begin{satz}[Eindeutige Primfaktorzerlegung]\label{satz:1.9}
  Zu jeder natürlichen Zahl $m \neq 1$ existieren $p_1, \ldots, p_r
  \in \PZ$ mit $m = p_1 \cdots p_r$. Sind auch $q_1, \ldots, q_s \in
  \PZ$ mit $m = q_1 \cdots q_s,$ so ist $r = s,$ und nach
  Umnummerierung gilt $p_i = q_i$ für $i = 1, \ldots, r$.
\begin{beweis}
\begin{description}
\item[Existenz] Nach \autoref{satz:1.6} hat $m$ einen Primteiler
  $p$. Im Fall $m = p$ sind wir fertig. Anderenfalls ist $\frac{m}{p}
  \in \N$ und $1 < \frac{m}{p} < m$. Induktiv können wir annehmen,
  dass $p_1, \ldots, p_{r-1} \in \PZ$ existiert mit $\frac{m}{p} = p_1
  \cdots p_{r-1}$, d.\,h. $m = p_1 \cdots p_{r-1}p$.
\item[Eindeutigkeit] Aus $p_1 \cdots p_r = m = q_1 \cdots q_s$ folgt
  $p_r\mid q_1 \ldots q_s$, also $p_r\mid q_i$ für ein $i \in \{1,
  \ldots, s\}$. Sei also o.\,B.\,d.\,A. $p_r\mid q_s$. Wegen $q_s \in
  \PZ$ folgt $p_r = q_s$, d.\,h. $p_1 \ldots p_{r-1} = q_1 \ldots
  q_{s-1}$. Induktiv ist $r-1 = s-1$ und $p_i = q_i$ für $i = 1,
  \ldots, r-1$ (nach Umnummerierung).
\end{description}
\end{beweis}
\end{satz}

% Bemerkung
\begin{bem}
\begin{enumerate}[(i)]
\item Man nennt $m = p_1 \cdots p_r$ die \addindex{Primfaktorzerlegung} von
  $m$. Durch Zusammenfassen mehrfach auftretender Faktoren kann man
  diese auch in der Form
  \[m = q_1^{a_1} \cdots q_t^{a_t}\]
  mit paarweisen verschiedenen $q_1, \ldots, q_t \in \PZ$ und beliebigen
  $a_1, \ldots, a_t \in \N$ schreiben. Eine weitere Schreibweise ist
  \[m = \prod_{p \in \PZ} p^{b_p}\]
  wobei $b_p \in \N_0$ für
  alle $p \in \PZ$ und $\abs{\{p \in \PZ \colon b_p \neq 0\}} <
  \infty$ ist. So kann man auch $ 1 = \prod_{p \in \PZ}p^0$ als
  Primfaktorzerlegung der 1 auffassen.
\item Die Teiler von $m = \prod_{p \in \PZ}p^{b_p}$ sind genau
  die Zahlen $\pm \prod_{p \in \PZ}p^{t_p}$ mit $t_p \leq b_p$
  für alle $p \in \PZ$.
\item Die gemeinsamen Teiler von $m = \prod_{p \in \PZ}p^{b_p}$ und $n
  = \prod_{p \in \PZ}p^{c_p}$ sind also genau die Zahlen $\pm \prod_{p
    \in \PZ}p^{t_p}$ mit $t_p \leq \min \{b_p, c_p\}$ für
  alle $p \in \PZ$. Daher ist
  \[\ggt(a, b) = \prod_{p \in \PZ} p^{\min\{b_p, c_p\}}\]
\item Die Konstruktion großer Primzahlen und die Primfaktorzerlegung
  großer natürlicher Zahlen sind von erheblicher Bedeutung für die
  Kryptographie, d.\,h. die Lehre vom Ver- sowie Entschlüsseln
  geheimer Nachrichten.
\end{enumerate}
\end{bem}

% Kapitel 2
\chapter{Kongruenzen}
% Bemerkung
\begin{bem}\label{bem:2.1}
  Bekanntlich ist eine \addindex{Relation} ein Tripel $(M, N, R)$,
  wobei $M, N$ Mengen mit $R \subseteq M \times N$ sind. Statt $(x, y)
  \in R$ schreibt man meist $xRy$. Eine \addindex{Äquivalenzrelation}
  auf einer Menge $M$ ist eine Relation der Form $(M, M, R)$ mit
  folgenden Eigenschaften:
\begin{compactdesc}
  \item[Reflexivität] $x \in M \Rightarrow xRx$
  \item[Symmetrie] $xRy \Rightarrow yRx$
  \item[Transitität] $xRy \wedge yRz \Rightarrow xRz$
\end{compactdesc}
Wichtige Beispiele sind die Kongruenz von Dreiecken oder die
Ähnlichkeit von Matrizen. Für eine beliebige Äquivalenzrelation
$(M, M, R)$ und $x \in M$ heißt $[x]_R \coloneqq \{y \in M \colon xRy\}$ die
\addindex{Äquivalenzklasse} von $x$ bzgl. $R$. Mit $M/R \coloneqq \{[x]_R
  \colon x \in M\}$ bezeichnet man die Menge aller Äquivalenzklassen
  von $M$ bzgl. $R$. Bekanntlich sind für $x, y \in M$ die folgenden
Eigenschaften gleichbedeutent:
\begin{compactenum}[(1)]
  \item $xRy$
  \item $[x]_R = [y]_R$
  \item $[x]_R \cap [y]_R \neq \emptyset$
\end{compactenum}
Daher ist $M/R$ eine Partition von $M$, d.\,h. eine Menge nichtleerer,
paarweise disjunkter Teilmengen von $M$ mit Vereinigung $M$.

Bekanntlich erhält man umgekehrt zu jeder Partition $\mathcal{P}$
einer Menge $M$ eine Äquivalenzrelation $(M, M, R)$, wenn man
definiert: \[xRy \colon \Leftrightarrow \exists\ P \in \mathcal{P}
\colon x, y \in P.\] Ferner ist dann $M/R = \mathcal{P}$.

Daher sind Äquivalenzrelationen auf einer Menge $M$ und Partitionen
von $M$ verschiedene Sichtweisen des gleichen mathematischen
Sachverhaltes.
\end{bem}

% Definition
\index{Modulo}
\begin{defi}
  Seien $a, b \in \Z, m \in \N$ mit $m\mid a - b$. Dann nennt man $a$
  \addindex{kongruent} zu $b$ modulo $m$ und schreibt $a \equiv b\pmod m$.
\end{defi}

% Satz 2.1
\begin{satz}\label{satz:2.1}
  Die Kongruenz modulo $m$ ist eine Äquivalenzrelation auf
  $\Z$. Ferner ist sie mit Addition und Multiplikation
  verträglich, d.\,h. es gilt: \[a \equiv a'\pmod m \wedge b
  \equiv b'\pmod m \Rightarrow a ~\substack{+\\ \cdot}~b \equiv a'
  ~\substack{+\\ \cdot}~b'\pmod m.\]
  \help{Wie kann man die obigen Zeichen verbessern? - besser?}
\begin{beweis}
  \begin{compactdesc}
  \item[Reflexivität]$a \in \Z \Rightarrow m\mid 0 = a - a \Rightarrow
    a \equiv a\pmod m$
  \item[Symmetrie]$a \equiv b\pmod m \Rightarrow m\mid a - b
    \Rightarrow m\mid -(a - b) = b - a \Rightarrow b \equiv a\pmod b$
  \item[Transitivität] $a \equiv b\pmod m \wedge b \equiv c\pmod m
    \Rightarrow m\mid a - b \wedge m\mid b - c \Rightarrow m\mid (a -
    b) + (b - c) = a - c \Rightarrow a \equiv c\pmod m$
  \item[Verträglichkeit] Sei $a \equiv a'\pmod m$ und $b \equiv
    b'\pmod m$, d.\,h. $m\mid a - a'$ und $m\mid b - b'$. Dann ist
    $m\mid (a - a') + (b - b') = (a + b) - (a' + b')$, d.\,h. $a + b
    \equiv a' + b'\pmod m$. Außerdem ist $m\mid (a - a')b + a'(b - b')
    = ab - a'b'$, d.\,h. $ab \equiv a'b'\pmod m$.
  \end{compactdesc}
\end{beweis}
\end{satz}

% Bemerkung
\begin{bem}
  Für $a \in \Z$ und $m \in \N$ heit $a + m\Z = \{a + mz \colon z
  \in \Z\} = \{\ldots, a - 2m, a - m, a, a + m, a + 2m, \ldots\}$ die
  Restklassen von $a$ modulo $m$. (z.\,B. ist $2 + 6\Z = \{\ldots,
  -10, -4, 2, 8, 14, \ldots\}$). Die Bezeichnung
  "`\addindex{Restklasse}"' erklärt sich folgendermaßen: Division mit
  Rest liefert $q, r \in \Z$ mit $a = qm + r$ und $0 \leq r <
  m$. Wegen $m\mid qm = a - r$ ist dann $a \equiv r\pmod m$, d.\,h. $a
  + m\Z = r + m\Z$. Offenbar ist $a + m\Z$ die Äquivalenzklasse von
  $a$ bzgl. der Kongruenz modulo $m$.

  Die Menge aller Restklassen ist also \[\{a + m\Z \colon a \in
    \Z\} = \{0 + m\Z, 1 + m\Z, \ldots, (m - 1) +
    m\Z\} =\colon \ZmZ{m}\]
  Sind $r, s \in \{0, \ldots, m - 1\}$ mit $r \equiv s\pmod m$, so ist
  $m\mid  r - s$ und $\abs{ r - s} < m$, also $r - s = 0$, d.\,h. $r =
  s$. Also: $\abs{\ZmZ{m}} = m$.
\end{bem}

% Satz 2.2
\begin{satz}\label{satz:2.2}
Für $a, b, c \in \Z$ und $m \in \N$ gilt:
\begin{enumerate}[(i)]
  \item $m\mid ab \wedge \ggt(a, m) = 1 \Rightarrow m\mid b$.
  \item $ab \equiv ac\pmod m \Leftrightarrow b \equiv c
    \pmod{\frac{m}{\ggt(a, m)}}$.
\end{enumerate}
\begin{beweis}
\begin{enumerate}[(i)]
\item Sei $\ggt(a, m) = 1$. Dann existieren $x, y \in \Z$ mit $xa + ym
  = 1$, d.\,h. $xab + ymb = b$. Aus $m\mid ab$ folgt $m\mid b$.
\item
  \begin{itemize}
  \item[\glqq$\Rightarrow$\grqq] Sei $ab \equiv ac\pmod m$,
    d.\,h. $m\mid ab - ac$, etwa $a(b - c) = mz$ für ein $z \in
    \Z$. Dann $\frac{a}{d}\left(b - c\right) = \frac{m}{d}z$ mit $d \coloneqq
    \ggt(a, m)$. Wegen $\ggt\left(\frac{a}{d}, \frac{m}{d}\right) = 1$
    folgt aus (i): \[\frac{m}{d}\mid b - c \text{, d.\,h. } b \equiv
    c\pmod{\frac{m}{d}}\]
  \item[\glqq$\Leftarrow$\grqq] Sei $b \equiv c\pmod{\frac{m}{d}}$,
    d.\,h. $b - c = z\frac{m}{d}$ für ein $z \in \Z$. Dann: $a(b -
    c) = zm\frac{a}{d}$, d.\,h. $ab \equiv ac\pmod m$.
  \end{itemize}
\end{enumerate}
\end{beweis}
\end{satz}

% Beispiel
\begin{bsp}[Vorsicht bei Division von Kongruenzen!]
  $2 \cdot 6 \equiv 2 \cdot 2\pmod 8$, aber $6 \not\equiv 2\pmod 8$
  siehe \autoref{satz:2.2}(ii)!
\end{bsp}

% Satz 2.3
\begin{satz}\label{satz:2.3}
  Seien $a, b \in \Z, m \in \N$ und $d \coloneqq \ggt(a, m)$.  Die Kongruenz
  $ax \equiv b\pmod m$ hat genau dann eine Lösung $x \in \Z$, wenn
  $d\mid b$ gilt. Gegebenenfalls bilden die Lösungen eine Vereinigung
  (disjunkte Vereinigung) von $d$ Restklassen modulo $m$.
\begin{beweis}
  \begin{itemize}
  \item["`$\Rightarrow$"'] Sei $x \in \Z$ mit $ax \equiv b\pmod
    m$. Dann existiert $y \in \Z$ mit $ax - b = my$. Folglich: $d\mid
    ax - my = b$.
  \item["`$\Leftarrow$"'] Sei $d\mid b, a_0 \coloneqq \frac{a}{d}, m_0
    \coloneqq \frac{m}{d}, b_0 \coloneqq \frac{b}{d}$. Wegen $\ggt(a_0, m_0) = 1$
    existiert $y_0, z_0 \in \Z$ mit $1 = a_0y_0 + m_0z_0$. Daher: $b =
    \underbrace{a_0b}_{= ab_0}y_0 + \underbrace{m_0b}_{= mb_0}z_0
    \equiv ax_0\pmod{m}$ mit $x_0 = b_0y_0$. Somit folgt die Existenz
    einer Lösung.

    Für $x \in \Z$ gilt: \[ax \equiv b\pmod m \Leftrightarrow ax =
    ax_0\pmod m \stackrel{\text{\autoref{satz:2.2}}}{\Leftrightarrow} x
    \equiv x_0\pmod m \Leftrightarrow x \in x_0 + m_0 \Z\]
    Sei $z \in \Z$. Division mit Rest liefert $q, r \in \Z$ mit $z =
    qd + r$ und $0 \leq r < d$. Also $zm_0 = q\underbrace{dm_0}_{= m}+
    rm_0 \in rm_0 + m\Z$. Daher $m_0\Z = \bigcup_{r = 0}^{d - 1}(rm_0
    + m\Z)$ und $x_0 + m_0\Z = \bigcup_{r = 0}^{d - 1}(x_0 + rm_0 +
    m\Z)$.
  \end{itemize}
\end{beweis}
\end{satz}

% Beispiel
\begin{bsp}
Die Gleichung $23x \equiv 17\pmod{100}$ ist mit dem erweiterten
euklidischen Algorithmus zu lösen.\\
\begin{tabular}{c|c|c|c}
\toprule
1 & 0 & 100 & \\
0 & 1 & 23 & 4\\
1 & -4 & 8 & 2\\
-2 & 9 & 7 & 1\\
3 & -13 & 1 & \\
\bottomrule
\end{tabular}\\
Also: $1 = 3 \cdot 100 - 13 \cdot 23 \equiv 23 \cdot (-13)\pmod{100}$
und es folgt $17 \equiv 23 \cdot (-13) \cdot 17 \equiv 23 \cdot (-221)
\equiv 23 \cdot 79 \pmod{100}$
\end{bsp}

% Definition
\begin{defi}
  Seien $a_1, \ldots, a_n \in \Z$. Ein $k \in \N_0$ mit $a_1\mid k,
  \ldots, a_n\mid k$ heißt \addindex{kleinstes gemeinsames
    Vielfaches}\footnote{Bezeichnung: kgV} von $a_1, \ldots, a_n$,
  wenn $k\mid m$ für alle $m \in \Z$ mit $a_1\mid m, \ldots, a_n\mid
  m$ gilt.
\end{defi}

% Bemerkung
\begin{bem}
  Im Fall $a_i = 0$ für ein $i \in \{1, \ldots, \}$ ist 0 das einzige
  gemeinsame Vielfache, also auch das einzige kleinste gemeinsame
  Vielfache von $a_1, \ldots, a_n$. Sei also $a_1 \cdots a_n \neq 0$
  und sei $a_i = \prod_{p \in \PZ} p^{b_{ip}}$ mit $i = 1, \ldots, n$.
  Die gemeinsamen Vielfachen von $a_1, \ldots, a_n$ haben dann die
  Form:
  \[\prod_{p \in \PZ}p^{c_p} \text{ mit } c_p \geq \max{\{b_{1p}, \ldots, b_{np}\}}\quad \forall\,p \in \PZ.\]
  Daher ist $k \coloneqq \prod_{p \in \PZ}p^{\max{\{b_{1p}, \ldots,
      b_{np}\}}}$ das einzige kleinste gemeisame Vielfache von $a_1,
  \ldots, a_n$. Dies zeigt, dass beliebige $a_1, \ldots, a_n \in \Z$
  stets genau ein kleinstes gemeisames Vielfache haben. Man schreibt
  $k = \kgv(a_1, \ldots, a_n)$.
\end{bem}

% Satz 2.4
\begin{satz}\label{satz:2.4}
Für $a_1, \ldots, a_n \in \Z$ gilt stets:
\begin{enumerate}[(i)]
\item $\kgv(a_1, \ldots, a_n) = \kgv(a_1, \kgv(a_2, \ldots, a_n))$
  (Assoziativgesetz)
\item $\kgv(a_1, \ggt(a_2, \ldots, a_n)) = \ggt(\kgv(a_1, a_2),
  \ldots, \kgv(a_1, a_n))$ (Distributivgesetz)
\item $\ggt(a_1, \kgv(a_2, \ldots, a_n)) = \kgv(\ggt(a_1, a_2),
  \ldots, \ggt(a_1, a_n))$ (Distributivgesetz)
\end{enumerate}
\begin{beweis}
Wir beweisen nur (iii). Der Rest geht analog.

Im Fall $a_1 = 0$ steht auf beiden Seiten $\kgv(a_2, \ldots,
a_n)$. Sei also $a_1 \neq 0$. Im Fall $a_i = 0$ für ein $i \in \{2,
\ldots, n\}$ steht links $\ggt(a_1, 0) = a_1$. Wegen $\ggt(a_1, a_2),
\ldots, \ggt(a_1, a_n)\mid a_1 = \ggt(a_1, a_i)$ steht auch rechts
$a_1$. Sei also $a_1 \cdot \ldots \cdot a_n \neq 0$. Schreibe $a_i =
\prod_{p \in \PZ}p^{b_{ip}}$ mit  $i = 1, \ldots, n$. Dann
\[ \prod_{p \in \PZ}p^{\min{\{b_{1p}, \max{\{b_{2p}, \ldots,
      b_{np}\}}\}}} =  \prod_{p \in \PZ}p^{\max{\{\min{\{b_{1p},
      b_{2p}\}}, \ldots, \min{\{b_{1p}, b_{np}\}}\}}}\]
Beide Seiten sind gleich, da für alle $p \in \PZ$ gilt:
\[\min{\{b_{1p}, \max{\{b_{2p}, \ldots, b_{np}\}}\}} =
\max{\{\min{\{b_{1p}, b_{2p}\}}, \ldots, \min{\{b_{1p},
    b_{np}\}}\}}\]
Dies ist leicht einzusehen, denn für $\max\{b_{2p},\ldots, b_{np}\}=
c$ gilt entweder $b_{1p}<c$ oder $b_{1p}\geq c$. Für $b_{1p}\geq c$
folgt, $\min\{b_{1p}, c\}=c=\max\{\min\{b_{1p}, b_{2p}\}, \ldots,
\min\{b_{1p}, b_{np}\}=\max\{b_{2p}, \ldots, b_{np}\}$ und für
$b_{1p}< c$ existieren $b_{ip}\geq b_{1p}$ mit $2\leq i\leq n$. Für
diese gilt, $\min\{b_{1p}, b_{ip}\}=b_{1p}$. Für die anderen Fälle ist
$\min\{b_{1p}, b_{ip}\}=b_{ip}$. Da alle die letzten $b_{ip}<b_{1p}$
ist $\max\{\min\{b_{1p}, b_{2p}\}, \ldots, \min\{b_{1p}, b_{np}\}\}= c$.
\end{beweis}
\end{satz}


% Satz 2.5
\begin{satz}[Chinesischer Restsatz \footnotesize{(stand in einem chinesischen Buch über Militärführung)}\normalsize]\label{satz:2.5}
  Seien $a_1, \ldots, a_k \in \Z$ und $m_1, \ldots, m_k$. Genau dann
  ist das System von Kongruenzen:
  \begin{gather}\label{eq:25-1}
    x \equiv a_i \pmod{m_i} \quad (i = 1, \ldots, k)
  \end{gather}
  Simultan lösbar, wenn gilt:
  \begin{gather}\label{eq:25-2}
    a_i \equiv a_j \pmod{\ggt(m_i, m_j)} \quad (i, j = 1, \ldots, k)
  \end{gather}
  Gegebenenfalls bilden die Lösungen eine Restklasse modulo $\kgv(m_1,
  \ldots, m_k)$.
\begin{beweis}
  \begin{itemize}
  \item["`$\Rightarrow$"'] Sei \autoref{eq:25-1} erfüllt. Für $i, j = 1,
    \ldots, k$ gilt dann: $a_i \equiv x \equiv a_j \pmod{\ggt(m_i,
      m_j)}$.
  \item["`$\Leftarrow$"'] Sei \autoref{eq:25-2} erfüllt. Wir
    argumentieren mit Induktion. Im Fall $k = 1$ ist nichts zu
    tun. Denn wir können einfach $x = a_1$ wählen. Sei also $k \geq 2,
    d \coloneqq \ggt(m_1, m_2), e \coloneqq \kgv(m_1, m_2)$. Schreibe $d = ym_1 +
    zm_2 (y, z \in \Z)$. Setze $b \coloneqq a_1 + (a_2 - a_1)\frac{ym_1}{d} =
    a_2 + (a_1 - a_2)\frac{zm_2}{d}$. Dann $b \equiv a_1
    \pmod{m_1}$. Denn $a_1 \equiv a_2 \pmod{d} \Rightarrow d\mid a_2 -
    a_1$ und $b \equiv a_2 \pmod{m_2}$. Im Fall $k = 2$ ist also
    \autoref{eq:25-1} lösbar.

    Sei also $k \geq 3$. Für $i = 3, \ldots, k$ ist $a_i \equiv a_1
    \equiv b \pmod{\ggt(m_i, m_1)}$ und $a_i \equiv a_2 \equiv b
    \pmod{\ggt(m_i, m_2)}$. Daraus folgt $a_i \equiv b
    \pmod{\kgv(\ggt(m_i, m_1), \ggt(m_i, m_2))} \stackrel{\text{\autoref{satz:2.3}(iii)}}{=} \ggt(m_i, \kgv(m_1, m_2)) = \ggt(m_i,
    e)$. Nach Induktion existiert ein $x \in \Z$ mit $x \equiv b
    \pmod{e}$ und $x \equiv a_i \pmod{m_i}$ für $i = 3, \ldots,
    k$. Man muss hierfür \autoref{eq:25-2} für dieses System von
    Kongruenzen überprüfen). Für $i = 1,2$ ist $x \stackrel{x \equiv b
      \pmod{e}}{\equiv} b \equiv a_i \pmod{m_i}$.
  \end{itemize}
Zum Nachweis der Eindeutigkeit sei $x' \in \Z$ weitere Lösung von
\autoref{eq:25-1}. Dann: $x' \equiv a_i \equiv x \pmod{m_i}$ für $i = 1,
\ldots, k$, d.\,h. $x' \equiv x \pmod{\kgv(m_1, \ldots, m_k)}$. Dann
ist $x' \equiv x \equiv a_i \pmod{m_i}$ für $i = 1, \ldots, k$,
d.\,h. $x'$ ist auch Lösung von \autoref{eq:25-1}. 
\end{beweis}
\end{satz}


% Beispiel
\begin{bsp}
Es seien folgende Gleichungen zu lösen:
\begin{align*}
  x & \equiv 3 \pmod{14}\\
  x & \equiv 5 \pmod{12}\\
  x & \equiv 1 \pmod{10}
\end{align*}
Um die Lösbarkeit brauchen wir uns erstmal keine Gedanken machen. Dies
wird man schon im Laufe der Rechnung feststellen. Anderenfalls
$\Rightarrow$ \autoref{eq:25-2} muss man nicht zuerst überprüfen).

Die allgemeine Lösung von $x \equiv 3 \pmod{14}$ ist $3 + 14\Z$. Somit
folgt $3 + 14y \equiv 5 \pmod{12} \Leftrightarrow 2y \equiv 2
\pmod{12} \Rightarrow y = 1$. Weiter ist $\kgv(14, 12) = 14 \cdot 6 =
84$.

Die allgemeine Lösung von $x \equiv 3 \pmod{14}$ und $x \equiv 5
\pmod{12}$ ist $17 + 84\Z$ und es folgt weiter $17 + 84z \equiv 1
\pmod{10} \Leftrightarrow 4z \equiv 4 \pmod{10} \Leftarrow z = 1$. Es
gilt $\kgv(84, 10) = 84 \cdot 5 = 420$. Somit ist die allgemeine
Lösung von ($\ast$): $101 + 420\Z$
\end{bsp}

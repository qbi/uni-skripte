% Satz 9.2
\begin{satz}\label{satz:9.2}
Für jeden Teilkörper $L \subseteq C$ mit $L = \overline{L} $\footnote{$L = \overline{L} \Rightarrow$ abgeschlossen gegenüber konjungiert komplex.} und $\operatorname{i} \in L$ gilt: \footnote{Zu gewissen Teil Umgekehrung von \autoref{satz:9.1}.}
\begin{enumerate}[(i)]
	\item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Geraden $\mathcal{G}\left(L\right)$, so ist $z \in L$
	\item Ist $z \in \C$ Schnittpunkt einer Gerade in $\mathcal{G}\left(L\right)$ und eines Kreises in in $\mathcal{K}\left(L\right)$, so ist $z \in L\left(w\right)$ für ein $w \in \C$ mit $w^2 \in L$
	\item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Kreisen in $\mathcal{K}\left(L\right)$, so ist $z \in L\left(w\right)$ für ein $w \in \C$ mit $w^2 \in L$
\end{enumerate}
\end{satz}

% Beweis
\begin{beweis}
\begin{enumerate}[(i)]
	\item Seien $a, b, c, d \in L$ mit $\left(a + \R b\right) \cap \left(c
  + \R d\right) = \left\{z\right\}$, d.\,h. $a + \lambda b = z = c + \mu d$ für geeignete $\lambda, \mu \in \R$.\\
	Dann ist $\left(\lambda, \mu\right)$ die einzige Lösung des linearen Gleichungssystems:
	\[\begin{array}{lcl}
		\lambda\Re\left(b\right) - \mu\Re\left(d\right) & = & \Re\left(c - d\right)\\
		\mu\Im\left(b\right) - \mu\Im\left(d\right) & = & \Im\left(c - a\right)
	\end{array}\]
	und $\left(\lambda, \mu\right)$ liegt in $L \times L$; wegen $\Re\left(b\right) = \frac{b + \overline{b}}{2}$, $\Im\left(b\right)= \frac{b + \overline{b}}{2\operatorname{i}}$, $\ldots \in L$.\\
	Daher: $z = a + \lambda b \in L$
	
	\item Sei $z$ Schnittpunkt der Geraden $a + \R b$ $\left(a, b \in L\right)$ mit dem Kreis \[\left\{x + \operatorname{i}y \colon x, y \in \R, \left(x - c\right)^2 + \left(y - d\right)^2 = \rho^2\right\}\ \left(c, d \in L, \rho \in L\right).\]
	Schreibe $z = a + \lambda b\ \left(\lambda \in \R\right)$. Dann:
	\[\left(\Re\left(a\right) + \lambda\Re\left(b\right) - c\right)^2 + \left(\Im\left(a\right) + \lambda\Im\left(b\right) - d\right)^2 = \rho^2\]
	Dies ist eine quadratische Gleichung für $\lambda$ mit Kooeffizienten in $L \cap \R$.\\
	Ist $D$ die entsprechende Diskriminante, so ist $D \in L$ und $\lambda \in L\left(\sqrt{D}\right)$, also $z = a + \lambda b \in L\left(\sqrt{D}\right)$.
	
	\item Sei $z$ Schnittpunkt der Kreise mit folgenden Gleichungen:
	\[\left(x - a_j\right)^2 + \left(y - b_j\right)^2 = g_j^2\ \left(a_j, b_j, \rho_j \in L, j = 1, 2\right).\]
	Subtraktion ergibt eine Gleichung der Form $\left(a_1 - a_2\right)x + \left(b_1 - b_2\right) = c,\ \left(c \in L \cap \R\right)$.
	Da die Mittelpunkte $a_1 + \operatorname{i}b_1, a_2 + \operatorname{i}b_2$ der gegebenen Kreise verschieden sind, beschreibt diese Gleichung eine Gerade, auf der mindestens zwei Punkte aus $L$ liegen. Also folgt die Behauptung aus (ii).
\end{enumerate}
\end{beweis}

% Definition 9.2
\begin{defi}\label{defi:9.2}
Für jede Körpererweiterung $L|K$ und jede Teilmenge $M \subseteq L$ sei $K\left(M\right)$ der Durchschnitt aller Teilkörper von $L$, die sowohl $K$ als auch $M$ enthalten.
\end{defi}

% Satz 9.3
\begin{satz}\label{satz:9.3}
Für jede Teilmenge $M \subseteq C$ mit $0, 1 \in M$ und jedes $z \in \C$ gilt:\\
$z$ ist aus $m$ konstruierbar $\Leftrightarrow \exists$ Folge von Teilkörpern 
\[\Q\left(M \cup \overline{M}\right) = L_0 \subseteq L_1 \subseteq \ldots \subseteq L_M\] von $\C$ mit $z \in L_m$ und $\left[L_n:L_{n-1}\right] = 2$ für $n = 1, \ldots, m$.
\end{satz}

% Beweis
\begin{beweis}
	\begin{itemize}
		\item["`$\Rightarrow$"'] Die angegebene Bedingung sei erfüllt. Nach \autoref{satz:9.1} ist $\Q\left(M \cup \overline{M}\right) \subseteq M_{\infty}$. Sei also $n \in \left\{1, \ldots, m\right\}$ mit $L_{n-1} \subseteq M_{\infty}$, und sei $x \in L_n \backslash L_{n-1}$. Dann ist $L_n = L_{n-1}\left(x\right)$ und das Minimalpolynom von $x$ über $L_{n-1}$ hat die Form $\mu = X^2 + aX + b\ \left(a, b \in L_{n-1}\right)$.\\
		Also: $\left(x + \frac{a}{2}\right)^2 = x^2 + ax + \frac{a^2}{4} = \frac{a^2}{4} - b \in L_{n-1} \subseteq M_{\infty}$, also auch $x + \frac{a}{2} \in M_{\infty}$ nach 9.1. Damit $L_n = L_{n-1}\left(x + \frac{a}{2}\right) \subseteq M_{\infty}$.\\
		Insbesondere $z \in M_{\infty}$.
	\end{itemize}
\end{beweis}


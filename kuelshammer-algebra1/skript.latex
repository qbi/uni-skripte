  \item $z \in M_{\infty} \Rightarrow w \coloneqq \sqrt{z} \in M_{\infty}$:\\
    Schreibe: $z = \abs{z}(\cos\phi + \operatorname{i} \cdot \sin\phi)$.
    Dann: $\sqrt{z} = \sqrt{\abs{z}}(\cos\frac{\phi}{2} +
    \operatorname{i} \cdot \sin\frac{\phi}{2})$. Winkelhalbierung mit
    Zirkel und Lineal bekanntlich möglich. \OE{}: $z \in \R, z > 0$:
    Höhensatz: $x^2 = 1 \cdot z$, d.\,h. $x = \sqrt{z}$\\
    \begin{tikzpicture}
      \draw[->] (-1.5,0) -- (4,0);
      \draw[->] (0,-2.2) -- (0,3);
      \draw[dotted] (3,0) arc (0:180:2);
      \filldraw (0,1.74) circle (1pt);
      \draw (-1,0) -- (0,1.74) -- (3,0);
      \draw (-1,-.2) node {$-1$};
      \draw (3,-.2) node {$z$};
      \draw (-.2,2) node {$\operatorname{i}x$};
    \end{tikzpicture}
  \end{enumerate}.
\end{beweis}
\end{satz}


% Satz 9.2
\begin{satz}\label{satz:9.2}
  Für jeden Teilkörper $L \subseteq C$ mit $L =
  \overline{L}$\footnote{$L = \overline{L} \Rightarrow$ abgeschlossen
    gegenüber konjungiert komplex.} und $\operatorname{i} \in L$
  gilt:\footnote{Zu gewissen Teil Umgekehrung von \autoref{satz:9.1}.}
  \begin{enumerate}[(i)]
  \item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Geraden
    $\mathcal{G}(L)$, so ist $z \in L$.
  \item Ist $z \in \C$ Schnittpunkt einer Gerade in $\mathcal{G}(L)$
    und eines Kreises in in $\mathcal{K}(L)$, so ist $z \in L(w)$ für
    ein $w \in \C$ mit $w^2 \in L$.
  \item Ist $z \in \C$ Schnittpunkt von zwei verschiedenen Kreisen in
    $\mathcal{K}(L)$, so ist $z \in L(w)$ für ein $w \in \C$ mit $w^2
    \in L$.
  \end{enumerate}
  \begin{beweis}
    \begin{enumerate}[(i)]
    \item Seien $a, b, c, d \in L$ mit $(a + \R b) \cap (c + \R d) =
      \{z\}$, d.\,h. $a + \lambda b = z = c + \mu d$ für geeignete
      $\lambda, \mu \in \R$. Dann ist $(\lambda, \mu)$ die einzige
      Lösung des linearen Gleichungssystems:
      \begin{align*}
        \lambda\Re(b) - \mu\Re(d) &= \Re(c - d) & 
        \mu\Im(b) - \mu\Im(d) &= \Im(c - a)
      \end{align*}
      und $(\lambda, \mu)$ liegt in $L \times L$. Wegen $\Re(b) =
      \frac{b + \overline{b}}{2}$, $\Im(b)= \frac{b +
        \overline{b}}{2\operatorname{i}}$, $\ldots \in L$. Daher ist
      $z = a + \lambda b \in L$.
	
    \item Sei $z$ der Schnittpunkt der Geraden $a + \R b$ $(a, b \in
      L)$ mit dem Kreis
      \begin{gather*}\Set{x + \operatorname{i}y | x, y \in \R, (x - c)^2 + (y -
        d)^2 = \rho^2}\qquad c, d \in L, \rho \in L\end{gather*}
      Schreibe $z = a + \lambda b$ mit $\lambda \in \R$. Dann ist
      \begin{gather*}(\Re(a) + \lambda\Re(b) - c)^2 + (\Im(a) + \lambda\Im(b) -
      d)^2 = \rho^2\end{gather*}
      Dies ist eine quadratische Gleichung für $\lambda$ mit
      Kooeffizienten in $L \cap \R$. Ist $D$ die entsprechende
      Diskriminante, so ist $D \in L$ und $\lambda \in L(\sqrt{D})$,
      also $z = a + \lambda b \in L(\sqrt{D})$.
	
    \item Sei $z$ Schnittpunkt der Kreise mit folgenden Gleichungen:
      \begin{gather*}(x - a_j)^2 + (y - b_j)^2 = g_j^2\qquad a_j, b_j, \rho_j \in
      L, j = 1, 2\end{gather*} Subtraktion ergibt eine Gleichung der Form $(a_1 -
      a_2)x + (b_1 - b_2)y = c$\todo{Vorzeichen prüfen} mit $c \in L
      \cap \R$. Da die Mittelpunkte $a_1 + \operatorname{i}b_1, a_2 +
      \operatorname{i}b_2$ der gegebenen Kreise verschieden sind,
      beschreibt diese Gleichung eine Gerade, auf der mindestens zwei
      Punkte aus $L$ liegen. Also folgt die Behauptung aus (ii).
    \end{enumerate}
  \end{beweis}
\end{satz}


% Definition 9.2
\begin{defi}\label{defi:9.2}
  Für jede Körpererweiterung $L\mid K$ und jede Teilmenge $M \subseteq
  L$ sei $K(M)$ der Durchschnitt aller Teilkörper von $L$, die sowohl
  $K$ als auch $M$ enthalten.
\end{defi}

% Satz 9.3
\begin{satz}\label{satz:9.3}
  Für jede Teilmenge $M \subseteq C$ mit $0, 1 \in M$ und jedes $z \in \C$ gilt:
  $z$ ist genau dann aus $m$ konstruierbar, wenn eine Folge von
  Teilkörpern
  \begin{gather*}\Q(M \cup \overline{M}) = L_0 \subseteq L_1 \subseteq \ldots
  \subseteq L_M\end{gather*}
  von $\C$ mit $z \in L_m$ und $[L_n\colon L_{n-1}] = 2$ für $n = 1,
  \ldots, m$ existiert.
  \begin{beweis}
    \begin{itemize}
    \item["`$\Rightarrow$"'] Die angegebene Bedingung sei
      erfüllt. Nach \autoref{satz:9.1} ist $\Q(M \cup \overline{M})
      \subseteq M_{\infty}$. Sei also $n \in \{1, \ldots, m\}$ mit
      $L_{n-1} \subseteq M_{\infty}$, und sei $x \in L_n \setminus
      L_{n-1}$. Dann ist $L_n = L_{n-1}(x)$ und das Minimalpolynom von

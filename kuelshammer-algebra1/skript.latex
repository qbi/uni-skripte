% Beispiel
\begin{bsp}\label{bsp:6.5}
  Sei $\abs{ K}  = p^n$ mit $(p \in \PZ, n \in \N)$. Dann existiert
  ein $a \in K \setminus \{0\}$ mit $K \setminus \{0\} = \{1, a, a^2,
  \ldots, a^{p^n-2}\}$ und $a^{p^n - 1} = 1$. Man nennt $a$ eine
  \highl{Primitivwurzel} in $K$.

  Zur Berechnung eignet sich oft die 2 als Primitivwurzel. In
  $\F_{17}$, multiplikative Gruppe hat 16~Elemente, gilt:
\begin{flalign*}
  2^0 &= 1 & 2^1 &= 2 & 2^2 &= 4 & 2^4 &= 16 = -1 & 2^8 &= (-1)^2 = 1 &\\
  3^0 &= 1 & 3^1 &= 3 & 3^2 &= 9 & 3^4 &= -4      & 3^8 &= (-4)^2 = 16 = -1
  & 3^{16} = (-1)^2 = 1
\end{flalign*}
Somit folgt, dass alle Potenzen von $3^0$ bis $3^{15}$ verschieden sind,
im Gegensatz zu $2^0$ bis $2^{15}$. Daher ist $2$ keine Primitivwurzel,
aber $3$.
\end{bsp}

% Definition
\begin{defi}
  Die Abbildung $f \colon K \rightarrow K,x \mapsto x^p$ heißt
  \highl{Frobenius-Endomorphismus} oder nur
  \highl{Frobenius}\footnote{Bei der Abbildung gilt
    u.\,a. $(x+y)^2=x^2+y^2$.}
\end{defi}

% Satz 6.7
\begin{satz}\label{satz:6.7}
  Sei $\ch(K) = p > 0$. Dann ist die Abbildung $f \colon K \rightarrow K,
  x \mapsto x^p$ ein Körperendomorphismus.
\begin{beweis}
  Offenbar ist $f(1) = 1$ und für $x, y \in K$ ist $f(xy) = (xy)^p =
  x^p y^p = f(x)f(y)$ und weiter $f(x + y) = (x + y)^p = x^p +
  \binom{p}{1} x^{p-1}y + \dotsb + \binom{p}{p-1} xy^{p-1} + y^p$. Für
  $i = 1, \ldots, p-1$ ist $\binom{p}{i} \in \Z$ und $\binom{p}{i} =
  \frac{p!}{i!(p - i)!}$, d.\,h. $p\mid \binom{p}{i}$. Daher
  $\binom{p}{i} 1_K = \underbrace{1 + \dotsb + 1}_{p_i \text{
      Summanden}} = 0$ und $\binom{p}{i}x^{p-1}y^i = 0$. Folglich: $(x
  + y)^p = x^p + y^p = f(x) + f(y)$.
\end{beweis}
\end{satz}

% Bemerkung
\begin{bem}\label{bem:6.10}
  Ist $K$ endlich, so ist $f$ bijektiv, denn nach
  \autoref{bem:6.6}(iv) ist $f$ injektiv. Man spricht dann auch
  von dem \highl{Frobenius-Automorphismus} von $K$.
\end{bem}

% Satz 6.8
\begin{satz}\label{satz:6.8}
  Sei $E$ ein endlicher Körper und $\abs{E} = p^e$ mit einer Primzahl
  $p$ und einer natürlichen Zahl $e$.
  \begin{enumerate}[(i)]
  \item Ist $F \subseteq E$ Teilkörper, so ist $\abs{ F} = p^f$ für
    ein $f \in \N$ mit $f\mid e$.
  \item Umgekehrt existiert zu jedem positiven Teiler $f\in\N$ von $e$
    genau ein Teilkörper $F \subseteq E$ mit $\abs{ F} = p^f$, nämlich
     $F \coloneqq \Set{b \in E | b^{p^f} = b}$.
   \end{enumerate}
   \begin{beweis}
     \begin{enumerate}[(i)]
     \item Sei $F \subseteq E$ Teilkörper. Dann ist $p = \ch(E) =
       \ch(F)$, also $\abs{ F} = p^f$ für ein $f \in \N$. Sei $n
       \coloneqq [E\colon F]$. Dann ist $E$ als $F$-Vektorraum isomorph
       zu $F^n$. Insbesondere haben wir $p^e = \abs{ E} = \abs{ F} ^n =
       p^{f^n}$, d.\,h. $f\mid e$.
     \item Sei $f \in \N$ mit $f\mid e$, etwa $e=fn$. Dann ist
       $p^{e}-1= p^{fn}-1= (p^{f}-1)(p^{f(n-1)}+\dotsb+ p^{f}+1)$, also
       $p^f-1\mid
       p^e-1$. Nach \autoref{bsp:6.5} existiert ein $a \in E$ mit
       $a^{p^e-1} = 1$ und $E = \{0, 1, a, a^2, \ldots,
       a^{p^e-2}\}$. Die Elemente
       \begin{gather*}b_i \coloneqq a^{i(p^e-1)/(p^f-1)} \qquad (i = 0, 1, \ldots,
       p^f-2)\end{gather*}
       sind paarweise verschieden mit $b_i^{p^f-1} = 1$. Die
       Multiplikation mit $b_{i}$ ergibt dann $b_i^{p^f} = b_i$. Daher
       sind $0, b_0, b_1, \ldots,
       b_{p^f-2}$ genau die Nullstellen von $X^{p^f} - X$ in
       $E$. Folglich enthält $F \coloneqq \Set{b \in E | b^{p^f} = b}$
       genau $p^f$ Elemente. Diese bilden einen Teilkörper von
       $E$. Denn $0, 1 \in F$, und für $b, c \in F$ gilt nach
       \autoref{satz:6.7}: $(b \stackrel{\pm}{\cdot} c)^{p^f}
       = b^{p^f} \stackrel{\pm}{\cdot} c^{p^f} =
       b \stackrel{\pm}{\cdot} c$, d.\,h. $b \stackrel{\pm}{\cdot} c
       \in F$. Analog $\frac{b}{c} \in F$ für $c \neq 0$.
 
       Um die Eindeutigkeit zu zeigen, sei $F' \subseteq E$ ein
       weiterer Teilkörper mit $\abs{ F'} = p^f$. Dann ist nach
       \autoref{bsp:6.5} $b^{p^f} = b$ für alle $b \in F'$. Daher gilt,
       $F' \subseteq F$. Da beide die selbe Zahl an Elementen haben,
       ist also $F' = F$.
     \end{enumerate}
   \end{beweis}
\end{satz}

% Beispiel
\begin{bsp}\label{bsp:6.6}
  Ein Körper $K$ mit $2^{12}$ Elementen hat also Teilkörper mit $2,
  2^2, 2^3, 2^4, 2^6, 2^{12}$ Elementen.
\end{bsp}

% Kapitel 7
\chapter{Algebraische Körpererweiterungen}

% Definition 7.1
\begin{defi}\label{defi:7.1}
  Sei $L\mid K$ eine Körpererweiterung. Ein $b \in L$ heißt
   \highl{algebraisch} über $K$, falls ein Polynom $\phi \in K[X]
   \setminus \{0\}$ mit $\phi(b) = 0$ existiert. Andernfalls heißt
   $b$ \highl{transzendent} über $K$.
 
   Sind alle $b \in L$ algebraisch über $K$, so heißt $L\mid K$ eine
   \highl[Körpererweiterung!algebraische]{algebraische
     Körpererweiterung}. Anderenfalls bezeichnet man diese als
   \highl[Körpererweiterung!transzendente]{transzendente Körpererweiterung}.
\end{defi}

% Beispiel 7.1
\begin{bsp}\label{bsp:7.1}
  \begin{enumerate}[(i)]
  \item Jedes $a \in K$ ist algebraisch über $K$ als Nullstelle von $X
    - a \in K[X]$.
  \item $i \in \C$ ist algebraisch über $\R$ als Nullstelle von $X^2 +
    1 \in \R[X]$.
  \item $\sqrt[3]{2} \in \R$ ist algebraisch über $\Q$ als Nullstelle
    von $X^3 - 2 \in \Q[X]$.
  \item Man kann zeigen: $e, \pi$ sind transzendent über $\Q$.
\end{enumerate}
\end{bsp}

% Bemerkung 7.1
\begin{bem}\label{bem:7.1}
   Sei $b \in L$ algebraisch über $K$ und wählen ein Polynom
   $\mu\in K[X]\setminus\{0\}$ minimalen Grades mit $\mu(b) = 0$. Dieses
   sei \OE{} $\mu$ normiert. Dann ist $\mu$ eindeutig bestimmt. Ist
   nämlich $\nu \in K[X] \setminus \{0\}$ normiert mit $\deg{\nu} =
   \deg{\mu}$ und $\nu(b) = 0$, so ist $\mu - \nu \in K[X]$ mit
   $\deg{\mu - \nu} < \deg{\mu}$ und $(\mu - \nu)(b) = 0$. Also ist
   $\mu - \nu = 0$ nach der Wahl von $\mu$ und somit gilt, $\mu =
   \nu$. Man nennt das Polynom $\mu$ als \highl{Minimalpolynom}
   von $b$ über $K$.
\end{bem}

% Beispiel 7.2
\begin{bsp}\label{bsp:7.2}
   Seien $L = \R, K = \Q$ und $b = \sqrt{2}$. Dann ist das
   Minimalpolynom $\mu = X^2 - 2$. Beachte: $\sqrt{2} \notin \Q$.
\end{bsp}

% Satz 7.1
\begin{satz}\label{satz:7.1}
   Sei $L\mid K$ Körpererweiterung und $b \in L$ algebraisch über $K$
   mit dem Minimalpolynom $\mu$. Für $\phi \in K[X]$ gilt dann:
   \begin{gather*}\phi(b) = 0 \Leftrightarrow \mu\mid\phi\end{gather*}
   Insbesondere ist $\mu$ irreduzibel in $K[X]$.
   \begin{beweis}
     \begin{itemize}
     \item["`$\Rightarrow$"'] Sei $\phi \in K[X]$ mit $\phi(b) =
       0$. Schreibe $\delta \coloneqq \ggt(\phi, \mu) = \alpha\phi +
       \beta\mu$ mit $\alpha, \beta \in K[X]$. Dann gilt: $\delta(b) =
       \alpha(b)\underbrace{\phi(b)}_{= 0} +
       \beta(b)\underbrace{\mu(b)}_{= 0} = 0$. Nach der Wahl von $\mu$
       ist $\deg{(\delta)} = \deg{(\mu)}$. Da $\delta$, $\mu$ normiert
       mit $\delta\mid\mu$ sind, folgt $\mu = \delta\mid\phi$.
     \item["`$\Leftarrow$"'] Sei $\mu\mid\phi$, d.\,h. $\phi = \mu\nu$
       für $\nu \in K[X]$. Dann: $\phi(b) = \mu(b) \cdot \nu(b) = 0$.
     \end{itemize}
     Seien $\alpha, \beta \in K[X]$ mit $\mu = \alpha\beta$.  Dann: $0
     = \mu(b) = \alpha(b) \cdot \beta(b)$, also\footnote{Unterschied
       zu Matrizen in Körpern: $a \cdot b = 0 \Leftrightarrow a = 0
       \vee b = 0$} $\alpha(b) = 0$ oder $\beta(b) = 0$, \OE{} $\alpha(b)
     = 0$. Daher ist $\mu\mid\alpha\mid \mu$, d.\,h. $\alpha = a\mu$ für ein
     $a \in K\setminus \{0\}$. Dies zeigt, $\mu$ ist irreduzibel.
   \end{beweis}
\end{satz}

% Bemerkung 7.2
\begin{bem}\label{bem:7.2}
   Sei $L\mid K$ eine Körpererweiterung und seien $b_1, \ldots, b_n \in
   L$. Mit $K(b_1, \ldots, b_n)$ bezeichnen wir den Durchschnitt aller
   Teilkörper von $L$, die $K$ und $b_1, \ldots, b_n$ enthalten.  Nach
   \autoref{bsp:6.2}(b) ist $K(b_1, \ldots, b_n)$ ein Teilkörper von
   $L$. Man sagt, dass dieser Teilkörper durch \highl{Adjunktion}\footnote{Vom
     lateinischen Wort "`hinzunehmen"'} von $b_1, \ldots, b_n$ zu $K$
   entsteht.  Man zeigt leicht:
   \begin{enumerate}[(i)]
   \item $K(b_1, \ldots, b_n) = (K(b_1, \ldots, b_n))(b_n)$
   \item $K(b) = \Set{\frac{\phi(b)}{\psi(b)} | \phi, \psi \in K[X],
       \psi(b) \neq 0}$ für $b \in L$.
   \end{enumerate}
\end{bem}

% Satz 7.2
\begin{satz}\label{satz:7.2}
   Sei $L\mid K$ Körpererweiterung und $b \in L$ algebraisch über $K$ mit
   Minimalpolynom $\mu$ vom Grad $n$. Dann ist die Abbildung \begin{gather*}f \colon
   K[X]/(\mu) \rightarrow K(b), \phi + (\mu) \mapsto \phi(b)\end{gather*} ein
   Körperisomorphismus\footnote{$K$ ist ein Körper, weil $\mu$
     irreduzibel ist}; insbesondere ist $[K(b)\colon K] = \deg{\mu} = n <
   \infty$ und
   \begin{gather*}K(b) = \Set{a_0 + a_1b + \dotsb + a_{n-1}b^{n-1} |  a_0, \ldots,
     a_{n-1} \in K}\end{gather*}
\begin{beweis}
   Wir zeigen, dass die Abbildung $f$ wohldefiniert ist.  Dazu seien $\phi, \psi
   \in K[X]$ mit $\phi + (\mu) = \psi + (\mu)$.  Dann: $\psi =
   \phi + \alpha\mu$ mit $\alpha \in K[X]$.  Folglich: $\psi(b) =
   \phi(b) + \alpha(b)\mu(b) =\phi(b) + \alpha(b)0 = \phi(b)$. Also ist $f$
   wohldefiniert.  Wegen
   \begin{align*}
     f([\beta + (\mu)]+ [\gamma + (\mu)]) &= f(\beta+ \gamma + (\mu)) =
     (\beta+ \gamma)(b)\\
     &= \beta(b)+ \gamma(b) = f([\beta + (\mu)]) + f([\gamma +
     (\mu)])\\
     f([\beta +(\mu)]\cdot [\gamma + (\mu)]) &= f(\beta\cdot \gamma + (\mu)) =
     (\beta\cdot \gamma)(b)\\
     &= \beta(b)\cdot \gamma(b) = f([\beta + (\mu)]) \cdot f([\gamma + (\mu)])
   \end{align*}
   und $f(1) = 1$ ist $f$ ein Körperhomomorphismus.
   
   Wegen $K[X]/\mu = \Set{a_0 + a_1X + \dotsb + a_{n-1}X^{n-1} + (\mu)
     | a_0, \ldots, a_{n-1} \in K}$ ist $\Bld(f) = \Set{a_0 + a_1b +
     \dotsb + a_{n-1}b^{n-1} | a_0, \ldots, a_{n-1} \in K} \subseteq L$
   ein Teilkörper. Denn die Abbildung $f$ ist ein Homomorphismus. Wegen
   $K \subseteq \Bld(f)$ und $b \in \Bld(f)$ ist $K(b) \subseteq
   \Bld(f)$.  Andererseits ist $\Bld(f)\subseteq M$ in jedem Teilkörper
   $M$ von $L$ mit $K\subseteq M$ und $b\in M$. Also ist $\Bld(f)
   \subseteq K(b)$ und insgesamt ergibt sich $\Bld(f) = K(b)$.  Also
   ist $f$ ein Körperisomorphismus.  Offenbar ist $f$ auch
   $K$-linear. Daher:
   \begin{gather*}[K(b)\colon K] = \dim_K K(b) = \dim_K K[X] / (\mu) = \deg{\mu} <\infty\end{gather*}
 \end{beweis}
\end{satz}

% Beispiel 7.3
\begin{bsp}\label{bsp:7.3}
   Sei $L\mid K$ eine Körpererweiterung und $n \coloneqq [L\colon K] <
   \infty$.  Dann ist $L\mid K$ algebraisch. Denn für $b \in L$ können
   die $n + 1$ Elemente $1, b, b^2, \ldots, b^n$ nicht linear
   unabhängig sein. Folglich existieren Elemente $a_0, a_1, \ldots, a_n
   \in K$, die nicht alle gleich $0$ sind, mit $a_0 + a_1b + \dotsb +
   a_nb^n = 0$.  Also setzen $\phi \coloneqq a_0 + a_1X + \dotsb + a_nX^n \in
   K[X] \setminus \{0\}$ mit $\phi(b) = 0$, d.\,h. $b$ algebraisch über
   $K$.  Ist also $E$ ein endlicher Körper und $F \subseteq E$
   Teilkörper, dann ist $E\mid F$ algebraisch.
\end{bsp}

% Satz 7.3
\begin{satz}\label{satz:7.3}
   Sei $L\mid K$ Körpererweiterung.
   \begin{enumerate}[(i)]
   \item Sind $b_1, \ldots, b_n \in L$ algebraisch über $K$, so ist
     $K(b_1, \ldots, b_n)\mid K$ algebraisch.
   \item Für jede weitere Körpererweiterung $M\mid L$
     gilt: \begin{gather*}M\mid K \text{ algebraisch } \Leftrightarrow M\mid
     L, L\mid K \text{ algebraisch  \footnotesize(Transitivität)\normalsize}\end{gather*} 
   \item $F \coloneqq \Set{b \in L | b \text{ algebraisch über K}}$ ist
     ein Teilkörper von $L$ mit $K \subseteq F \subseteq L$. Dieser
     heißt \highl[Abschluss!algebraischer]{algebraischer Abschluss} von
     $K$ in $L$.
   \end{enumerate}
   \begin{beweis}
     \begin{enumerate}[(i)]
     \item Seien $b_1, \ldots, b_n$ algebraisch über $K$. Nach
       \autoref{satz:7.2} ist $[K(b_1)\colon K] < \infty$. Offenbar
       ist $b_2$ auch algebraisch über $K(b_1)$\footnote{ein etwas
         größerer Körper als $K$}. Analog gilt damit:
       \begin{gather*}[(K(b_1))(b_2)\colon K(b_1)]= [ K(b_1, b_2)\colon K(b_{1})] <
       \infty\end{gather*} Der Gradsatz (\autoref{satz:6.3}) liefert $[K(b_1,
       b_2)\colon K] < \infty$. Induktiv folgt dann, dass die
       Körpererweiterung $[K(b_1, \ldots, b_n)\colon K] < \infty$
       ist. Nach \autoref{bsp:7.3} ist $K(b_1, \ldots, b_n)\mid K$
       algebraisch.
     \item \begin{itemize}
       \item["`$\Rightarrow$"'] Sei $M\mid K$ algebraisch. Dann ist
         jedes $b \in M$ algebraisch über $K$, also auch über
         $L$. Daher ist $M\mid L$ algebraisch. Ferner ist jedes $b \in
         L$ algebraisch über $K$ und daher ist auch $L\mid K$
         algebraisch.
       \item["`$\Leftarrow$"'] Seien die Körpererweiterungen $M\mid L$
         und $L\mid K$ algebraisch und ein Element $c$ aus $M$
         beliebig.  Dann existieren Elemente $b_0, \ldots, b_{n-1} \in L$ mit
         $c^n + b_{n-1}c^{n-1} + \dotsb + b_1c + b_0 = 0$.  Daher ist
         $c$ algebraisch über $K(b_0, \ldots, b_{n-1})$. Nach
         \autoref{satz:7.2} ist $[(K(b_0, \ldots, b_{n-1}))(c)\colon
         K(b_0, \ldots, b_{n-1})]< \infty$.
 
 	Nach dem Beweis von (i) ist $[K(b_0, \ldots, b_{n-1})\colon K]
         < \infty$. Der Gradsatz liefert $[K(b_0, \ldots, b_{n-1},
         c)\colon K] < \infty$ und nach	\autoref{bsp:7.3} ist $K(b_0,
         \ldots, b_{n-1}, c)\mid K$ algebraisch. Insbesondere ist auch
         $c$ algebraisch über $K$.
       \end{itemize}
     \item Nach dem \autoref{bsp:7.1} ist $K \subseteq F$. Insbesondere
       sind $0, 1 \in F$. Seien nun $b, c \in F$. Nach dem Punkt~(i)
       ist $K(b, c)\mid K$ algebraisch und insbesondere $b \pm c \in
       K(b, c)$ sowie $b\cdot c\in K(b,c)$ algebraisch über $K$. Also
       $b\pm c \in F$ und $b\cdot c\in F$. Analog ist auch
       $\frac{b}{c} \in F$, falls $c \neq 0$. Also ist $F\subseteq L$ ein
       Teilkörper.
   \end{enumerate}
 \end{beweis}
\end{satz}

% Beispiel 7.4
\begin{bsp}\label{bsp:7.4}
  Bekanntlich ist $\sqrt{2} \in \R$ algebraisch über $\Q$ mit
  Minimalpolynom $X^2 - 2$. Daher folgt, $[\Q(\sqrt{2})\colon \Q] =
  \deg{(X^2 - 2)} = 2$ und wir haben $\Q(\sqrt{2}) = \Set{a +
    b\sqrt{2} | a, b \in \Q}$. Für $a + b\sqrt{2} \neq 0$ ist dabei
  \begin{gather*}\frac{1}{a + b\sqrt{2}} = \frac{a - b\sqrt{2}}{(a + b\sqrt{2})(a -
    b\sqrt{2})} = \frac{a}{a^2 - 2b^2}- \frac{b}{a^2 - 2b^2}\sqrt{2}
  \in \Q(\sqrt{2}).\end{gather*} Es ist $\sqrt{3} \notin \Q(\sqrt{2})$, denn
  sonst könnte man $\sqrt{3} = a + b\sqrt{2}$ mit $a, b \in \Q$
  schreiben. Dann wäre aber $3 = a^2 + 2\sqrt{2}ab + 2b^2$. Der
  Koeffizientenvergleich\footnote{$1, \sqrt{2}$ sind linear
    unabhängig; $3 = 3 \cdot 1 + 0\sqrt{2}$} liefert zwei Gleichungen:
  \begin{align*}
    3 &= a^{2}+2b^{2} & 0 &= 2ab\sqrt{2}
  \end{align*}
  Also wäre $2ab = 0$, d.\,h. $a = 0$ oder $b = 0$. Im Fall $a = 0$
  wäre $3 = 2b^2$, also $b=\sqrt{\nicefrac{3}{2}}$. Im Fall $b = 0$
  wäre $3 = a^2$. Beide Fälle sind nicht möglich. Daher ist $\sqrt{3}$
  algebraisch über $\Q(\sqrt{2})$ mit dem Minimalpolynom $X^2 -
  3$. Folglich: $[(\Q(\sqrt{2}))(\sqrt{3})\colon \Q(\sqrt{2})] =
  \deg{(X^2 - 3)} = 2$.

  Der Gradsatz (\autoref{satz:6.3}) liefert $[\Q(\sqrt{2},
  \sqrt{3})\colon \Q] = 4$. Insbesondere ist $b\coloneqq\sqrt{2} + \sqrt{3} \in
  \Q(\sqrt{2}, \sqrt{3})$ algebraisch über $\Q$. Was ist das
  Minimalpolynom von $\sqrt{2} + \sqrt{3}$ über $\Q$? Es hat
  $\Q(\sqrt{2})$ die Basis $1$ und $\sqrt{2}$ über $\Q$ und
  $\Q(\sqrt{2}, \sqrt{3})\colon \Q(\sqrt{2})$ hat die Basis $1,
  \sqrt{3}$ über $\Q$. Nach dem Gradsatz ist $1, \sqrt{2}, \sqrt{3}$
  und $\sqrt{2} \cdot \sqrt{3} = \sqrt{6}$ eine $\Q$"=Basis von
  $\Q(\sqrt{2}, \sqrt{3})$.
  \begin{gather*}\left.\begin{array}{lcl}
      b^0 & = & 1\\
      b^1 & = & \sqrt{2} + \sqrt{3}\\
      b^2 & = & 5 + 2\sqrt{6}\\
      b^3 & = & 11\sqrt{2} + 9\sqrt{3}
    \end{array}\right\} \text{ linear unabhängig über }\Q\\
  b^4 = 49 + 20\sqrt{6}
  \end{gather*}\todo{Gleichungen untereinander schreiben}

  Wir suchen $a_0, a_1, a_2, a_3 \in \Q$ mit
  \begin{align*}
    0 &= a_0 + a_1b + a_2b^2 + a_3b^3 + b^4\\
    &= a_0 \cdot 1 + a_1 (\sqrt{2} + \sqrt{3}) + a_2 (5 + 2\sqrt{6}) +
    a_3 (11\sqrt{2} + 9\sqrt{3}) + (49 + 20\sqrt{6})\\
    &= \underbrace{(a_0 + 5 \cdot a_2 + 49)}_{= 0}\cdot 1 + \underbrace{(a_1
      + 11a_3)}_{= 0}\sqrt{2} + \underbrace{(a_1 + 9a_3)}_{=
      0}\sqrt{3} + \underbrace{(2a_2 + 20)}_{= 0}\sqrt{6}
  \end{align*}
  Also ergibt sich $a_2 = -10, a_0 = 1, a_1 = a_3 = 0$. Daher ist $\mu
  = 1 - 10X^2 + X^4$. Folglich: $[\Q(\sqrt{2} + \sqrt{3})\colon \Q] =
  4$ und $\Q(\sqrt{2}, \sqrt{3}) = \Q(\sqrt{2} + \sqrt{3})$.
\end{bsp}

% Satz 7.4
\begin{satz}\label{satz:7.4}
  Sei $E$ ein endlicher Körper mit $\abs{E} = p^n$ für $p \in \PZ, n \in
  \N$. Weiter sei $F$ ein Teilkörper von $E$ (z.\,B. der Primkörper
  von $E$). Dann ist $E \cong F[X] / (\phi)$ für ein irreduzibles
  Polynom $\phi \in F[X]$ mit $\phi\mid X^{p^n} - X$.
  \begin{beweis}
    Sei $b \in E$ mit $E = \{0, 1, b^{1}, b^2, \ldots, b^{p^n - 2}\}$
    mit $b^{p^n - 1} = 1$. Das Minimalpolynom $\mu(b)$ über $F$ ist
    irreduzibel in $F[X]$ und nach \autoref{satz:7.2} gilt: $E = F(b)
    \cong F[X]/(\mu)$. Wegen $b^{p^n} = b$ gilt, $\mu\mid X^{p^n} -
    X$, denn das Minimalpolynom teilt jedes Polynom, dass $b$ als
    Nullstelle hat.
  \end{beweis}
\end{satz}

% Bemerkung 7.3
\begin{bem}\label{bem:7.3}
  Sei $K$ ein Körper.
  Nach \autoref{exer:14} gilt im Polynomring $K[X]$:
  \begin{gather*}\ggt(X^m-1, X^n-1) = X^{\ggt(m, n)}-1.\end{gather*}
  Mit \autoref{exer:7}~(i) folgt daraus leicht: 
  \begin{gather*}\ggt(X^{q^a}-X, X^{q^b}-X) = X^{q^{\ggt(a, b)}}-X\quad(a, b, q \in \N)\end{gather*}
\end{bem}

% Satz 7.5
\begin{satz}\label{satz:7.5}
  Sei $K$ ein endlicher Körper, $q \coloneqq \abs{K}$ und $n \in \N$.
  Dann folgt\footnote{Formel muss man wissen! Sehr wichtig für
    Theorie!} \begin{gather*}\boxed{X^{q^n} - X = \prod_{\substack{\phi \in K[X] \text{
        irreduzibel},\\ \deg{\phi}\mid n}}\phi}\end{gather*}
  \begin{beweis}
    Sei $\phi \in K[X]$ irreduzibel mit $d \coloneqq \deg{\phi\mid
      n}$. Dann ist $K[X] / \phi$ ein Körper mit $q^d$ Elementen. Für
    $b \coloneqq X + (\phi)$ gilt dann: $b^{q^d} = b$, d.\,h. $0 =
    b^{q^d} - b = X^{q^d} - X + (\phi)$ und nach \autoref{bem:7.3}
    haben wir  $\phi\mid X^{q^d} - X\mid X^{q^n} - X$.
    
    Sei umgekehrt $\phi \in K[X]$ irreduzibel mit $\phi\mid X^{q^n} -
    X$ und $d \coloneqq \deg{\phi}$. Wie im ersten Teil des Beweises
    ist $\phi\mid X^{q^d} - X$. Daher: $\phi\mid \ggt(X^{q^d} - X, X^{q^n}
    - X) = X^{q^{\ggt(d, n)}} - X$, d.\,h. $X^{q^{\ggt(d, n)}} - X +
    (\phi) = 0$ in $K[X] / (\phi)$.
    
    Jedes Element $K[X] / (\phi)$ kann man in der folgenden Form
    schreiben: \begin{gather*}b = a_0 + a_1X + \dotsb + a_{d-1}X^{d-1} +
    (\phi)\qquad (a_i \in K).\end{gather*} Für $a \in K$ ist $a = a^q = a^{q^2} =
    \dotsb$ und somit ist\footnote{alle $b$ sind Nullstellen von
      $X^{q^{\ggt(d, n)}} - X$} $b^{q^{\ggt(d, n)}} = b$ für alle $b
    \in K[X]/(\phi)$. Also $q^d = \abs{K[X]/(\phi)} \leq q^{\ggt(d,
      n)} \leq q^d$, d.\,h. $d = \ggt(d, n)\mid n$.  Folglich genügt
    zu zeigen, dass kein Primfaktor von $X^{q^n} - X$ mehrfach
    auftritt. Sei also $\phi \in K[X]$ irreduzibel mit $\phi^2\mid
    X^{q^n} - X$. Schreibe: $X^{q^n} - X = \phi^2\psi$ mit $\psi \in
    K[X]$. Formale Ableitung liefert den Widerspruch:
    \begin{align*}
      -1 &= (X^{q^n} - X)' = (\phi^2\psi)'= (\phi^2)'\psi+ \phi^{2}\psi' =
      \phi^2\psi' + 2\phi\phi'\psi\\
      &= \phi(\psi' + 2\phi'\psi)
    \end{align*}
    Der Grad von $-1$ ist $0$. Hingegen ist der Grad des letzten Terms
    der obigen Gleichung mindestens $\deg\phi$.\lightning{}
  \end{beweis}
\end{satz}

% Beispiel 7.5
\begin{bsp}\label{bsp:7.5}
  Sei $q=2$. Dann ist $X^{4}-X= X(X-y)(X^{2}+X+1)$ und $X^8 - X = X(X
  - 1)(X^3 + X + 1)(X^3 + X^2 + 1)$\footnote{Siehe
    \autoref{satz:7.5}}.
\end{bsp}

% Bemerkung 7.4
\begin{bem}\label{bem:7.4}
  Ein Vergleich der Grade in \autoref{satz:7.5} liefert: \fbox{$q^n
  \coloneqq \sum_{d\mid n}dI_d$}, wobei $I_d$ die Anzahl der
  irreduziblen Polynome vom Grad $d$ in $K[X]$ bezeichnet. Die
  Möbius"=Inversion aus \autoref{satz:3.4} ergibt:
  \begin{gather*}nI_n = \sum_{d\mid n}\mu(d)q^{\frac{n}{d}}\text{, d.\,h. } \boxed{I_n =
  \frac{1}{n}\sum_{d\mid n}\mu(d)q^{\frac{n}{d}}}\end{gather*}
  Bei festem $q$ und "`großem"' $n$ existieren also etwa
  $\frac{1}{n}q^n$ irreduzible Polynome vom Grad~$n$ in $K[X]$. Da es
  insgesamt genau $q^n$ normierte Polynome vom Grad $n$ in $K[X]$
  gibt, liegt die Wahrscheinlichkeit, dass ein zufällig ausgewähltes normiertes
  Polynom vom Grad $n$ in $K[X]$ irreduzibel ist, ungefähr bei
  $\frac{1}{n}$.
  Genauer\footnote{$I_n$ kann nicht $= 0$ sein, daher gibt es immer
    irreduzible Polynome zu einem vorgegebenen Grad}: $I_1 = q, I_2 =
  \frac{1}{2}(q^2 - q), I_3 = \frac{1}{3}(q^3 - q), I_{4} =
  \frac{1}{4}(q^4 - q^2), I_5 = \frac{1}{5}(q^5 - q), I_6 =
  \frac{1}{6}(q^6 - q^3 - q^2 + q)$ usw.
\end{bem}

% Satz 7.6
\begin{satz}\label{satz:7.6}
  Zu jedem endlichen Körper $K$ und jedem $n \in \N$ existiert
  mindestens ein irreduzibles Polynom vom Grad $n$ in $K[X]$. Zu jedem
  $p \in \PZ$ und jedem $n \in \N$ existiert also ein Körper mit genau
  $p^n$~Elementen.
  \begin{beweis}
    Anderenfalls wäre mit dem obigen Bezeichnungen $I_n = 0$,
    d.\,h. $0 = \sum_{d\mid n}\mu(d)q^{\frac{n}{d}}$. Diese Gleichung
    hat die Form
    \begin{gather*}0 = \pm q^{k_1} \pm q^{k_2} \pm \dotsb \pm q^{k_r} \text{ mit }
    k_1 < k_2 < \dotsb < k_r\end{gather*}
    Wir erhalten so den Widerspruch: $0 \equiv \pm q^{k_1}
    \pmod{(q^{k_2})}$.
  \end{beweis}
\end{satz}

% Satz 7.7
\begin{satz}\label{satz:7.7}
  Sei $K$ ein endlicher Körper, und seien $\phi, \psi$ irreduzible
  Polynome vom gleichem Grad $n$ in $K[X]$. Dann:
  \begin{gather*}K[X] / (\phi) \cong K[X]/(\psi)\end{gather*}
  \begin{beweis}
    Sei $\abs{K} = q$, also $\abs{K[X]/(\phi)} = q^n =
    \abs{K[X]/(\psi)}$. Nach dem \autoref{satz:7.5} ist $\phi\mid X^{q^n}
    - X$, d.\,h. $X^{q^n} - X = \phi\omega$ mit $\omega \in
    K[X]$. Jedes $b \in K[X]/(\phi)$ erfüllt $b^{q^n} = b$, d.\,h. $0
    = b^{q^n} - b = \phi(b)\omega(b)$. Da $\omega$ höchstens
    $\deg{\omega} < q^n$ Nullstellen in $K[X]/(\psi)$ hat, existiert
    ein $b \in K[X]/(\psi)$ mit $\phi(b) = 0$. Die Abbildung $f \colon
    K[X]/(\phi) \rightarrow K[X]/(\psi)$ mit $\alpha + (\phi) \mapsto
    \alpha(b)$, ist wohldefiniert. Denn sind $\alpha, \beta \in K[X]$
    mit $\alpha + (\phi) = \beta + (\phi)$, so ist $\beta = \alpha +
    \tau\phi$ für ein $\tau \in K[X]$, also $\beta(b) = \alpha(b) +
    \tau(b)\phi(b) = \alpha(b)$. Man rechnet leicht nach, dass $f$ ein
    Körperhomomorphismus ist. Insbesondere ist $f$ injektiv, also auch
    surjektiv.
\end{beweis}
\end{satz}

% Bemerkung 7.5
\begin{bem}\label{bem:7.5}
  Für $p \in \PZ$ und $n \in \N$ bezeichnet man den im wesentlichen
  eindeutig bestimmten Körper mit $p^n$ Elementen $\F_{p^n}$, oder
  $\GF(p^n)$ (\highl{Galoisfeld} bzw.\,\highl{Galoiskörper}). Beachte:
  $\F_p \cong \ZmZ{p}, \F_{p^n} \ncong \ZmZ{p^n}$ für $n > 1$.
\end{bem}

% Beispiel 7.6
\begin{bsp}\label{bsp:7.6}
  $[\Q(\sqrt{2})\colon \Q] = 2=[\Q(\sqrt{3})\colon \Q]$, aber
  $\Q(\sqrt{2}) \ncong\Q(\sqrt{3})$,
  denn in $\Q(\sqrt{2})$ existiert kein $b$ mit $b^2 = 3$.
\end{bsp}

% Satz 7.8
\begin{satz}\label{satz:7.8}
  Für $p \in \PZ$ und $n \in \N$ hat der Galoiskörper $\F_{p^n}$ genau
  $n$ Körperautomorphismen, nämlich $\id_{\F_{p^n}}, f, f^2, \ldots,
  f^{n-1}$, wobei $f \colon \F_{p^n} \rightarrow \F_{p^n}$ mit $x
  \mapsto x^p$, der Frobenius-Automorphismus (\autoref{bem:6.10}) von
  $\F_{p^n}$ ist.
  \begin{beweis}
    Für $i \in \N_0$ ist $f^i \colon \F_{p^n} \rightarrow \F_{p^n}$
    mit $x \mapsto x^{p^i}$ ein Körperautomorphismus. Dabei ist $f^n
    =\id_{\F_{p^n}}$. Seien $i, j \in \N_0$ mit $1 \leq i \leq j < n$
    und $f^i = f^j$. Dann ist $f^{j-i} =\id_{\F_{p^n}}$,
    d.\,h. $x^{p^{j-i}} = x$ für alle $x \in \F_{p^n}$. Da das Polynom
    $X^{p^{j-i}} - X$ im Fall $j \neq i$ höchstens $p^{j-i}$
    Nullstellen hat, folgt $j = i$. Daher sind $\id_{\F_{p^n}}, f,
    f^2, \ldots, f^{n-1}$ paarweise verschieden.
    
    Andererseits existiert ein $b \in \F_{p^n}$ mit $\F_{p^n} = \{0,
    1, b, b^2, \dotsc, b^{p^n-2}\}$ und $b^{p^n-1} = 1$.  Der
    Primkörper $P$ von $\F_{p^n}$ ist zu $\F_p$ isomorph, \OE{} $\F_p
    = P \subseteq \F_{p^n}$.  Wegen $\F_{p^n} = \F_p(b)$ hat das
    Minimalpolynom $\mu$ von $b$ über $\F_p$ den Grad $n$.  Schreibe
    $\mu = X^n + a_{n-1}X^{n-1} + \dotsb + a_1X + a_0$ mit $a_i \in
    \F_p$.  Für jeden Körperautomorphismus $g$ von $\F_{p^n}$ gilt:
    $g(a) = a$ für $a \in \F_p$ und
    \begin{align*}
      g(b)^n + a_{n-1}g(b)^{n-1} + \dotsb + a_1g(b) + a_0 &= g(b^n +
      a_{n-1}b^{n-1} + \dotsb + a_1b + a_0)\\
      &= g(\mu(b)) = g(0) = 0
    \end{align*}
    Daher ist $g(b)$ eine Nullstelle von $\mu$. Davon gibt es
    höchstens $n$~Stück. Da $g$ durch $g(b)$ eindeutig bestimmt ist,
    kann es höchstens $n$~Automorphismen geben.
  \end{beweis}
\end{satz}

% Bemerkung 7.6
\begin{bem}\label{bem:7.6}
  Also gilt: $\mu = (X - b)(X - b^p) \ldots (X - b^{p^{n-1}})$
\end{bem}


% Kapitel 8
\chapter{Polynome und Codes}

\begin{itemize}
\item Ziel der Codierungstheorie:
  \begin{itemize}
  \item sichere Datenübertragung und -speicherung (Funkverkehr zu
    Satelliten, Mobilfunk, CD, DVD, \dots)
  \item automatische Erkennung und Korrektur von Übertragungsfehlern
    (Rauschen, Staub, Kratzer, Materialfehler, \dots)
  \end{itemize}
\item durch geeignete Codierung und Decodierung:
  \begin{gather*}
    \xymatrix{%
      \text{Nachricht} \ar[r] & \text{Codierer} \ar[r] & \text{Kanal}
      \ar[r] & \text{Decodierer} \ar[r] & \text{Nachricht}\\
      & & \text{Rauschen} \ar[u]
    }
  \end{gather*}
\end{itemize}

Dabei gelten folgende Begriffe:
\begin{description}
\item[\highl{Nachricht}] Ein Vektor in $K^k$. Dabei ist $K$ ein endlicher
  Körper mit $\abs{K} = q)$. Oft verwendet man $K = \F_2$, aber bei
  CD, DVD $K = \F_{256}$.
\item[\highl{Codierung}] Eine injektive Abbildung\footnote{Der Buchstabe $E$
    steht dabei für das englische Wort "`encode"'.} $E \colon K^k
  \rightarrow K^n$ mit $n > k$. Oft ist $E$ linear.
\item[\highl{Decodierung}] Eine Abbildung\footnote{Der Buchstabe $D$ steht
    hier für das englische Wort "`decode"'.} $D \colon K^n \rightarrow
  K^k$ mit $D \circ E =\id_{K^k}$.
\item[\highl{Hamming-Abstand}]\footnote{Nach dem Pionier der
    Codierungstheorie \textsc{Hamming}} Eine Abbildung $d \colon K^n
  \times K^n \rightarrow \R$\footnote{$d$ Metrik} mit 
  \begin{gather*}d(x, y) \coloneqq \abs{\Set{i | 1 \leq i \leq n, x_i \neq y_i}}
  \text{ für } x = (x_1, \ldots, x_n), (y_1, \ldots, y_n) \in K^n\end{gather*}
  Sie misst Anzahl der Fehler:
  \begin{compactitem}
  \item $d(x, y) \geq 0$, $d(x, y) = 0 \Leftrightarrow x = y$
  \item $d(x, y) = d(y, x)$
  \item $d(x, z) \leq d(x, y) + d(y, z)$ (Dreiecksungleichung)
  \end{compactitem}
\item[\highl{Hamming-Gewicht}] Eine Abbildung $w \colon K^n
  \rightarrow \R$ mit 
  \begin{gather*}w(x) = \abs{\Set{i | 1 \leq i \leq n, x_i \neq 0}} \text{ für } x
  = (x_1, \ldots, x_n) \in K^n\end{gather*}
  Dann: $d(x, y) = w(x - y)$.
\end{description}

% Definition 8.1
\begin{defi}[Linearer Code]\label{defi:8.1}
  Ein \highl[Code!linearer]{(linearer) Code} der Länge~$n$ ist ein
  Untervektorraum $C \subseteq K^n$. Man nennt $k \coloneqq \dim C$
  die \highl[Code!Dimension]{Dimension}\index{Dimension} von
  $C$. Außerdem heißt
  \begin{gather*}\delta \coloneqq \min{\Set{d(x, y) | x, y \in C, x \neq y}} =
  \min{\Set{w(z) | 0 \neq z \in C}}\end{gather*} \highl{Minimalabstand} oder
  \highl{Minimalgewicht} von $C$. Man spricht dann auch von einem $[n,
  k, \delta]$"=Code.
\end{defi}

Die dahinterliegende Idee ist, dass $C$ das Bild  der
Encode"=Abbildung $E \colon K^k \rightarrow K^n$ ist. Für $e \in E$
mit $2e < \delta$ kann $C$ mindestens $e$~Fehler korrigieren. Denn die
Kreise vom Radius~$e$ um die Codewörter schneiden sich nicht.
Ein "`guter"' Code hat folgende Eigenschaften:
\begin{itemize}
\item großer Minimalabstand und damit eine gute Korrekturmöglichkeit
\item große Dimension, damit möglichst viele Codewörter in $C$ und
  damit kostengünstig sowie effizient.
\end{itemize}
Beide Ziele liegen in verschiedenen Richtungen. Also müssen beim
Design eines Codes Kompromisse geschlossen werden.

% Bemerkung 8.1
\begin{bem}\label{bem:8.1}
  Viele\footnote{Vorteil dieser Konstruktion, zu Codes als
    Untervektorraum: man muss nur $\phi$ und $n$ speichern, keine
    Basis eines Untervektorraumes mit $k$~Elementen} in der Praxis
  auftretende Codes werden mit Hilfe von Polynomringen
  konstruiert. Dabei identifiziert man $K^n$ mit $K[X] / (X^n - 1)$
  durch
  \begin{gather*}(a_0, a_1, \ldots, a_{n-1}) \leftrightarrow a_0 + a_1X +
  a_2X^2 + \dotsb + a_{n-1}X^{n-1} + (X^n - 1)\end{gather*}
  Für jeden Teiler $\phi$ von $X^n - 1$ gilt: $(X^n - 1) \subseteq
  (\phi)$.

  Daher ist $C \coloneqq (\phi) / (X^n - 1) \coloneqq \Set{\alpha\phi
    + (X^n - 1) \colon \alpha \in K[X]}$ ein Untervektorraum von $K[X]
  / (X^n - 1)$. Man nennt $C$ den \highl[Code!zyklischer]{zyklischen
    Code} der Länge $n$ über $K$ mit \highl{Generatorpolynom} $\phi$.
\end{bem}

% Satz 8.1
\begin{satz}\label{satz:8.1}
  Sei $C \coloneqq (\phi) / (X^n - 1)$ wie oben und $l \coloneqq
  \deg\phi$, also $l \leq n$. Dann gilt: $\dim C = n - l$.
  \begin{beweis}
    Schreibe $\phi = a_0 + a_1X + \dotsb + a_lX^l$ mit $a_0, \ldots, a_l
    \in K$ und $a_l \neq 0$. Dann sind
    \begin{align*}
      \phi + (X^n - 1) &= a_0 + a_1X + \dotsb + a_lX^l + (X^n - 1)\\
      X\phi + (X^n - 1)&= a_0X+ a_1X^2+\dotsb + a_lX^{l + 1} + (X^n - 1)\\
      &\vdots \\
      X^{n - l - 1}\phi + (X^n - 1) &= a_0X^{n - l - 1} +  \dotsb + a_lX^{n - 1}+ (X^n - 1)
    \end{align*}
    offenbar linear unabhängig in $C$. Also ist $\dim C \geq n - l$.
    Wegen $\phi\mid X^n - 1$ existiert ein $\psi \in K[X]$ mit $X^n -
    1 = \phi\psi$. Sei $\alpha \in (\phi)$, etwa $\alpha = \beta\phi$
    mit $\beta \in K[X]$. Die Division mit Rest ergibt $\beta =
    \kappa\psi + \rho$ mit $\deg\rho < \deg\psi = n - l$. Wir 
    schreiben $\rho = r_0 + r_1X + \dotsb + r_{n - l - 1}X^{n - l -
      1}\ (r_i \in K)$ und dann ist
    \begin{align*}
      \alpha + (X^n - 1) &= \beta\phi + (X^n - 1) =
      \kappa\underbrace{\phi\psi}_{= (X^n - 1)} + \rho\phi + (X^n -
      1)\\
      &= \rho\phi + (X^n - 1) = r_0\phi + r_1X\phi + \dotsb + r_{n - l
        - 1}X^{n - l - 1}\phi + (X^n - 1)
    \end{align*}
    Daher bilden $\phi + (X^n - 1), X\phi + (X^n - 1), \ldots, X^{n -
      l - 1}\phi + (X^n - 1)$ eine Basis von $C$.
\end{beweis}
\end{satz}


% Beispiel 8.1
\begin{bsp}\label{bsp:8.1}
  \begin{enumerate}[(a)]
  \item (\highl[Golay-Code!ternärer]{Ternärer Golay"=Code})\\
    Sei $q = 3, n = 11$ und $\phi = X^5 + X^4 - X^3 + X^2 - 1 \in
    \F_3[X]$. Dann ist  $C \coloneqq (\phi) / (X^{11} - 1)$. Man kann
    zeigen, dass $\phi$ ein irreduzibler Teiler von $X^{11} - 1$
    ist. Der Code~$C$ hat die Länge $n = 11$ und die Dimension $k =
    6$. Indem\footnote{Minimalgewicht bei Polynomen: Anzahl der von
      $0$ verschiedenen Koeffizienten.} man die $3^6 = 729$~Codewörter
    berechnet, sieht man, dass $C$ das Minimalgewicht $\delta = 5$
    hat. (Das geht auch mit etwas Theorie.)

    Daher schneiden sich Kreise mit Radius~$2$ um Codewörter
    nicht. Jeder Kreis enthält:
    \begin{gather*}1 + \underbrace{11 \cdot 2}_{\text{Vektoren mit Abstand } 1} +
    \underbrace{\binom{11}{2} \cdot 4}_{\text{Abstand } 2} = 243 =
    3^5\end{gather*}
    Vektoren.\footnote{Der Code kann 2 Fehler korrigieren.} Daher
    enthalten die Kreise vom Radius~$2$ um die $3^6$~Codewörter,
    insgesamt genau $3^6 \cdot 3^5 = 3^{11}$ verschiedene Vektoren,
    überdecken also ganz $\F_3^{11}$. Man spricht von einem
    \highl[Code!perfekter]{perfekten Code}.
    
  \item (\highl[Golay-Code!binärer]{Binärer Golay"=Code})\\
    Sei $q = 2, n = 23$ und  $\phi \coloneqq X^{11} + X^{10} + X^6 +
    X^5 + X^4 + X^2 + 1 \in \F_2[X]$ Dann ist $C \coloneqq (\phi) /
    (X^n - 1)$. Man kann zeigen, dass $\phi$ ein irreduzibler Teiler
    von $X^{23} - 1$ ist. Der Code~$C$ hat dann die Länge $n = 23$ und
    Dimension $k = 12$. Indem man die $2^{12} = 4096$ Codewörter
    ausrechnet, sieht man, dass $C$ das Minimalgewicht $\delta = 7$
    hat. (Das geht auch mit etwas Theorie.
    
    Daher schneiden sich Kreise vom Radius~$3$ um Codewörter
    nicht. Jeder Kreis enthält:
    \begin{gather*}1 + 23 + \binom{23}{2} + \binom{23}{3} = 2048 = 2^{11}\end{gather*}
    Vektoren. Diese $2^{12}$~Kreise enthalten insgesamt $2^{12} \cdot
    2^{11} = 2^{23}$ Vektoren, überdecken ganz $\F_2^{23}$. Man
    spricht wieder von einem perfekten Code.
  \end{enumerate}
\end{bsp}

% Bemerkung 8.2
\begin{bem}\label{bem:8.2}
  Die Golay-Codes sind sowohl für die Theorie als auch für die Praxis
  von großer Bedeutung. Man kann zeigen, dass sie im wesentlichen die
  beiden einzigen perfekten Codes sind, die mehr als einen Fehler
  korrigieren können.
\end{bem}


% Kapitel 9
\chapter{Konstruktionen mit Zirkel und Lineal}

% Bemerkung 9.1
\begin{bem}[Klassische Konstruktionsprobleme]\label{bem:9.1}
  \begin{description}
  \item[Quadratur des Kreises] Zu einem vorgegebenen Kreis konstruiere
    man (nur mit Zirkel und Lineal) ein Quadrat mit dem gleichen
    Flächeninhalt.
  \item[Rektifikation des Kreises] Zu einem vorgegebenen Kreis
    konstruiere man eine Strecke deren Länge genau der Umfang des
    Kreises ist.
  \item[Delisches Problem]\footnote{Der Name kommt von der
      griechischen Insel Delos} Zu einem gegebenen Würfel konstruiere
    man einen Würfel mit doppeltem Volumen.
  \item[Winkeldreiteilung] Man gebe ein Verfahren an, mit dem man
    beliebige Winkel in 3 gleiche Teile teilen kann.
  \item[Konstruktion regelmäßiger $n$"=Ecke] Für $n = 3, 4, 5, 6,
    \ldots$ konstruiere man nur mit Zikel und Lineal ein regelmäßiges
    $n$"=Eck.
  \end{description}
\end{bem}

% Definition 9.1
\begin{defi}[Menge aller Geraden, Kreise]\label{defi:9.1}
  Gegeben sei eine Teilmenge $M = M_0 \subseteq \R^2 = \C$ mit $0, 1
  \in M$. Dann sei $\mathcal{G}(M)$ die \highl[Geraden!Menge aller]{Menge aller
    Geraden}, die durch mindestens zwei Punkte in $M$ gehen und
  $\mathcal{K}(M)$ die \highl[Kreise!Menge aller]{Menge aller Kreise},
  deren Mittelpunkt in $M$ liegt und deren Radius gleich dem Abstand von
  zwei Punkten in $M$\footnote{Es muss kein Punkt auf der Peripherie
    liegen.} ist.

  Für $i \in \N$ sei $M_i$ die Menge, die aus den Elementen in
  $M_{i-1}$ und den Schnittpunkten von zwei verschiedenen Geraden in
  $\mathcal{G}(M_{i-1})$, den Schnittpunkten von zwei verschiedenen
  Kreisen in $\mathcal{K}(M_{i-1})$ und den Schnittpunkten einer
  Geraden in $\mathcal{G}(M_{i-1})$ mit einem Kreis in
  $\mathcal{K}(M_{i-1})$ besteht.  Die Punkte in $M_{\infty} \coloneqq
  \bigcup_{i = 0}^{\infty}M_i$ heißen dann
  \highl{konstruierbar}.
\end{defi}


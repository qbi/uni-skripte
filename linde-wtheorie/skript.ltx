\begin{bemerk}[Eigenschaften des Erwartungswertes]
  \begin{enumerate}[(1)]
   \item $X,Y$ haben einen Erwartungswert und $\alpha, \beta\in\R$. Dann hat
    $\alpha X+\beta Y$ einen Erwartungswert und $\E(\alpha X+\beta Y)=
    \alpha\E X+\beta\E Y$.
   \item Sei $X\leq Y$, d.\,h. $X(\omega)\leq Y(\omega)$ für fast alle
    $\omega\in\Omega$. Dann ist $\E X\leq\E Y$.
   \item Es gilt, dass $-\abs{X}\leq X\leq \abs{X}$. Dann ist $-\E\abs{X}\leq
    X\leq\E\abs{E}$, d.\,h. \fbox{$\abs{\E X}\leq\E\abs{X}$}.
   \item Sei $c$ eine Konstante. Dann gilt, $\E c=c$ und $\E 1_{A}=P(A)$.
   \item Sei $\E\abs{X}<\infty$. Dann gilt, $\E(X1_{A})=\int_{A}X\,dP$. Es
    exiistiert zu jedem $\epsilon>0$ ein $\delta>0$ mit der Eigenschaft
    $P(A)<\delta$, dann folgt, $\abs{\E(X1_{A})}<\epsilon$. Das ist die
    Absolutstetigkeit des Integrals.
   \item Konvergiere $X_{n}\rightarrow X$ fast überall und $\abs{X_{n}}\leq Y$
    mit $\E Y<\infty$. Dann ist $\lim_{n\rightarrow\infty} \E X_{n}=\E X$
    (Satz von \textsc{Lebesgue}\index{Lebesgue!Satz von}\index{Satz!Lebesgue}).

    Sei $0\leq X_{1}\leq X_{2}\leq\dotsb$. Dann gilt,
    $\lim_{n\rightarrow\infty} \E X_{n}=\E\lim_{n\rightarrow\infty}X_{n}$.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  \begin{enumerate}[(1)]
   \item Sei $X$ cauchyverteilt, d.\,h. $P(X\leq t)= \frac{1}{\pi}
    \int_{-\infty}^{t} \frac{dt}{1+x^{2}}$. Dann ist $\E\abs{X}= \frac{2}{\pi}
    \int_{0}^{\infty} \frac{x}{1+x²}=\infty$. Also existiert der
    Erwartungswert nicht.
   \item Sei $X$ gleichverteilt auf $\{x_{1},\dotsc, x_{N}\}\subseteq\R$. Der
    Erwartungswert ist $\E X= \frac{1}{N} \sum_{j=1}^{N} x_{j}$.
   \item Sei $X$ normalverteilt mit den Parametern $\mu$ und $\sigma^{2}$.
    Dann ist $\E X= \frac{1}{2\pi\sigma} \int_{-\infty}^{\infty}
    xe^{-\nicefrac{(x-\mu)²}{2\sigma²}}\,dx=\mu$.
  \end{enumerate}
\end{bsp}


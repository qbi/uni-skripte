\section{Die Fouriertransformation auf \texorpdfstring{$L_{1}(G)$}{L1(G)}}

Wir integrieren bezüglich des Haarmaßes. Sei $G$ eine lokalkompakte abelsche
Gruppe, $\Gamma=\hat{G}$ duale Gruppe und $\mu$ das Haarmaß auf $G$. Wir haben
$L_{p}(G)=L_{p}(G,\FB(G),\mu)$ für $1\leq p\leq\infty$.

\begin{defini}
  Sei $f\in L_{1}(G)$. Dann ist die Fouriertransformation $\hat{f}$ gegeben
  durch:
  \begin{gather*}
    \hat{f}(\chi)= \int_{G} f(x) \overline{\chi(x)}\,d\mu(x)
  \end{gather*}
  für $\chi\in\Gamma$.
\end{defini}

\begin{bsp}
  \begin{enumerate}
    \item $G=\T, \Gamma\simeq\Z, d\mu(x)=\frac{1}{2\pi}dx, f\in L_{1}(\T),
    \chi_{j}(x)=e^{ijx}$. Dann ist die Fouriertransformation:
    \begin{gather*}
    \hat{f}(j)=\frac{1}{2\pi} \int_{0}^{2\pi} f(x) e^{-ijx}\,dx
    \end{gather*}
    Die Fouriertransformation bildet $f$ auf die Folge $(\hat{f}(j))_{j\in\Z}$
    der Fourierkoeffizienten ab.
   \item $G=\Z, \mu$ Zählmaß, $\Gamma=\T=[0,2\pi), \chi_{x}(j)=e^{ijx}, f\in
    L_{1}(\Z), (f(j))_{j\in\Z}=(c_{j})_{j\in\Z}$. Dann ist die
    Fouriertransformation:
    \begin{gather*}
      \hat{f}(x) = \sum_{j=-\infty}^{\infty} f(j)e^{-ijx}= \sum c_{j} e^{-ijx}
    \end{gather*}
    Die Fouriertransformation bildet eine absolut summierbare Folge auf die
    zugehörige Fourierreihe ab.
   \item $G=\R^{n}, d\mu(x)=(2\pi)^{-\nicefrac{n}{2}}dx$ Lebesguemaß
    $\Gamma=\R^{n}, \chi_{\xi}(x)=e^{ix\xi}$. Dann ist die
    Fouriertransformation:
    \begin{gather*}
      \hat{f}(x)= (2\pi)^{-\nicefrac{n}{2}} \int_{\R^{n}} f(x) e^{-ix\xi}\,dx
    \end{gather*}
   \item $G=\Z_{n}$ endliche Gruppe, $\mu$ Zählmaß, $\Gamma\simeq\Z_{n},
    \chi_{n}(k)= \frac{2\pi ihk}{n}$ für $0\leq h,k<n, f\in L_{1}(\Z_{n})$ und
    $f$ ist ein $n$-Tupel ($c_{0},c_{1},\dotsc, c_{n-1}\in\C^{n}$). Dann ist die
    Fouriertransformation:
    \begin{gather*}
      \hat{f}(h)= \sum_{k=0}^{n-1} c_{k} e^{-\frac{2\pi ihk}{n}}
    \end{gather*}
    Sei $F_{n}=(e_{hk})_{h,k=0}^{n-1}$ die \highl{Fouriermatrix} mit $e_{hk}=
    e^{-\frac{2\pi ihk}{n}}$. Dann ist $\hat{f}=F_{n}f$.
   \item Cantorgruppe -- Walsh-Fouriertransformation oder Walsh-Fourierreihen:\\
    $G=\{\pm 1\}^{\N_{0}}= \prod_{i=0}^{\infty} G_{i}, G_{i}= \{\pm 1\},
    \hat{G}=\Gamma\simeq(\xi, \Delta), \mu$ Produktmaß der Maße $\mu_{i}$ mit
    $\mu_{i}= (\{\pm 1\})=\nicefrac{1}{2}$. Dann ist die Fouriertransformation:
    \begin{gather*}
      \hat{f}(A)= \hat{f}(w_{A})= \int_{G} f(x) w_{A}(x)\,d\mu(x)= \int_{G}
	 f(x) \prod_{i\in\Delta} x_{i}\,d\mu(x)
    \end{gather*}
    Obige heißen auch \highl{Walsh-Fourierkoeffizienten}. Die
    \highl{Walsh-Fourierreihe} ist:
    \begin{gather*}
      \sum_{A\in\xi} \hat{f}(A) w_{A}\leadsto \sum_{n=0}^{\infty} \hat{f}(n)
	 w_{n} \text{ für } (\N_{0},\oplus)
    \end{gather*}
    Wie ist nun die Konvergenz gegen $f$? Siehe hierzu \cite{gol1991}.
  \end{enumerate}
\end{bsp}

%satz 3.5.1
\begin{satz}
  Sei $f\in L_{1}(G)$. Dann ist $\hat{f}\in C(\Gamma)$ eine stetige
  beschränkte Funktion mit
  \begin{gather*}
    \norm{\hat{f}}_{\infty} = \sup_{x\in G} \abs{\hat{f}(x)}\leq \norm{f|
       L_{1}(G)}\\
    \hat{f}(\chi)= \int_{G} f(x)\overline{\chi(X)}\,D\mu(X)\\
    \abs{\hat{f}(\chi)} \leq \int_{G} \abs{f(x)}\,d\mu= \norm{f|L_{1}}
  \end{gather*}
  Vorbemerkungen zum weiteren Beweis:
  \begin{enumerate}
    \item Ein Borelmaß $\mu$ auf einem lokalkompakten topologischen Raum $X$
    heißt \highl[Borelmaß!reguläres]{regulär}, falls gilt:
    \begin{gather*}
      \mu(M) = \sup_{K\subseteq M \text{ kompakt}} \mu(K)= \inf_{O\supseteq M
	 \text{ offen}} \mu(O)
    \end{gather*}
    Das Haarmaß auf einer lokalkompakten abelschen Gruppe ist
    regulär\footnote{Ohne Beweis, hierzu muss man tiefer in die Konstruktion
    von Haarmaßen einsteigen}.
   \item Aus der Maßtheorie: Seien $X,\mu$ ein $\sigma$-endlicher Maßraum für
    $1\leq p<\infty$. Dann sind Treppenfunktionen dicht in $L_{p}(X,\mu)$,
    d.\,h. für alle $f\in L_{p}(X,\mu), \epsilon>0\,\exists g=\sum_{i=1}^{n}
    c_{i} \1_{M_{i}}, M_{i}\subseteq X$ messbar, paarweise disjunkt, so dass
    $\norm{f-g|L_{p}}<\epsilon$. Ist $X$ lokalkompakt und $\mu$ ein reguläres
    Borelmaß, dann kann man die $M_{i}$ kompakt wählen. Sei $X$ lokalkompakt,
    $\mu$ ein reguläres Borelmaß auf $X$ und $f\in L_{1}(X,\mu)$ sowie
    $\epsilon>0$. Dann existiert eine kompakte Menge $K\subseteq X$ mit
    \begin{gather*}
      \int_{X\setminus K} \abs{f}\,d\mu<\epsilon
    \end{gather*}
    \begin{proof}
      $g=\sum_{i=1}^{n} c_{i} \1_{K_{i}}$ mit $\norm{f-g|L_{1}}<\epsilon,
      K=\bigcup_{i=1}^{n} K_{i}, \int_{X\setminus K}\abs{f}= \int_{X\setminus
      K} \abs{f-g} \leq\int_{X} \abs{f-g}<\epsilon$.
    \end{proof}
   \item Seien $X,Y$ lokalkompakt und $\mu$ reguläres Borelmaß auf $X$.
    Außerdem sie $K\colon X\times Y\rightarrow\C$ beschränkt und stetig, $f\in
    L_{1}(X,\mu)$. Dann ist die Funktion $T_{K}f$ auf $Y$ gegeben durch
    \begin{gather*}
      (T_{K}f)(y)= \int_{X} f(x)K(x,y)\,d\mu(x)
    \end{gather*}
    stetig.
    \begin{proof}
      Sei $y_{0}\in Y, \epsilon>0$. Dann ist zu zeigen, dass eine Umgebung $V$
      von $y_{0}$ existiert, so dass $\abs{T_{K}f(y)-T_{K}f(y_{0})}<\epsilon$
      für $y\in V$:
      \begin{gather*}
	\abs{T_{K} f(y) - T_{K} f(y_{0})} \leq \int_{X} \abs{f(x)}
	  \abs{K(x,y)-K(x,y_{0})}\,d\mu(x)
      \end{gather*}
      Mit der obigen Bemerkung drei wählen wir $K$ so ,dass $\int_{X\setminus
      K} \abs{f}<\epsilon$. Dann
      \begin{align*}
	\int_{X\setminus K} \abs{f(x)} \abs{K(x,y)-K(x,y_{0})}\,d\mu(x) &<\epsilon2C
      \end{align*}
      mit $C=\sup_{x\in X, y\in Y} \abs{K(x,y)}$. Zu $x\in K$ wählen wir eine
      Umgebung von $(x,y_{0})\in X\times Y$ der Form $U_{x}\times V_{x}$ mit
      $U_{x}$ Umgebung von $x$ und $V_{x}$ Umgebung von $y_{0}$ mit
      $\abs{K(z,y)-K(x,y_{0})}<\epsilon$ für $z\in U_{x}, y\in V_{x}$. Wähle
      nun endlich viele $x_{1},\dotsc, x_{n}$, so dass $K\subseteq
      \bigcup_{i=1}^{n} U_{x_{i}}$. Setze $V=\bigcap_{i=1}^{n} V_{x_{i}}$
      Umgebung von $y_{0}$. Für $x\in K, y\in V$ gilt
      \begin{align*}
	\abs{K(x,y)-K(x,y_{0})} &\leq
	   \abs{K(x,y)-K(x_{i},y)}+\abs{K(x_{i},y)-K(x,y_{0})}<2\epsilon
      \end{align*}
       Damit folgt:
      \begin{align*}
	\int_{K} \abs{f(x)} \abs{K(x,y)-K(x,y_{0})}\,d\mu(x) &< 2\epsilon
	   \int_{K}\abs{f} =2\epsilon\norm{f|L_{1}}
      \end{align*}

      Nach den Vorbemerkungen können wir den Satz beweisen:
      Die vierte Vorbemerkung sagt uns, dass es genügt, zu zeigen, dass die
      Abbildung $\Phi\colon G\times\Gamma\rightarrow\C$ gegeben durch
      $(x,X)\mapsto X(x)$ stetig ist. Sei dazu $(x_{0}, X_{0})\in
      G\times\Gamma, z_{0}=X_{0}(x_{0})$ und $I\colon=\{z\in\T\colon
      \abs{z-z_{0}}<\epsilon\}$. Es genügt, zu zeigen, dass
      $\Phi^{-1}(I)=\{(x,X)\in G\times\Gamma\colon \abs{X(x)-
      z_{0}}<\epsilon\}$ eine Umgebung von $(x_{0}, X_{0})\subseteq
      G\times\Gamma$ ist. Dazu sei $E$ eine kompakte Umgebung von $x_{0}$ und
      \begin{gather*}
	N=N(X_{0},E,\nicefrac{\epsilon}{2})=\{X\in\Gamma\colon
	   \abs{X(x)-X_{0}(x)}<\nicefrac{\epsilon}{2}\,x\in E\}
      \end{gather*}
      eine Umgebung von $X_{0}\in\Gamma$. Dann ist $(E\cap U)\times N$ eine
      Umgebung von $(x_{0}, X_{0})$ und für $(x,X)\in(E\cap U)\times N)$ gilt,
      $\abs{X(x)-z_{0}}= \abs{X(x)-X_{0}(x_{0})}\leq \abs{X(x)-X_{0}(x)}+
      \abs{X_{0}(x)-X_{0}(x_{0})}< \nicefrac{\epsilon}{2}+
      \nicefrac{\epsilon}{2}= \epsilon$.
    \end{proof}
  \end{enumerate}
\end{satz}

\paragraph{Eigenschaften der Fouriertransformation}
\begin{description}
 \item[Linearität] $\widehat{\lambda g+\mu g}=\lambda\hat{f}+\mu\hat{g}$
 \item[Faltung] $f+g(y)= \int_{G} f(x) g(x^{-1}y)\,d\mu(x)= \int_{G}
  f(x^{-1}y)g(x)\,d\mu(x)$ sowie $\widehat{f*g}(x)= \hat{f}(x)\hat{g}(x)$.
  \begin{proof}
    \begin{align*}
      \widehat{f*g}(x) &= \int_{G} (f*g)(y) \overline{X(y)}\,d\mu(y)= \int_{G}
	 \int_{G} f(x) g(x^{-1}y)\,d\mu(x)\overline{X(y)}\,d\mu(y)\\
      &= \int_{G} f(x) \left(\int_{G} g(xy^{-1})
	 X(y^{-1})\,d\mu(y)\right)\,d\mu(x)\\
      &= \int_{G} f(x) \overline{X(x)} \left(\int_{G} g(x^{-1}y)
	 X(xy^{-1})\,d\mu(y)\right)\,d\mu(x)\\
      &= \int_{G} f(x) \overline{X(x)} \left(\int_{G} g(x^{-1}y)
	 \overline{X(xy^{-1})}\,d\mu(y)\right)\,d\mu(x)\\
      &= \int_{G} f(x) \overline{X(x)} \int_{G} g(z)
	 \overline{X(z)}\,d\mu(z)\,d\mu(x)= \hat{f}(x)\hat{g}(x)
    \end{align*}
  \end{proof}
\end{description}

\section{Die Fouriertransformation auf kompakten abelschen Gruppen}

Sei $G$ eine kompakte abelsche Gruppe, $\mu$ ein normalisiertes Haarmaß und
$\Gamma=\hat{G}$ die duale Gruppe.

\begin{bsp}
  Wir kennen bereits die Beispiele $\T$, Cantorgruppe, Produkte von kompakten
  Gruppen, $L_{2}(G)= L_{2}(G, \mu)$, Hilbertraum $\langle f,g\rangle=
  \int_{G} f\overline{g}\,d\mu$.
\end{bsp}

%satz 3.6.1
\begin{satz}
  Die Charaktere auf $G$ bilden ein Orthonormalsystem in $L_{2}(G)$.
  \begin{proof}
    Sei $X_{1}, X_{2}\in\Gamma$ und $\langle X_{1}, X_{2}\rangle= \int_{G}
    X_{1}\overline{X_{2}}\,d\mu$. Ist $X=X_{1}=X_{2}$, so folgt,
    $\norm{X|L_{2}(G)}^{2}=\langle X,X\rangle= \int_{G} 1\,d\mu=\mu(G)=1$.
    Ist $X_{1}\neq X_{2}$, so ist $X=X_{1}\overline{X_{2}}\in\Gamma$ und
    $X\neq1$. Wähle $y\in G$ mit $X(y)\neq1$. Dann gilt, $X(y) \int_{G}
    X(x)\,d\mu(x)= \int_{G} X(xy)\,d\mu(x)= \int_{G} X(x)\,d\mu(x)$. Das
    impliziert $\langle X_{1}, X_{2}\rangle= \int_{G} X(x)\,d\mu(x)= 0$. 
  \end{proof}
\end{satz}

%satz 3.6.2
\begin{satz}
  Die Charaktere auf $G$ bilden eine Orthonormalbasis von $L_{2}(G)$.
\end{satz}

\begin{folg}
  Die Fouriertransformation $\hat{ }$ auf $G$ ist ein isometrischer
  Isomorphismus
  \begin{gather*}
    \hat{}\colon L_{2}(G)\rightarrow\ell_{2}(\Gamma)
  \end{gather*}
  d.\,h. für jedes $f\in L_{2}(G)$ gilt
  \begin{gather*}
    \norm{f|L_{2}(G)}^{2}= \sum_{X\in\Gamma} \abs{\langle f,X\rangle}^{2}
       \tag{Parsevalgleichung}
  \end{gather*}
  Weiterhin kann $f$ aus den Fourierkoeffizienten "`wiedergewonnen"' werden
  \begin{gather*}
    f\stackrel{L_{2}}{=} \sum_{X\in\Gamma} \langle f,X\rangle=
       \sum_{X\in\Gamma} \hat{f}(X)X
  \end{gather*}

  Den Beweis zum Satz müssen wir zunächst etwas vorbereiten:\\
  Hierzu betrachten wir den Satz von Stone"=Weierstraß in der allgemeinen
  Form. Sei $\mathcal{A}$ eine Algebra komplexwertiger Funktionen auf
  lokalkompakten Hausdorffraum $X$ mit den Eigenschaften:
  \begin{enumerate}
   \item $f\in\mathcal{A}\Rightarrow\overline{f}\in\mathcal{A}$
   \item $\mathcal{A}$ trennt die Punkte von $X$, d.\,h. $\forall x,y\in X$
    mit $x\neq y$ existiert ein $f\in\mathcal{A}$ mit $f(x)\neq f(y)$.
   \item $\forall x\in X \exists f\in \mathcal{A}$ mit $f(x)\neq0$.
  \end{enumerate}
  Dann ist $\mathcal{A}$ dicht in $C_{0}(X)$.

  Es gilt:
  \begin{itemize}
   \item $\mathcal{A}$ Algebra: $f,g\in\mathcal{A}, c\in\C\Rightarrow f+g, fg,
    cf\in\mathcal{A}$
   \item $C_{0}(X)= \{f\in C(X)\colon \forall \epsilon>0 \exists K\subset X
    \text{ kompakt mit } \abs{f(x)}<\epsilon\,x\in X\setminus K\}$
  \end{itemize}

  Weiterhin benötigen wir noch folgendes Lemma:\\
  Sei $G$ eine lokalkompakte abelsche Gruppe und $\Gamma=\hat{\Gamma}$. Dann
  trennt $\Gamma$ die Punkte von $G$, d.\,h. zu $x,y\in G, x\neq y$ existiert
  $X\in\Gamma$ mit $X(x)\neq X(y)$. Der Beweis kommt evtl. später.
  \begin{proof}
    Sei $\mathcal{A}= \{f= \sum_{X\in A} c_{X}X\colon A\subseteq\Gamma<\infty,
    c_{X}\in\C\text{ für } X\in A\}=\spn \Gamma$ eine Algebra mit den
    Eigenschaften aus dem Satz von Stone"=Weierstraß. Also ist $\mathcal{A}$
    dicht in $C_{0}(G)= C(G)$, d.\,h. zu $\epsilon>0, f\in C(X)$ existiert 
    $g\in\mathcal{A}$  mit $\norm{f-g|C(G)}= \norm{f-g}_{\infty}<\epsilon$ und
    damit auch $\norm{f-g|L_{2}}\leq\norm{f-g}_{\infty}<\epsilon$. Da $C(G)$
    auch dicht in $L_{2}(G)$ ist, ist $\mathcal{A}=\spn \Gamma$ dicht in
    $L_{2(G)}$ und somit $\overline{\spn \Gamma}=L_{2}(G)$, d.\,h. $\Gamma$
    ist ein vollständiges Orthonormalsystem in $L_{2}(G).$
  \end{proof}
\end{folg}

%satz 3.6.3
\begin{satz}[Hausdorff"=Young"=Ungleichung]
  Sei $1\leq p\leq2$ und $p'$ der konjugierte Index zu $p\colon\nicefrac{1}{p}
  + \nicefrac{1}{p'}=1$. Dann ist die Fouriertransformation $\hat{}$ ein
  stetiger linearer Operator
  \begin{gather*}
    \hat{}\colon L_{p}(G)\rightarrow\ell_{p'}(\Gamma)
  \end{gather*}
  mit
  \begin{gather*}
    \norm{\hat{}\colon L_{p}(G)\rightarrow\ell_{p'}(\Gamma)}\leq1
  \end{gather*}
  \begin{proof}
    Der Beweis erfolgt durch Interpolation:
    \begin{align*}
      \hat{}\colon L_{1}(G) &\rightarrow \ell_{\infty}(\Gamma) & \norm{\cdot}
	 &= 1\\
      \hat{}\colon L_{2}(G) &\rightarrow \ell_{2}(\Gamma) & \norm{\cdot} &= 1\\
      \Rightarrow^{\text{Riesz"=Thorin}} \hat{}\colon L_{p}(G) &\rightarrow
	 \ell_{p} & \norm{\cdot} &\leq1
    \end{align*}
  \end{proof}
\end{satz}

%satz 3.6.4
\begin{satz}[Riemann"=Lebesgue]
  Sei $f\in L_{1}(G)$. Dann verschwinden die Fourierkoeffizienten von $f$ im
  Unendlichen, d.\,h. $\forall\epsilon>0\exists A\subseteq\Gamma$ endlich so
  dass $\abs{\hat{f}(X)}<\epsilon$ für $X\in\Gamma\setminus A$ gilt.
  \begin{proof}
    Für $f\in L_{2}(G)$ gilt die Behauptung, da $\norm{f|L_{2}}^{2}=
    \sum_{X\in \Gamma} \abs{\langle f,X\rangle}^{2}= \sum_{X\in \Gamma}
    \abs{\hat{f}(X)}^{2}$ ist. Da Treppenfunktionen dicht in $L_{2}(G)$ und in
    $L_{1}(G)$ sind und $L_{2}(G)\subseteq L_{1}(G)$ gilt, ist $L_{2}(G)$
    dicht in $L_{1}(G)$. Ist $f\in L_{1}(G), \epsilon>0$, dann wähle $g\in
    L_{2}(G)$ mit $\norm{f-g|L_{1}}<\nicefrac{\epsilon}{2}$ und anschließend
    $A\subseteq\Gamma$ mit $\abs{\hat{g}(X)}<\nicefrac{\epsilon}{2}$ für
    $X\in\Gamma\setminus A$. Dann ist für $X\in\Gamma\setminus A$ auch
    $\abs{\hat{f}(X)}\leq \abs{\hat{f}(X)-\hat{g}(X)}+ \abs{\hat{g}(X)} \leq
    \norm{f-g|L_{1}}+\abs{\hat{g}(X)} < \epsilon$.
  \end{proof}
\end{satz}

% Herr Hinrichs hat im folgenden den Satz von Stone-Weierstraß bewiesen. ich
% habe den Beweis ausgelassen.

\section{Die Fouriertransformation auf \texorpdfstring{$L_{2}(G)$}{L2(G)}--Pontrjagin"=Dualität}

Im Allgemeinen ist $L_{2}(G)\subsetneq L_{1}(G)$, aber $L_{2}(G)\cap L_{1}(G)
\subseteq L_{2}(G)$ dicht. Ist
die Fouriertransformation also (auf einem dichten Teilraum von) $L_{2}(G)$
beschränkt, so kann man sie auf $L_{2}(G)$ fortsetzen. Den Weg dazu wollen wir
in diesem Abschnitt ohne Beweise skizzieren.

\begin{defini}
  Sei $G$ eine Gruppe, $\phi\colon G\rightarrow\C$. Dann heißt $\phi$ \highl{positiv
  definit}, wenn
  \begin{gather*}
    \sum_{h,k=1}^{N} \lambda_{h} \overline{\lambda_{k}}
       \phi(x_{h}x_{k}^{-1})\geq0
  \end{gather*}
  für alle $\lambda_{1},\dotsc,\lambda_{N}\in\C, x_{1},\dotsc, x_{N}\in G$
  gilt.
\end{defini}

\begin{bsp}
  Sei $G$ eine lokalkompakte abelsche Gruppe, $f\in L_{1}(G)$. Setze
  $f^{*}(x)=\overline{f(x^{-1})}$. Dann ist $\phi=f^{*}*f$ positiv definit und
  stetig. Denn:
  \begin{align*}
    \phi(x_{h}x_{k}^{-1}) &= \int_{G} f^{*}(x)
       f(x^{-1}x_{h}x_{k}^{-1})\,d\mu(x)\\
    &= \int_{G} f^{*}(xx_{h}^{-1}) f(x^{-1}x_{k})\,d\mu(x)\\
    &= \int_{G} \overline{f(x^{-1}x_{h})} f(x^{-1}x_{k})\,d\mu(x)\\
    \Rightarrow\sum \lambda_{h} \overline{\lambda_{k}} \phi(x_{h}x_{k}^{-1})
       &= \int_{G} \abs{\sum \lambda_{h} f(x^{-1}x_{h})}^{2}\,d\mu(x) \geq0
  \end{align*}
  Die Stetigkeit erhalten wir durch Approximation von $f,g\in L_{2}(G)$ durch
  Funktionen aus $C_{0}(G)$ und Beweis, dass $f*g$ stetig ist.
\end{bsp}

Wir definieren für die folgenden Sätze:
\begin{gather*}
  P = \spn\{f\in L_{1}(G)\colon f \text{ positiv definit}\}
\end{gather*}

%saz 3.7.1
\begin{satz}
  $P$ ist dicht in $L_{1}(G)$ und $L_{2}(G)$.
\end{satz}

%satz 3.7.2
\begin{satz}[Fourierinversion]
  Sei $f\in P$. Dann ist $\hat{f}\in L_{1}(\Gamma)$. Das Haarmaß $\rho$ auf
  $\Gamma$ kann so normalisiert werden, dass gilt:
  \begin{gather*}
    f(x) = \int_{\Gamma} \hat{f}(X) \overline{X(x)}\,d\rho(X)
  \end{gather*}
\end{satz}

%satz 3.7.3
\begin{satz}[Plancherel"=Gleichung]
  Sei $f\in L_{1}(G)\cap L_{2}(G)$. Dann gilt
  \begin{gather*}
    \norm{\hat{f}|L_{2}(\Gamma)} = \norm{f|L_{2}(G)}
  \end{gather*}
  d.\,h. die Fouriertransformation ist eine Isometrie. Weiterhin ist das Bild
  von $L_{1}\cap L_{2}$ dicht in $L_{2}$.
  \begin{proof}
    Sei $f\in L_{1}\cap L_{2}$. Betrachten $g=f^{*}*f$. Dann gilt $\hat{g}(X)=
    \widehat{f^{*}*f}(X)= \widehat{f^{*}}(X)\hat{f}(X)$. Weiter ist:
    \begin{align*}
      \widehat{f^{*}}(X) &= \int_{G} f^{*}(x) \overline{X(x)}\,d\mu(x)=
	 \int_{G} \overline{f(x^{-1})} \overline{X(x)}\,d\mu(x)\\
      &= \overline{\int_{G} f(x^{-1}) X(x)\,d\mu(x)} = \overline{\int_{G}
	 f(x^{-1}) \overline{X(x^{-1})}\,d\mu(x)}\\
      &= \overline{\int_{G} f(y) \overline{X(y)}\,d\mu(y)}=
	 \overline{\hat{f}(X)}
    \end{align*}
    Also ist $\hat{g}(X)= \abs{\hat{f}(X)}^{2}$. Wir wissen, $g\in P$ und mit
    der Fouriertransformation erhalten wir also: $g(x)= \int_{\Gamma}
    \hat{g}(X) \overline{X(x)}\,d\rho(x)$. Schließlich ist
    \begin{align*}
      \norm{f|L_{2}}^{2} &= \int_{G} \abs{f(x)}^{2}\,d\mu(x) = \int_{G} f(x)
	 \overline{f(x)}\,d\mu(x)\\
      &= \int_{G} f(x) f^{*}(x^{-1})\,d\mu(x)= \int_{G} f(x)
	 f^{*}(ex^{-1})\,d\mu(x)= g(e)\\
      g(e) &= \int_{\Gamma} \hat{g}(X) \overline{X(e)}\,d\rho(X)=
	 \int_{\Gamma} \hat{g}(X)\,d\rho(X)\\
      &= \int_{\Gamma} \abs{\hat{f}(X)}^{2}\,d\rho(X)=
	 \norm{\hat{f}|L_{2}(\Gamma)}
    \end{align*}
  \end{proof}
\end{satz}

\begin{folg}
  Die Fouriertransformation kann zu einer Isometrie von $L_{2}(G)$ auf
  $L_{2}(\Gamma)$ fortgesetzt werden, d.\,h. $\norm{\hat{f}|L_{2}(\Gamma)}=
  \norm{f|L_{2}(G)}$ für alle $f\in L_{2}(G)$ und zu jedem $g\in
  L_{2}(\Gamma)$ existiert ein $f\in L_{2}(G)$ mit $\hat{f}=g$.
\end{folg}

\paragraph{Pontrjagin"=Dualität}

\begin{align*}
  G &= \T & \hat{G} &\cong \Z & \hat{\hat{G}} &\cong \T = G\\
  G &= \R & \hat{G} &\cong \R & \hat{\hat{G}} &\cong \R
\end{align*}
Gilt allgemein $\hat{\hat{G}}\cong G$? Hierzu brauchen wir $\Phi\colon
G\rightarrow\hat{\hat{G}}$. Dabei sind $\hat{\hat{G}}$ die Charaktere auf
$\hat{G}$. Es ist $\Phi(y)\coloneq f_{y}$ mit $f_{y}(X)=X(y)$.
\begin{enumerate}
 \item Da $(x,X)\mapsto X(x)$ eine stetige Abbildung von
  $G\times\Gamma\rightarrow\C$ ist, ist auch $f_{y}$ stetig.
 \item $\abs{f_{y}(X)}=1$ für alle $X\in\Gamma$
 \item $f_{y}(X_{1}X_{2})=(X_{1}X_{2})(y)= X_{1}(y)X_{2}(y)=
  f_{y}(X_{1})f_{y}(X_{2})$
\end{enumerate}
Also ist $f_{y}$ ein Charakter auf $\hat{G}$, d.\,h. ein Element von
$\hat{\hat{G}}$.

Weiterhin ist $\Phi$ ein Homomorphismus. Denn $\Phi(y_{1}y_{2})=
\Phi(y_{1})\Phi(y_{2})$ und $f_{y_{1}y_{2}})(X)= X(y_{1}y_{2})=
X(y_{1})X(y_{2})= f_{y_{1}}(X)f_{y_{2}}(X)$.

$\Phi$ ist injektiv: $y_{1}, y_{2}\in G, y_{1}\neq y_{2}$. $\hat{G}$ trennt
die Punkte von G $\Rightarrow\exists X\in\hat{G}$ mit $X(y_{1})\neq X(y_{2})$,
d.\,h. $f_{y_{1}}\neq f_{y_{2}}$. Weiterihnh ist $\Phi$ surjektiv und ein
Homöomorphismus. Also gilt:

%satz 3.7.4
\begin{satz}[\textsc{Pontrjagin}"=Dualität]
  Sei $G$ eine lokalkompakte abelsche Gruppe. Dann ist $\hat{\hat{G}}\cong G$,
  wobei $\Phi\colon G\rightarrow\hat{\hat{G}}$ mit $(\Phi(y))(X)\coloneq X(y)$ ein
  Gruppenisomorphismus und Homöomorphismus ist.
\end{satz}

\chapter{Wavelets}

Die Entwicklung in Fourierreihen hat einen entscheidenden Nachteil. Die
Basisfunktionen sind nicht lokalisiert, d.\,h. selbst für Funktionen, die
"`sehr lokal"' sind, braucht man alle basisfunktionen und
Fourierkoeffizienten, um $f$ zu rekonstruieren. Wavelets hingegen sind lokal
und beheben diesen Nachteil. Daher sind sie für viele Anwendungen besser
geeignet. Sie bieten schnellere Konvergenz und weniger Koeffizienten zur
Rekonstruktion von Funktionen. Des Weiteren lassen sich auch schneller
Algorithmen bauen.

\section{Die Haarbasis in \texorpdfstring{$L_{p}(\R)$}{Lp(R)}}

Diese ist ein Beispiel für eine Waveletbasis, die weit vor der formalen
Einführung von Wavelets gefunden wurde.

\begin{defini}
  Das \highl{Haarwavelet} ist die Funktion $H\colon\R\rightarrow\R$ gegeben
  durch
  \begin{gather*}
    H(x) =
       \begin{cases}
	 +1 & x\in[0,\nicefrac{1}{2})\\
	 -1 & x\in[\nicefrac{1}{2}, 1)\\
	 0 6 \text{sonst}
       \end{cases}
  \end{gather*}

  Das \highl{Haarsystem} $\{H_{jk}\}_{j,k\in\Z}$ besteht aus den Translationen
  und Dilatationen
  \begin{gather*}
    H_{jk}(x) \coloneq 2^{\nicefrac{j}{2}}H(2^{j}x-k)
  \end{gather*}
  Der Träger von $H_{jk}$ ist das dyadische Intervall:
  \begin{gather*}
    \Delta_{jk} = [k2^{-j}, (k+1)2^{-j}]
  \end{gather*}
  Die Intervalle $\{\Delta_{jk}\colon k\in\Z\}$ bilden das $j$-te Level der
  dyadischen Intervalle. $H_{jk}$ ist eine Haarfunktion aus dem $j$-ten Level.
\end{defini}

wichtige Eigenschaften:
\begin{enumerate}
 \item Zwei dyadische Intervalle haben folgende Lagemöglichkeiten: Entweder
  überlappen sie sich nicht oder eines ist im anderen enthalten.
 \item Falls ein dyadisches Intervall in einem anderen dyadischen Intervall
  enthalten ist, so ist es entweder in der linken oder in der rechten Hälfte
  enthalten.
\end{enumerate}

%satz 4.1.1
\begin{satz}
  Das Haarsystem ist ein orthogonales System in $L_{2}(\R)$.
  \begin{proof}
    \begin{enumerate}
     \item $\norm{H_{jk}|L_{2}(\R)}^{2}= \int_{\R} \abs{H_{jk}(x)}^{2}\,dx=
      \int_{\Delta_{jk}} 2^{j}\,dx= \abs{\Delta_{jk}}2^{j}=1$
     \item $\langle H_{jk}, H_{j'k'}\rangle=
      \int_{\Delta_{jk}\cap\Delta_{j'k'}} H_{jk}(x) H_{j'k'}(x)\,dx$
      \begin{enumerate}[1. F{a}ll]
       \item $\Delta_{j'k'}$ und $\Delta_{jk}$ überlappen sich nicht
	$\Rightarrow\langle H_{jk}, H_{j'k'}\rangle=0$
       \item $\Delta_{j'k'}\subsetneq\Delta_{jk}\Rightarrow \Delta_{j'k'}$ ist
	entweder in der linken oder der rechten Hälfte. Dort ist $H_{jk}$
	konstant $2^{\nicefrac{j}{2}}$ oder
	$-2^{\nicefrac{j}{2}}\Rightarrow\langle H_{jk}, H_{j'k'}\rangle=
	-2^{\nicefrac{j}{2}} \int_{\Delta_{j'k'}} H_{j'k'}(x)\,dx=0$
      \end{enumerate}
    \end{enumerate}
  \end{proof}
\end{satz}

%satz 4.1.2
\begin{satz}\label{satz:412}
  Das Haarsystem ist eine Orthonormalbasis in $L_{2}(\R)$.
\end{satz}

\begin{folg}
  Jedes $f\in L_{2}(\R)$ lässt sich schreiben als
  \begin{gather}
    \label{eq:411}
    f=\sum_{j\in\Z} \sum_{k\in\Z} \langle f,h_{jk}\rangle H_{jk}
  \end{gather}
  mit den Haar"=Wavelet"=Koeffizienten $\langle f,H_{jk}\rangle$. Diese reihe
  ist absolut konvergent in $L_{2}(\R)$.
\end{folg}

Nun ergibt sich folgende Frage: Sei $H\in L_{p}(\R)$ für $1\leq p\infty$,
d.\,h. die Haar"=Wavelet"=Koeffizienten $\langle f,H_{jk}\rangle= \int_{\R}
f(x) H_{jk}(x)\,dx$ existieren für alle $j,k\in\Z, f\in L_{p}(\R)$.
Konvergiert die Reihe \autoref{eq:411} für $f\in L_{p}$ in $L_{p}$ gegen $f$?
Es zeigt sich, dass sie für $1<p<\infty$ sogar unbedingt konvergiert, d.\,h.
in jeder Reihenfolge. Dies war der Grund für Haar, das System zu konstruieren.
Jetzt betrachten wir nur die "`natürliche"' Reihenfolge.
\begin{align*}
  Q_{j}^{\mu} f &= \sum_{k\leq\mu} \langle f,H_{jk}\rangle H_{jk}
     \qquad\mu\in\Z, j\in\Z\\
  P_{r} f &= \sum_{j<r} \sum_{k\in\Z} \langle f,H_{jk}\rangle H_{jk}\qquad
     r\in\Z
\end{align*}

%satz 4.1.3
\begin{satz}
  Sei $1<p<\infty$ und $f\in L_{p}(\R)$. Dann gilt $\lim_{j\rightarrow\infty}
  P_{r}f\stackrel{L_{p}}{=} f$ und für jedes $r\in\Z$ gilt
  \begin{gather*}
    \lim_{\mu\rightarrow\infty} (P_{r}f+Q_{r}^{\mu}f)\stackrel{L_{p}}{=}
       P_{r+1} f
  \end{gather*}
\end{satz}


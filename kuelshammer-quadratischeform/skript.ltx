\chapter{Quadratische Formen und symmetrische Bilinearformen}

Sei $K$ ein Körper mit Charakteristik ungleich 2. Das bedeutet, dass
$1+1\neq0$.

%def 1.1
\begin{defini}[Bilinearform]
  Sei $V$ ein Vektorraum über $K$ und $\beta\colon V\times V\rightarrow V$.
  Dann heißt $\beta$ \highl{Bilinearform}, wenn gilt:
  \begin{enumerate}
   \item $\beta(a\cdot u+b\cdot v,w)=a\beta(u,w)+b\beta(u,v)$
   \item $\beta(u,av+bw)= a\beta(u,v)+b\beta(u,w)$
  \end{enumerate}
  Gilt auch $\beta(u,v)= \beta(v,u)$ für alle $u,v\in V$, so heißt $\beta$
  \highl{symmetrisch}. Ein Paar $(V,\beta)$, das aus einem Vektorraum~$V$ über
  $K$ und einer symmetrischen Bilinearform $\beta$ auf $V$ besteht, heißt
  \highl{$K$"~Bilinearraum}.
\end{defini}

\begin{bemerk}\label{bem:1.1}
  \begin{enumerate}
   \item Sei $(V,\beta)$ ein endlich-dimensionaler $K$"~Bilinearraum mit Basis
    $b_{1},\dotsc, b_{n}$. Dann heißt $A\coloneqq(\beta(b_{1},\dotsc,
    b_{n})\colon i,j=1,\dotsc,n)\in K^{n\times n}$ \highl{Gram"=Matrix} oder
    nur \highl{Matrix} von $\beta$ bezüglich $b_{1},\dotsc, b_{n}$.
    Offenbar ist $A$ symmetrisch, d.\,h. $A=A^{T}$.
   \item Ist umgekehrt $A=(a_{ij})\in K^{n\times n}$ symmetrisch und ist $V$
    ein endlich-dimensionaler $K$"~Vektorraum mit einer Basis $b_{1},\dotsc,
    b_{n}$, dann existiert genau eine symmetrische Bilinearform $\beta$ auf
    $V$ mit Gram"=Matrix~$A$. Es wird das $\beta$ gegeben durch
    \begin{gather*}
      \beta(v,w)= \sum_{i,j=1}^{n} a_{ij}v_{i}w_{j}\qquad v=\sum_{i=1}^{n}
	 v_{i}b_{i}, w=\sum_{j=1}^{n}w_{j}b_{j}
    \end{gather*}

   \item Sei $(V,\beta)$ ein endlich"=dimensionaler $K$"~Bilinearraum mit
    Gram"=Matrix~$A$ bezüglich einer Basis $b_{1},\dotsc, b_{n}$ von $V$.
    Weiter sei $b_{1}',\dotsc,b_{n}'$ eine Basis von $V$ und $b_{j}'=
    \sum_{i=1}^{n} r_{ij}b_{i}$ f+r $j=1,\dotsc,n$. Dann gilt für alle $i$ und
    $j$:
    \begin{gather*}
      \beta(b_{i}', b_{j}')= \sum_{k,l=1}^{n} r_{ki} r_{lj} \beta(b_{k},
	 b_{l}) = \sum_{k,l=1}^{n} r_{ki} \beta(b_{k}, b_{l}) r_{lj}
    \end{gather*}
    Mit $R\coloneqq (r_{ij})\in \GL(n,K)$ gilt für die neue Gram"=Matrix~$A'$
    bezüglich $b_{1}',\dotsc,b_{n}'$:
    \begin{gather*}
      A'= R^{T}A^{R}
    \end{gather*}
    Man sagt dann, dass die Matrizen $A$ und $A'$ \highl{kongruent} sind.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  Für $n\in\N$ und jede symmetrische Matrix~$A=(a_{ij})\in K^{n\times n}$ ist
  $\beta\colon K^{n}\times K^{n}\rightarrow K$ mit
  $(x,y)\mapsto\sum_{i,j=1}^{n} a_{ij}x_{i}y_{j}$ für $x=(x_{1},\dotsc,
  x_{n})$ und $y=(y_{1},\dotsc, y_{n})$ eine symmetrische Bilinearform mit
  Gram"=Matrix~$A$ bezüglich der Standardbasis
  $e_{1}=(1,0,\dotsc,0),\dotsc,e_{n}=(0,\dotsc,0,1)$.
\end{bsp}

%def 1.2
\begin{defini}[Quadratische Form]
  Sei $V$ ein Vektorraum über $K$ und $q\colon V\rightarrow K$. Das $q$ heißt
  \highl{quadratische Form}, falls gilt:
  \begin{enumerate}
   \item $q(av)= a^{2}q(v)$ für $a\in K$ und $v\in V$
   \item $\beta\coloneqq\beta_{q}\colon V\times V\rightarrow K$ mit
    $(u,v)\mapsto\nicefrac{1}{2}[q(u+v)-q(u)-q(v)]$ ist eine (symmetrische)
    Bilinearform.
  \end{enumerate}
  Ein \highl{quadratischer Raum} über $K$ ist ein Paar $(V,q)$, dass aus einem
  $K$"~Vektorraum~$V$ und einer quadratischen Form~$q$ auf $V$ besteht.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Jeder quadratische Raum~$(V,q)$ bestimmt eindeutig einen
    Bilinearraum~$(V,\beta_{q})$. Umgekehrt liefert jeder
    Bilinearraum~$(V,\beta)$ einen quadratischen Raum~$(V,q_{\beta})$ mit
    $q_{\beta}(v)\coloneqq\beta(v,v)$ für $v\in V$.
    Beide Prozesse sind zueinander invers. Wir werden daher keinen großen
    Unterschied zwischen Bilinearräumen und quadratischen Räumen machen.
  \end{enumerate}
\end{bemerk}

\begin{bsp}
  Quadratische Formen auf $K^{n}$ haben also die Gestalt
  \begin{gather*}
    (x_{1},\dotsc, x_{n})\mapsto\sum_{i,j=1}^{n} a_{ij}x_{i}x_{j}
  \end{gather*}
  Dabei ist die Matrix~$A=(a_{ij})\in K^{n\times n}$ symmetrisch.
\end{bsp}

%def 1.3
\begin{defini}[Isometrie]
  Seien $(V,\beta)$ und $(W,\gamma)$ zwei $K$"~Bilinearräume. Eine lineare
  Abbildung $f\colon V\rightarrow W$ mit $\gamma(f(x),f(y))= \beta(x,y)$ für
  alle $x,y\in V$ heißt \highl{Isometrie}.
\end{defini}

\begin{bemerk}\label{bem:1.3}
  \begin{enumerate}
   \item Im Gegensatz zu manchen Büchern verlangen wir nicht, dass $f$
    bijektiv ist. Ist $f$ bijektiv, dann ist auch die Umkehrabbildung
    $f^{-1}\colon W\rightarrow V$ eine Isometrie. Denn $\beta(f^{-1}(x),
    f^{-1}(y))= \gamma(f(f^{-1}(x)), f(f^{-1}(y)))= \gamma(x,y)$ für $x,y\in W$.
   \item Ist $(U,\alpha)$ ein weiterer Bilinearraum und ist $g\colon
    U\rightarrow V$ eine weitere Isometrie, so ist $f\circ g\colon
    U\rightarrow W$ eine Isometrie.
   \item Seien $(V,\beta)$ und $(W,\gamma)$ zwei $K$"~Bilinearräume mit Basen
    $v_{1},\dotsc, v_{m}$ bzw. $w_{1},\dotsc, w_{n}$ und mit entsprechenden
    Gram"=Matrizen~$B$ und $C$. Sei $f\colon V\rightarrow W$ linear mit
    Matrix~$A=(a_{ij})$ bezüglich $v_{1},\dotsc, v_{m}$ und $w_{1},\dotsc,
    w_{n}$, d.\,h. $f(v_{j})=\sum_{i=1}^{n} a_{ij}w_{i}$ für $j=1,\dotsc,m$.
    Offenbar ist $f$ genau dann eine Isometrie, wenn $\gamma(f(v_{i}),
    f(v_{j}))= \beta(v_{i},v_{j})$ für alle $i,j$ ist. Wegen
    \begin{gather*}
      \gamma(f(v_{i}),f(v_{j}))= \sum_{k,l=1}^{n} a_{ki}a_{lj} \gamma(w_{k},
	 w_{l})
    \end{gather*}
    bedeutet $B=A^{T}CA$.
  \end{enumerate}
\end{bemerk}

%def 1.4
\begin{defini}
  Zwei $K$"~Bilinearräume $(V,\beta)$ und $(W,\gamma)$ heißen
  \highl{isometrisch}, falls eine bijektive Isometrie~$f\colon V\rightarrow W$
  existiert. Man schreibt $(V,\beta)\simeq(W,\gamma)$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item $\simeq$ ist eine Äquivalenzrelation.
   \item Nach der \autoref{bem:1.3} (iii) entsprechen sich die
    Isometrieklassen endlich"=dimensionaler Bilinearräume genau den
    Kongruenzklassen symmetrischer Matrizen.
   \item Wir sieht man, ob vorgegebene Bilinearräume isometrisch sind? Das ist
    eine zentrale Frage in der Theorie quadratischer Formen.
  \end{enumerate}
\end{bemerk}

%1.5 satz
\begin{satz}
  Zu jedem endlich"=dimensionalen Bilinearraum~$(V,\beta)$ existiert eine
  Basis $b_{1},\dotsc, b_{n}$ mit $\beta(b_{i},b_{j})=0$ für alle $i\neq j$.
  \begin{proof}
    Wir führen eine Induktion nach $n\coloneqq\dim V$ durch. Sei \OE{} $n>1$.
    Ist $q_{\beta}=0$, so ist auch $\beta=0$ und wir sind fertig. Sei also
    $q_{\beta}\neq0$ und $v\in V$ mit $0\neq q_{\beta}(v)= \beta(v,v)$. Dann
    ist $f\colon V\rightarrow K$ mit $x\mapsto\beta(v,x)$ linear und
    surjektiv. Daher hat $U\coloneqq\ker(f)$ die Dimension $n-1$. Wegen
    $v\notin U$ ist $V=K_{v}\oplus U$. Sei $\alpha\coloneqq\beta|_{U\times
    U}$. Nach Induktion hat $(U,\alpha)$ eine Orthogonalbasis $b_{1},\dotsc,
    b_{n-1}$. Wegen $\beta(v,b_{i})=f(b_{i})=0$ für $i=1,\dotsc,n-1$ ist
    $b_{1},\dotsc, b_{n-1},v$ eine Orthogonalbasis von $(V,\beta)$.
  \end{proof}
\end{satz}


\begin{defini}[Orthogonalbasis]
  Gegebenenfalls heißt $b_{1},\dotsc, b_{n}$ eine \highl{Orthogonalbasis} von
  $V$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Jede symmetrische Matrix ist also zu einer Diagonalmatrix kongruent.
    Im Allgemeinen ist aber schwer zu entscheiden, ob zwei vorgegebene
    Diagonalmatrizen kongruent sind.
   \item Für $a_{1},\dotsc, a_{n}\in K$ sei $\langle a_{1},\dotsc,
    a_{n}\rangle$ die quadratische Form
    \begin{gather*}
      (x_{1},\dotsc, x_{n})\mapsto a_{1}x_{1}^{2} +\dotsb+ a_{n} x_{n}^{2}
    \end{gather*}
    auf $K^{n}$ und der entsprechende Bilinearraum.
  \end{enumerate}
\end{bemerk}

%def 1.6
\begin{defini}[Orthogonale Transformation]
  Sei $(V,\beta)$ ein $K$"~Bilinearraum. Eine bijektive Isometrie $f\colon
  V\rightarrow V$ heißt \highl{orthogonale Transformation} auf $(V,\beta)$.
\end{defini}

\begin{bemerk}
  Nach \autoref{bem:1.3} ist $O(V,\beta)\coloneqq\Set{f\colon V\rightarrow V |
  f \text{orthogonale Transformation auf } (V,\beta)}$ eine Gruppe bezüglich
  der Komposition von Abbildungen, die \highl{orthogonale Gruppe} von
  $(V,\beta)$. Im Fall $\dim V<\infty$ liefert die Determinante einen
  Gruppenhomomorphismus $\det\colon O(V,\beta)\rightarrow K^{\cdot}\coloneqq
  K\setminus\{0\}$.

  Der Kern $\SO(V,\beta)\coloneqq\Set{f\in O(V,\beta) | \det f=1}$ ist ein
  Normalteiler in $O(V,\beta)$, die \highl{spezielle orthogonale Gruppe} von
  $(V,\beta)$.
\end{bemerk}

%def 1.7
\begin{defini}[Orthogonalraum]
  Sei $(V,\beta)$ ein Bilinearraum. Für jeden Untervektorraum $U\subseteq V$
  heißt $U^{\perp}\coloneqq\Set{v\in V | \beta(v,U)=0}$
  \highl{Orthogonalraum} von $U$.
\end{defini}

\begin{bemerk}
  \begin{enumerate}
   \item Für $v\in V$ ist
    \begin{gather*}
      f_{v}\colon U\rightarrow K, u\mapsto\beta(v,u)
    \end{gather*}
    linear.  Daher ist $f_{v}$ ein Element des \highl{Dualraums}
    $U^{*}\coloneqq\Set{f\colon U\rightarrow K | f \text{ linear}}$. Wegen
    \begin{gather*}
      f_{au+bv}= af_{u}+bf_{v}
    \end{gather*}
    für beliebige $a,b\in K$ und $u,v\in V$ ist
    \begin{gather*}
      F\colon V\rightarrow U^{*}, v\mapsto f_{v}
    \end{gather*}
    linear und
    \begin{gather*}
      \ker F=\Set{v\in V |f_{v}=0}= \Set{v\in V | \beta(v,U)=0}= U^{\perp}
    \end{gather*}
    Daher ist $U^{\perp}\subseteq V$ ein Untervektorraum. Ist $U\cap
    U^{\perp}=0$, dann ist $F|_{U}\colon U\rightarrow U^{*}$ injektiv. Dann
    heißt $U$ \highl{nichtausgeartet} oder \highl{regulär}. Andernfalls heißt
    $U$ \highl{ausgeartet} oder \highl{singulär}.

    Ist auch die $\dim U<\infty$, so ist bekanntlich $\dim U^{*}= \dim U$. Aus
    der Injektivität von $F|_{U}$ folgt, die Bijektivität. Folglich:
    $\dim V= \dim\ker(F)+\dim\Bld(F)= \dim U^{\perp}+ \dim U^{*}= \dim
    U^{\perp}+ \dim U$. Also gilt in diesem Fall: $V=U\oplus U^{\perp}$.
  \end{enumerate}
\end{bemerk}


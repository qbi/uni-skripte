\section{Eine lokale Variante der Haar"=Basis}

Wir arbeiten nun mit $L_{2}([0,1])$. Es ist $\chi(x)=1$ im Intervall $0\leq
x<1$ und sonst $0$. Weiterhin sei $\psi_{j,k}(x)=
2^{\nicefrac{j}{k}}\psi(2^{j}x-k)$ für $j,k\in\Z$. Der Träger von $\psi_{j,k}$
ist $\supp\psi_{j,k}= [2^{-j}k,2^{-j}(k+1)$. Wann liegt der Träger im
Intervall $0$ und $1$: $\supp\psi_{j,k}\subseteq[0,1]\Leftrightarrow
j\in\N_{0}\wedge 0\leq k<2^{j}$. Es gilt,
$\emptyset\neq\supp\psi_{j,k}\cap(0,1)\Leftrightarrow$ entweder ist
$\supp\psi_{j,k}\subseteq[0,1]$ oder $[0,1]\subseteq\supp\psi_{j,k}$

\begin{satz}
  Die Familie $\psi_{j,k}$ mit $j\in\N_{0}$ und $0\leq k<2^{j}$ ergänzt durch
  $\chi$ bildet eine Orthonormalbasis des $L_{2}([0,1])$.
  \begin{proof}
    Der Beweis erstreckt sich über mehrere Lemmata. siehe unten.
  \end{proof}
\end{satz}

\begin{lemma}
  \begin{enumerate}
   \item  Die Familie $\psi_{j,k}$ mit $j\in\N_{0}$, $0\leq k<2^{j}$ und $\chi$ bilden
    ein Orthonormalsystem in  $L_{2}([0,1])$.
   \item Die Familie $\psi_{j,k}$ mit $j,k\in\Z$ bildet ein Orthonormalsystem
    in $L_{2}(\R)$.
  \end{enumerate}
  \begin{proof}
    \begin{enumerate}[Schr{i}tt~1]
     \item $\langle\psi_{j,k},\psi_{j,k}\rangle= \int_{-\infty}^{\infty}
      2^{\nicefrac{j}{2}} \psi(2^{j}x-k)\overline{2^{\nicefrac{j}{2}}
      \psi(2^{j}x-k)}\,dx= \int_{-\infty}^{\infty}
      \psi(y)\overline{\psi(y)}\,dy= \int_{0}^{1} \psi^{2}(x)\,dx=1$

      Koordinatentransformation mit $y=2^{j}x-k$

      Es ist $\norm{\psi_{j,k}|L_{2}(\R)}=1$ für alle $j,k\in\Z$ und weiter
      $\norm{\psi_{j,k}|L_{2}([0,1])}=1$ für alle $j\in\N_{0}, 0\leq k<2^{j}$.
     \item $\langle\psi_{j,k},\psi_{j',k'}\rangle=
      2^{j}\int_{-\infty}^{\infty} \psi(2^{j}x-k)\psi(2^{j}x-k')\,dx=0$ für
      $j=j'$ und $k\neq k'$.

      Sei nun $j\neq j'$ und $k,k'\in\Z$. Dann gilt für $j'>j$:
      \begin{gather*}
	2^{\nicefrac{j}{2}}2^{\nicefrac{j'}{2}} \int_{-\infty}^{\infty}
	   \psi(2^{j}x-k)\psi(2^{j'}x-k')\,dx= 2^{\nicefrac{j}{2}}
	   2^{\nicefrac{j'}{2}} \int_{-\infty}^{\infty}
	   \psi(y)\psi(2^{j'-j}y+2^{j'}k-k')\dy = 2^{\nicefrac{j}{2}}
	   2^{\nicefrac{j'}{2}} \int_{-\infty}^{\infty}
	   \psi(y)\psi(2^{r}y-l)\,dy= 2^{\nicefrac{j}{2}}
	   2^{\nicefrac{j'}{2}} \int_{0}^{1} \psi(y) \psi(2^{r}y-l)\,dy
      \end{gather*}
	   Der
	   Träger $[2^{-r}l, 2^{-r}(l+1)]$ liegt entweder in $[0,1]$ oder der
	   Durchschnitt der beiden offenen Intervalle ist leer. Im letzten
	   Fall ist $\langle\psi_{j,k}\psi_{j',k'\rangle}=0$. Also müssen wir
	   einen Blick auf den ersten Fall werfen. Wir haben $r\in\N$. Also
	   gilt entweder $(2^{-r}l, 2^{-r}(l+1))\subseteq(0,\nicefrac{1}{2})$
	   oder $(2^{-r}l, 2^{-r}(l+1))\subseteq(\nicefrac{1}{2},1)$. Bei der
	   ersten Variante ist das Integral dann: $\int_{0}^{\nicefrac{1}{2}}
	   1 \psi(2^{r}y-l)\,dy= \int_{-\infty}^{\infty} \psi(2^{r}y-l)\,dy=
	   2^{-r} \int_{-\infty}^{\infty} \psi(z)\,dz=0$. Im zweiten Fall
	   lässt sich genauso argumentieren. Lediglich beim Integral ist die
	   $1$ durch $-1$ zu ersetzen.
     \item Wenn der Träger in $[0,1]$ gilt:
      \begin{gather*}
	\int_{-\infty}^{\infty} \psi_{j,k} (x)\psi_{j',k'}(x)\,dx=\int_{0}^{1}\psi_{j,k} (x)\psi_{j',k'}(x)\,dx
      \end{gather*}
      Für $\supp\psi_{j,k}\subseteq[0,1]$ haben wir
      $\langle\psi_{j,k},\chi\rangle= 2^{\nicefrac{j}{2}} \int_{0}^{1}
      \psi_{j,k}(x) \chi(x)\,dx= 2^{\nicefrac{j}{2}} \int_{0}^{1}
      \psi_{j,k}(x)\,dx= 2^{\nicefrac{j}{2}} \int_{-\infty}^{\infty}
      \psi_{j,k}(x)\,dx=0$
    \end{enumerate}
  \end{proof}
\end{lemma}

%lem 2
\begin{lemma}\label{lem:2}
  Für alle $f\in L_{2}(\R)$ gilt:
